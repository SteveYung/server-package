<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/account_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/userc_account"
        android:background="@drawable/snail_green_text_selector"
        android:ems="10"
        android:hint="@string/snail_input_account"
        android:textColorHint="@color/editor_tip_color"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textColor="#808080"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/userc_pwd"
        android:background="@drawable/snail_green_text_selector"
        android:ems="10"
        android:hint="@string/snail_input_password"
        android:textColorHint="@color/editor_tip_color"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColor="#808080"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/repassword_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/userc_pwd"
        android:background="@drawable/snail_green_text_selector"
        android:ems="10"
        android:hint="@string/snail_input_repassword"
        android:textColorHint="@color/editor_tip_color"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColor="#808080"
        android:textSize="16sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/snail_pass_format"
        android:textColor="#a8abb5"
        android:textSize="12sp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_green_btn_selector"
        android:text="@string/snail_register"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>