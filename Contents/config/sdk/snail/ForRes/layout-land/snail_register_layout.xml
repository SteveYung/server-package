<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/snail_back_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back_btn" >

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#c7cbd5" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/b1_message_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:background="@color/white" >
                  <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TextView
                        android:id="@+id/reg_normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/snail_reg_normal"
                        android:textSize="25sp"
                        android:textColor="@color/black" />
                    
                    <ImageView
                        android:id="@+id/reg_img_normal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@drawable/snailpay_indicator" />
                    </FrameLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#c7cbd5" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/b2_message_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:background="@color/white" >
                  <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/reg_mail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/snail_reg_mail"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <ImageView
                            android:id="@+id/reg_img_mail"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/snailpay_indicator" />
                    </FrameLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/reg_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>