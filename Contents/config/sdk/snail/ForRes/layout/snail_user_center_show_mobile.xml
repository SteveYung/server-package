<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >


        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:background="@drawable/snail_back_bg" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_btn"
            android:text="@string/snail_bind_phone"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#c7cbd5" >
        </LinearLayout>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ProgressBar
        android:id="@+id/snail_user_center_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    
    <LinearLayout
            android:id="@+id/snail_user_center_show_bind_lloyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/snail_user_center_show_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/userc_bind_phone" />

            <TextView
                android:id="@+id/snail_user_center_show_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/user_center_list_text"
                android:textSize="20sp" />
        </LinearLayout>

    <Button
        android:id="@+id/snail_user_center_show_refresh"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/common_green_btn_selector"
        android:text="@string/snail_bind_refresh"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/snail_user_center_err_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/snail_user_center_show_refresh"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:textSize="20sp"
        android:textColor="@color/user_center_list_text"
        android:text="@string/snail_bind_network_err"
         />
    

</RelativeLayout>
</LinearLayout>