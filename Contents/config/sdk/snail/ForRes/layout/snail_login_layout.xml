<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/snail_back_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_btn"
            android:text="@string/snail_login"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/app_store_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/snail_store_name"
                android:textColor="#000000"
                android:textSize="38sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tips_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snail_tips_2"
                    android:textColor="#a8abb5"
                    android:textSize="14sp" />

                <com.snailgame.sdkcore.views.CircleView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tips_text"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tips_text" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
		<RelativeLayout 
		    android:id="@+id/account_input_layout"
		    android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            >
        <EditText
            android:id="@+id/account_input"
            style="@android:style/Theme.Light"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/userc_account"
            android:background="@drawable/snail_green_text_selector"
            android:hint="@string/snail_login_account_hint"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#808080"
            android:textColorHint="@color/editor_tip_color"
            android:textSize="16sp" />
        <ImageView 
            android:id="@+id/show_more_account"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/snail_more_account_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:paddingRight="10dp"
            />
		</RelativeLayout>
        <EditText
            android:id="@+id/password_input"
            style="@android:style/Theme.Light"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/userc_pwd"
            android:layout_below="@id/account_input_layout"
            android:layout_marginTop="40dp"
            android:background="@drawable/snail_green_text_selector"
            android:hint="@string/snail_password_hint"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#808080"
            android:textColorHint="@color/editor_tip_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password_input"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_green_btn_selector"
            android:gravity="center"
            android:text="@string/snail_login"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/login_button"
            android:layout_alignRight="@id/login_button"
            android:layout_marginTop="14dp"
            android:background="@drawable/snail_graybg_btn_selector"
            android:gravity="center"
            android:text="@string/snail_regSnail"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>