<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/part_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >


        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/snail_back_bg" />
        
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_btn"
            android:text="@string/snail_register"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#c7cbd5" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/part_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/part_1" >

        <RelativeLayout
            android:id="@+id/b1_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical" 
                android:background="@color/white">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/reg_normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/snail_reg_normal"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/reg_img_normal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@drawable/snailpay_indicator" />
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c7cbd5" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/b2_message_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:background="@color/white" >
               <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/reg_mail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/snail_reg_mail"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

               <ImageView
                android:id="@+id/reg_img_mail"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/snailpay_indicator" />
               </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/part_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/part_2" >


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/reg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/part_3" >
    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/reg_content"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/autoreg_tip"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/snail_quick_registertip"
            android:textColor="#a8abb5"
            android:textSize="16sp" />

        <Button
            android:id="@+id/autoRegister_button"
            android:layout_below="@id/autoreg_tip"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_orange_btn_selector"
            android:text="@string/snail_quick_login"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>