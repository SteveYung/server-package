<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_background" >
    	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/snail_bind_email"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:background="@drawable/snail_back_bg" />
	</RelativeLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:contentDescription="@drawable/userc_bind_email"
            android:src="@drawable/userc_bind_email" />

        <EditText
            android:id="@+id/snail_user_center_bind_email"
            style="@android:style/Theme.Light"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:background="@android:color/white"
            android:ems="10"
            android:hint="@string/snail_reg_mailaccount"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColor="#808080"
            android:textColorHint="@color/editor_tip_color"
            android:textSize="14sp" />
		
    </LinearLayout>

    <Button
        android:id="@+id/snail_user_center_bind_email_btn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/common_green_btn_selector"
        android:text="@string/snail_bind_btn"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>