<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <TextView
        android:id="@+id/snail_account_list_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/userc_account"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/snail_account_list_seletor"
        android:singleLine="true" />
	<ImageView 
	    android:id="@+id/snail_account_list_delete"
	    android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/snail_account_delete"
	    />
</RelativeLayout>