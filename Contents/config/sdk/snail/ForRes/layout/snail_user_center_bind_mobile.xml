<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rank_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >
    	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_btn"
            android:text="@string/snail_bind_phone"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:background="@drawable/snail_back_bg" />
	</RelativeLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">


        <EditText
            android:id="@+id/snail_user_center_bind_phone"
            style="@android:style/Theme.Light"
            android:inputType="text|number"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/userc_bind_phone"          
            android:background="@drawable/snail_green_text_selector"
            android:hint="@string/snail_common_hint_mobile"
            android:textColor="#808080"
            android:textColorHint="@color/editor_tip_color"
            android:textSize="16sp" 
            android:maxLength="11"/>
    </LinearLayout>

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal|right">
        <Button
	        android:id="@+id/snail_user_center_bind_phone_get_code"
	        android:layout_width="100dp"
	        android:layout_height="35dp"
	        android:background="@drawable/common_green_btn_selector"
	        android:text="@string/snail_common_get_code"
	        android:textSize="14sp"  
	        android:textColor="#fff"
	        android:visibility="visible"/>

	    <TextView
	        android:id="@+id/snail_user_center_bind_phone_get_code_timer"
	        android:layout_width="100dp"
	        android:layout_height="35dp"
	        android:textColor="@color/view_pager_title_bg"
	        android:textSize="14sp" 
	        android:gravity="right"   
	        android:visibility="gone"/>

    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">
	   
        <EditText
            android:id="@+id/snail_user_center_bind_phone_code"
            style="@android:style/Theme.Light"
            android:inputType="number|textPassword"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/userc_change_pwd"
            android:background="@drawable/snail_green_text_selector"
            android:hint="@string/snail_please_input_check_code"
            android:textColor="#808080"
            android:textColorHint="@color/editor_tip_color"
            android:textSize="16sp"  
            android:maxLength="6"
            />
	</LinearLayout>
    <Button
        android:id="@+id/snail_user_center_bind_phone_btn"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/common_green_btn_selector"
        android:text="@string/snail_bind_btn"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>