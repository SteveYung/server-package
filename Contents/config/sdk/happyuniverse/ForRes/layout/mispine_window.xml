<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:maxWidth="100dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@android:color/white"
    >

    <!--  Header  Starts-->
    <RelativeLayout android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/mispine_button_close"
            android:background="@drawable/mispine_button_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/mispine_button_back"
            android:background="@drawable/mispine_button_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:visibility="gone"
            />
        <ImageView android:src="@drawable/mispine_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <!--  Header Ends -->

    <ScrollView
        android:id="@+id/mispine_form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </ScrollView>

</LinearLayout>
