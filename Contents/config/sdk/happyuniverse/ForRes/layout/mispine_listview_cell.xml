<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:maxHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/mispine_imageView"
        android:layout_width="48dip"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:maxHeight="?android:attr/listPreferredItemHeight"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dip"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/mispine_icon_default"
        >
    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:layout_toRightOf="@+id/mispine_imageView"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/mispine_titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:textSize="18sp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:paddingBottom="3dip"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:textColor="@color/mispine_dark"
        >
    </TextView>

    <TextView
        android:id="@+id/mispine_detailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:layout_below="@+id/mispine_titleLabel"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:textColor="@color/mispine_gray"
        >
    </TextView>

    </RelativeLayout>
</RelativeLayout>
