<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/mispine_form"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">

        <LinearLayout
            android:id="@+id/mispine_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mispine_secure_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="20dip"
                android:text="@string/mispine_secure_your_guest_account"
                android:textColor="@android:color/white"
                android:background="@drawable/mispine_default_button"
                />

            <Button
                android:id="@+id/mispine_change_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:textSize="20dip"
                android:text="@string/mispine_change_your_password"
                android:textColor="@android:color/white"
                android:background="@drawable/mispine_default_button"
                />

            <Button
                android:id="@+id/mispine_reset_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:textSize="20dip"
                android:text="@string/mispine_forget_your_password"
                android:textColor="@android:color/white"
                android:background="@drawable/mispine_default_button"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
