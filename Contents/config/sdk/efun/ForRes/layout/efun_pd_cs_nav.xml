<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cs_nav_faq"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:layout_marginLeft="@dimen/e_size_33"
            android:duplicateParentState="true"
            android:src="@drawable/efun_pd_cs_title_faq_icon_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:text="@string/cs_title_nav_saq"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:duplicateParentState="true"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cs_nav_ask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:layout_marginLeft="@dimen/e_size_33"
            android:duplicateParentState="true"
            android:src="@drawable/efun_pd_cs_title_ask_icon_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:duplicateParentState="true"
            android:text="@string/cs_title_nav_ask"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cs_nav_reply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
		
        <RelativeLayout
        	android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:duplicateParentState="true"
            android:layout_marginLeft="@dimen/e_size_33" >
            
	        <ImageView
	            android:layout_width="@dimen/e_size_64"
	            android:layout_height="@dimen/e_size_64"
	            android:duplicateParentState="true"
	            android:src="@drawable/efun_pd_cs_title_reply_icon_selector" />
	        <ImageView 
		            android:id="@+id/item_cs_reply_red_point"
		            android:layout_width="@dimen/e_size_33"
		            android:layout_height="@dimen/e_size_33"
		            android:layout_alignParentLeft="true"
		            android:duplicateParentState="true"
		            android:visibility="gone"
		            android:src="@drawable/efun_pd_corners_point_red"
            	/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:duplicateParentState="true"
            android:text="@string/cs_title_nav_reply"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cs_nav_online"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:layout_marginLeft="@dimen/e_size_33"
            android:duplicateParentState="true"
            android:src="@drawable/efun_pd_cs_title_online_icon_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:gravity="center_horizontal"
            android:duplicateParentState="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="@string/cs_title_nav_online"
                android:textColor="@color/efun_pd_person_title_text_selector"
                android:textSize="@dimen/e_text_size_40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:text="@string/cs_title_nav_online_vip"
                android:textColor="@color/efun_pd_person_title_text_selector"
                android:textSize="@dimen/e_text_size_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>