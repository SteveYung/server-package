<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<!--     标题

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/e_size_25"
        android:layout_marginTop="@dimen/e_size_30"
        android:text="我"
        android:textColor="@color/e_383838"
        android:textSize="@dimen/e_text_size_48" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_3"
        android:layout_marginLeft="@dimen/e_size_138"
        android:layout_marginRight="@dimen/e_size_138"
        android:background="@color/e_d9d9d9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" > -->

            <!-- 基本信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/e_size_70"
                android:paddingTop="@dimen/e_size_15" >

                <!-- 头像 -->

                <RelativeLayout
                    android:layout_width="@dimen/e_size_200"
                    android:layout_height="@dimen/e_size_200" >

                    <ImageView
                        android:id="@+id/person_head_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="@dimen/e_size_46"
                        android:layout_height="@dimen/e_size_46"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/e_size_10"
                        android:layout_marginRight="@dimen/e_size_10"
                        android:src="@drawable/efun_pd_person_camera_icon" />
                </RelativeLayout>
                <!-- UID -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_marginRight="@dimen/e_size_150"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/e_size_70"
                        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/person_uid_mac_desc"
                            android:textColor="@color/e_18c6ff"
                            android:textSize="@dimen/e_text_size_36" />

                        <TextView
                            android:id="@+id/person_uid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/e_8c8c8c"
                            android:textSize="@dimen/e_text_size_30" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/e_size_20"
                        android:text="@string/person_uid_downline_desc"
                        android:textColor="@color/e_ff5e5e"
                        android:textSize="@dimen/e_text_size_34" />
                </LinearLayout>
            </LinearLayout>
            <!-- 账号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_50"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="@string/person_account_name"
                    android:textColor="@color/e_484848"
                    android:textSize="@dimen/e_text_size_36" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/e_size_60"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="2.0"
                    android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/person_ed_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@color/e_6b6b6b"
                        android:textSize="@dimen/e_text_size_30" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/e_size_30"
                    android:layout_weight="1.0"
                    android:background="@drawable/efun_pd_2eade4_rectangle_bg"
                    android:gravity="center"
                    android:padding="@dimen/e_size_5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36"
                    android:visibility="invisible" />
            </LinearLayout>
            <!-- 账号说明 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_15"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="3.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_account_name_desc"
                        android:textColor="@color/e_939393"
                        android:textSize="@dimen/e_text_size_26" />
                </LinearLayout>
            </LinearLayout>

            <!-- 密码 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_30"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="@string/person_pwd"
                    android:textColor="@color/e_484848"
                    android:textSize="@dimen/e_text_size_36" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/e_size_60"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="2.0"
                    android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/person_ed_pwd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/e_6b6b6b"
                        android:textSize="@dimen/e_text_size_30" />

                    <ImageView
                        android:id="@+id/person_pwd_eye"
                        android:layout_width="@dimen/e_size_54"
                        android:layout_height="@dimen/e_size_34"
                        android:layout_marginRight="@dimen/e_size_10"
                        android:background="@drawable/efun_pd_person_pwd_eye_selector" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/e_size_30"
                    android:layout_weight="1.0"
                    android:background="@drawable/efun_pd_2eade4_rectangle_bg"
                    android:gravity="center"
                    android:padding="@dimen/e_size_5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36"
                    android:visibility="invisible" />
            </LinearLayout>
            <!-- 密码说明 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_15"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="3.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_pwd_desc"
                        android:textColor="@color/e_939393"
                        android:textSize="@dimen/e_text_size_26" />
                </LinearLayout>
            </LinearLayout>
            <!-- 手机号码 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_30"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="@string/person_mac_phone"
                    android:textColor="@color/e_484848"
                    android:textSize="@dimen/e_text_size_36" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/e_size_60"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="2.0"
                    android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/person_mac_area_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:textColor="@color/e_6b6b6b"
                        android:textSize="@dimen/e_text_size_30" />

                    <View
                        android:layout_width="@dimen/e_size_1"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/person_mac_ed_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.0"
                        android:background="@null"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@color/e_6b6b6b"
                        android:textSize="@dimen/e_text_size_30" />
                </LinearLayout>

                <TextView
                    android:id="@+id/person_mac_btn_send_vcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/e_size_30"
                    android:layout_weight="1.0"
                    android:background="@drawable/efun_pd_2eade4_rectangle_bg"
                    android:gravity="center"
                    android:padding="@dimen/e_size_5"
                    android:text="@string/person_get_vcode_btn"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36" />
            </LinearLayout>
            <!-- 手机号码说明 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_15"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="3.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_mac_bind_phone_desc"
                        android:textColor="@color/e_939393"
                        android:textSize="@dimen/e_text_size_26" />
                </LinearLayout>
            </LinearLayout>
            <!-- 驗證碼 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_70"
                android:layout_marginRight="@dimen/e_size_150"
                android:layout_marginTop="@dimen/e_size_30"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="@string/person_mac_vcode_title"
                    android:textColor="@color/e_484848"
                    android:textSize="@dimen/e_text_size_36" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/e_size_60"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:layout_weight="2.0"
                    android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/person_mac_ed_vcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textColor="@color/e_6b6b6b"
                        android:textSize="@dimen/e_text_size_30" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/e_size_30"
                    android:layout_weight="1.0"
                    android:background="@drawable/efun_pd_2eade4_rectangle_bg"
                    android:gravity="center"
                    android:padding="@dimen/e_size_5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e_size_50"
                android:layout_marginTop="@dimen/e_size_30"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/person_mac_btn_confirm_bind_efun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/efun_pd_ff4848_rectangle_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/e_size_5"
                    android:paddingLeft="@dimen/e_size_10"
                    android:paddingRight="@dimen/e_size_10"
                    android:paddingTop="@dimen/e_size_5"
                    android:text="@string/person_mac_confirm_bind_efun"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36" />
            </LinearLayout>
<!--         </LinearLayout>
    </ScrollView> -->

</LinearLayout>