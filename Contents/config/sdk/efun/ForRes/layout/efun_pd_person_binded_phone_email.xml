<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/e_size_30"
    android:layout_marginLeft="@dimen/e_size_35"
    android:layout_marginRight="@dimen/e_size_35"
    android:layout_marginTop="@dimen/e_size_70"
    android:orientation="horizontal" >

    <!-- phone -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/e_size_30" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_30"
            android:text="@string/person_bind_phone_already"
            android:textColor="@color/e_8c8c8c"
            android:textSize="@dimen/e_text_size_36" />
        <TextView
            android:id="@+id/person_has_bind_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_30"
            android:textColor="@color/e_20aeff"
            android:textSize="@dimen/e_text_size_36" />
        <LinearLayout
            android:id="@+id/person_bind_layout_desc" 
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
            >
        <TextView
            android:id="@+id/person_bind_phone_gift_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_50"
            android:textColor="@color/e_8c8c8c"
            android:textSize="@dimen/e_text_size_36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_10"
            android:text="@string/person_bind_phone_already_desc"
            android:textColor="@color/e_ff6262"
            android:textSize="@dimen/e_text_size_36" />
        </LinearLayout>
        <TextView
            android:id="@+id/mac_get_gift_btn" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/e_size_10"
            android:layout_marginTop="@dimen/e_size_100"
            android:text="@string/efun_pd_mac_get_gift"
            android:textColor="@android:color/white"
            android:background="@drawable/efun_pd_ff4848_rectangle_bg"
            android:visibility="gone"
            android:textSize="@dimen/e_text_size_36"/>
    </LinearLayout>

    <!-- email -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/e_size_30"
        android:layout_weight="1.0"
        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_30"
            android:text="@string/person_bind_email_already"
            android:textColor="@color/e_8c8c8c"
            android:textSize="@dimen/e_text_size_36" />

        <TextView
            android:id="@+id/person_has_bind_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_30"
            android:textColor="@color/e_20aeff"
            android:textSize="@dimen/e_text_size_36" />
    </LinearLayout>

</LinearLayout>