<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/e_size_25"
        android:layout_marginTop="@dimen/e_size_30"
        android:text="@string/cs_title_nav_reply"
        android:textColor="@color/e_383838"
        android:textSize="@dimen/e_text_size_48" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_3"
        android:layout_marginLeft="@dimen/e_size_138"
        android:layout_marginRight="@dimen/e_size_138"
        android:background="@color/e_d9d9d9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/e_size_60"
            android:paddingLeft="@dimen/e_size_40"
            android:paddingRight="@dimen/e_size_130"
            android:paddingTop="@dimen/e_size_30" >

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <!-- <include layout="@layout/efun_pd_cs_reply_player_item" />

                <include layout="@layout/efun_pd_cs_reply_cs_item" />

                <include layout="@layout/efun_pd_cs_reply_score_item" /> -->
            </LinearLayout>

            <TextView
                android:id="@+id/cs_reply_reask_btn"
                android:layout_width="@dimen/e_size_240"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/e_size_70"
                android:background="@drawable/efun_pd_2eade4_rectangle_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/e_size_10"
                android:paddingTop="@dimen/e_size_10"
                android:text="@string/cs_reply_add_ask"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_36" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>