<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/e_size_25"
        android:layout_marginTop="@dimen/e_size_30"
        android:text="@string/cs_ask_title"
        android:textColor="@color/e_383838"
        android:textSize="@dimen/e_text_size_48" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_3"
        android:layout_marginLeft="@dimen/e_size_138"
        android:layout_marginRight="@dimen/e_size_138"
        android:background="@color/e_d9d9d9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/e_size_30" >

                <!-- 问题类型 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_type_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="2.0"
                        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/e_size_10"
                        android:paddingLeft="@dimen/e_size_20"
                        android:paddingRight="@dimen/e_size_20"
                        android:paddingTop="@dimen/e_size_10" >

                        <TextView
                            android:id="@+id/cs_ask_qs_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:textColor="@color/e_484848"
                            android:textSize="@dimen/e_text_size_34" />

                        <ImageView
                            android:layout_width="@dimen/e_size_34"
                            android:layout_height="@dimen/e_size_24"
                            android:layout_marginLeft="@dimen/e_size_10"
                            android:src="@drawable/efun_pd_cs_drop_down_icon" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8" />
                </LinearLayout>

                <!-- 游戏名，服务器 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_game_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <TextView
                        android:id="@+id/cs_ask_qs_game"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="1.9"
                        android:textColor="@color/e_adaeaf"
                        android:textSize="@dimen/e_text_size_34" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_server_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <TextView
                        android:id="@+id/cs_ask_qs_server"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:textColor="@color/e_adaeaf"
                        android:textSize="@dimen/e_text_size_34" />
                </LinearLayout>

                <!-- 角色名 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_role_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="2.0"
                        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/e_size_10"
                        android:paddingLeft="@dimen/e_size_20"
                        android:paddingRight="@dimen/e_size_20"
                        android:paddingTop="@dimen/e_size_10" >

                        <TextView
                            android:id="@+id/cs_ask_qs_role"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:textColor="@color/e_484848"
                            android:textSize="@dimen/e_text_size_34" />

                        <ImageView
                            android:layout_width="@dimen/e_size_34"
                            android:layout_height="@dimen/e_size_24"
                            android:layout_marginLeft="@dimen/e_size_10"
                            android:src="@drawable/efun_pd_cs_drop_down_icon" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8" />
                </LinearLayout>

                <!-- 提问内容 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_content_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/e_size_300"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="2.9"
                        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/e_size_10"
                        android:paddingLeft="@dimen/e_size_20"
                        android:paddingRight="@dimen/e_size_20"
                        android:paddingTop="@dimen/e_size_10" >

                        <EditText
                            android:id="@+id/cs_ask_ed_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="top"
                            android:imeOptions="actionNext"
                            android:textColor="@color/e_484848"
                            android:textSize="@dimen/e_text_size_34" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="1.9"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >
                        
                        <ImageView
                            android:id="@+id/cs_qs_shot_pic" 
                            android:layout_width="@dimen/e_size_240"
                            android:layout_height="@dimen/e_size_160"
                            android:src="@drawable/efun_pd_default_upload_icon"
                            />
                        
                        <TextView
                            android:id="@+id/cs_qs_upload_btn" 
                            android:layout_height="wrap_content"
                            android:layout_width="@dimen/e_size_240"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/e_text_size_36"
                            android:paddingTop="@dimen/e_size_10"
                            android:paddingBottom="@dimen/e_size_10"
                            android:layout_marginTop="@dimen/e_size_15"
                            android:gravity="center"
                            android:background="@drawable/efun_pd_2eade4_rectangle_bg"
                            android:text="@string/cs_ask_qs_upload"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/e_size_20"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/e_text_size_34"
                            android:text="@string/cs_ask_qs_upload_desc"
                            />
                        
                    </LinearLayout>
                </LinearLayout>
                
                <!-- 描述语 -->

				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:visibility="invisible" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.8"
                        android:textColor="@color/e_ff5e5e"
                        android:text="@string/efun_pd_cs_connected_desc"
                        android:textSize="@dimen/e_text_size_30" />
                </LinearLayout>
				
                <!-- 联络电话 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_connect_phone_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="3.3"
                        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/e_size_20"
                        android:paddingRight="@dimen/e_size_20" >

                        <TextView
                            android:id="@+id/cs_ask_phone_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:paddingBottom="@dimen/e_size_10"
                            android:paddingTop="@dimen/e_size_10"
                            android:textColor="@color/e_6b6b6b"
                            android:textSize="@dimen/e_text_size_34" />

                        <View
                            android:layout_width="@dimen/e_size_1"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray" />

                        <EditText
                            android:id="@+id/cs_ask_ed_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:background="@null"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:paddingBottom="@dimen/e_size_10"
                            android:paddingTop="@dimen/e_size_10"
                            android:singleLine="true"
                            android:textColor="@color/e_6b6b6b"
                            android:textSize="@dimen/e_text_size_34" />

                        <ImageView
                            android:id="@+id/cs_ask_phone_cancel"
                            android:layout_width="@dimen/e_size_35"
                            android:layout_height="@dimen/e_size_35"
                            android:layout_marginLeft="@dimen/e_size_10"
                            android:src="@drawable/efun_pd_cs_edit_cancle_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="1.5" />
                </LinearLayout>

                <!-- Email信箱 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="@string/cs_ask_qs_email_desc"
                        android:textColor="@color/e_484848"
                        android:textSize="@dimen/e_text_size_36" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="3.3"
                        android:background="@drawable/efun_pd_cons_grey_dash_rectangle"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/e_size_20"
                        android:paddingRight="@dimen/e_size_20" >

                        <EditText
                            android:id="@+id/cs_ask_ed_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:paddingBottom="@dimen/e_size_10"
                            android:paddingTop="@dimen/e_size_10"
                            android:singleLine="true"
                            android:textColor="@color/e_6b6b6b"
                            android:textSize="@dimen/e_text_size_34" />

                        <ImageView
                            android:id="@+id/cs_ask_email_cancel"
                            android:layout_width="@dimen/e_size_35"
                            android:layout_height="@dimen/e_size_35"
                            android:layout_marginLeft="@dimen/e_size_10"
                            android:src="@drawable/efun_pd_cs_edit_cancle_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_30"
                        android:layout_weight="1.5" />
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_30"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cs_ask_confirm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/efun_pd_ff4848_rectangle_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/e_size_10"
                    android:paddingLeft="@dimen/e_size_50"
                    android:paddingRight="@dimen/e_size_50"
                    android:paddingTop="@dimen/e_size_10"
                    android:text="@string/cs_ask_qs_confirm"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36" />
            </LinearLayout>
                
            </LinearLayout>
            
                        
            <TextView
                android:id="@+id/cs_ask_phone_list_btn1" 
                android:layout_width="@dimen/e_size_80"
                android:layout_height="wrap_content"
                android:textSize="@dimen/e_text_size_36"
                android:layout_marginTop="@dimen/e_size_50"
                android:textColor="@android:color/white"
                android:ems="1"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:padding="@dimen/e_size_25"
                android:background="@drawable/efun_pd_half_left_2eade4_rectangel_bg"
                android:text="@string/cs_ask_connect_phone_desc" />
            
            <LinearLayout
                android:id="@+id/cs_ask_phone_list_btn2" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/e_size_50"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/e_size_80"
                    android:layout_height="wrap_content"
                    android:background="@drawable/efun_pd_half_left_2eade4_rectangel_bg"
                    android:ems="1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/e_size_25"
                    android:text="@string/cs_ask_connect_phone_desc"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_36" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/e_ff8e74"
                    >
                    <TextView
                        android:id="@+id/cs_ask_phone_tw_btn"
	                    android:layout_width="wrap_content"
	                    android:layout_height="0dp"
	                    android:layout_weight="1.0"
	                    android:gravity="center"
	                    android:padding="@dimen/e_size_25"
	                    android:textColor="@android:color/white"
	                    android:textSize="@dimen/e_text_size_36" />
                    <View 
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/e_size_2"
                        android:background="@android:color/white"
                        />
                    <TextView
                        android:id="@+id/cs_ask_phone_hk_btn"
	                    android:layout_width="wrap_content"
	                    android:layout_height="0dp"
	                    android:layout_weight="1.0"
	                    android:gravity="center"
	                    android:padding="@dimen/e_size_25"
	                    android:textColor="@android:color/white"
	                    android:textSize="@dimen/e_text_size_36" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>