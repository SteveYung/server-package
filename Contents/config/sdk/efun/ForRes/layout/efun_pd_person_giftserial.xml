<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/e_size_25"
        android:layout_marginTop="@dimen/e_size_30"
        android:text="@string/person_title_gift_serial_list"
        android:textColor="@color/e_383838"
        android:textSize="@dimen/e_text_size_48" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_3"
        android:layout_marginLeft="@dimen/e_size_138"
        android:layout_marginRight="@dimen/e_size_138"
        android:background="@color/e_d9d9d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/e_size_30"
            android:paddingLeft="@dimen/e_size_20"
            android:paddingRight="@dimen/e_size_20"
            android:paddingTop="@dimen/e_size_50" >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/efun_pd_half_top_00b7ee_rectangel_bg"
                android:orientation="horizontal">
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:textSize="@dimen/e_text_size_36"
                    android:textColor="@android:color/white"
                    android:paddingTop="@dimen/e_size_10"
                    android:paddingBottom="@dimen/e_size_10"
                    android:gravity="center"
                    android:text="@string/person_gift_type"/>
                <View android:layout_width="@dimen/e_size_1"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:textSize="@dimen/e_text_size_36"
                    android:textColor="@android:color/white"
                    android:paddingTop="@dimen/e_size_10"
                    android:paddingBottom="@dimen/e_size_10"
                    android:gravity="center"
                    android:text="@string/person_gift_serial"/>
                <View android:layout_width="@dimen/e_size_1"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:textSize="@dimen/e_text_size_36"
                    android:textColor="@android:color/white"
                    android:paddingTop="@dimen/e_size_10"
                    android:paddingBottom="@dimen/e_size_10"
                    android:gravity="center"
                    android:text="@string/person_gift_center"/>
                <View android:layout_width="@dimen/e_size_1"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:textSize="@dimen/e_text_size_36"
                    android:textColor="@android:color/white"
                    android:paddingTop="@dimen/e_size_10"
                    android:paddingBottom="@dimen/e_size_10"
                    android:gravity="center"
                    android:text="@string/person_gift_dealwith"/>
            </LinearLayout>
            
    <com.efuntw.platform.support.widget.PagingListView
        android:id="@+id/paging_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent" >
    </com.efuntw.platform.support.widget.PagingListView>
            <!-- <include layout="@layout/efun_pd_giftserial_item"/>
            <include layout="@layout/efun_pd_giftserial_item"/>
            <include layout="@layout/efun_pd_giftserial_item"/>
            <include layout="@layout/efun_pd_giftserial_item"/>
            <include layout="@layout/efun_pd_giftserial_item"/> -->
            
        </LinearLayout>

</LinearLayout>