<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_753"
        android:layout_height="@dimen/e_size_592"
        android:layout_centerInParent="true"
        android:background="@drawable/efun_pd_cons_white_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/e_size_30" >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/e_size_37"
            android:layout_height="@dimen/e_size_37"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/e_size_30"
            android:src="@drawable/efun_pd_dialog_close_icon" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_30"
            android:text="@string/efun_pd_ask_add_ask"
            android:textColor="@color/e_29292e"
            android:textSize="@dimen/e_text_size_36" />

        <EditText
            android:id="@+id/common_dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/efun_pd_cons_grey_solid_rectangle"
            android:gravity="top"
            android:imeOptions="actionDone"
            android:padding="@dimen/e_size_10"
            android:layout_marginRight="@dimen/e_size_30"
            android:layout_marginLeft="@dimen/e_size_30"
            android:layout_marginTop="@dimen/e_size_30"
            android:singleLine="true"
            android:textColor="@color/e_6b6b6b"
            android:textSize="@dimen/e_text_size_34" />
        
        <TextView
            android:id="@+id/submit" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/e_size_30"
            android:text="@string/efun_pd_send"
            android:padding="@dimen/e_size_10"
            android:background="@color/e_ff686a"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_40"
            />
    </LinearLayout>

</RelativeLayout>