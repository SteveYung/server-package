<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_753"
        android:layout_height="@dimen/e_size_592"
        android:background="@drawable/efun_pd_cons_white_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/e_size_37"
            android:layout_height="@dimen/e_size_37"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/e_size_30"
            android:layout_marginTop="@dimen/e_size_30"
            android:src="@drawable/efun_pd_dialog_close_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/e_size_30" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/person_gift_serial"
                android:textColor="@color/e_29292e"
                android:textSize="@dimen/e_text_size_40"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_30"
                android:gravity="center_horizontal"
                android:textColor="@color/e_58c2ef"
                android:textSize="@dimen/e_text_size_36" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_136"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/efun_pd_cancel"
                android:textColor="@color/efun_pd_copy_btn_text_selector"
                android:textSize="@dimen/e_text_size_50" />

            <View
                android:layout_width="@dimen/e_size_1"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/dialog_btn_copy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textColor="@color/efun_pd_copy_btn_text_selector"
                android:text="@string/gift_serial_copy"
                android:textSize="@dimen/e_text_size_50" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>