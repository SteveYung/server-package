<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/person_nav_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:gravity="center_vertical"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:layout_marginLeft="@dimen/e_size_33"
            android:duplicateParentState="true"
            android:src="@drawable/efun_pd_person_title_person_icon_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:text="@string/person_title_nav_person"
            android:duplicateParentState="true"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_nav_giftcenter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:orientation="horizontal" >

        <RelativeLayout
        	android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:duplicateParentState="true"
            android:layout_marginLeft="@dimen/e_size_33" >
        
	        <ImageView
	            android:layout_width="@dimen/e_size_64"
	            android:layout_height="@dimen/e_size_64"
	            android:duplicateParentState="true"
	            android:src="@drawable/efun_pd_person_title_gift_icon_selector" />
	        <ImageView 
		            android:id="@+id/item_giftcenter_red_point"
		            android:layout_width="@dimen/e_size_33"
		            android:layout_height="@dimen/e_size_33"
		            android:layout_alignParentLeft="true"
		            android:duplicateParentState="true"
		            android:visibility="gone"
		            android:src="@drawable/efun_pd_corners_point_red"
            	/>
		</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:text="@string/person_title_gift_list"
            android:duplicateParentState="true"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/person_nav_giftserial"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:orientation="horizontal" >
		<RelativeLayout
		   	android:layout_width="@dimen/e_size_64"
		  	android:layout_height="@dimen/e_size_64"
		  	android:duplicateParentState="true"
		    android:layout_marginLeft="@dimen/e_size_33" >
		        <ImageView
		            android:layout_width="@dimen/e_size_64"
		            android:layout_height="@dimen/e_size_64"
		            android:duplicateParentState="true"
		            android:src="@drawable/efun_pd_person_title_giftserial_icon_selector" />
		        <ImageView 
		            android:id="@+id/item_giftserial_red_point"
		            android:layout_width="@dimen/e_size_33"
		            android:layout_height="@dimen/e_size_33"
		            android:layout_alignParentLeft="true"
		            android:duplicateParentState="true"
		            android:visibility="gone"
		            android:src="@drawable/efun_pd_corners_point_red"
            	/>
		</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:text="@string/person_title_gift_serial_list"
            android:duplicateParentState="true"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/person_nav_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:layout_marginLeft="@dimen/e_size_33"
            android:duplicateParentState="true"
            android:src="@drawable/efun_pd_person_title_shopping_icon_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:text="@string/person_title_shop"
            android:duplicateParentState="true"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/person_nav_sysinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_95"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/e_size_30"
        android:background="@drawable/efun_pd_person_title_bg_selector"
        android:orientation="horizontal" >
		
        <RelativeLayout
		   	android:layout_width="@dimen/e_size_64"
		  	android:layout_height="@dimen/e_size_64"
		  	android:duplicateParentState="true"
		    android:layout_marginLeft="@dimen/e_size_33" >
	        <ImageView
	            android:layout_width="@dimen/e_size_64"
	            android:layout_height="@dimen/e_size_64"
	            android:duplicateParentState="true"
	            android:src="@drawable/efun_pd_person_title_sysinfo_icon_selector" />
	        <ImageView 
		            android:id="@+id/item_sysinfo_red_point"
		            android:layout_width="@dimen/e_size_33"
		            android:layout_height="@dimen/e_size_33"
		            android:layout_alignParentLeft="true"
		            android:duplicateParentState="true"
		            android:visibility="gone"
		            android:src="@drawable/efun_pd_corners_point_red"
            	/>
		</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:text="@string/person_title_sys_info"
            android:duplicateParentState="true"
            android:textColor="@color/efun_pd_person_title_text_selector"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>    
</LinearLayout>