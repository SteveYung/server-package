<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:efun="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/e_size_768"
    android:layout_height="@dimen/e_size_540"
    android:background="@drawable/efun_pd_cons_white_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cs_reply_score_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_50"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        
        <com.efuntw.platform.support.widget.RatingBarView
            android:id="@+id/ratingbar_grade_question" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            efun:widthDimensRes="@dimen/e_size_80"
            ></com.efuntw.platform.support.widget.RatingBarView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/txt_grade_question"
            android:layout_width="@dimen/e_size_320"
            android:layout_height="@dimen/e_size_120"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/e_size_10"
            android:background="@drawable/efun_pd_cons_ff686a_bg"
            android:gravity="center"
            android:text="@string/efun_pd_reply_score"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_50" >
        </TextView>
    </RelativeLayout>

</LinearLayout>