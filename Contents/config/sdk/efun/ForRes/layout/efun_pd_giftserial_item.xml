<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_138"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gift_serial_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0"
            android:gravity="center"
            android:paddingBottom="@dimen/e_size_10"
            android:paddingTop="@dimen/e_size_10"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/e_999999"
            android:textSize="@dimen/e_text_size_34" />

        <View
            android:layout_width="@dimen/e_size_1"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/gift_serial_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0"
            android:gravity="center"
            android:paddingBottom="@dimen/e_size_10"
            android:paddingTop="@dimen/e_size_10"
            android:textColor="@color/e_17a5ff"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="@dimen/e_text_size_34" />

        <View
            android:layout_width="@dimen/e_size_1"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/gift_serial_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.0"
            android:gravity="center"
            android:paddingBottom="@dimen/e_size_10"
            android:paddingTop="@dimen/e_size_10"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/e_999999"
            android:textSize="@dimen/e_text_size_34" />

        <View
            android:layout_width="@dimen/e_size_1"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gift_serial_btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/efun_pd_edc353_rectangle_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/e_size_10"
                android:paddingLeft="@dimen/e_size_30"
                android:paddingRight="@dimen/e_size_30"
                android:paddingTop="@dimen/e_size_10"
                android:text="@string/gift_serial_copy"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_34" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:background="@android:color/darker_gray" />

</LinearLayout>