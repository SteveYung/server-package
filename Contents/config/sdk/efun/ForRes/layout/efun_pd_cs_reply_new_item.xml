<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e_size_45"
        android:layout_marginBottom="@dimen/e_size_30"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/cs_reply_content" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/e_7a7a7a"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/e_text_size_36"
            />
        <TextView
            android:id="@+id/cs_reply_time" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/e_9ed8f2"
            android:textSize="@dimen/e_text_size_30"
            android:layout_marginLeft="@dimen/e_size_20"
            />
        <ImageView 
            android:layout_width="@dimen/e_size_25"
            android:layout_height="@dimen/e_size_14"
            android:src="@drawable/efun_pd_cs_reply_new_blue_drop_down"
            android:layout_marginLeft="@dimen/e_size_30"
            />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_2"
        android:background="@drawable/efun_pd_line_grey_dash"/>

</LinearLayout>