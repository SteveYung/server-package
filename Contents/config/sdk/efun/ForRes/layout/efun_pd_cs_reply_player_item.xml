<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/e_size_30" >
    
    <TextView
        android:id="@+id/reply_time" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/e_828282"
        android:textSize="@dimen/e_text_size_36"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/e_size_70"
    	android:paddingRight="@dimen/e_size_90"
        android:paddingTop="@dimen/e_size_30" >

   <ImageView
       android:id="@+id/cs_reply_detail_icon" 
       android:layout_width="@dimen/e_size_160"
       android:layout_height="@dimen/e_size_160"
       android:src="@drawable/efun_pd_default_round_user_girl_icon"
       />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:background="@drawable/efun_pd_cs_reply_cs_item_body_left_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/e_size_45" >

        <TextView
            android:id="@+id/cs_reply_detail_content" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/e_bdbdbd"
            android:textSize="@dimen/e_text_size_34" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>