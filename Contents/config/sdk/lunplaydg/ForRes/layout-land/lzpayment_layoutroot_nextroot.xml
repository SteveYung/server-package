<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    >
<!-- 400 -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"   
    	android:orientation="horizontal"
    	android:background="@null"
        >       
        <View 
           android:layout_width="0px"
    	   android:layout_height="match_parent"   
    	   android:layout_weight="10"
           />        
      	<LinearLayout 
            android:layout_width="0px"
    		android:layout_height="match_parent"   
    		android:layout_weight="780"
    		android:orientation="vertical"    		
    		android:background="@null">
    		 <LinearLayout 
              android:layout_width="match_parent" 
    		  android:layout_height="0px" 
    		  android:layout_weight="224"    
    		  android:orientation="horizontal"
              >
    		   <LinearLayout 
    		       android:layout_width="0px" 
    		  	   android:layout_height="fill_parent" 
    		 	   android:layout_weight="360"    
    		 	   android:orientation="vertical"
    		       >
    		        <LinearLayout 
           		android:layout_width="match_parent"
    			android:layout_height="0px"   
    			android:layout_weight="94"
               	>
               	<ImageView 
    		    android:id="@id/lzpay_nextroot_logoimage"    	
    		    android:layout_width="0px" 
    		   	android:layout_height="match_parent" 
    			android:layout_weight="150"    
    			android:src="@drawable/lzpayment_joincard"
    			android:scaleType="fitStart"
    			android:adjustViewBounds="true"
    			android:background="@null"   			
    		    />
    		<View 
            	android:layout_width="0px" 
    		   	android:layout_height="match_parent" 
    			android:layout_weight="6"    			
    			/>
    		<LinearLayout 
    		  android:layout_width="0px" 
    		   	android:layout_height="match_parent" 
    		   android:layout_weight="200"
    		   android:orientation="vertical"
    		   >
    		  
    		 <lezhou.paymentStuff.totoleView.baseTextView
    		    android:id="@id/lzpay_nextroot_label_top"    	
            	android:layout_width="wrap_content"
    			android:layout_height="0px" 
    			android:layout_weight="35"
    			android:orientation="vertical"    			
    			android:background="@drawable/lzpayment_mainroot_home_textlabelback"
    			android:gravity="center"
	    		android:text="確認送出"
	    		android:textSize="16px"    		
    			android:textColor="#c7c7c8" 
    			android:minWidth="100px"	
    			android:paddingLeft="5dp"	
    			android:paddingRight="5dp"		
    			/>
    		<View 
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="8"    			
    			/>          
    		<lezhou.paymentStuff.totoleView.baseTextView
    		    android:id="@id/lzpay_nextroot_label_bottom"    	
            	android:layout_width="wrap_content"
    			android:layout_height="0px" 
    			android:layout_weight="35"
    			android:orientation="vertical"    			
    			android:background="@drawable/lzpayment_mainroot_home_textlabelback"
    			android:gravity="center"
	    		android:text="確認送出"
	    		android:textSize="16px"    		
    			android:textColor="#c7c7c8" 
    			android:minWidth="100px"	
    			android:paddingLeft="5dp"	
    			android:paddingRight="5dp"			
    			/>
    		   <View 
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="16"    			
    			/>  
               </LinearLayout>	
           </LinearLayout>	
            <TextView  		   
    		    android:id="@id/lzpay_nextroot_moneyvalue"    	
            	android:layout_width="match_parent"
    			android:layout_height="0px"   
    			android:layout_weight="130"			
    			android:background="@null"
    			android:gravity="center"
	    		android:text="$100"
	    		android:textSize="120px"    		
    			android:textColor="#ffffff"    			    		
    			style="@style/myMoneyTextView"
    			android:singleLine="true" 
    			android:ellipsize="start"
    			android:lineSpacingExtra = "0px" 		   
    			/>
    		       
    		   </LinearLayout>
    		   <View 
           		   android:layout_width="0px" 
    		  	   android:layout_height="fill_parent" 
    		 	   android:layout_weight="10"    
               		/>
    		    <LinearLayout 
    		       android:layout_width="0px" 
    		  	   android:layout_height="fill_parent" 
    		 	   android:layout_weight="410"    
    		 	   android:orientation="vertical"
    		       >
            <View 
                android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="64"   
                />
    		       <lezhou.paymentStuff.totoleView.myBaseEditText
    		    android:id="@id/lzpay_nextroot_edittextname"
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="65"      			
    			android:orientation="vertical"    			
    			android:background="@drawable/lzpayment_mainroot_next_edittextbook"
    			android:gravity="center"
	    		android:hint="請輸入手機號碼"
	    		android:textSize="22px"     			
    			android:visibility="visible"
    			android:textColor="#404040"		
    			/>
    		<View 
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="10"    	  			
    			/>  
    		<lezhou.paymentStuff.totoleView.myBaseEditText
    		    android:id="@id/lzpay_nextroot_edittextnums"
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="65"     		
    			android:orientation="vertical"    			
    			android:background="@drawable/lzpayment_mainroot_next_edittextbook"
    			android:gravity="center"
    			android:hint="請輸入身份證字號"	    		
	    		android:textSize="22px" 
    			android:minWidth="100px"	
    			android:visibility="invisible"
    			android:textColor="#404040"		
    			/>
    		<lezhou.paymentStuff.totoleView.baseTextForSizeView
    		    android:id="@id/lzpay_nextroot_edittextlabel_fortips"
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="65"     		
    			android:orientation="vertical"    			
    			android:background="@null"
    			android:gravity="top|center_horizontal"
	    		android:text="使用非本人資訊認證可能會觸犯法律"
	    		android:textSize="15px"    		
    			android:textColor="#ffffff"  
    			android:visibility="gone"
    			/>
    		<lezhou.paymentStuff.totoleView.baseTextForSizeView
    		    android:id="@id/lzpay_nextroot_edittextlabel_fortips_2"
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="30"     		
    			android:orientation="vertical"    			
    			android:background="#0000ff"
    			android:gravity="top|center_horizontal"
	    		android:text="使用非本人資訊認證可能會觸犯法律"
	    		android:textSize="15px"    		
    			android:textColor="#ffffff"  
    			android:visibility="gone"
    			/>
    		<View 
    		    android:id="@id/lzpay_nextroot_edittextlabel_fortips_3"
           	 	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="30"  />  
    		
    		       
    		   </LinearLayout>
    		     
    		 </LinearLayout>
    		 <View 
            android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="10"    	  			
    		/>  
    		 <lezhou.paymentStuff.totoleView.baseTextView
    		    android:id="@id/lzpay_nextroot_edittextlabel"
            	android:layout_width="match_parent"
    			android:layout_height="0px" 
    			android:layout_weight="81"     			
    			android:orientation="vertical"    			
    			android:background="@null"
    			android:gravity="bottom|center_horizontal"
	    		android:text="使用非本人資訊認證可能會觸犯法律"
	    		android:textSize="15px"    		
    			android:textColor="#ffffff"  
    			android:minWidth="100px"	
    			/>
    		 <!--  -->
    	<lezhou.paymentStuff.totoleView.bottomButTextView
            android:id="@id/lzpay_nextroot_sendbutton"
            android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="75"
    		android:orientation="vertical"
    		android:background="@drawable/lzpayment_nextroot_bottombut"
    		android:gravity="center"
    		android:text="確認送出"
    		android:textSize="26px"    		
    		android:textColor="#ffffff"
    		android:shadowColor="#507a29" 
    		android:shadowDx="0"
    		android:shadowDy="1"
    		android:shadowRadius="1"    	   		
    		/>
        <View 
            android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="10"    	  			
    		/>  
          
      	</LinearLayout>
       <View 
           android:layout_width="0px"
    	   android:layout_height="match_parent"   
    	   android:layout_weight="10"
           />
        
    </LinearLayout>

</RelativeLayout>
