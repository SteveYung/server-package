<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"   
    tools:context=".paymentMainActivity" >

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="fill_parent"   
    	android:orientation="horizontal"
    	android:background="@null"
        >        
         <View 
           android:layout_width="0px"
    	   android:layout_height="match_parent"   
    	   android:layout_weight="10"
           />       
        <LinearLayout 
            android:layout_width="0px"
    		android:layout_height="match_parent"   
    		android:layout_weight="780"
    		android:orientation="vertical"
    		android:background="@null"
           	>
           	<LinearLayout 
           	    android:layout_width="fill_parent"
    			android:layout_height="0px" 
    			android:layout_weight="220"  
    			android:orientation="horizontal"
    			>
    			
    			<LinearLayout 
    			    android:layout_width="0px"
    				android:layout_height="fill_parent" 
    				android:layout_weight="360" 
    				android:orientation="vertical"
    				>
    			  
    				<lezhou.paymentStuff.totoleView.baseTextView
    		    		android:id="@id/lzpay_homeroot_label_one"
            			android:layout_width="wrap_content"
    					android:layout_height="0px" 
    					android:layout_weight="35"
    					android:orientation="vertical"    			
    					android:background="@drawable/lzpayment_mainroot_home_textlabelback"
    					android:gravity="center"
	    				android:text="確認送出"
	    				android:textSize="16px"    		
    					android:textColor="#c7c7c8" 
    					android:minWidth="100px"	
    					android:paddingLeft="5dp"	
    					android:paddingRight="5dp"		
    					/>
    				  <View 
            			android:layout_width="match_parent"
    					android:layout_height="0px" 
    					android:layout_weight="10"    			
    					/>  
    				<lezhou.paymentStuff.totoleView.baseTextView
    		    		android:id="@id/lzpay_homeroot_label_two"
            			android:layout_width="wrap_content"
    					android:layout_height="0px" 
    					android:layout_weight="35"
    					android:orientation="vertical"    			
    					android:background="@drawable/lzpayment_mainroot_home_textlabelback"
    					android:gravity="center"
	    				android:text="確認送出"
	    				android:textSize="16px"    		
    					android:textColor="#c7c7c8" 
    					android:minWidth="100px"	
    					android:paddingLeft="5dp"	
    					android:paddingRight="5dp"			
    					/>
    				 <View 
            			android:layout_width="match_parent"
    					android:layout_height="0px" 
    					android:layout_weight="10"    			
    					/>  
    				<TextView
    		    		android:id="@id/lzpay_homeroot_moneyvalue"
    		    		android:layout_width="match_parent"
    					android:layout_height="0px" 
    					android:layout_weight="130"    
    		    		android:gravity="center"
    		    		android:text="123456"
    		    		android:textColor="#ffffff"
    		    		android:textSize="80px" 
    		    		style="@style/myMoneyTextView"
    		    		/>
    			    
    			</LinearLayout>
    			<View 
            		android:layout_width="0px"
    				android:layout_height="fill_parent" 
    				android:layout_weight="10"    	  			
    				/>
    			<RelativeLayout 
            		android:layout_width="0px"
    				android:layout_height="match_parent"   
    				android:layout_weight="410"
    				android:background="@null"
           			>
              	<GridView 
    		    	android:id="@id/lzpay_homeroot_GridView"  
    				android:layout_width="match_parent"
    				android:layout_height="wrap_content" 
    				android:gravity="center"   
    				android:background="@null"    	
  					android:numColumns="2"
  					android:stretchMode="columnWidth"
  					android:focusable="false"  		
  					android:focusableInTouchMode="false"
  					android:visibility="gone"
  					/>
    			<lezhou.paymentStuff.totoleView.baseTextView
            		android:id="@id/lzpay_homeroot_showtip"
            		android:layout_width="match_parent"
    				android:layout_height="wrap_content"   
    				android:background="@drawable/lzpayment_mainroot_home_textlabelback"
    				android:gravity="center"
    				android:text="親愛的，交易成功了"
    				android:textSize="20px"    		
    				android:textColor="#c7c7c8" 
    				android:padding="8dp"	
    				android:visibility="visible"		
    				/>
        	</RelativeLayout >
           	    
           	    
           	</LinearLayout>
           	
           	 <View 
            	android:layout_width="fill_parent"
    			android:layout_height="0px" 
    			android:layout_weight="95"    	  			
    			/>
            <lezhou.paymentStuff.totoleView.bottomButTextView
            	android:id="@id/lzpay_homeroot_sentbutton"
            	android:layout_width="fill_parent"
    			android:layout_height="0px" 
    			android:layout_weight="75"
    			android:background="@drawable/lzpayment_mainroot_home_textbuttonback"
    			android:gravity="center"
    			android:text="確認送出"
    			android:textSize="26px"    		
    			android:textColor="#ffffff"
    			android:shadowColor="#507a29" 
    			android:shadowDx="0"
    			android:shadowDy="1"
    			android:shadowRadius="1"    	    			
    			/>
             <View 
            	android:layout_width="fill_parent"
    			android:layout_height="0px" 
    			android:layout_weight="10"    	  			
    			/>
           	
        </LinearLayout>
        <View 
           android:layout_width="0px"
    	   android:layout_height="match_parent"   
    	   android:layout_weight="10"
           />
        
    </LinearLayout>

</RelativeLayout>
