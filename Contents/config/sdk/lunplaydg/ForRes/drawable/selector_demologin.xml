<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#009944" android:startColor="#009944" />

            <corners android:radius="5dp" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#96D31E" android:startColor="#96D31E" />

            <corners android:radius="5dp" />
        </shape></item>
    <!-- default -->
    <item><shape>
            <gradient android:angle="270" android:endColor="#96D31E" android:startColor="#96D31E" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>