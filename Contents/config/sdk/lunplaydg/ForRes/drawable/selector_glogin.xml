<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#A40001" android:startColor="#A40001" />

            <corners android:radius="5dp" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#E04A32" android:startColor="#E04A32" />

            <corners android:radius="5dp" />
        </shape></item>
    <!-- default -->
    <item><shape>
            <gradient android:angle="270" android:endColor="#E04A32" android:startColor="#E04A32" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>