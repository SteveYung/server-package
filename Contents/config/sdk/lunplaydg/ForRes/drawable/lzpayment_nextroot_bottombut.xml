<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 点击之后 -->
  <item android:state_pressed="true">
    <layer-list>
      <item 
        android:left="4dp" 
        android:top="4dp">
        <shape>
          <solid 
            android:color="#ff58bb52" />
          <corners 
            android:radius="3dp" />
        </shape>
       </item>
    </layer-list>
	</item>
  <!-- 正常状态 -->
  <item>
    <layer-list>
      <!-- 第一层 -->
      <item 
        android:id="@id/lzpay_nextroot_bottombut_top"
        android:drawable="@drawable/lzpayment_mainroot_home_textbuttonback_top"/>
      <!-- 第二层 -->
      <item 
        android:id="@id/lzpay_nextroot_bottombut_under"
        android:drawable="@drawable/lzpayment_mainroot_home_textbuttonback"
        android:bottom="5px" />
    </layer-list>
   </item>
</selector>