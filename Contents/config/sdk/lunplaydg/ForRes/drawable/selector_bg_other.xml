<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
              <stroke android:width="1px" android:color="#8C8C8C" />
            <gradient android:angle="270" android:endColor="#BEBEBE" android:startColor="#BEBEBE" />

            <corners android:radius="10dp" />
        </shape></item>
    <!-- focus -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#BEBEBE" android:startColor="#BEBEBE" />

            <corners android:radius="10dp" />
        </shape></item>
    <!-- default -->
    <item><shape>
         <stroke android:width="1px" android:color="#8C8C8C" />
            <gradient android:angle="270" android:endColor="#d0d0d0" android:startColor="#d0d0d0" />

            <corners android:radius="10dp" />
        </shape></item>

</selector>