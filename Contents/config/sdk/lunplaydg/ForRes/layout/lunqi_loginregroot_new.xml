<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >   	
   <ImageView 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:src="@drawable/an1_ddt_mm_bg"
       android:adjustViewBounds="true"
       android:scaleType="centerCrop"
       android:background="@null"
       />
   <include 
       android:id="@+id/lunqi_login_new"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       layout="@layout/lunqi_loginroot_new"
       android:layout_centerInParent="true"  
       android:visibility="visible"
       />
    <include 
       android:id="@+id/lunqi_reg_new"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       layout="@layout/lunqi_regroot_new"
       android:layout_centerInParent="true"  
       android:visibility="gone"
       />
    <include 
       android:id="@+id/lunqi_loadView_new"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       layout="@layout/an1_ddt_loadview"
       android:layout_centerInParent="true"  
       android:visibility="gone"
       />

</RelativeLayout>
