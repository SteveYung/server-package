<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    >   
    <LinearLayout 
        android:id="@+id/an1_checkservice_outroot"  
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:background="@null"
        >
        <RelativeLayout
            android:id="@+id/an1_checkservice_itemroot"  
        	android:layout_width="270px"
    		android:layout_height="90px"     		   	
    		>
    		 <TextView 
    		    android:id="@+id/an1_checkservice_itemtext"  
        		android:layout_width="260px"
    			android:layout_height="80px"	
    			android:layout_centerInParent="true" 	
    			android:textSize="25px"
    			android:text="推薦的伺服器"
    			android:textColor="#000000"
    			android:maxLength="30"
    			android:gravity="center"
    			android:background="@drawable/lunqi_service_itembut"
    			/>
    	
  			<ImageView 
  			    android:id="@+id/an1_checkservice_itemimg"  
  		    	android:layout_width="80px"
    			android:layout_height="75px"
    			android:src="@drawable/lunqicheckservicehot"
    			android:scaleType="fitCenter"
    			android:adjustViewBounds="true"
    			android:layout_alignParentRight="true"
    			android:layout_alignParentTop="true"
  		    	/>
		</RelativeLayout>
    </LinearLayout>
</RelativeLayout>
