<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >   
    
    <RelativeLayout
        android:id="@+id/lppopwindow_root_RelativeLayout"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"    	
    	android:background="#7d000000"
    	android:focusable="false"
        >
    
	<LinearLayout 
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/lpchange_login_outshape"
    	android:layout_centerInParent="true"
    	android:padding="5dp"
	    >
  
   
	
	<RelativeLayout
	    android:id="@+id/lunqi360_layout_pop_root"
	    android:layout_width="500px"
    	android:layout_height="300px"  	
    	android:background="@null"
    	android:orientation="vertical"    	
	    >
	    <ImageButton 
	    	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:background="@drawable/lunqi360_layout_shape"
	        />
	    <LinearLayout 
	    	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"    	
    		android:orientation="vertical">
    		<!--  -->
		<LinearLayout 
	    	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"    	
    		android:orientation="vertical"
	   		 >
	    <RelativeLayout 
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:padding="3dp"
    		android:orientation="horizontal"
	        >
	   <TextView 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_toLeftOf="@+id/lunqi_baidusdk_statictitle_img"    
    		android:layout_centerVertical="true"	
    		android:textSize="18sp"		
    		android:text="查看兌換比例"
    		android:textColor="#000000"
	        />
	   <ImageView 
	       android:id="@+id/lunqi_baidusdk_statictitle_img"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/ebpay_bg_del_selector"
	       android:scaleType="fitCenter"
	       android:layout_centerVertical="true"	
	       android:layout_alignParentRight="true"
	       android:maxHeight="40dp"
	       />
	   </RelativeLayout>
	 <ImageView 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:src="@drawable/ebpay_bg_back_sheller_normal"
    		android:scaleType="fitXY"    		
    		android:layout_centerInParent="true"
    		android:layout_below="@+id/lunqi_baidusdk_mypop_title"
    		/>    
    
	</LinearLayout>
    <ScrollView 
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:padding="3dp"
    	    >
	<TextView 
	        android:id="@+id/lunqi_baidupop_stringvalue"
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"    		
    		android:text="兌換比例整理中..."    
    		android:textColor="#000000"		
	        />
  </ScrollView>
  <!--  -->
  </LinearLayout>
  </RelativeLayout>
  </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
