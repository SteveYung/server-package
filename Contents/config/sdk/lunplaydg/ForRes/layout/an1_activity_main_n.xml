<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainFaceActivity_test" 
    android:background="@drawable/lunqiitemback_w">
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="1">
    	<include layout="@layout/an1_my_title_n1"/>
    </LinearLayout>
   
    <an1.uiface.use.LunqiAutoScrollTextView
        android:id="@+id/lunqi_marquee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="倫奇在線，打造最真實，最公平的手遊平臺"
        android:background="@drawable/lunqi_line"
        android:textSize="16sp"
      	android:visibility="gone"
       />
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/TIPS_WORDS"
        android:textColor="#88000000"
        android:gravity="center"        
        />
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="9"
    	android:gravity="center">
    	<View 
        	android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="40"/>		 
    	<GridView 
    	    android:background="@null"
        	android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
  			android:id="@+id/an1_gridview"  
  			android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="720"    		
  			android:numColumns="3"
  			android:stretchMode="columnWidth"
  			android:focusable="false"
  			android:gravity="center"
  			android:focusableInTouchMode="false"/>
    	<View 
        	android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="40"/>	
    		
 	</LinearLayout>
 

</LinearLayout>
