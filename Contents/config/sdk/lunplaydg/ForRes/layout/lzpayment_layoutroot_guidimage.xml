<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
  	<!-- 715 -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"   
    	android:orientation="horizontal"
    	android:background="@null"
        >    
        <View 
    	    android:layout_width="0px"
    		android:layout_height="fill_parent" 
    		android:layout_weight="10"
    	    />        	        
        <LinearLayout 
            android:layout_width="0px"
    		android:layout_height="fill_parent" 
    		android:layout_weight="460"
    		android:orientation="vertical"
            >
            
            
       
         <RelativeLayout 
            android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="615"
    		android:orientation="vertical"
    		>
    		     <ImageView 
    		        android:id="@id/lzpay_guidimage_show_one"
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent" 
    				android:src="@drawable/fami_step1"
    				android:scaleType="centerInside"
    				android:adjustViewBounds="true"
    				android:visibility="visible"
    		        />
    		    <ImageView 
    		        android:id="@id/lzpay_guidimage_show_two"
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent" 
    				android:src="@drawable/fami_step2"
    				android:scaleType="centerInside"
    				android:adjustViewBounds="true"
    				android:visibility="invisible"
    				/>
    	</RelativeLayout> 
    	<View 
    	    android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="10"
    	    />        	
        <lezhou.paymentStuff.totoleView.bottomButTextView
            android:id="@id/lzpay_nextroot_sendbutton"
            android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="80"
    		android:orientation="vertical"
    		android:background="@drawable/lzpayment_mainroot_home_textbuttonback"
    		android:gravity="center"
    		android:text="返回遊戲"
    		android:textSize="26px"    		
    		android:textColor="#ffffff"
    		android:shadowColor="#507a29" 
    		android:shadowDx="0"
    		android:shadowDy="1"
    		android:shadowRadius="1"    	 		
    		/>
        <View 
    	    android:layout_width="match_parent"
    		android:layout_height="0px" 
    		android:layout_weight="10"
    	    />       
         </LinearLayout>  
         <View 
    	    android:layout_width="0px"
    		android:layout_height="fill_parent" 
    		android:layout_weight="10"
    	    />    
    </LinearLayout>
    <ImageView 
        android:id="@id/lzpay_guidimage_golast"
    	android:layout_width="30px"
    	android:layout_height="wrap_content" 
    	android:src="@drawable/lzpayment_back"
    	android:scaleType="centerInside"
    	android:adjustViewBounds="true"
    	android:layout_centerVertical="true"
    	android:padding="5px"
    	/>
    <ImageView 
        android:id="@id/lzpay_guidimage_gonext"
    	android:layout_width="30px"
    	android:layout_height="wrap_content" 
    	android:src="@drawable/lzpayment_gonext"
    	android:scaleType="centerInside"
    	android:adjustViewBounds="true"
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"
    	android:padding="5px"
    	/>

</RelativeLayout>
