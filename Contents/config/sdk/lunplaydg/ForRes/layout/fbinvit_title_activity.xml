<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/fbinvit_top_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/bu_back_friendsList"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/fbinvit_selector_top_button"
        android:minWidth="55dp"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
       
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/an1_google_pop_dialog_notok"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="6"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:scaleType="center"
        android:shadowColor="#66000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text="@string/ivit_friends_list"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/com_facebook_picker_done_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/fbinvit_selector_top_button"
        android:minWidth="55dp"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:shadowColor="#66000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>