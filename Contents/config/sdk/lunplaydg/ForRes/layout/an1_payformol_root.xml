<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#dfe0e2" >
   
	 <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        android:orientation="vertical">
   
	<RelativeLayout
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="45"
    	android:orientation="horizontal"
    	android:gravity="center"    	
         >
  		<ImageView 
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:background="@null"
    		android:src="@drawable/mytitlebg"
    		android:scaleType="fitXY"
        	/>
  		 <LinearLayout 
        	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
        	android:orientation="horizontal">
         <ImageView
    		android:id="@+id/an1_mytitlebut"
    		android:layout_width="0px"
    		android:layout_height="fill_parent"  
    		android:layout_weight="47"
    		android:background="@null"
    		android:src="@drawable/bg_top_back"
    		android:scaleType="fitCenter"
    		android:adjustViewBounds="true"
    		/>
        <TextView
        	android:id="@+id/an1_mypayonetitle"
        	android:layout_width="0px"
    		android:layout_height="fill_parent"  
    		android:layout_weight="585"
    		android:gravity="center"
       	 	android:textSize="20sp"
       	 	android:text="@string/pay_main" 
        	android:textColor="#88ffffff"
        	android:singleLine="true"
        	android:background="@null"
        	/>
        <ImageView 
        	android:id="@+id/lunqi_maititle_blvalue"
        	android:layout_width="0px"
    		android:layout_height="fill_parent"  
    		android:layout_weight="79"
    		android:background="@null"
    		android:src="@drawable/bg_top_bl"     
    		android:adjustViewBounds="true"   
    		android:scaleType="fitCenter"
        	/>
         <View 
            android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="5"
            />
       <ImageView 
           android:id="@+id/lunqi_titleservice"
           android:layout_width="0px"
    		android:layout_height="fill_parent"  
    		android:layout_weight="79"	
    		android:background="@null"
    		android:src="@drawable/bg_top_kf"    
    		android:adjustViewBounds="true"    
    		android:scaleType="fitCenter"
    		/> 
    	<View 
            android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="5"
            />
    	</LinearLayout>
	</RelativeLayout>

	 <LinearLayout
	     android:layout_width="fill_parent"
	     android:layout_height="0px"
	     android:layout_weight="435"
	     android:background="@null"
	     android:gravity="center_vertical"
	     android:orientation="horizontal" >
  		  <View 
            android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="40"
            />       
     	 <LinearLayout 
            android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="720"
    		android:orientation="vertical"
    		>
    	 <LinearLayout
        	android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="100"
    		android:orientation="vertical"
    		android:gravity="center_vertical"
    		>
    		<include 
       			android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:gravity="center"
       			layout="@layout/an1_molpay_item"/>
    	  </LinearLayout>
      
       <View 
        	android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="4"/>
        <LinearLayout 
        	android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="2"
    		android:gravity="center"
        	>
        	<View 
        		android:layout_width="0px"
    			android:layout_height="wrap_content"
    			android:layout_weight="15"
    			android:background="@drawable/shape_line1"
        	/>
        	<View 
        	    android:layout_width="0px"
    			android:layout_height="wrap_content"
    			android:layout_weight="70"
    			android:background="#88000000"
        	    />
        	<View 
        	    android:layout_width="0px"
    			android:layout_height="wrap_content"
    			android:layout_weight="15"
    			android:background="@drawable/shape_line2"
        	    />
        	         
        </LinearLayout>
        <View 
        	android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="4"/>
         <LinearLayout
            android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="325"
    		android:gravity="left"
            >
        <GridView        	
  			android:id="@+id/an1_gridview"  
  			android:layout_width="720px"
    		android:layout_height="fill_parent"
    		android:numColumns="3"
  			android:focusable="false"
  			android:gravity="center"
  			android:focusableInTouchMode="false"/>
         </LinearLayout>
        </LinearLayout>
        <View 
            android:layout_width="0px"
    		android:layout_height="fill_parent"
    		android:layout_weight="40"
            />   
	 </LinearLayout>
	 
	</LinearLayout>
	 <include 
       android:id="@+id/lunqi_loadView_new"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       layout="@layout/an1_ddt_loadview"
       android:layout_centerInParent="true"  
       android:visibility="gone"
       />
</RelativeLayout>
