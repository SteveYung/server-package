<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#fbad25" >
   
	 <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="80"
    	android:gravity="center_vertical"
    	android:background="#ffffff"
        android:orientation="horizontal">
    		<ImageView
    		    android:id="@+id/an1_mytitlebut"
    		    android:layout_width="0px"
    			android:layout_height="fill_parent"
    			android:layout_weight="90"
    			android:adjustViewBounds="true"
    			android:src="@drawable/bg_top_back"
    			android:scaleType="fitCenter"
    			android:background="@null"
    			/>
    		<LinearLayout 
    		   android:layout_width="0px"
    			android:layout_height="fill_parent"
    			android:layout_weight="1100"      
            	android:layout_centerInParent="true"    
            	android:gravity="center"
            	>
    		    <ImageView 
    		         android:layout_width="wrap_content"
            		android:layout_height="fill_parent"  
            		android:src="@drawable/lunqicheckservicelogo"      
            		android:adjustViewBounds="true"
            		android:scaleType="fitCenter"
            		android:paddingBottom="5dp"
            		/>
    		    <TextView 
    		        android:id="@+id/an1_checkservice_title"
        	        android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:textSize="40px"
    				android:text="伺服器選擇界面"
    				android:maxLength="30"
    				android:textColor="#000000"
    				android:paddingLeft="5dp"
        	        />
    		    
    		    
    		</LinearLayout>
    		<View 
    		    android:layout_width="0px"
    			android:layout_height="fill_parent"
    			android:layout_weight="90"
    		    />
        	
        </LinearLayout>
		<RelativeLayout 
		    android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="660"
    		android:orientation="horizontal">
    		<TextView 
    		    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"    			
    			android:text="www.lunplay.com"
    			android:layout_alignParentTop="true"    			
    			android:textColor="#000000"
    			android:layout_centerHorizontal="true"
    			android:textSize="@dimen/my_padding"
    		    />
    	<RelativeLayout
            android:id="@+id/an1_checkservice_baseroot"
            android:layout_width="1200px"
    		android:layout_height="600px"
    		android:layout_centerInParent="true"
            >
        <LinearLayout            
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_centerInParent="true"
    		android:background="@drawable/lunqi360_layout_shape"
            >
        	<LinearLayout 
        	    android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:orientation="vertical"
        	    >
        	    <LinearLayout 
        	        android:layout_width="fill_parent"
    				android:layout_height="0px"
    				android:layout_weight="177"
        	        >
        	        <View 
        	            android:layout_width="0px"
    					android:layout_height="fill_parent"
    					android:layout_weight="18"
        	            />
        	   
        	            <LinearLayout 
        	                android:layout_width="0px"
        	                android:layout_height="fill_parent"
    						android:layout_weight="450"
    						android:orientation="vertical"
    						android:gravity="center_vertical"
        	                >
        	                <TextView 
        	                	android:id="@+id/an1_checkservice_namelab"
        	                	android:layout_width="fill_parent"
    							android:layout_height="wrap_content"
    							android:textSize="35px"
    							android:text="賬號名："
    							android:maxLength="30"
    							android:gravity="left|center_vertical"
    							android:textColor="#000000"
        	               		/>
        	                <TextView 
        	                	android:id="@+id/an1_checkservice_name"
        	                	android:layout_width="fill_parent"
    							android:layout_height="wrap_content"
    							android:textSize="30px"
    							android:text=""
    							android:maxLength="30"
    							android:gravity="left|center_vertical"
    							android:textColor="#000000"
    							android:singleLine="true"
								android:ellipsize="marquee"
								android:focusableInTouchMode="true"
								android:focusable="true"
								android:marqueeRepeatLimit="marquee_forever"
        	               		/>
        	                
        	            </LinearLayout>
        	             <LinearLayout 
        	                android:layout_width="0px"
        	                android:layout_height="fill_parent"
    						android:layout_weight="350"
    						android:orientation="vertical"
        	                >
        	                <TextView 
        	                	android:id="@+id/an1_checkservice_sername"
        	              		android:layout_width="fill_parent"
    							android:layout_height="0px"
    							android:layout_weight="80"
    							android:textSize="30px"
    							android:text="最近登錄服"
    							android:textColor="#000000"
    							android:gravity="center"
    							android:maxLength="30"    						
        	               		 />
        	             	<View 
        	            		android:layout_width="fill_parent"
    							android:layout_height="0px"
    							android:layout_weight="7"
    							/>
        	             	<LinearLayout 
        	                	android:layout_width="fill_parent"
    							android:layout_height="0px"
    							android:layout_weight="90"
    							android:orientation="horizontal"
        	                	>
        	                <View 
        	            		android:layout_width="0px"
    							android:layout_height="fill_parent"
    							android:layout_weight="45"
    							/>
        	             	<TextView 
        	               		android:id="@+id/an1_checkservice_servalue"
        	               		android:textColor="#000000"
    							android:gravity="center"
        	                	android:layout_width="0px"
    							android:layout_height="fill_parent"
    							android:layout_weight="260"
    							android:text="無"
    							android:textSize="30px"
    							android:background="@drawable/lunqi_service_but"
        	                	/>
        	             	 <View 
        	            		android:layout_width="0px"
    							android:layout_height="fill_parent"
    							android:layout_weight="45"
    							/>
        	                 </LinearLayout>
        	                
        	            </LinearLayout>
        	            <View 
        	            	android:layout_width="0px"
    						android:layout_height="fill_parent"
    						android:layout_weight="14"
    						/>
        	             <LinearLayout 
        	                android:layout_width="0px"
        	                android:layout_height="fill_parent"
    						android:layout_weight="350"
    						android:orientation="vertical"
        	                >
        	               <TextView 
        	                android:id="@+id/an1_checkservice_tuiname"
        	              	android:layout_width="fill_parent"
    						android:layout_height="0px"
    						android:layout_weight="80"
    						android:textSize="30px"
    						android:text="推薦伺服器"
    						android:textColor="#000000"
    						android:maxLength="30"
    						android:gravity="center"
    						/>
        	            <View 
        	            	android:layout_width="fill_parent"
    						android:layout_height="0px"
    						android:layout_weight="7"
    						/>
        	            	<LinearLayout 
        	                	android:layout_width="fill_parent"
    							android:layout_height="0px"
    							android:layout_weight="90"
    							android:orientation="horizontal"
        	                	>
        	                <View 
        	            		android:layout_width="0px"
    							android:layout_height="fill_parent"
    							android:layout_weight="45"
    							/>
        	              	<TextView 
        	               		android:id="@+id/an1_checkservice_tuivalue"
        	               		android:textColor="#000000"
    							android:gravity="center"
        	                	android:layout_width="0px"
    							android:layout_height="fill_parent"
    							android:layout_weight="260"
    							android:background="@drawable/lunqi_service_but"
    							android:textSize="30px"
    							android:text="無"
        	                	/>
        	              	<View 
        	            		android:layout_width="0px"
    							android:layout_height="fill_parent"
    							android:layout_weight="45"
    							/>
        	                 </LinearLayout>
        	            </LinearLayout>
        	      
        	        <View 
        	            android:layout_width="0px"
    					android:layout_height="fill_parent"
    					android:layout_weight="18"
    					/>
        	    </LinearLayout>
        	     <View 
        	          android:layout_width="fill_parent"
    				  android:layout_height="0px"
    				  android:layout_weight="12"
    				  />
        	     <LinearLayout 
        	        android:layout_width="fill_parent"
    				android:layout_height="0px"
    				android:layout_weight="4"
    				android:gravity="center"
        	        >
        	         <View 
        	        	android:layout_width="0px"
    					android:layout_height="wrap_content"
    					android:layout_weight="15"
    					android:background="@drawable/shape_line1"
        	        	/>
        	         <View 
        	        	android:layout_width="0px"
    					android:layout_height="wrap_content"
    					android:layout_weight="70"
    					android:background="#88000000"
        	        	/>
        	         <View 
        	        	android:layout_width="0px"
    					android:layout_height="wrap_content"
    					android:layout_weight="15"
    					android:background="@drawable/shape_line2"
        	        	/>
        	         
        	     </LinearLayout>
        	    
        	     <View 
        	          android:layout_width="fill_parent"
    				  android:layout_height="0px"
    				  android:layout_weight="12"
    				  />
        		 <LinearLayout 
        	            android:layout_width="fill_parent"
    					android:layout_height="0px"
    					android:layout_weight="415"
    					android:orientation="horizontal"
        	            >
        	         <View 
        	            android:layout_width="0px"
    					android:layout_height="fill_parent"
    					android:layout_weight="20"
        	            />
       			 	<GridView            			     	  	
  					 	android:id="@+id/an1_checkservice_gridview"  
  						android:layout_width="0px"
    					android:layout_height="fill_parent"
    					android:layout_weight="1161"  
    					android:stretchMode="columnWidth"  						
  						android:focusable="false"  				
  						android:focusableInTouchMode="false"
  						android:cacheColorHint="#00000000"
    	    			android:background="#00000000"
    	    			android:fadingEdge="none"
    	    			android:listSelector="@null"
  						/>
       			 	<View 
        	            android:layout_width="0px"
    					android:layout_height="fill_parent"
    					android:layout_weight="19"
        	            />
        	    	</LinearLayout>
        	</LinearLayout>
           
            
        </LinearLayout>
        	
    	</RelativeLayout>
        	
    	</RelativeLayout>
	
	</LinearLayout>
	 <include 
       android:id="@+id/lunqi_loadView_new"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       layout="@layout/an1_ddt_loadview"
       android:layout_centerInParent="true"  
       android:visibility="gone"
       />
</RelativeLayout>
