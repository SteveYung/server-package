<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="gone"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_user_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:src="@drawable/meizi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:maxLines="4"
                android:text="主55555555555555555555555555555555555555555555555題"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

               <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="時間"
                android:textColor="#BEBEBE"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="角色名"
                android:textColor="#0080FF"
                android:textSize="10dp" />
          
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minLines="2"
                android:maxLines="20"
                android:text="这里是作者发的状态444444444444444444444444445555555555555554444444444444"
                android:textColor="#3C3C3C"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_user_comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/tv_user_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:focusable="false"
                    android:paddingRight="10dp"
                    android:text="回復"
                    android:textColor="#6A6AFF"
                    android:textSize="18dp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <an1.lunqi.popwindow.Discussiongroup.view.MyListView
                    android:id="@+id/lv_user_comment_replys"
                    android:layout_width="match_parent"
                    android:divider="#00000000"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_more"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/selector_bg_other"
                android:text="更多回復"
                android:textColor="@color/mol_black"
                android:textSize="8dp" />

        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>