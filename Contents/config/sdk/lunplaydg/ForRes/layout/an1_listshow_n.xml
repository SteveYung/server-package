<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/an1_listbg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">   
    <ImageView 
    	android:id="@+id/an1_itemimgbg"
        android:layout_width="fill_parent"
    	android:layout_height="@dimen/my_img_bg"
    	android:layout_centerVertical="true"
    	android:background="@drawable/bg_list_bg"
    	android:gravity="center"/>
    <ImageView 
    	android:id="@+id/an1_itemimg"
        android:layout_width="@dimen/my_img"
    	android:layout_height="@dimen/my_img"
    	android:layout_centerVertical="true"
    	android:background="@drawable/bg_list_img"
    	android:layout_marginLeft="10dp"
    	android:gravity="center"/>
    	<TextView 
            android:id="@+id/an1_itemtxt2"
            android:layout_toRightOf="@+id/an1_itemimg"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="#000000"
    		android:layout_marginLeft="10dp"
    		android:layout_centerVertical="true"
    		android:gravity="center"
			android:textSize="@dimen/my_txtsize"  />
   		<Button
   		    android:id="@+id/an1_itembut" 
       		android:layout_width="@dimen/my_button_w"
    		android:layout_height="@dimen/my_button_h"
    		android:layout_alignRight="@+id/an1_itemimgbg"
    		android:layout_centerVertical="true"
    		android:gravity="center"
    		android:text="@string/an1_listtemp"
    		android:layout_margin="@dimen/my_padding"
    		android:textColor="#ffffff"
    		android:background="@drawable/bg_list_but"
    		android:focusable="false"/>
     

</RelativeLayout>

