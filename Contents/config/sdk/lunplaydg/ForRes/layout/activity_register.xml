<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" 
        android:background="#ffffff">

        <ImageView
            android:id="@+id/info_myset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_myback" />

        <TextView
            android:id="@+id/reg_titlevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="帳 號 註 冊"
            android:textColor="#3A5895"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#3492d0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/info_username"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_band_username"
                        android:gravity="center_vertical"
                        style="@style/lunqiNewViewEditView_32"        
                        android:hint="帳  號:手機號/email"
                        android:textSize="14sp" 
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/info_password"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_band_password"
                        android:gravity="center_vertical"
                        android:hint="密 碼"
                        style="@style/lunqiNewViewEditView_20"        
                        android:password="true"
                        android:textSize="14sp" 
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/info_password2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_band_password"
                        android:gravity="center_vertical"
                        style="@style/lunqiNewViewEditView_20"
                        android:hint="重複密碼"
                        android:password="true"
                        android:textSize="14sp" 
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/info_email"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_band_email"
                        android:gravity="center_vertical"
                        android:hint="Email （可用於找回密碼）"                                           
                        android:textSize="14sp" 
                        android:singleLine="true"
                        android:imeOptions="actionGo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/info_checked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="我已閱讀並同意"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/register_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="《會員條款及管理規章》"
                            android:textColor="#001B52"
                            android:textSize="10sp"
                             />

                    </LinearLayout>

                    <Button
                        android:id="@+id/info_register"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/selector_button_other"
                        android:orientation="vertical"
                        android:text="註   冊"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>