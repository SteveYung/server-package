<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coupon_home_ad_ll1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
   
    android:orientation="horizontal" >
    <RelativeLayout 
     android:id="@+id/coupon_home_ad_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:background="@drawable/bg_list_bg"
    android:gravity="center"
    >
    <ImageView 
    	android:id="@+id/coupon_ad_iv"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:visibility="gone"
    	android:background="@drawable/bg_list_bg"
    	android:gravity="center"/>

    <TextView
        android:id="@+id/tv_paymeths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/an1_itemimg"
        android:text="中華電信"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/an1_itemimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bg_list_img"
        android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>