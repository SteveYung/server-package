<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity" >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_alignParentLeft="true"
         android:background="@drawable/giftbegroundtop"  >

         <ImageView
             android:id="@+id/imageView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:src="@drawable/logo" />

    </RelativeLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/giftbeground"  >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/textviewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="新手禮包"
            android:textColor="@color/mol_black"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_other"
            android:padding="5dp"
            android:text="領取"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textviewId"
            android:layout_alignBottom="@+id/textviewId"
            android:layout_centerHorizontal="true"
            android:text="領取說明"
            android:textSize="@dimen/mol_item_text2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_centerHorizontal="true"
            android:text="使用說明"
            android:textSize="@dimen/mol_item_text2" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/selector_flogin"
            android:padding="5dp"
            android:text="動 作"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />

    </RelativeLayout>
         <View
         android:id="@+id/view1"
         android:background="#C9C9C9"
         android:layout_marginLeft="2dp"
         android:layout_marginRight="2dp"
         android:layout_width="match_parent"
         android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
          >

        <TextView
            android:id="@+id/textviewId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="點讚禮包"
            android:textColor="@color/mol_black"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/button11"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_other"
            android:padding="5dp"
            android:text="領取"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textviewId1"
            android:layout_alignBottom="@+id/textviewId1"
            android:layout_centerHorizontal="true"
            android:text="領取說明"
            android:textSize="@dimen/mol_item_text2" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button11"
            android:layout_alignBottom="@+id/button11"
            android:layout_centerHorizontal="true"
            android:text="使用說明"
            android:textSize="@dimen/mol_item_text2" />

        <Button
            android:id="@+id/button21"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/button11"
            android:background="@drawable/selector_flogin"
            android:padding="5dp"
            android:text="點讚"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
         <View
         android:id="@+id/view2"
         android:background="#C9C9C9"
         android:layout_marginLeft="2dp"
         android:layout_marginRight="2dp"
         android:layout_width="match_parent"
         android:layout_height="0.5dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
         >

        <TextView
            android:id="@+id/textviewId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="分享禮包"
            android:textColor="@color/mol_black"
            android:textSize="@dimen/activity_horizontal_margin" />

        <Button
            android:id="@+id/button12"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_button_other"
            android:padding="5dp"
            android:text="領取"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textviewId2"
            android:layout_alignBottom="@+id/textviewId2"
            android:layout_centerHorizontal="true"
            android:text="領取說明"
            android:textSize="@dimen/mol_item_text2" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button12"
            android:layout_alignBottom="@+id/button12"
            android:layout_centerHorizontal="true"
            android:text="使用說明"
            android:textSize="@dimen/mol_item_text2" />

        <Button
            android:id="@+id/button22"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/button12"
            android:background="@drawable/selector_flogin"
            android:padding="5dp"
            android:text="分享"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

   
    </LinearLayout>



</LinearLayout>