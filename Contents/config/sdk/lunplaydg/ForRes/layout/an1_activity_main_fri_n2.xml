<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lunqiitemback_w">
    
  
	 <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="1"
    	android:gravity="center_vertical"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView 
            	android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:background="@drawable/mytitlebg"/>

    		<Button 
    		    android:id="@+id/an1_mytitlebut"
    		    android:layout_width="@dimen/my_title_button_w"
    			android:layout_height="@dimen/my_title_button_h"
    			android:layout_marginLeft="10dp"
    			android:layout_centerVertical="true"
    			android:background="@drawable/bg_top_back"/>
        	<TextView
        	    android:id="@+id/an1_mypayonetitle"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
       	 		android:layout_centerHorizontal="true"
       	 		android:layout_centerVertical="true"
       	 		android:textSize="20sp"
        		android:text="@string/pay_main" 
        		android:textColor="#88ffffff"/>
            
        	</RelativeLayout>
        </LinearLayout>
       <LinearLayout 
        	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
        	android:orientation="vertical">         
        <HorizontalScrollView  
   			android:layout_width="fill_parent"  
   			android:layout_height="wrap_content"
   			android:fillViewport="true">  
		
  			<RadioGroup 
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:id="@+id/an1_RadioGroup_web"
  			    android:orientation="horizontal"/>
  			
     	</HorizontalScrollView> 
     
     	</LinearLayout>
     	
		<LinearLayout 
		    android:layout_width="fill_parent"
    		android:layout_height="0px"
    		android:layout_weight="8"
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp"
    		android:layout_marginBottom="10dp">
        	<View 
        	    android:layout_width="0px"
    			android:layout_height="fill_parent"
    			android:layout_weight="1"/>		
    		
        		<ListView 
    	    		android:layout_width="0px"
    				android:layout_height="wrap_content"
    				android:layout_weight="8"
        		    android:id="@+id/an1_testlist"
    	    		android:cacheColorHint="#00000000"
    	    		android:background="#000000"
    	    		android:fadingEdge="none"
    	    		android:scrollbars="horizontal"
    	    		android:fadeScrollbars="true"/>    			    
    		
    		<View 
    	    	android:layout_width="0px"
    			android:layout_height="fill_parent"
    			android:layout_weight="1"/>		 
    	</LinearLayout>
	
	</LinearLayout>
	
</RelativeLayout>
