<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/band_myback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_myback" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9" />

        <TextView
            android:id="@+id/band_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:text=" 綁 定 賬 號 "
            android:textColor="#3A5895"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="#3492d0"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#FFFFFFFF"
                android:text=""
                android:layout_weight="5" />

            <EditText
                android:id="@+id/band_username"
                style="@style/lunqiNewViewEditView_32"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/shape_band_username"
                android:gravity="center_vertical"
                android:hint="帳  號:手機號/email"
                android:singleLine="true"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/band_password"
                style="@style/lunqiNewViewEditView_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/shape_band_password"
                android:gravity="center_vertical"
                android:hint="密 碼"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/band_password2"
                style="@style/lunqiNewViewEditView_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/shape_band_password"
                android:gravity="center_vertical"
                android:hint="重複密碼"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/band_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/shape_band_email"
                android:gravity="center_vertical"
                android:hint="Email （可用於找回密碼）"
                android:singleLine="true"
                android:textSize="14sp" 
                android:imeOptions="actionGo"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/bindusername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@drawable/selector_button_other"
                android:text="綁 定 帳 號"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13" >

                <ImageView
                    android:id="@+id/imggift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/updadegift" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />
    </LinearLayout>

</LinearLayout>