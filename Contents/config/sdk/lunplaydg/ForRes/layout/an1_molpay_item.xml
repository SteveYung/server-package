<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    >   
    <LinearLayout 
        android:id="@+id/an1_checkservice_outroot"  
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@null"
    	android:gravity="center"
        >
    
  
        <LinearLayout
            android:id="@+id/an1_checkservice_itemroot"  
        	android:layout_width="210px"
    		android:layout_height="70px"  
    		android:gravity="center"	
    		android:background="@drawable/shape_molpay_itembut_shadow"
    		>
    		<LinearLayout 
      			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:gravity="center"
    			android:background="@drawable/shape_molpay_itembut_out"	
    			android:layout_margin="4px"
    			android:orientation="vertical"     
                >
    		 <TextView 
    		    android:id="@+id/an1_checkservice_itemtext"  
        		android:layout_width="fill_parent"
    			android:layout_height="0dp"	
    			android:layout_weight="40"    			
    			android:textSize="18px"
    			android:text="MOLPoints Card"
    			android:layout_margin="2px"
    			android:textColor="#000000"
    			android:maxLength="30"
    			android:gravity="center"
    			android:background="@drawable/lunqi_paymol_itembut"
    			/>
    	
  			<ImageView 
  			    android:id="@+id/an1_checkservice_itemimg"  
  		    	android:layout_width="fill_parent"
    			android:layout_height="0dp"	
    			android:layout_weight="40"    
    			android:src="@drawable/lunqimolpaymolpin"
    			android:background="@drawable/shape_molpay_itembutimg"
    			android:scaleType="fitCenter"
    			android:adjustViewBounds="true"
    			android:layout_margin="2px"
  		    	/>
		</LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
