<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/fbinvit_friends_loyout_txt_shape"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/l_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/dis_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/ivit_action_explain"
                android:textColor="#FFFFFF"
                android:textSize="20.0dip" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dis_titel"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ivit_login_erro"
                android:textColor="#FF3300"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ivit_disc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ivit_disc_1"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ivit_gift_disc1"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivit_disc_1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/ivit_gift_disc1"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ivit_bt_get_gift_1"
                style="@style/text_20_666666_sdw"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ivit_disc_1"
                android:layout_marginRight="5dp"
                android:background="@drawable/fbinvit_btn_cancel_selector"
                android:text="@string/ivit_gift_get" />

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ivit_bt_get_gift_1"
                android:layout_marginTop="5dp"
                android:background="#E1DDD4" />

            <TextView
                android:id="@+id/ivit_disc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ivit_disc_2"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ivit_gift_disc2"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivit_disc_2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/ivit_gift_disc2"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ivit_bt_get_gift_2"
                style="@style/text_20_666666_sdw"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ivit_disc_2"
                android:layout_marginRight="5dp"
                android:background="@drawable/fbinvit_btn_cancel_selector"
                android:text="@string/ivit_gift_get" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ivit_bt_get_gift_2"
                android:layout_marginTop="5dp"
                android:background="#E1DDD4" />

            <TextView
                android:id="@+id/ivit_disc_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ivit_disc_3"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ivit_gift_disc3"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivit_disc_3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/ivit_gift_disc3"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ivit_bt_get_gift_3"
                style="@style/text_20_666666_sdw"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ivit_disc_3"
                android:layout_marginRight="5dp"
                 android:background="@drawable/fbinvit_btn_cancel_selector"
                android:text="@string/ivit_gift_get" />

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ivit_gift_disc3"
                android:layout_marginTop="5dp"
                android:background="#E1DDD4" />

            <TextView
                android:id="@+id/invit_gift_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/invit_gift_notice"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/invit_gift_notice"
                android:layout_marginTop="10dp"
                android:background="#428CAC" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>