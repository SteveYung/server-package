<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:id="@+id/lunqi_toppop_root_baseroot"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/lunqi_toppop_rootbase"
        android:layout_width="332px"
        android:layout_height="68px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false" 
        android:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/lunqi_toppop_root_bgview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:visibility="visible" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="92"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="468"
                    android:adjustViewBounds="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lunqi_toppop_bg" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lunqi_toppop_root_rightbut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="107"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="391"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="30"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="39"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:orientation="horizontal" >
					<View
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />
                    <ImageView
                        android:id="@+id/lunqi_toppop_root_rightmsg"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="119"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lunqi_toppop_msg" />

                    <ImageView
                        android:id="@+id/lunqi_toppop_root_rightserver"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="119"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lunqi_toppop_server" />
                    <ImageView
                        android:id="@+id/lunqi_toppop_root_rightserver1"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="119"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lunqi_toppop_gif" />
                     <ImageView
                        android:id="@+id/lunqi_toppop_root_rightserver2"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="119"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lunqi_toppop_taolun" />
                      <ImageView
                        android:id="@+id/lunqi_toppop_root_rightserver3"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="119"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pop_gl" />

                    <ImageView
                        android:id="@+id/lunqi_toppop_root_righthide"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="119"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lunqi_toppop_hide" />

                    <View
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="24"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="30"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lunqi_toppop_root_leftroot"
        android:layout_width="72px"
        android:layout_height="66px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <ImageView
            android:id="@+id/lunqi_toppop_root_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/lunqi_toppop_left" />

        <ImageView
            android:id="@+id/lunqi_toppop_root_lefttop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitCenter"
            android:src="@drawable/lunqi_toppop_leftbg" />
    </RelativeLayout>

</RelativeLayout>