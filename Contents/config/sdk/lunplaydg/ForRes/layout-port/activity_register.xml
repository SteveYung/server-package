<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <ImageView
            android:id="@+id/info_myset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_myback" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/reg_titlevalue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center"
            android:text="帳 號 註 冊"
            android:textColor="#3A5895"
            android:textSize="26sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="#3492d0"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <EditText
                android:id="@+id/info_username"
                style="@style/lunqiNewViewEditView_32"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:background="@drawable/shape_band_username"
                android:gravity="center_vertical"
                android:hint="帳  號:手機號/email"
                android:textSize="14sp" 
                android:singleLine="true"/>

            <EditText
                android:id="@+id/info_password"
                style="@style/lunqiNewViewEditView_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:background="@drawable/shape_band_password"
                android:gravity="center_vertical"
                android:hint="密 碼"
                android:password="true"
                android:textSize="14sp" 
                android:singleLine="true"/>

            <EditText
                android:id="@+id/info_password2"
                style="@style/lunqiNewViewEditView_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:background="@drawable/shape_band_password"
                android:gravity="center_vertical"
                android:hint="重複密碼"
                android:password="true"
                android:textSize="14sp" 
                android:singleLine="true"/>

            <EditText
                android:id="@+id/info_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:background="@drawable/shape_band_email"
                android:gravity="center_vertical"
                android:hint="Email （可用於找回密碼）"
                android:textSize="14sp" 
                android:singleLine="true"
                android:imeOptions="actionGo"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" /><!-- 65 -->

            <LinearLayout
                 android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/info_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="我已閱讀並同意"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/register_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《會員管理規章》"
                    android:textColor="#001B52"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />
             <Button
                android:id="@+id/info_register"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/selector_button_other"
                android:orientation="vertical"
                android:text="註   冊"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />
    </LinearLayout>

</LinearLayout>