<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >   
    <RelativeLayout
        android:id="@+id/lppopwindow_root_RelativeLayout"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"    	
    	android:background="#7d000000"
    	android:focusable="false"
        >
    
	<LinearLayout 
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/lpchange_login_outshape"
    	android:layout_centerInParent="true"
    	android:padding="5dp"
	    >
	
	<RelativeLayout 
	    android:id="@+id/lunqi360_layout_pop_root"
	    android:layout_width="460px"
    	android:layout_height="272px"  	
    	android:background="@drawable/lp_360_layout_shape"
    	android:orientation="vertical"
	    >
	     <ImageButton 
	    	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:background="@drawable/lp_360_layout_shape"
	        />
	    <LinearLayout 
	    	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"    	
    		android:orientation="vertical"
	   		 >
	<LinearLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="0px"
    	android:layout_weight="2"	
    	android:orientation="vertical"
	    >
	    <RelativeLayout 
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:padding="3dp"
    		android:orientation="horizontal"
	        >
	   <TextView 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_toLeftOf="@+id/lunqi_baidusdk_statictitle_img"    
    		android:layout_centerVertical="true"	
    		android:textSize="18sp"		
    		android:text="溫馨提示"
    		android:textColor="#000000"
	        />
	   <ImageView 
	       android:id="@+id/lunqi_baidusdk_statictitle_img"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/ebpay_bg_del_selector"
	       android:scaleType="fitCenter"
	       android:layout_marginRight="15dp"
	       android:layout_centerVertical="true"	
	       android:layout_alignParentRight="true"
	       android:maxHeight="40dp"
	       />
	   </RelativeLayout>
	 <ImageView 
	        android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:src="@drawable/ebpay_bg_back_sheller_normal"
    		android:scaleType="fitXY"    		
    		android:layout_centerInParent="true"
    		android:layout_below="@+id/lunqi_baidusdk_mypop_title"
    		/>    
    
	</LinearLayout>
    
	 <LinearLayout 
	     android:layout_width="fill_parent"
    	 android:layout_height="0px"
    	 android:layout_weight="7"	
	     android:orientation="vertical"
	     >
	   <TextView 	
	       	  
	       	android:id="@+id/an1_lpcjump_msgtext"
	       	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"  
    		android:textColor="#000000"  	
    		android:textSize="16sp"  
    		android:text="歡迎儲值" 
    		android:paddingLeft="5dp"  
	       />
	   <RelativeLayout 
	       
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"   
	       	>
	   
	     <LinearLayout 	        
			android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="horizontal"
	    	android:layout_centerInParent="true"	 
	    	android:gravity="center"
	        >
	        <ImageButton
	    		android:id="@+id/an1_lpcjump_jptopay"
	    		android:layout_width="160dp"
	    		android:layout_height="80dp"
	    		android:src="@drawable/an1_lpjp_pay"
	    		android:background="@null"
	    		android:scaleType="fitCenter"
	       		android:adjustViewBounds="true"	    		
	    		android:padding="5dp"
	    		/>
	     </LinearLayout>
	    <LinearLayout 	        
			android:layout_width="fill_parent"
	    	android:layout_height="200dp"
	    	android:orientation="horizontal"
	    	android:layout_centerInParent="true"
	    	android:gravity="center"
	        >
	     <ImageButton 
	    	android:id="@+id/an1_lpcjump_jptocha"
	    	android:layout_width="wrap_content"
	    	android:layout_height="50dp"	    	
	    	android:src="@drawable/an1_lpjp_cha"
	    	android:background="@null"
	    	android:padding="5dp"
	    	android:visibility="gone"
	    	android:scaleType="fitCenter"
	       	android:adjustViewBounds="true"
	    	/>
	     
	     <ImageButton 
	    	android:id="@+id/an1_lpcjump_jptopayb"
	    	android:layout_width="wrap_content"
	    	android:layout_height="50dp"
	    	android:src="@drawable/an1_lpjp_payb"
	    	android:background="@null"
	    	android:padding="5dp"
	    	android:visibility="gone"
	    	android:scaleType="fitCenter"
	       	android:adjustViewBounds="true"
	    	
	    	/>
	      </LinearLayout> 
	   </RelativeLayout>
	    
	     
	 </LinearLayout>
	</LinearLayout>  
  </RelativeLayout>
  
  </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
