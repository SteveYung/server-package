<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lunqiitemback_w" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/lunqi_mytitlebg_newv"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageButton
                android:id="@+id/an1_mytitlebut"
                android:layout_width="0dp"
                android:layout_height="match_parent"   
                android:layout_weight="25"
                android:src="@drawable/bg_top_back"
                android:scaleType="fitCenter"                
                android:adjustViewBounds="true"
                android:background="@null"  />

            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/an1_mypayonetitle"
                 android:layout_width="0dp"
                android:layout_height="match_parent"   
                android:gravity="center"
                android:layout_weight="160"               
                android:text="@string/pay_main"
                android:textColor="#88ffffff"
                android:textSize="20sp" />

            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true" >

                <RadioGroup
                    android:id="@+id/an1_RadioGroup_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="5" />

            <ListView
                android:id="@+id/an1_testlist"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="190"
                android:background="#000000"
                android:cacheColorHint="#00000000"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:scrollbars="horizontal" />

            <View
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="5" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>