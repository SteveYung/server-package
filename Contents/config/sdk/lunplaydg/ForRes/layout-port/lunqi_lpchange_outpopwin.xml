<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >   
    
    <RelativeLayout
        android:id="@+id/lppopwindow_root_RelativeLayout"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"    	
    	android:background="#7d000000"
    	android:focusable="false"
        >
	
	<RelativeLayout
	    android:id="@+id/lunqi360_layout_pop_root"
	    android:layout_width="460px"
    	android:layout_height="272px"  	
    	android:background="@null"
    	android:layout_centerInParent="true"
	    >
	    <ImageView
	    	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:src="@drawable/lpchangeoutimg"
    		android:scaleType="fitCenter"
    		android:background="@null"
	        />
	    <LinearLayout 
	        android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="vertical"
	        >
	        <View 
	            android:layout_width="fill_parent"
    			android:layout_height="0px"
    			android:layout_weight="118"
	            />
	          <LinearLayout 
	        	android:layout_width="fill_parent"
    			android:layout_height="0px"
    			android:layout_weight="57"
    			android:orientation="horizontal"
	       	 	>
	       	 	<View 
	       	 	    android:layout_width="0px"
    				android:layout_height="fill_parent"
    				android:layout_weight="275"
	       	 	    />
	       	 	<TextView 
	       	 	    android:id="@+id/lpchange_timecount"
	       	 	    android:layout_width="0px"
    				android:layout_height="fill_parent"
    				android:layout_weight="40"
    				android:text="2"
    				android:textSize="30sp"
    				android:gravity="center"
    				android:textColor="#ff0000"
	       	 	    />
	       	 	<View 
	       	 	    android:layout_width="0px"
    				android:layout_height="fill_parent"
    				android:layout_weight="185"
	       	 	    />
	              
	          </LinearLayout>
	        <View 
	            android:layout_width="fill_parent"
    			android:layout_height="0px"
    			android:layout_weight="125"
	            />
	    </LinearLayout>
	    
  		</RelativeLayout>
  
    </RelativeLayout>
</RelativeLayout>
