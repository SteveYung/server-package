<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lunqiitemback_w" >

    <ProgressBar
        android:id="@+id/an1_mypayprogressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:background="@drawable/lunqi_mytitlebg_newv"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/an1_mytitlebut"
               android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_top_back" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/an1_mypayonetitle"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="120"              
                android:text="@string/pay_main"
                android:textColor="#88ffffff"
                android:textSize="20sp" 
                android:gravity="center"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/lunqi_mycardtitle_blvalue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:adjustViewBounds="true"
                android:background="@null"
                android:padding="1dp"
                android:src="@drawable/bg_top_bl" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
        </LinearLayout>
 <View
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="5" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="80"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="10" />

            <ScrollView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="80" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:id="@+id/an1_linearLayout1_mycard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="103dp"
                            android:src="@drawable/an1_mycardlogoh" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/an1_TextView01_myca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="卡    号"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/an1_editText1_myca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:ems="15"
                                android:hint="请输入卡号" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/an1_lcard_side"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/an1_TextView02_myca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="密    码 "
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/an1_editText2_myca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:ems="15"
                                android:hint="请输入密码" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/an1_button1_mycard"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/an1_linearLayout1_mycard"
                        android:layout_alignRight="@+id/an1_linearLayout1_mycard"
                        android:layout_below="@+id/an1_linearLayout1_mycard"
                        android:layout_marginTop="@dimen/an1_lcard_side"
                        android:background="@drawable/an1_lcard_button_shape"
                        android:enabled="false"
                        android:text="@string/an1_lcard_button"
                        android:textColor="#ffffff" />
                </RelativeLayout>
            </ScrollView>

            <View
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="10" />
        </LinearLayout>
         <View
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="5" />
    </LinearLayout>

</RelativeLayout>