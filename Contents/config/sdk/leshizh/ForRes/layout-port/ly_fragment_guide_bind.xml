<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/ly_common_border_padding"
    android:paddingRight="@dimen/ly_common_border_padding" >
    <ImageView
        android:id="@+id/ly_guide_bind_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/ly_back_selector" />
    
    <TextView 
        android:id="@+id/ly_guide_bind_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        style="@style/ly_style_big_btn_text"
        android:layout_centerHorizontal="true"
        android:text="@string/ly_unbind_guide_tip"/>
    
    <RelativeLayout 
        android:id="@+id/ly_guide_bind_btn"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:background="@drawable/ly_welcome_btn_selector"
        android:layout_below="@id/ly_guide_bind_tip"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">
        <LinearLayout 
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ly_bind_btn_icon"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ly_unbind_bind_immediateme"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                style="@style/ly_style_big_btn_text"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
