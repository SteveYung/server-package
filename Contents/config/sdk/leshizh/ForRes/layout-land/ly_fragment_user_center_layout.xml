<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/ly_user_center_body"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ly_cc000000_soild"
        android:padding="24dp" >

        <RelativeLayout
            android:id="@+id/ly_user_center_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ly_user_center_usericon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ly_user_icon" />

            <TextView
                android:id="@+id/ly_user_center_username"
                style="@style/ly_style_big_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/ly_user_center_usericon"
                android:gravity="center"
                android:text="aaa"
                android:textColor="@color/ly_color_beff5a00" />

            <ImageView
                android:id="@+id/ly_user_center_guest_icon"
                android:layout_width="28dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ly_user_center_guest"
                android:scaleType="fitXY"
                android:layout_toRightOf="@id/ly_user_center_username" />
        </RelativeLayout>
        
        <TextView 
            android:id="@+id/ly_user_center_blance"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:layout_below="@id/ly_user_center_user"
            style="@style/ly_style_small_btn_text"/>

        <RelativeLayout
            android:id="@+id/ly_user_center_bind_or_change"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ly_user_center_blance"
            android:layout_marginTop="14dp"
            android:background="@drawable/ly_3b3b3b_282828_selector" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/ly_user_center_phone_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ly_bind_icon" />

                <TextView
                    android:id="@+id/ly_user_center_phone_text"
                    style="@style/ly_style_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/ly_user_center_phone_icon"
                    android:text="@string/ly_user_center_bind_phone"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_user_center_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ly_user_center_bind_or_change"
            android:layout_marginTop="6dp"
            android:background="@drawable/ly_3b3b3b_282828_selector" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/ly_user_center_pwd_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ly_change_pwd_icon" />

                <TextView
                    android:id="@+id/ly_user_center_pwd_text"
                    style="@style/ly_style_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/ly_user_center_pwd_icon"
                    android:text="@string/ly_user_center_change_pwd"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_user_center_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ly_user_center_change_pwd"
            android:layout_marginTop="6dp"
            android:background="@drawable/ly_ff3c3c_cc2d2d_selector" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/ly_user_center_logout_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ly_exit_icon" />

                <TextView
                    android:id="@+id/ly_user_center_logout_text"
                    style="@style/ly_style_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/ly_user_center_logout_icon"
                    android:text="@string/ly_user_center_change_logout"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ly_user_center_colse"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/ly_user_center_body"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="-16dp"
        android:layout_toRightOf="@id/ly_user_center_body"
        android:scaleType="fitXY"
        android:src="@drawable/ly_close_selector" />

</RelativeLayout>