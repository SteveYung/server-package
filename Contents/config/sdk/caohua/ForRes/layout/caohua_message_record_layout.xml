<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ch_white"
    android:orientation="vertical" >

<!--     <include layout="@layout/caohua_my_title_nosearch" /> -->
 <include
        android:id="@+id/include1"
        layout="@layout/caohua_my_title_search_new" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/ch_multitude_select1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="充值记录"
            android:textColor="#000000"
            android:textSize="15.0dip" />

        <TextView
            android:id="@+id/ch_multitude_select2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="消耗记录"
            android:textColor="#000000"
            android:textSize="15.0dip" />

        <TextView
            android:id="@+id/ch_multitude_select3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="其他记录"
            android:textColor="#000000"
            android:textSize="15.0dip" />

        <TextView
            android:id="@+id/ch_multitude_select4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="15.0dip"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/ch_white" >

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:scaleType="matrix"
            android:src="@drawable/ch_tab_low" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/cursor"
            android:background="@color/ch_green" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

</LinearLayout>