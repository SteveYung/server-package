<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<RelativeLayout
    android:id="@+id/no_app_show"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ch_white"
    android:visibility="gone" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/task_NoData_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/no_chance" />

                <TextView
                    android:id="@+id/task_NoDataText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/task_NoData_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="主人，您还木有充值记录呢~"
                    android:textColor="#333333"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/caohua_look"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/task_NoDataText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/caohua_no_log_get_gift_button_selector"
                    android:text="去看看"
                    android:textColor="#ffffff" 
                    android:visibility="gone">
                </Button>
            </RelativeLayout>
        </RelativeLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#d1d1d1"
        android:visibility="visible"
        android:scrollbars="none" >
    </ListView>
	
</RelativeLayout>