<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     >
    <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    <!-- 三角脚标 -->
    <RelativeLayout 
        android:id="@+id/rl_jaobiao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        
        >
        <ImageView 
            android:id="@+id/iv_sanjiaoxing"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/caohua_jiao_biao"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp" 
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        >
        
		
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#F86464" 
            android:contentDescription="@string/caohua_bi"
            />
        
			
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_1"
           	android:text="@string/caohua_bi"
            android:textSize="10sp"
             />
       
    </RelativeLayout>
    
</FrameLayout>

    <View 
        android:layout_alignParentRight="true"
  	    android:layout_width="2dp"
  	    android:layout_height="match_parent"
  	    android:background="#EDEDEB"
  	    />
        
       <View 
        android:layout_alignParentRight="true"
  	    android:layout_width="match_parent"
  	    android:layout_height="1dp"
  	    android:background="#EDEDEB"
  	    android:layout_alignParentBottom="true"
  	    />
        
    
</RelativeLayout>