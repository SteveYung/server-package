<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >
    <include 
        layout="@layout/caohua_my_title_search_new"
        android:id="@+id/include1"
	    />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
		>
      <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:id="@+id/rl_email"
       android:layout_marginTop="30dp"
       android:background="@drawable/edt"
       >
       <ImageView 
           android:id="@+id/iv_img"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:background="@drawable/email_gray"
       		android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="账号"
       
       />
       <View
           android:layout_width="1dp"
           android:layout_height="20dp"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/iv_img"
           android:background="#D1D1D1"
           android:layout_marginLeft="10dp"
           />
       <EditText 
           android:id="@+id/ch_email_edt"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:background="@null"
           android:hint="请输入需要绑定的邮箱号"
           android:textColorHint="#D1D1D1"
           android:textColor="#000000"
           android:singleLine="true"
           android:textSize="13sp"
           android:layout_centerInParent="true"
           android:layout_toRightOf="@id/iv_img"
           android:paddingLeft="15dp"
           android:layout_marginLeft="5dp"
           android:paddingTop="1dp"
           />
       
         
    </RelativeLayout>
    <Button 
        android:id="@+id/bt_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="去邮箱验证"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="@drawable/btn_chengse"
        android:layout_marginTop="50dp"
        />
    </LinearLayout>

</LinearLayout>
