<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
   >
     <include layout="@layout/caohua_my_title_search_new"
         android:id="@+id/caohua_nosearch"
         />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/caohua_nosearch"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <EditText 
            
            android:layout_marginTop="10dp"
            android:id="@+id/later__password"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pwd_icon"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/caohua_1_edt"
            android:hint="请输入当前密码"
            android:password="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#D1D1D1"
            android:textSize="13sp"
            />
        
         <EditText 
            android:layout_marginTop="10dp"
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/caohua_1_edt"
            android:hint="请输入新密码"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pwd_icon"
            android:password="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#D1D1D1"
            android:textSize="13sp"
            />
         
          <EditText 
            android:layout_marginTop="10dp"
            android:id="@+id/again_newpassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/caohua_1_edt"
            android:hint="请再次输入新密码"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pwd_icon"
            android:password="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#D1D1D1"
            android:textSize="13sp"
            />
          <TextView 
              android:id="@+id/forget_password"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="忘记密码?"
              android:textColor="#3399FF"
              android:layout_marginTop="10dp"
              android:textSize="13sp"
              android:visibility="gone"
              android:layout_gravity="right"
              
              />
          <Button 
              android:id="@+id/bt_queren"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_marginTop="10dp"
              android:text="确 认"
              android:gravity="center"
              android:textSize="15sp"
              android:background="@drawable/caohua_1_btn_chengse"
              android:textColor="#ffffff"
              />
        
    </LinearLayout>

</RelativeLayout>
