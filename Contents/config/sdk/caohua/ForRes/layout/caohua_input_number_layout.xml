<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/caohua_my_title_search_new" />
    <!-- 二 -->
    <LinearLayout
        android:id="@+id/ll_yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_below="@+id/tv_yanzhengma"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ch_yanzhengma_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edt"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:paddingLeft="5dip"
                android:src="@drawable/code_icon" />

            <EditText
                android:id="@+id/et_yanzhengma"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="#D1D1D1"
                android:hint="请输入手机验证码"
                android:textSize="13dip" 
                android:textColor="#000000"
                />

            <LinearLayout
                android:id="@+id/send_code_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:orientation="horizontal" >

               
               
                <Button
                    android:id="@+id/again_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="重新发送"
                    android:textColor="#32BFF3"
                    android:background="@drawable/btn_forgetpassword"
                    android:textSize="13sp" />
               
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="2dp"
    android:layout_below="@id/ll_yanzhengma"
    android:id="@+id/ll_yanzhengma01"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edt"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:paddingLeft="5dip"
                android:src="@drawable/code_icon" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="#D1D1D1"
                android:hint="请输入新密码"
                android:textSize="13dip" 
                android:textColor="#000000"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
         android:layout_below="@id/ll_yanzhengma01"
         android:id="@+id/ll_yanzhengma02"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edt"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:paddingLeft="5dip"
                android:src="@drawable/code_icon" />

            <EditText
                 android:id="@+id/ed2"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="#D1D1D1"
                android:hint="请再次输入新密码"
                android:textSize="13dip"
                android:textColor="#000000"
                 />

          
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/next_tv"
        android:layout_below="@+id/ll_yanzhengma02"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="16dp"
        android:text="@string/sendemail_tv"
        android:textColor="#D1D1D1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:text="@string/sendemail_tv1"
        android:textColor="#D1D1D1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:text="@string/sendemail_tv2"
        android:textColor="#D1D1D1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:text="@string/sendemail_tv3"
        android:textColor="#D1D1D1" />

    <LinearLayout
        android:id="@+id/kefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dip"
            android:text="@string/sendemail_tv4"
            android:textColor="#D1D1D1"
             android:textSize="13sp"
            android:visibility="visible" />

        <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+id/qq_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服QQ:800032511"
                android:textColor="#32BFF3"
                android:layout_marginTop="10dp"
                 android:textSize="13sp"
                android:visibility="visible" />

            
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_yanzhengma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#D1D1D1"
        android:textSize="13sp"
        android:text="已给" />
   

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_yanzhengma"
        android:layout_toRightOf="@+id/tv_yanzhengma"
        android:textColor="#ff7200" />
   <TextView 
       android:id="@+id/tv_01"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:textColor="#D1D1D1"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/tv_number"
        android:text="发送了一条验证码"
        android:layout_alignTop="@+id/tv_number"
       />

    <TextView
        android:id="@+id/next_tv"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_below="@id/kefu"
        android:background="@drawable/btn_chengse"
        android:gravity="center"
        android:text="确定"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp" />

</RelativeLayout>