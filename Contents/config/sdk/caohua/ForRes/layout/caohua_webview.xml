<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
   >
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="vertical" 
    	android:background="#3BAB25"
    	
       >
       
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        
         >
		 <ImageView
            android:id="@+id/ch_ImageView_retrun_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="retrun_onclic"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
          	android:src="@drawable/back_later" />

        <TextView
            android:id="@+id/ch_my_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="找回密码"
           android:gravity="center"
            android:layout_toRightOf="@id/ch_ImageView_retrun_icon"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

       <Button 
        android:id="@+id/back_game"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="返回游戏"
        android:textSize="15sp"
        android:textColor="#3BAB25"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/caohua_btn_exit"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
       />

    </RelativeLayout>

</RelativeLayout>
 <com.chsdk.entity.SystemWebView 
   android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:id="@+id/wv_webview" 
   />
    

</LinearLayout>
