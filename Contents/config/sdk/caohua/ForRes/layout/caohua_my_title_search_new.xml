<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ZF_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#0fb03e"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        
         >
		 <ImageView
            android:id="@+id/ch_ImageView_retrun_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="retrun_onclic"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
          	android:src="@drawable/back_later" />

        <TextView
            android:id="@+id/ch_my_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:layout_toRightOf="@id/ch_ImageView_retrun_icon"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="20dp"
            android:layout_height="20dp"
			android:layout_alignParentRight="true"  
			android:background="@drawable/close" 
			android:layout_centerVertical="true" 
			android:visibility="gone"      
			 />
    </RelativeLayout>

</LinearLayout>