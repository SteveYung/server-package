<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >

    <include layout="@layout/caohua_my_title_search_new" />

    <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/ZF_linearlayout"
           android:orientation="vertical"
           android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
           >
        <TextView 
          android:id="@+id/textView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
           android:text="恭喜您，密保验证成功"
           android:textSize="13sp"
           android:textColor="#D1D1D1"
           />
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt"
            >
            <ImageView 
                
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/mima"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mima_text"
                />
            <TextView 
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#D1D1D1"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/mima"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/mima"
                />
	       <EditText 
	        android:id="@+id/reset_psw"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="请输入新密码"
	        android:textSize="13sp"
	        android:password="true"
	    	android:layout_toRightOf="@id/mima"
	        android:layout_marginLeft="21dp"
	        android:layout_centerVertical="true"
	        android:textColorHint="#D1D1D1"
	        android:background="@null"
	        android:textColor="#000000"
	       />
      </RelativeLayout>
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt" >

            <ImageView
                android:id="@+id/mima1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mima_text" />
			<TextView 
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#D1D1D1"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/mima1"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/mima1"
                />
            <EditText
                android:id="@+id/adgain_reset_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_toRightOf="@id/mima1"
                android:background="@null"
                android:password="true"
                android:hint="请再次输入新密码"
                android:textColorHint="#D1D1D1"
                android:textSize="13sp"
                android:textColor="#000000"
                 />
        </RelativeLayout>
       <Button 
           android:id="@+id/next_tv"
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:text="确认"
           android:textSize="15sp"
           android:textColor="#ffffff"
           android:background="@drawable/btn_chengse"
           android:layout_marginTop="30dp"
           />
    </LinearLayout>

</RelativeLayout>