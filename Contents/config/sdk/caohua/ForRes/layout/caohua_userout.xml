<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/caohua_dialog__out"
      android:padding="10dip"
      android:alpha="50"
      >
    
      <RelativeLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:id="@+id/head"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          >
          <ImageView 
              android:id="@+id/iv_logo"
              android:layout_width="120dp"
              android:layout_height="30dp"
              android:background="@drawable/caohua_logo"
             />
          <View 
              android:id="@+id/line"
              android:layout_width="1dp"
              android:layout_height="20dp"
              android:background="#ffffff"
              android:layout_toRightOf="@id/iv_logo"
              android:layout_centerVertical="true"
              android:layout_marginLeft="10dp"
              />
          
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="退出游戏                   "
              android:textSize="13sp"
              android:textColor="#ffffff"
              android:layout_toRightOf="@id/line"
              android:layout_marginLeft="10dp"
              android:layout_centerVertical="true"
              
              />
          <ImageView 
              android:id="@+id/iv_exit"
              android:background="@drawable/caohua_close"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:layout_centerVertical="true"
              />
          
      </RelativeLayout>
      
      <View 
          android:id="@+id/line1"
          android:layout_width="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_height="1dp"
          android:background="#D1D1D1"
          android:layout_below="@id/head"
          android:layout_marginTop="10dp"
          />
    
          <ImageView 
              android:id="@+id/iv_download"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              android:layout_marginTop="5dp"
              android:layout_alignLeft="@id/head"
              android:layout_alignRight="@id/head"
              android:layout_below="@id/line1"
              />
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              android:layout_below="@id/iv_download"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              >
              <Button 
                  android:id="@+id/bt_continue"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="45dp"
                  android:text="继续退出"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:textColor="#ffffff"
                  android:background="@drawable/caohua_edt_black"
                  android:layout_marginRight="10dp"
                  />
              <Button 
                  android:id="@+id/bt_activity"
                  android:layout_width="0dp"
                  android:layout_height="45dp"
                  android:layout_weight="1"
                  android:text="热门活动"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:background="@drawable/caohua_btn_chengse"
                  android:textColor="#ffffff"
                  />
          </LinearLayout>
          
      </RelativeLayout>
      
 </RelativeLayout>

