    <!-- 底部开始 -->

    <RelativeLayout
        android:id="@+id/my"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" >

        <RadioGroup
            android:id="@+id/ch_home_radio"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ch_home_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <RadioButton
                android:id="@+id/ch_home_SelectedPage"
                style="@style/main_tab_bottom"
                android:checked="true"
                android:text="账户"
                android:textSize="12sp"
                android:textColor="@drawable/caohua_font_color"
                android:drawableTop="@drawable/caohua_tab_sdk_account" />

            <RadioButton
                android:id="@+id/ch_home_MultitudePage"
                style="@style/main_tab_bottom"
                android:text="礼包"
                android:textSize="12sp"
                android:textColor="@drawable/caohua_font_color"
                android:drawableTop="@drawable/caohua_tab_sdk_gift" />

            <RadioButton
                android:id="@+id/ch_home_MePage"
                style="@style/main_tab_bottom"
                android:drawableTop="@drawable/caohua_tab_sdk_method"
                android:text="攻略"
                android:textColor="@drawable/caohua_font_color"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/ch_home_MePage1"
                style="@style/main_tab_bottom"
                android:text="活动"
                android:textSize="12sp"
                android:textColor="@drawable/caohua_font_color"
                android:drawableTop="@drawable/caohua_tab_sdk_active" />
        </RadioGroup>
 		<TextView
            android:id="@+id/red"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/caohua_red"
            android:visibility="visible" />
       
    </RelativeLayout>

</RelativeLayout>