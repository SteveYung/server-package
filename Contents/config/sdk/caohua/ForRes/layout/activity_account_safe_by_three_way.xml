<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/include1"
        layout="@layout/caohua_my_title_search_new" />

    <!-- 绑定方式 -->

    <LinearLayout
        android:id="@+id/ch_content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/ch_white"
        android:orientation="vertical"
        android:visibility="visible" >

        <!-- ** -->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:gravity="center_vertical"
            android:text="为了您的账号安全，请选择绑定密保"
            android:textColor="#D1D1D1"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1" >

            <RelativeLayout
                android:id="@+id/sh_phone_ll"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_alignRight="@+id/sh_maill_ll"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dip"
                android:background="@drawable/edt"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <!-- *s手机图片* -->

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dip"
                    android:src="@drawable/mobile_icon" />

                <ImageView
                    android:id="@+id/iv_account_phone_flag"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@id/img"
                    android:layout_alignRight="@id/img"
                    android:background="@drawable/no_account" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/img"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密保手机"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用于登录游戏,密码找回"
                        android:textColor="#D1D1D1"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/go_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sh_maill_ll"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/sh_phone_ll"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dip"
                    android:src="@drawable/mail_icon" />

                <ImageView
                    android:id="@+id/iv_account_mail_flag"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@id/img2"
                    android:layout_alignRight="@id/img2"
                    android:background="@drawable/no_account" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dip"
                    android:layout_toRightOf="@id/img2"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密保邮箱"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_emial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="可用于登录游戏,密码找回"
                        android:textColor="#D1D1D1"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/go_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sh_security_ll"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/sh_maill_ll"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dip"
                    android:src="@drawable/mibao_icon" />

                <ImageView
                    android:id="@+id/iv_account_question_flag"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@id/img3"
                    android:layout_alignRight="@id/img3"
                    android:background="@drawable/no_account" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dip"
                    android:layout_toRightOf="@id/img3"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密保问题"
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用于登录游戏,密码找回"
                        android:textColor="#D1D1D1"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/go_icon" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sh_security_ll"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="28dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温馨提示："
                    android:textColor="#D1D1D1"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="若都无法为您找回密码,请联系"
                    android:textColor="#D1D1D1"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/linearLayout1"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="客服QQ:800032511"
                android:textColor="#32BFF3"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>