<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <include
        android:id="@+id/include1"
        layout="@layout/caohua_my_title_search_new" />
<!-- 没绑定任何方式 -->
    <RelativeLayout
        android:id="@+id/ch_no_work_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" >

         <ImageView
            android:id="@+id/task_NoData_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/unable_icon" />

        <TextView
            android:id="@+id/task_NoDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_NoData_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="亲，您还未设置任何密保信息！"
            android:textColor="#333333"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_NoDataText"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/findpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_NoDataText"
                android:layout_marginTop="10dip"
                android:text="若需找回密码请联系"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/caohua_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_NoDataText"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@id/findpwd"
                android:text="客服QQ：800032511"
                android:textColor="#32BFF3" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    
    <!-- 绑定方式 -->
  <LinearLayout
        android:id="@+id/ch_content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include1"
        android:orientation="vertical"
        android:background="@color/ch_white"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
    <!-- ** -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="#D1D1D1"
            android:text="@string/verification_mode" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1" >

            <RelativeLayout
                android:id="@+id/ch_phone_ll"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edt"
                android:gravity="center_vertical"
                android:visibility="gone" >
        <!-- *s手机图片* -->
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dip"
                    android:src="@drawable/mobile_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    
                    android:layout_toRightOf="@id/img"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密保手机"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            
                            
                             />

                        
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用于登录游戏,密码找回" 
                        android:textSize="10sp"
                        android:textColor="#D1D1D1"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/go_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ch_maill_ll"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/ch_phone_ll"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                 android:layout_marginTop="10dp"
                android:background="@drawable/edt"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dip"
                    android:src="@drawable/mail_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dip"
                    android:layout_toRightOf="@id/img2"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密保邮箱" 
                             android:textSize="13sp"
                            android:textColor="#333333"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用于登录游戏,密码找回" 
                         android:textSize="10sp"
                        android:textColor="#D1D1D1"
                        
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/go_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ch_security_ll"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/ch_maill_ll"
                android:layout_marginTop="10dp"
                 android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edt"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dip"
                    android:src="@drawable/mibao_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dip"
                    android:layout_toRightOf="@id/img3"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密保问题" 
                            android:textSize="13sp"
                            android:textColor="#333333"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用于登录游戏,密码找回" 
                         android:textSize="10sp"
                     
                        android:textColor="#D1D1D1"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/go_icon" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ch_security_ll"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="28dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wx_hint" 
                     android:textColor="#D1D1D1"
                   	android:textSize="13sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="2dip" >

                <TextView
                    android:id="@+id/caohua_tv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E90FF"
                    android:text="客服 QQ:800032511"
                    android:textSize="13sp"
                     />

         </LinearLayout>
     </RelativeLayout>
    </LinearLayout>

</RelativeLayout>