<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20">

    <com.gamexdd.sdk.library.widget.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvRecoreName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/gamexdd_default_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRecoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/gamexdd_default_color"
            android:textSize="16sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:layout_below="@+id/llTitle"
        android:background="@drawable/gxd_dotted_line_shape"
        android:layerType="software"
        android:orientation="horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llQuestionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/x200"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llineone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x4"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@drawable/gxd_dotted_line_shape"
                    android:layerType="software"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/etQuestionContent"
                    android:layout_width="@dimen/x800"
                    android:layout_height="@dimen/x160"
                    android:layout_below="@+id/llineone"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="top|left"
                    android:background="@drawable/gxd_input_border" />

                <Button
                    android:id="@+id/btnRecoedSumbit"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x94"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@drawable/gxd_btn_blue_selector"
                    android:text="提交"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </com.gamexdd.sdk.library.widget.ProgressLayout>
</RelativeLayout>
