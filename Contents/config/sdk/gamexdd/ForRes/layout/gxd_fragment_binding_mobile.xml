<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.gamexdd.sdk.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.gamexdd.sdk.widget.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/gxd_input_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x19"
            android:src="@drawable/gxd_user_icon_07" />

        <EditText
            android:id="@+id/etBindingPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btnForgetPwd"
            android:layout_toRightOf="@+id/imgXYothree"
            android:background="@null"
            android:hint="請輸入手機號"
            android:layout_marginLeft="@dimen/x19"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/gxd_input_border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x19"
            android:layout_centerVertical="true"
            android:src="@drawable/gxd_user_icon_08" />

        <EditText
            android:id="@+id/etBingdingPIN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x19"
            android:layout_toLeftOf="@+id/btnSendPIN"
            android:layout_toRightOf="@+id/imgXY"
            android:background="@null"
            android:hint="請輸入驗證碼"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSendPIN"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x94"
            android:layout_alignParentRight="true"
            android:background="@drawable/gxd_btn_vercode_bg"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:text="發送驗證碼"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnBinding"
        android:layout_width="@dimen/x580"
        android:layout_height="@dimen/x94"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/gxd_btn_blue_selector"
        android:text="確定綁定"
        android:textColor="#ffffff" />


</LinearLayout>
