<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.gamexdd.sdk.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="@dimen/x720"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="您的帳號安全等級低,存在帳號丟失或忘記密碼無法找回的風險,強烈建議您綁定手機,保障您的遊戲帳號安全."
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x50"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x94"
                android:layout_marginRight="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/gxd_btn_gray_selector"
                android:text="下次再說"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/btnBinding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x94"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/gxd_btn_blue_selector"
                android:text="現在綁定"
                android:textColor="#ffffff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbNotprompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/gxd_checkbox_selector"
                android:text="不再提示"
                android:textColor="#666666"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

