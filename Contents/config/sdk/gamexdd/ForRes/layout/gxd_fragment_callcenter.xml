<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.gamexdd.sdk.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140">

        <RadioGroup
            android:id="@+id/rbCallCenterTab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x140"
            android:layout_gravity="center_vertical"
            android:background="@color/gamexdd_eeeeee"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/x10"
                android:drawableTop="@drawable/gxd_rb_question_selector"
                android:gravity="center"
                android:text="常見問題"
                android:textColor="@drawable/gxd_tab_callcenter_selector"/>

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>

            <RadioButton
                android:id="@+id/rbSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/x10"
                android:drawableTop="@drawable/gxd_rb_onlinesubmit_selector"
                android:gravity="center"
                android:text="在線提交"
                android:textColor="@drawable/gxd_tab_callcenter_selector"/>

            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>

            <RadioButton
                android:id="@+id/rbRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="@dimen/x10"
                android:drawableTop="@drawable/gxd_rb_record_selector"
                android:gravity="center"
                android:text="我的記錄"
                android:textColor="@drawable/gxd_tab_callcenter_selector"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gxd_user_kefu_bg05"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imgSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gxd_user_kefu_bg05"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imgRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/gxd_user_kefu_bg05"
                android:visibility="invisible"/>

        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
