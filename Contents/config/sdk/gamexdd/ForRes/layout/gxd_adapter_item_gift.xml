<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x610"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgHead"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:src="@drawable/gxd_icon_gift_photo" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x150"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toRightOf="@+id/imgHead">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="逆襲三國特權禮包"
            android:textColor="#333333" />

        <RelativeLayout
            android:id="@+id/rlPrize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentBottom="true"
            android:visibility="visible">


            <Button
                android:id="@+id/btnExchange"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x70"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x10"
                android:text="兑换"
                android:textColor="#ffffff"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/layoutIntegral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnExchange"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvIntegral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/gamexdd_e04a32"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="禮券"
                    android:textColor="@color/gamexdd_e04a32"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout><!-- From: file:/Users/Encore/Desktop/AndroidProject/gamexdd/thrunk/GamexddSDK/GamexddPaySDK/src/main/res/layout/gxd_adapter_item_gift.xml -->