<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/x20"
              android:paddingRight="@dimen/x20">


    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="@dimen/x700"
        android:layout_height="@dimen/x72"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/gxd_input_border"
        android:hint="請輸入您的問題標題"
        android:maxLength="16"
        android:maxWidth="@dimen/x700"
        android:paddingLeft="@dimen/x10"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textSize="14sp"/>




    <EditText
        android:id="@+id/etQuestionDesc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x154"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/gxd_input_border"
        android:gravity="top|left"
        android:hint="請輸入您的問題內容"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/x20"
        android:textColor="@color/gamexdd_default_color"
        android:textColorHint="@color/gamexdd_default_hint"
        android:textSize="14sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x13">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            android:layout_toLeftOf="@+id/btnSumbit"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llShootme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlAddShootme"
                android:layout_width="@dimen/x100"
                android:layout_toRightOf="@+id/llShootme"
                android:layout_height="@dimen/x100"
                android:layout_centerVertical="true"
                android:background="@drawable/gxd_input_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gxd_user_kefu_bg07"/>

            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btnSumbit"
            android:layout_width="@dimen/x360"
            android:layout_height="@dimen/x84"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/gxd_btn_blue_selector"
            android:text="提交"
            android:textColor="#ffffff"/>

    </RelativeLayout>

</LinearLayout>
