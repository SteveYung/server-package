<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/llXy"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gamexdd_e04a32"
            android:textSize="16sp"
            android:text="客服" />

        <TextView
            android:id="@+id/tvRecordCallTime"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gamexdd_default_hint"
            android:text="回覆時間:" />
    </LinearLayout>

  <ImageView
      android:id="@+id/imgXy"
      android:layout_below="@+id/llXy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/x100"
      android:src="@drawable/gxd_user_kefu_bg10"/>

    <LinearLayout
        android:layout_below="@+id/imgXy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_alignParentRight="true"
        android:background="@color/gamexdd_6cb01b"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecordCallContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:maxWidth="@dimen/x800"
            android:minWidth="@dimen/x200"
            android:textColor="#ffffff" />

    </LinearLayout>


</RelativeLayout>
