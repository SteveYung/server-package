<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/gamexdd_bg_color"
              android:orientation="vertical"
    >


    <com.gamexdd.sdk.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="@dimen/x720"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x94"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/gxd_input_border"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帳號:"
                android:textColor="@color/gamexdd_default_color"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="@null"
                android:hint="由4-12位字母和數字組成"
                android:textColor="@color/gamexdd_default_color"
                android:textColorHint="@color/gamexdd_default_hint"
                android:textSize="14sp"
                android:imeOptions="actionNext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x94"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/gxd_input_border"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密碼:"
                android:textColor="@color/gamexdd_default_color"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="長度由6-16位,區分大小寫"
                android:maxLength="16"
                android:password="true"
                android:textColor="@color/gamexdd_default_color"
                android:textColorHint="@color/gamexdd_default_hint"
                android:textSize="14sp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x75"
            >

            <CheckBox
                android:id="@+id/cbShowPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@drawable/gxd_checkbox_selector"
                android:paddingLeft="@dimen/x8"
                android:text="顯示密碼"
                android:textColor="#666666"
                android:textSize="12sp"
                />

            <Button
                android:id="@+id/btnAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="用戶協議"
                android:textColor="#e04a32"
                android:textSize="14sp"
                />

            <CheckBox
                android:id="@+id/cbConfrimAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_toLeftOf="@+id/btnAgreement"
                android:button="@drawable/gxd_checkbox_selector"
                android:checked="true"
                android:paddingLeft="@dimen/x8"
                android:text="同意"
                android:textColor="#333333"
                android:textSize="12sp"
                />
        </RelativeLayout>


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x94"
            android:background="@drawable/gxd_btn_red_selector"
            android:text="立即註冊"
            android:textColor="#ffffff"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/x40"
            android:background="#cccccc"
            />

        <Button
            android:id="@+id/btnMobileRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x74"
            android:background="@null"

            android:drawableRight="@drawable/gxd_icon_right"
            android:gravity="center_vertical"
            android:text="手機獲取驗證碼一步註冊登錄"
            android:textColor="#666666"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/x30"
            android:background="#cccccc"
            />

    </LinearLayout>


</LinearLayout>