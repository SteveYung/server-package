<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.gamexdd.sdk.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="@dimen/x700"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="為保障您的虛擬財產安全,強烈建議選擇以下方式升級帳號:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegisterAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x94"
                android:layout_marginRight="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/gxd_btn_blue_selector"
                android:text="註冊帳號"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/btnUpdateAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/gxd_btn_red_selector"
                android:text="手機號驗登"
                android:textColor="#ffffff" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center"
            android:text="(升級後將繼續您的遊戲進度)"
            android:textColor="#e04a32"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>

