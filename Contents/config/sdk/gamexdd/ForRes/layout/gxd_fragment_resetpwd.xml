<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.gamexdd.sdk.widget.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="@dimen/x700"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="已向您的手機發驗證碼"
            android:textColor="#e04a32"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x94"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/gxd_input_border">

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:text="驗證碼:"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/btnGetPIN"
                android:layout_toRightOf="@+id/tvText"
                android:background="@null"
                android:hint="請輸入驗證碼"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btnGetPIN"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x94"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/gxd_btn_vercode_bg"
                android:text="重新獲取"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/gxd_input_border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="新密碼:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNewPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x94"
                android:layout_centerInParent="true"
                android:background="@null"
                android:hint="請設置您的新密碼"
                android:password="true"
                android:textSize="14sp" />


        </LinearLayout>


        <Button
            android:id="@+id/btnResetPwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x94"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/gxd_btn_blue_selector"
            android:textColor="#ffffff"
            android:text="重置密碼" />

    </LinearLayout>
</LinearLayout>

