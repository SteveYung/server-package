<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sevenga_stage_background"
    android:minWidth="@dimen/sevenga_dialog_min_width"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sevenga_logo_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:layout_marginLeft="@dimen/sevenga_layout_value_16"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:gravity="center_vertical"
            android:text="@string/sevenga_sevengalogin_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sevenga_text_size_large" />

        <ImageView
            android:id="@+id/sevenga_return_btn1"
            android:layout_width="@dimen/sevenga_layout_value_24"
            android:layout_height="@dimen/sevenga_layout_value_24"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:layout_marginRight="@dimen/sevenga_layout_value_16"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:src="@drawable/sevenga_return_btn" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="@dimen/sevenga_layout_value_16" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_tourist_edittext1"
                style="@style/sevenga_common_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword"
                android:tag="username" />
        </FrameLayout>

        <TextView
            android:id="@+id/sevenga_bind_email1"
            style="@style/sevenga_link_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:text="@string/sevenga_bind_email_text" >
        </TextView>

        <Button
            android:id="@+id/sevenga_fragment_tourist_login_button1"
            style="@style/sevenga_common_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sevenga_layout_value_16"
            android:text="@string/sevenga_sure_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sevenga_layout_value_16"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sevenga_number_login"
                style="@style/sevenga_login_login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sevenga_sevengalogin_text" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/sevenga_fb_login1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:src="@drawable/sevenga_fb_icon" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>