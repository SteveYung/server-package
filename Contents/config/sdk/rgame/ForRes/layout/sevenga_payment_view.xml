<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6604"
        android:padding="@dimen/sevenga_layout_value_16" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="支付"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sevenga_text_size_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/sevenga_layout_value_16"
                android:layout_height="@dimen/sevenga_layout_value_32"
                android:src="@drawable/sevenga_payment_backbtn"
                android:layout_marginRight="@dimen/sevenga_layout_value_8" />

            <TextView
                android:id="@+id/sevenga_payment_closebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="返回游戏"
                android:textColor="#8e0302"
                android:textSize="@dimen/sevenga_text_size_normal" />
        </LinearLayout>
    </FrameLayout>

    <WebView
        android:id="@+id/sevenga_payment_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>