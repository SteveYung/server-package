<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/sevenga_layout_value_32"
    android:layout_marginRight="@dimen/sevenga_layout_value_32"
    android:background="@drawable/sevenga_progress_background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/sevenga_layout_value_16"
        android:paddingLeft="@dimen/sevenga_layout_value_32"
        android:paddingRight="@dimen/sevenga_layout_value_32"
        android:paddingTop="@dimen/sevenga_layout_value_16" >

        <ProgressBar
            android:layout_width="@dimen/sevenga_layout_value_32"
            android:layout_height="@dimen/sevenga_layout_value_32"
            android:layout_gravity="center"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/sevenga_progressbar_shape"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/progress_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/sevenga_layout_value_16"
            android:layout_marginRight="@dimen/sevenga_layout_value_16"
            android:gravity="center"
            android:text="Loading..."
            android:textColor="#000000"
            android:textSize="@dimen/sevenga_text_size_normal" />
    </LinearLayout>

</FrameLayout>