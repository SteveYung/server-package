<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sevenga_stage_background"
    android:minWidth="@dimen/sevenga_dialog_min_width"
    android:orientation="vertical"
    android:padding="@dimen/sevenga_layout_value_16"
    tools:context=".OriginalLoginActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sevenga_layout_value_16"
            android:text="@string/sevenga_register_success_hint"
            android:textColor="#000000"
            android:textSize="@dimen/sevenga_text_size_snormal" />

        <TextView
            android:id="@+id/registersuccess_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sevenga_layout_value_8"
            android:textColor="#000000"
            android:textSize="@dimen/sevenga_text_size_normal" />
         <TextView
             android:id="@+id/sevenga_register_bind_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sevenga_layout_value_16"
            android:text="@string/sevenga_register_bound_hint"
            android:textColor="#000000"
            android:textSize="@dimen/sevenga_text_size_snormal" />

        <Button
            android:id="@+id/registersuccess_loginnow_btn"
            style="@style/sevenga_common_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sevenga_layout_value_16"
            android:text="@string/sevenga_login_text" />
    </LinearLayout>

</LinearLayout>