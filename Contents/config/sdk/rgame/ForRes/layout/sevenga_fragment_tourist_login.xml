<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sevenga_stage_background"
    android:minWidth="@dimen/sevenga_dialog_min_width"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7" >

        <!--<ImageView-->
            <!--android:layout_width="@dimen/sevenga_logo_width"-->
            <!--android:layout_height="@dimen/sevenga_logo_height"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginBottom="@dimen/sevenga_layout_value_12"-->
            <!--android:layout_marginLeft="@dimen/sevenga_layout_value_16"-->
            <!--android:layout_marginTop="@dimen/sevenga_layout_value_12"-->
            <!--android:src="@drawable/sevenga_logo_normal" />-->
        <!-- 临时 -->
        <TextView
            android:layout_width="@dimen/sevenga_logo_width"
            android:layout_height="@dimen/sevenga_logo_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:layout_marginLeft="@dimen/sevenga_layout_value_12"
            android:textColor="@color/text_color_title"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="@dimen/sevenga_alert_size"
            android:text="登录"/>

        <ImageView
            android:id="@+id/tourist_return_btn"
            android:layout_width="@dimen/sevenga_layout_value_24"
            android:layout_height="@dimen/sevenga_layout_value_24"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:layout_marginRight="@dimen/sevenga_layout_value_16"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:src="@drawable/sevenga_close_btn" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="@dimen/sevenga_layout_value_16"
        android:paddingLeft="@dimen/sevenga_layout_value_16"
        android:paddingRight="@dimen/sevenga_layout_value_16"
        android:paddingTop="@dimen/sevenga_layout_value_8" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/sevenga_layout_value_8"
                android:paddingRight="0dp"
                android:text="@string/sevenga_history_login"
                android:textColor="#909090"
                android:textSize="@dimen/sevenga_text_size_normal" />
        </FrameLayout>

        <ImageView
            android:id="@+id/touristlogin_tplogin_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sevenga_layout_value_8"
            android:background="#EEEEEE" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false" >

            <EditText
                android:id="@+id/touris_login_username_edittext"
                style="@style/sevenga_common_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/sevenga_username_hint"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword"
                android:paddingLeft="@dimen/sevenga_layout_value_32"
                android:tag="guest" />

            <ImageView
                android:id="@+id/login_userlogo"
                android:layout_width="@dimen/sevenga_layout_value_20"
                android:layout_height="@dimen/sevenga_layout_value_20"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/sevenga_layout_value_4"
                android:background="@drawable/sevenga_logo_icon" />

            <ImageButton
                android:id="@+id/tourist_login_username_clear"
                android:layout_width="@dimen/sevenga_layout_value_24"
                android:layout_height="@dimen/sevenga_layout_value_24"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/sevenga_layout_value_8"
                android:src="@drawable/login_input_arrow" />
        </FrameLayout>

        <Button
            android:id="@+id/sevenga_fragment_tourist_login"
            style="@style/sevenga_common_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sevenga_layout_value_8"
            android:layout_marginTop="@dimen/sevenga_layout_value_20"
            android:text="@string/sevenga_login_text" />

        <ImageView
            android:id="@+id/tourist_login_tplogin_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/sevenga_layout_value_8"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:background="#808080" />

        <FrameLayout
            android:id="@+id/sevenga_number_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/sevenga_layout_value_8"
                android:paddingRight="0dp"
                android:text="@string/sevenga_other_channel"
                android:textColor="#909090"
                android:textSize="@dimen/sevenga_text_size_normal" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/touristlogin_tplogin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>

            <!-- android:background="@drawable/sevenga_icon" -->
            <ImageView
                android:id="@+id/touristlogin_sevenga_login"
                android:layout_width="@dimen/sevenga_layout_value_40"
                android:layout_height="@dimen/sevenga_layout_value_40"
                android:layout_marginLeft="@dimen/sevenga_layout_value_12"
                android:background="@drawable/sevenga_icon_username_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>