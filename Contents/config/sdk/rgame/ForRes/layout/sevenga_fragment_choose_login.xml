<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sevenga_stage_background"
    android:minWidth="@dimen/sevenga_dialog_min_width"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7" >

        <ImageView
            android:layout_width="@dimen/sevenga_logo_width"
            android:layout_height="@dimen/sevenga_logo_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:layout_marginLeft="@dimen/sevenga_layout_value_16"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:src="@drawable/sevenga_logo_normal" />

        <ImageView
            android:id="@+id/register_return_btn"
            android:layout_width="@dimen/sevenga_layout_value_24"
            android:layout_height="@dimen/sevenga_layout_value_24"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="@dimen/sevenga_layout_value_12"
            android:layout_marginRight="@dimen/sevenga_layout_value_16"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            android:src="@drawable/sevenga_close_btn" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sevenga_layout_value_16"
        android:layout_marginBottom="@dimen/sevenga_layout_value_16"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sevenga_layout_value_16"
        android:paddingRight="@dimen/sevenga_layout_value_16" >

        <Button
            android:id="@+id/sevenga_fast_login"
            style="@style/sevenga_fast_login_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/sevenga_fast_login" />

        <Button
            android:id="@+id/sevenga_number_login"
            android:layout_marginTop="@dimen/sevenga_layout_value_12"
            style="@style/sevenga_login_login_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/sevenga_sevengalogin_text" />
    </LinearLayout>


    <ImageView
        android:id="@+id/chooselogin_tplogin_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:id="@+id/chooselogin_tplogin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="@dimen/sevenga_layout_value_12"
        android:orientation="horizontal"
        android:padding="@dimen/sevenga_layout_value_16" >
    </LinearLayout>
	<TextView
	    android:layout_height="2dp"
	    android:layout_width="match_parent"/>
</LinearLayout>