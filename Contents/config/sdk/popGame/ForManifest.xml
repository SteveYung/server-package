<?xml version="1.0" encoding="utf-8"?>
<manifestConfig xmlns:android="http://schemas.android.com/apk/res/android" >

    <permissionCfg>
        <uses-permission android:name="android.permission.INTERNET" />
        <!-- 查看网络状态 -->
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        <uses-permission android:name="android.permission.PERMISSION_NAME" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
        <uses-permission android:name="android.permission.READ_LOGS" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
        <!-- bank -->
        <uses-permission android:name="android.permission.VIBRATE" />
        <!-- sms pay -->
        <uses-permission android:name="android.permission.RECEIVE_SMS" />
        <uses-permission android:name="android.permission.SEND_SMS" />
        <uses-permission android:name="android.permission.WRITE_SMS" />
        <uses-permission android:name="android.permission.READ_SMS" />
        <uses-permission android:name="android.permission.GET_TASKS" />
        <uses-permission android:name="android.permission.REORDER_TASKS" />
     
    </permissionCfg>

    <applicationCfg keyword="cn.gc.popgame.ui.activity.StartActivity" >
        <activity
                android:name="cn.gc.popgame.ui.activity.StartActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
                android:name="cn.gc.popgame.ui.activity.RegisterCheckCodeActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name="cn.gc.popgame.ui.activity.BindPhoneActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name="cn.gc.popgame.ui.activity.GetPasswordActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="portrait" />
        <activity
                android:name="cn.gc.popgame.ui.activity.PayCommonActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/dialog"
                android:screenOrientation="portrait" >
        </activity>
        <!-- PersonActivity -->
        <activity
                android:name="cn.gc.popgame.ui.activity.LoginActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait" >
        </activity>
        <activity
                android:name="cn.gc.popgame.ui.activity.RegisterActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                >
        </activity>
        <activity
                android:name="cn.gc.popgame.ui.activity.PopWebActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                >
        </activity>
        <activity
                android:name="cn.gc.popgame.ui.activity.PromptActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                >
        </activity>
        <activity
                android:name="com.iapppay.pay360.AcconutActivity"
                android:screenOrientation="portrait"
                android:configChanges="keyboardHidden|orientation|navigation"
                android:theme="@android:style/Theme.NoTitleBar" />

        <activity
                android:name="com.iapppay.pay360.GoodsActivity"
                android:screenOrientation="portrait"
                android:configChanges="keyboardHidden|orientation|navigation"
                android:theme="@android:style/Theme.NoTitleBar" />

        <activity
                android:name="com.iapppay.mpay.ifmgr.PayManagerActivity"
                android:configChanges="keyboardHidden|orientation|navigation"
                android:launchMode="singleTop"
                android:windowSoftInputMode="adjustPan"
                android:theme="@android:style/Theme.Translucent.NoTitleBar" />


        <!-- 一键支付 -->

        <activity
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:name="com.iapppay.oneclickpay.FastPayActivity"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:name="com.iapppay.oneclickpay.InputCardActivity"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:name="com.iapppay.oneclickpay.LLUnbindCardActivity"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:name="com.iapppay.oneclickpay.YPUnbindCardActivity"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:name="com.iapppay.oneclickpay.SplashActivity"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:name="com.iapppay.oneclickpay.AgreementActivity"
                android:label="@string/app_name" >
        </activity>

        <activity
                android:name="com.iapppay.oneclickpay.CommUnbindCardActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|navigation"
                android:launchMode="singleTop"
                android:screenOrientation="behind"
                android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
                android:name="com.iapppay.oneclickpay.CallWaitingActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|navigation"
                android:launchMode="singleTop"
                android:screenOrientation="behind"
                android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
                android:name="com.iapppay.oneclickpay.SmsVerifyActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|navigation"
                android:launchMode="singleTop"
                android:screenOrientation="behind"
                android:theme="@android:style/Theme.Translucent.NoTitleBar" />


        <!-- 银联标准版 -->

        <activity
                android:name="com.unionpay.uppay.PayActivity"
                android:theme="@style/Theme.UPPay"
                android:label="@string/app_name"
                android:screenOrientation="portrait"
                android:configChanges="orientation|keyboardHidden"
                android:excludeFromRecents="true"
                >
        </activity>


        <activity
                android:name="com.unionpay.uppay.PayActivityEx"
                android:label="@string/app_name"
                android:screenOrientation="portrait"
                android:configChanges="orientation|keyboardHidden"
                android:excludeFromRecents="true"
                android:windowSoftInputMode="adjustResize"
                >
        </activity>




    </applicationCfg>

</manifestConfig>