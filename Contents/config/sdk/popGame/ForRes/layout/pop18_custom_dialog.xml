<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop18_prompt_bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/firstTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/secondTV"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pop18_login_pwd_height"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/thirdTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|fill_horizontal"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fourthTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|fill_horizontal"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dialog_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/left_btn"
            android:layout_width="@dimen/pop18_login_button_width"
            android:layout_height="@dimen/pop18_login_pwd_height"
            android:layout_marginLeft="@dimen/pop18_login_pad"
            android:layout_marginRight="@dimen/pop18_login_pad"
            android:layout_weight="1"
            android:background="@drawable/pop18_selector_blue_button"
            android:text="确定"
            android:textColor="@color/pop18_white" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="@dimen/pop18_login_button_width"
            android:layout_height="@dimen/pop18_login_pwd_height"
            android:layout_marginLeft="@dimen/pop18_login_pad"
            android:layout_marginRight="@dimen/pop18_login_pad"
            android:layout_weight="1"
            android:background="@drawable/pop18_selector_button_cancel"
            android:text="取消"
            android:textColor="@color/pop18_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dialog_ll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:visibility="gone">

        <Button
            android:id="@+id/left_btn2"
            android:layout_width="@dimen/pop18_login_button_width"
            android:layout_height="@dimen/pop18_login_pwd_height"
            android:layout_marginLeft="@dimen/pop18_login_pad"
            android:layout_marginRight="@dimen/pop18_login_pad"
            android:background="@drawable/pop18_selector_button"
            android:text="确定"
            android:textColor="@color/pop18_white" />
    </LinearLayout>

</RelativeLayout>