<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
	<RelativeLayout android:id="@+id/rl_special_item_aipay"
	    android:layout_width="match_parent" 
	    android:layout_height="80dp"
	    android:layout_marginRight="8dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginBottom="6dp">
	    
	    <ImageView android:id="@+id/iv_paytype_icon_aipay"
	        android:layout_width="32dp"
	        android:layout_height="32dp" 
	        android:scaleType="fitXY"
	        android:layout_marginLeft="12dp"
	        android:layout_marginRight="12dp"
	        android:layout_marginTop="22dp"
	        android:layout_marginBottom="22dp"
	        android:layout_alignParentLeft="true"
	        android:contentDescription="@null"/>
	    
	    <TextView android:id="@+id/tv_paytype_aipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_paytype_icon_aipay"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
	    
	    <!-- 爱贝显示方式 -->
	    <LinearLayout android:id="@+id/ll_aibei_aipay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iv_paytype_icon_aipay"
	        android:layout_below="@+id/tv_paytype_aipay"
	        android:orientation="vertical"
	        android:layout_marginTop="2dp"
	        android:visibility="gone">
	        
	        <LinearLayout android:id="@+id/ll_name_aipay"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginBottom="2dp">
		        
		        <TextView android:id="@+id/tv_name_aipay"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="14sp"
			        android:textColor="#ffffff"/>
	        
		    </LinearLayout>
		    
		    <LinearLayout android:id="@+id/ll_balance_aipay"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		        
		        <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="14sp"
			        android:text="@string/aipay_balance_tip"
			        android:textColor="#ffffff"/>
		        
		        <TextView android:id="@+id/tv_balance_aipay"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="14sp"
			        android:textColor="#ffffff"/>
		        
		        <TextView android:id="@+id/tv_unit_aipay"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="14sp"
			        android:textColor="#ffffff"/>       
		    </LinearLayout>
	        
	    </LinearLayout>
	    
	    <!-- 银行卡显示呢方式  -->
	    <LinearLayout android:id="@+id/ll_bank_aipay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iv_paytype_icon_aipay"
	        android:orientation="vertical"
	        android:layout_centerVertical="true"
	        android:visibility="gone">
		    
	        <TextView android:id="@+id/tv_bankname_aipay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:textColor="#ffffff"/>
	        
	        <TextView android:id="@+id/tv_lastno_aipay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="16dp"
	            android:textSize="14sp"
	            android:textColor="#ffffff"/>
	    </LinearLayout>
	    
	    <!-- 爱贝特有显示，与 ll_aibei_aipay陪合 -->
	    <TextView android:id="@+id/tv_pay_aipay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/ll_aibei_aipay"
	        android:layout_alignBottom="@id/ll_aibei_aipay"
	        android:layout_marginLeft="8dp"
	        android:textSize="14sp"
	        android:textColor="#ffffff"
	        android:visibility="gone"/>
	    
	    <TextView android:id="@+id/tv_discount_aipay"
	        android:layout_width="40dp"
	        android:layout_height="20dp"
	        android:layout_marginTop="11dp"
			android:gravity="center"
	        android:layout_marginRight="23dp"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/aipay_discount_bg"
	        android:textSize="12sp"
	        android:textColor="#ffffff"
	        android:visibility="gone"/>   
	        
	    <ImageView android:layout_width="12dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/aipay_arrow"
            android:contentDescription="@null"/>
	</RelativeLayout>
</LinearLayout>