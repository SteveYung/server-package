<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iapppay_bg_content" >
    
    <include android:id="@+id/oneclickpay_title"
        layout="@layout/iapppay_oneclickpay_layout_title" 
        android:layout_alignParentTop="true"/>
    
    <TextView android:id="@+id/oneclickpay_verify_tips"
        android:layout_below="@+id/oneclickpay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="14sp"
        android:textColor="#6f6f6f"/>
      
    <EditText android:id="@+id/oneclickpay_smscode"
        style="@style/edit_common_style"
        android:layout_below="@+id/oneclickpay_verify_tips"
        android:layout_width="140dp"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="5dp"
        android:background="@color/white"
        android:inputType="number"
        android:maxLength="6"
        android:hint="填写验证码"/>
    
    <TextView android:id="@+id/oneclickpay_timecounter"
        android:layout_width="140dp"
        android:layout_height="@dimen/line_height"
        android:layout_toRightOf="@+id/oneclickpay_smscode"
        android:layout_alignTop="@+id/oneclickpay_smscode"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:background="@drawable/iapppay_oneclickpay_bg_confrim_selector"
        android:textColor="@color/white"/>
    
    <TextView android:id="@+id/onclickpay_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/oneclickpay_smscode"
        android:layout_marginBottom="@dimen/line_margin_20"
		android:layout_marginTop="@dimen/line_margin_15"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:background="@drawable/iapppay_oneclickpay_bg_confrim_selector"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="提交"/> 
</RelativeLayout>
