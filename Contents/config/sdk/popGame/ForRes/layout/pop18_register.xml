<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/title_register"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pop18_login_title_height"
        android:background="@color/pop18_title_bk" >

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="@dimen/pop18_login_title_height"
            android:layout_height="@dimen/pop18_login_title_height"
            android:layout_alignParentLeft="true"
            android:padding="9dp"
            android:src="@drawable/pop18_selector_back" />
        <TextView
            style="@style/pop18_title_text"
            android:text="注册" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>

    <RelativeLayout
        style="@style/pop18_rel_pad"
        android:id="@+id/register_lang_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register"
        android:layout_marginTop="29dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pop18_login_user_height"
                android:background="@drawable/pop18_biankuang" >

                <TextView
                    android:id="@+id/register_name"
                    style="@style/pop18_textview_lable"
                    android:text="账号" />

                <EditText
                    android:id="@+id/register_name_et"
                    style="@style/pop18_edittext_input"
                    android:layout_toRightOf="@id/register_name"
                    android:hint="手机号或邮箱"
                    android:maxLength="45" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pop18_login_user_height"
                android:background="@drawable/pop18_biankuang" >

                <TextView
                    android:id="@+id/register_pwd"
                    style="@style/pop18_textview_lable"
                    android:text="密码" />

                <EditText
                    android:id="@+id/register_pwd_et"
                    style="@style/pop18_edittext_input"
                    android:layout_toRightOf="@id/register_pwd"
                    android:hint="6-20位数字或字母"
                    android:maxLength="20" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/register_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@dimen/pop18_login_button_pad"
        android:layout_below="@id/register_lang_rl"
        android:autoLink="web"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/pop18_login_pad"
        android:text="@string/pop18_register_desc"
        android:textColor="#999999"
        android:textSize="12sp" />

    <Button
        android:id="@+id/register_Ok"
        android:layout_width="200dp"
        android:layout_height="@dimen/pop18_login_pwd_height"
        android:layout_below="@id/register_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pop18_login_pad"
        android:background="@drawable/pop18_selector_button"
        android:text="同意并注册"
        android:textColor="@color/pop18_white" />

</RelativeLayout>