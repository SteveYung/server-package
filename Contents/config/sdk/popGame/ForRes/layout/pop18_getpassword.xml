<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/title_register_checkcode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pop18_login_title_height"
        android:background="@color/pop18_title_bk" >

        <ImageView
            android:id="@+id/getpwd_back"
            android:layout_width="@dimen/pop18_login_title_height"
            android:layout_height="@dimen/pop18_login_title_height"
            android:layout_alignParentLeft="true"
            android:padding="9dp"
            android:src="@drawable/pop18_selector_back" />

        <TextView
            style="@style/pop18_title_text"
            android:text="找回密码" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>

<!--         <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_register_checkcode" > -->
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@id/title_register_checkcode"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


        <RelativeLayout
            android:id="@+id/bindphone_content"
            android:layout_marginLeft="@dimen/pop18_main_view_right_margin"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/pop18_main_view_right_margin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="28dp" >

            <LinearLayout
                android:id="@+id/getpassword_content_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pop18_login_pwd_height"
                    android:background="@drawable/pop18_biankuang" >

                    <TextView
                        android:id="@+id/bindphone_name_tv"
                        style="@style/pop18_textview_lable"
                        android:text="账号" />

                    <EditText
                        android:id="@+id/getpassword_username"
                        style="@style/pop18_edittext_input"
                        android:layout_toRightOf="@id/bindphone_name_tv"
                        android:digits="1234567890AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz@."
                        android:hint="请输入账号"
                        android:maxLength="45" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pop18_login_pwd_height"
                    android:background="@drawable/pop18_biankuang" >

                    <TextView
                        android:id="@+id/getpassword_name_phonenumber"
                        style="@style/pop18_textview_lable"
                        android:text="验证码" />

                    <Button
                        android:id="@+id/getpassword_checkcode_ok"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pop18_main_view_right_margin"
                        android:background="@drawable/pop18_selector_getcheckcode"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/pop18_white"
                        android:singleLine="true"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/getpassword_checkcode"
                        style="@style/pop18_edittext_input"
                        android:layout_marginRight="@dimen/pop18_login_pad"
                        android:layout_toLeftOf="@id/getpassword_checkcode_ok"
                        android:layout_toRightOf="@id/getpassword_name_phonenumber"
                        android:hint="请输入验证码"
                        android:singleLine="true"
                        android:maxLength="6"
                        android:numeric="signed" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pop18_login_pwd_height"
                    android:background="@drawable/pop18_biankuang" >

                    <TextView
                        android:id="@+id/bindphone_name_phonenumber"
                        style="@style/pop18_textview_lable"
                        android:text="新密码" />

                    <EditText
                        android:id="@+id/getpassword_newpwd"
                        style="@style/pop18_edittext_input"
                        android:layout_toRightOf="@id/bindphone_name_phonenumber"
                        android:digits="1234567890abcdefghijklmnopqrstuvwxyz"
                        android:hint="6-20位数字或字母"
                        android:maxLength="20" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pop18_login_pwd_height"
                    android:background="@drawable/pop18_biankuang" >

                    <TextView
                        android:id="@+id/bindphone_name_phonenumber_again"
                        style="@style/pop18_textview_lable"
                        android:text="确认密码" />

                    <EditText
                        android:id="@+id/getpassword_newpwd_again"
                        style="@style/pop18_edittext_input"
                        android:layout_toRightOf="@id/bindphone_name_phonenumber_again"
                        android:digits="1234567890abcdefghijklmnopqrstuvwxyz"
                        android:hint="再次输入新密码"
                        android:maxLength="20" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/getpassword_content_ll"
                android:layout_marginTop="@dimen/pop18_login_pad" >

                <Button
                    android:id="@+id/getpassword_ok"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/pop18_login_pwd_height"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pop18_selector_button"
                    android:text="确认"
                    android:textColor="@color/pop18_white" />

                <TextView
                    android:id="@+id/getpassword_unbindphone_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getpassword_ok"
                    android:layout_marginTop="@dimen/pop18_login_pad"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/pop18_game_simple_info"
                    android:textColor="@color/pop18_person_center_text_press" 
                    android:text="未绑定手机用户，请联系客服" />
                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getpassword_unbindphone_desc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/pop18_login_pad"
                    android:layout_marginBottom="@dimen/pop18_login_pad"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/pop18_main_view_right_margin"
                        android:text="客服电话:010-65995987"
                        android:textSize="@dimen/pop18_game_simple_info"
                        android:textColor="@color/pop18_person_center_text_press" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服QQ:2993356572"
                        android:textSize="@dimen/pop18_game_simple_info"
                        android:textColor="@color/pop18_person_center_text_press" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>