<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>

  <RelativeLayout
        android:id="@+id/title_register_checkcode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pop18_login_title_height"
        android:background="@color/pop18_title_bk" >

        <ImageView
            android:id="@+id/register_checkcode_back"
            android:layout_width="@dimen/pop18_login_title_height"
            android:layout_height="@dimen/pop18_login_title_height"
            android:layout_alignParentLeft="true"
            android:padding="9dp"
            android:src="@drawable/pop18_selector_back" />

        <TextView
            style="@style/pop18_title_text"
            android:text="注册" />

       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_checkcode_input"
        style="@style/pop18_rel_pad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_register_checkcode"
        android:layout_marginTop="30dp" >

        <RelativeLayout
            android:id="@+id/register_checkcode_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pop18_register_checkcode_desc" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pop18_login_pwd_height"
            android:layout_below="@id/register_checkcode_desc"
            android:layout_marginTop="15dp"
            android:id="@+id/regist_code"
            android:background="@drawable/pop18_biankuang" >

            <TextView
                android:id="@+id/register_checkcode_tv"
                style="@style/pop18_textview_lable"
                android:text="验证码" />

            <Button
                android:id="@+id/register_checkcode_getcheckcode"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pop18_login_pad"
                android:background="@drawable/pop18_selector_getcheckcode"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/pop18_white"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/register_checkcode_et"
                style="@style/pop18_edittext_input"
                android:layout_marginRight="@dimen/pop18_login_pad"
                android:layout_toLeftOf="@id/register_checkcode_getcheckcode"
                android:layout_toRightOf="@id/register_checkcode_tv"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:numeric="signed" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/register_checkcode_input" >

        <Button
            android:id="@+id/register_checkcode_Ok"
            android:layout_width="200dp"
            android:layout_height="@dimen/pop18_login_pwd_height"
            android:layout_centerInParent="true"
            android:background="@drawable/pop18_selector_button"
            android:text="完成注册"
            android:textColor="@color/pop18_white"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>