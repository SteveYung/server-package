<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pop18_login_title_height"
        android:background="@color/pop18_title_bk" >

        <TextView
            style="@style/pop18_title_text"
            android:text="登录" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/pop18_rel_pad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/pop18_login_top" >

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:focusable="true"
                android:focusableInTouchMode="true" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/login_rl"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pop18_login_user_height"
                android:background="@drawable/pop18_biankuang" >

                <TextView
                    android:id="@+id/name"
                    style="@style/pop18_textview_lable"
                    android:text="账号" />

                <ImageView
                    android:id="@+id/login_list"
                    style="@style/pop18_imageview_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pop18_login_list" />

                <EditText
                    android:id="@+id/login_username_et"
                    style="@style/pop18_edittext_input"
                    android:layout_toLeftOf="@id/login_list"
                    android:layout_toRightOf="@id/name"
                    android:hint="请输入账号"
                    android:maxLength="45" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pop18_login_user_height"
                android:background="@drawable/pop18_biankuang"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/password"
                    style="@style/pop18_textview_lable"
                    android:text="密码" />

                <ImageView
                    android:id="@+id/login_pwd_delete"
                    style="@style/pop18_imageview_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pop18_login_cancel" />

                <EditText
                    android:id="@+id/login_password_et"
                    style="@style/pop18_edittext_input"
                    android:layout_toLeftOf="@id/login_pwd_delete"
                    android:layout_toRightOf="@id/password"
                    android:hint="请输入密码"
                    android:maxLength="20"
                    android:inputType="textPassword"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/pop18_login_pwd_height" >

                <CheckBox
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/pop18_login_pad"
                    android:paddingTop="@dimen/pop18_login_pad"
                    android:paddingLeft="15dp"
                    android:text="显示密码"
                    android:id="@+id/show_password"
                    android:checked="false"
                    android:textColor="#999999"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/login_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:paddingBottom="@dimen/pop18_login_pad"
                    android:paddingTop="@dimen/pop18_login_pad"
                    android:text="@string/pop18_fogert_password"
                    android:textColor="#999999"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:layout_marginBottom="@dimen/pop18_login_pad"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/login_register"
                android:layout_width="@dimen/pop18_login_button_width"
                android:layout_height="@dimen/pop18_login_pwd_height"
                android:layout_marginRight="@dimen/pop18_login_textview_width"
                android:layout_weight="1"
                android:background="@drawable/pop18_selector_button"
                android:text="注册"
                android:textColor="@color/pop18_white" />

            <Button
                android:id="@+id/login_ok"
                android:layout_width="@dimen/pop18_login_button_width"
                android:layout_height="@dimen/pop18_login_pwd_height"
                android:layout_weight="1"
                android:background="@drawable/pop18_selector_button_login"
                android:text="登录"
                android:textColor="@color/pop18_white" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>