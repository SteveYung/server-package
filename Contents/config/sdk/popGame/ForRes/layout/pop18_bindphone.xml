<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff" >

    <RelativeLayout
        android:id="@+id/title_bindphone_checkcode"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pop18_login_title_height"
        android:background="@color/pop18_title_bk" >

        <ImageView
            android:id="@+id/bindphone_back"
            android:layout_width="@dimen/pop18_login_title_height"
            android:layout_height="@dimen/pop18_login_title_height"
            android:layout_alignParentLeft="true"
            android:padding="9dp"
            android:src="@drawable/pop18_selector_back" />

        <TextView
            style="@style/pop18_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_below="@id/title_bindphone_checkcode"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <RelativeLayout
                    android:id="@+id/bindphone_message_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pop18_login_top" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="@string/pop18_message_bind_phone"
                        android:textColor="@color/pop18_black" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/bindphone_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bindphone_message_rl" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/pop18_login_pwd_height"
                            android:layout_marginLeft="@dimen/pop18_main_view_right_margin"
                            android:layout_marginRight="@dimen/pop18_main_view_right_margin"
                            android:background="@drawable/pop18_biankuang" >

                            <TextView
                                android:id="@+id/bindphone_name_tv"
                                style="@style/pop18_textview_lable1"
                                android:text="@string/pop18_username" />

                            <EditText
                                android:id="@+id/bind_username"
                                style="@style/pop18_edittext_input"
                                android:layout_toRightOf="@id/bindphone_name_tv"
                                android:digits="1234567890AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz@."
                                android:hint="请输入账号" >

                                <requestFocus />
                            </EditText>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/pop18_login_pwd_height"
                            android:layout_marginLeft="@dimen/pop18_main_view_right_margin"
                            android:layout_marginRight="@dimen/pop18_main_view_right_margin"
                            android:background="@drawable/pop18_biankuang" >

                            <TextView
                                android:id="@+id/bindphone_name_phonenumber"
                                style="@style/pop18_textview_lable1"
                                android:text="手机号" />

                            <Button
                                android:id="@+id/bindphone_name_checkcode"
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/pop18_main_view_right_margin"
                                android:background="@drawable/pop18_selector_getcheckcode"
                                android:gravity="center"
                                android:text="获取验证码"
                                android:textColor="@color/pop18_white"
                                android:textSize="11sp" />

                            <EditText
                                android:id="@+id/bind_phone"
                                style="@style/pop18_edittext_input"
                                android:layout_marginRight="@dimen/pop18_login_pad"
                                android:layout_toLeftOf="@id/bindphone_name_checkcode"
                                android:layout_toRightOf="@id/bindphone_name_phonenumber"
                                android:hint="请输入手机号"
                                android:phoneNumber="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/pop18_login_pwd_height"
                            android:layout_marginLeft="@dimen/pop18_main_view_right_margin"
                            android:layout_marginRight="@dimen/pop18_main_view_right_margin"
                            android:background="@drawable/pop18_biankuang" >

                            <TextView
                                android:id="@+id/bindphone_name_phonenumber"
                                style="@style/pop18_textview_lable1"
                                android:text="验证码" />

                            <EditText
                                android:id="@+id/bind_checkcode"
                                style="@style/pop18_edittext_input"
                                android:layout_toRightOf="@id/bindphone_name_phonenumber"
                                android:background="@null"
                                android:hint="请输入验证码"
                                android:maxLength="6"
                                android:numeric="signed" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/pop18_main_view_right_margin"
                            android:text="免责声明：注册手机号必须为当前的SIM卡号，必须使用当前SIM卡才会享受免流量服务。"
                            android:textColor="#ff0000" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/bindphone_content" >

                    <Button
                        android:id="@+id/bindphone_ok"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/pop18_login_pwd_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/pop18_selector_button"
                        android:text="绑定"
                        android:textColor="@color/pop18_white" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>