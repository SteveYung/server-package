<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="pop18_textview_lable">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">@dimen/pop18_login_user_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">@dimen/pop18_login_pad</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="pop18_textview_lable1">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">@dimen/pop18_login_user_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">@dimen/pop18_login_pad</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="pop18_edittext_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/pop18_login_user_height</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#999999</item>
    </style>
	<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/pop18_selector_checkbox</item>
    </style>
    <style name="pop18_imageview_icon">
        <item name="android:layout_width">@dimen/pop18_login_pwd_height</item>
        <item name="android:layout_height">@dimen/pop18_login_pwd_height</item>
        <item name="android:padding">@dimen/pop18_icon_pad</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="pop18_rel_pad">
        <item name="android:layout_marginLeft">@dimen/pop18_login_pad</item>
        <item name="android:layout_marginRight">@dimen/pop18_login_pad</item>
    </style>

      <style name="pop18_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <!-- <item name="android:windowBackground">@color/alpha_bg</item>背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>
    
    <style name="pop18_button_width">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/pop18_login_user_height</item>
    </style>

    <style name="pop18_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pop18_customdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/pop18_person_center_text</item>
    </style>
    
	
</resources>