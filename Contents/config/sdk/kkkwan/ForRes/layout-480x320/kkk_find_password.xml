<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:gravity="center"
     >
<LinearLayout 
    android:id="@+id/kkk_parent"
    android:layout_width="310dip"
    android:layout_height="280dip"
    android:layout_gravity="center"
    android:background="@drawable/kkk_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"
            android:background="@null"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/kkk_username_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kkk_input_off"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/kkk_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:text="@string/kkk_login_username"
                    android:textColor="@color/kkk_black"
                    android:textSize="@dimen/kkk_username_tv_size" />

                <EditText
                    android:id="@+id/kkk_find_pwd_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:digits="0123456789abcdefghijklmnopqrstuvyxwzABCDEFGHIJKLMNOPQRSTUVYXWZ"
                    android:hint="@string/kkk_login_username_hint"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/kkk_edit"
                    android:textColorHint="@color/kkk_hint"
                    android:textSize="@dimen/kkk_username_et_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kkk_ph_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/kkk_input_off"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/kkk_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:text="@string/kkk_find_pwd_phone"
                    android:textColor="@color/kkk_black"
                    android:textSize="@dimen/kkk_userpassword_tv_size" />

                <EditText
                    android:id="@+id/kkk_find_pwd_ph"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/kkk_find_pwd_ph_hint"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/kkk_edit"
                    android:textColorHint="@color/kkk_hint"
                    android:textSize="@dimen/kkk_userpassword_et_size" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dip"
                android:background="@null" >

                <EditText
                    android:id="@+id/kkk_find_pwd_security_code_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@+id/kkk_find_pwd_security_code_ll"
                    android:background="@drawable/kkk_input_off"
                    android:hint="@string/kkk_find_pwd_security_code_hint"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="8dip"
                    android:singleLine="true"
                    android:textColor="@color/kkk_edit"
                    android:textColorHint="@color/kkk_hint"
                    android:textSize="@dimen/kkk_userpassword_et_size" />

                <LinearLayout
                    android:id="@+id/kkk_find_pwd_security_code_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/kkk_find_pwd_security_code_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/kkk_find_pwd_security_code_btn"
                        android:gravity="center"
                        android:text="@string/kkk_find_pwd_security_code"
                        android:textColor="@color/kkk_yan"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip" >

                <ImageView
                    android:id="@+id/kkk_find_pwd_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/kkk_agree_btn" />

                <ImageView
                    android:id="@+id/kkk_find_pwd_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/kkk_btn_back" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null" >

            <ImageView
                android:id="@+id/kkk_find_pwd_contact_service_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:src="@drawable/kkk_kefu" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>