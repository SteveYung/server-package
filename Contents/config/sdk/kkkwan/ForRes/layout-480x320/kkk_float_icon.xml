<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/kkk_float_icon"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/kkk_packs_off" />

    <ImageView
        android:id="@+id/kkk_float_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kkk_float_icon"
        android:layout_toRightOf="@+id/kkk_float_icon"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="-4dp"
        android:visibility="gone"
        android:src="@drawable/kkk_icon_tips" />

</RelativeLayout>