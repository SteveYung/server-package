<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/kkk_bg_color_2"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="20dip" >

            <TextView
                android:id="@+id/kkk_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/kkk_tv_password"
                android:layout_alignRight="@+id/kkk_tv_password"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="@string/kkk_tv_account"
                android:textColor="@color/kkk_accout_text"
                android:textSize="@dimen/kkk_username_tv_size" />

            <TextView
                android:id="@+id/kkk_change_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/kkk_tv_name"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/kkk_tv_name"
                android:textColor="@color/kkk_yan"
                android:textSize="@dimen/kkk_username_tv_size" />

            <TextView
                android:id="@+id/kkk_tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kkk_tv_name"
                android:layout_marginLeft="10dip"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="@string/kkk_tv_password"
                android:textColor="@color/kkk_yan"
                android:textSize="@dimen/kkk_username_tv_size" />

            <TextView
                android:id="@+id/kkk_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/kkk_tv_password"
                android:layout_below="@id/kkk_tv_name"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/kkk_tv_password"
                android:textColor="@color/kkk_accout_text"
                android:textSize="@dimen/kkk_username_tv_size" />

            <LinearLayout
                android:id="@+id/kkk_change_new_password_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kkk_tv_password"
                android:layout_marginTop="20dip"
                android:background="@drawable/kkk_input_big"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/kkk_change_new_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:digits="0123456789abcdefghijklmnopqrstuvyxwzABCDEFGHIJKLMNOPQRSTUVYXWZ"
                    android:gravity="center_vertical"
                    android:hint="@string/kkk_change_new_password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/kkk_edit"
                    android:textColorHint="@color/kkk_hint"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip" >

            <Button
                android:id="@+id/kkk_change_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/kkk_btn_ok"
                android:textColor="@color/kkk_accout_text"
                android:textSize="18sp"
                android:text="@string/kkk_comfir" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>