<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kkk_online_llyt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/kkk_bg_color_2"
    android:orientation="vertical"
    android:paddingBottom="30dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="30dip" >

    <LinearLayout
        android:id="@+id/kkk_online_llyt_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/kkk_online_btn_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_online_btn_service"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kkk_online_llyt_contacts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/kkk_online_btn_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_online_btn_contacts"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kkk_online_llyt_website"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/kkk_online_btn_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_online_btn_website"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kkk_online_llyt_bbs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/kkk_online_btn_bbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_online_btn_bbs"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kkk_online_llyt_strategy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/kkk_online_btn_strategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_online_btn_strategy"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>