<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/kkk_parent"
        android:layout_width="310dip"
        android:layout_height="280dip"
        android:layout_gravity="center"
        android:background="@drawable/kkk_bg"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:contentDescription="@null"
            android:src="@drawable/kkk_top" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="15dip"
                android:background="@null"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/kkk_username_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kkk_input_off"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/kkk_tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dip"
                        android:text="@string/kkk_login_username"
                        android:textColor="@color/kkk_black"
                        android:textSize="@dimen/kkk_username_tv_size" />

                    <EditText
                        android:id="@+id/kkk_login_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvyxwzABCDEFGHIJKLMNOPQRSTUVYXWZ"
                        android:hint="@string/kkk_login_username_hint"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/kkk_edit"
                        android:textColorHint="@color/kkk_hint"
                        android:textSize="@dimen/kkk_username_et_size" />

                    <ImageView
                        android:id="@+id/kkk_login_pull_down"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/kkk_login_pull" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/kkk_userPassword_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/kkk_input_off"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/kkk_tv_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dip"
                        android:text="@string/kkk_login_pwd"
                        android:textColor="@color/kkk_black"
                        android:textSize="@dimen/kkk_userpassword_tv_size" />

                    <EditText
                        android:id="@+id/kkk_login_pwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvyxwzABCDEFGHIJKLMNOPQRSTUVYXWZ"
                        android:hint="@string/kkk_login_pwd_hint"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/kkk_edit"
                        android:textColorHint="@color/kkk_hint"
                        android:textSize="@dimen/kkk_userpassword_et_size" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dip"
                    android:background="@null" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/kkk_login_remember_password"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/kkk_style_checkbox"
                            android:button="@null"
                            android:checked="true" />

                        <TextView
                            android:id="@+id/kkk_tv_remember_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:text="@string/kkk_login_keep_password"
                            android:textColor="@color/kkk_white_2"
                            android:textSize="@dimen/kkk_accept_protocol" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/kkk_login_pickup_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/kkk_login_find_password"
                            android:textColor="@color/kkk_white_2"
                            android:textSize="@dimen/kkk_pickup_password" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <ImageView
                        android:id="@+id/kkk_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/kkk_login_btn" />

                    <ImageView
                        android:id="@+id/kkk_reg_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/kkk_reg_btn" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>