<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
	<RelativeLayout android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:background="@drawable/kkk_top_account">

		<ImageView
		    android:id="@+id/kkk_top_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="15dp"
		    android:src="@drawable/kkk_back" />

		<TextView
		    android:id="@+id/kkk_top_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:text="@string/kkk_top_account"
		    android:textSize="22sp"
		    android:textColor="@color/kkk_white"
		  	 />

		<ImageView
		    android:id="@+id/kkk_top_game_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="15dp"
		    android:src="@drawable/kkk_back_game" />

	</RelativeLayout>
</RelativeLayout>