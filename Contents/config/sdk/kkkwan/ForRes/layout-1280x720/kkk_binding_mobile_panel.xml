<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
        android:background="@drawable/kkk_bg_color_2"
    
   >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/kkk_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="5dip"
            android:text="@string/kkk_tv_account"
            android:textColor="@color/kkk_yan"
            android:textSize="@dimen/kkk_username_tv_size" />

        <TextView
            android:id="@+id/kkk_binding_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/kkk_tv_account"
            android:layout_toRightOf="@id/kkk_tv_account"
            android:textColor="@color/kkk_yan"
            android:textSize="@dimen/kkk_username_tv_size" />

        <LinearLayout
            android:id="@+id/kkk_phNum_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kkk_tv_account"
            android:layout_marginTop="20dip"
            android:background="@drawable/kkk_input_big_off"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/kkk_binding_phNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/kkk_tv_phoneNum_hint"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="14sp"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="@color/kkk_yellow"
                android:textColorHint="@color/kkk_hint" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kkk_phNum_ll"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/kkk_yan_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/kkk_binding_getAuthCode"
                android:background="@drawable/kkk_input_big"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                

                <EditText
                    android:id="@+id/kkk_binding_authCode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/kkk_find_pwd_security_code_hint"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="5dip"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/kkk_yellow"
                    android:textColorHint="@color/kkk_hint" />
            </LinearLayout>

            <TextView
                android:id="@+id/kkk_binding_getAuthCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:background="@drawable/kkk_find_pwd_security_code_btn"
                android:gravity="center"
                android:paddingBottom="12dip"
                android:paddingTop="12dip"
                android:text="@string/kkk_find_pwd_security_code"
                android:textColor="@color/kkk_yan"
                android:textSize="@dimen/kkk_username_tv_size" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        
            <Button
                android:id="@+id/kkk_change_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/kkk_btn_ok"
                android:textColor="@color/kkk_accout_text"
                android:textSize="18sp"
                android:text="@string/kkk_comfir" />
    </RelativeLayout>

</LinearLayout>