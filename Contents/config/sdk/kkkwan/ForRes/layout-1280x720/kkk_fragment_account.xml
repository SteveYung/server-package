<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/kkk_bg_color_2" >

    <LinearLayout
        android:id="@+id/kkk_account_menu_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/kkk_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_change_password"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" 
            />

        <Button
            android:id="@+id/kkk_binding_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/kkk_select"
            android:contentDescription="@null"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="@string/kkk_binding_mobile"
            android:textColor="@drawable/kkk_text_select_2"
            android:textSize="20sp" />
    </LinearLayout>

    <include
        android:id="@+id/kkk_change_password_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/kkk_change_password_panel"
        android:visibility="gone" />

    <include
        android:id="@+id/kkk_binding_mobile_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/kkk_binding_mobile_panel"
        android:visibility="gone" />

    <include
        android:id="@+id/kkk_change_password_success_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/kkk_change_password_success"
        android:visibility="gone" />

    <include
        android:id="@+id/kkk_binding_mobile_success_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/kkk_binding_mobile_success"
        android:visibility="gone" />

</RelativeLayout>