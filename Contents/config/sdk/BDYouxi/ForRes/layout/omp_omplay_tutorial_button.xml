<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100px">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_place_holder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:id="@+id/image_view_omplay_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/omp_btn_tool_record"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/text_view_omplay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:textColor="@color/omp_gray_text_4a4a4a"
            android:text="@string/omp_button_record_video"
            android:visibility="gone"
            />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp"
        android:id="@+id/tutorial_point"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/omp_ic_tutorial_point"/>
    <FrameLayout
        android:layout_width="68dp"
        android:layout_height="110dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="13dp">
        <ImageView
            android:id="@+id/tutorial_finger"
            android:layout_marginTop="10dp"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/omp_ic_tutorial_finger_only"/>
    </FrameLayout>
</RelativeLayout>
