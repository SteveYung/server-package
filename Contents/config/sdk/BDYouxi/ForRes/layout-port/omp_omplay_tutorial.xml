<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"/>

    <include
        android:id="@+id/powered_by_omlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        layout="@layout/omp_omplay_tutorial_powered_by_omlet" />

    <include
        android:id="@+id/shortcut_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/powered_by_omlet"
        layout="@layout/omp_omplay_tutorial_shortcut_bar" />

    <include
        android:id="@+id/tutorial_hint_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/omp_omplay_tutorial_hint_container" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:id="@+id/view_group_omplay_button"
        layout="@layout/omp_omplay_tutorial_button" />

</RelativeLayout>
