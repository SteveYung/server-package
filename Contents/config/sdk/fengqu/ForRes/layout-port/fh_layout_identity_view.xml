<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fh_white" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp" >

        <ImageView
            android:id="@+id/fh_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fh_horizontal_margin"
            android:src="@drawable/fh_back_img" />

        <TextView
            android:id="@+id/fh_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10.0dp"
            android:text="@string/fh_identity_title"
            android:textColor="@color/fh_gray_33"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fh_login_edt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginBottom="17.0dp"
        android:layout_marginLeft="@dimen/fh_horizontal_margin"
        android:layout_marginRight="@dimen/fh_horizontal_margin"
        android:background="@drawable/fh_edit_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dp" >

            <ImageView
                android:id="@+id/fh_edt_clear_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:src="@drawable/fh_edt_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/fh_identity_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fh_edt_clear_img"
                android:background="@null"
                android:hint="@string/fh_identity_name_hint"
                android:maxLength="10"
                android:padding="10.0dp"
                android:textColor="@color/fh_gray_33"
                android:textColorHint="@color/fh_gray_99"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" >
            </EditText>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fh_gray_df" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dp" >

            <ImageView
                android:id="@+id/fh_identity_edt_clear_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:src="@drawable/fh_edt_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/fh_identity_num_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fh_identity_edt_clear_img"
                android:background="@null"
                android:hint="@string/fh_identity_num_hint"
                android:padding="10.0dp"
                android:textColor="@color/fh_gray_33"
                android:textColorHint="@color/fh_gray_99"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fh_login_edt_layout"
        android:layout_marginLeft="@dimen/fh_horizontal_margin"
        android:layout_marginRight="@dimen/fh_horizontal_margin"
        android:paddingBottom="38.0dp" >

        <Button
            android:id="@+id/fh_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:background="@drawable/fh_login_btn_selector"
            android:text="@string/fh_submit"
            android:textColor="@color/fh_white"
            android:textSize="19.0sp" />
    </RelativeLayout>

</RelativeLayout>