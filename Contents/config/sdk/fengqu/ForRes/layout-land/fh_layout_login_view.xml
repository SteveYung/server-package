<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_view"
    android:layout_width="426.0dp"
    android:layout_height="wrap_content"
    android:background="@color/fh_white"
      
    android:paddingBottom="10.0dp" >

    <ImageView
        android:id="@+id/fh_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10.0dp"
        android:src="@drawable/fh_close_btn_selector_bg" />

    <TextView
        android:id="@+id/fh_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dp"
        android:text="@string/fh_login_title"
        android:textColor="@color/fh_gray_33"
        android:textSize="18.0sp" />

    <LinearLayout
        android:id="@+id/fh_login_edt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fh_login_title"
        android:layout_marginBottom="17.0dp"
        android:layout_marginLeft="@dimen/fh_land_margin"
        android:layout_marginRight="@dimen/fh_land_margin"
        android:layout_marginTop="17.0dp"
        android:background="@drawable/fh_edit_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dp" >

            <ImageView
                android:id="@+id/fh_edt_clear_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dp"
                android:src="@drawable/fh_edt_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/fh_login_user_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fh_edt_clear_img"
                android:background="@null"
                android:hint="@string/fh_login_username_hint"
                android:padding="10.0dp"
                android:textColor="@color/fh_gray_33"
                android:textColorHint="@color/fh_gray_99"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" >
            </EditText>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fh_gray_df" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dp" >

            <CheckBox
                android:id="@+id/fh_pwd_visible_cd"
                style="@style/fh_pwdVisibleCheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="10.0dp"
                />

            <ImageView
                android:id="@+id/fh_pwd_edt_clear_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                
                android:layout_toLeftOf="@id/fh_pwd_visible_cd"
                android:src="@drawable/fh_edt_clear"
                android:visibility="gone" />

            <EditText
                android:id="@+id/fh_login_pwd_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fh_pwd_edt_clear_img"
                android:background="@null"
                android:hint="@string/fh_login_pwd_hint"
                android:padding="10.0dp"
                android:textColor="@color/fh_gray_33"
                android:inputType="textPassword|text"
                android:textColorHint="@color/fh_gray_99"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fh_login_btn"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_below="@id/fh_login_edt_layout"
        android:layout_marginLeft="@dimen/fh_land_margin"
        android:layout_marginRight="@dimen/fh_land_margin"
        android:background="@drawable/fh_login_btn_selector"
        android:text="@string/fh_login"
        android:textColor="@color/fh_white"
        android:textSize="19.0sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fh_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30.0dp"
        android:orientation="horizontal"
        android:paddingBottom="20.0dp" >

        <TextView
            android:id="@+id/fh_forget_pwd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fh_forget_pwd"
            android:textColor="@color/fh_login_blue"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/fh_register_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dp"
            android:text="@string/fh_newuser_register"
            android:textColor="@color/fh_login_blue"
            
            android:textSize="15.0sp" />
    </LinearLayout>

</RelativeLayout>