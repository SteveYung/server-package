<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fh_white"
        android:padding="10.0dp" >

        <ImageView
            android:id="@+id/fh_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fh_close_btn_selector_bg" />

        <TextView
            android:id="@+id/fh_ret_paypwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dp"
            android:text="@string/fh_reset_paypwd_title"
            android:textColor="@color/fh_gray_33"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/fh_ret_paypwd_promt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fh_ret_paypwd_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="25.0dp"
            android:text="@string/fh_reset_paypwd_promt"
            android:textColor="@color/fh_gray_33"
            android:textSize="15.0sp" />

        <LinearLayout
            android:id="@+id/fh_ret_paypwd_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fh_ret_paypwd_promt"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="13.0dp"
            android:background="@drawable/fh_edit_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50.0dp" >

                <TextView
                    android:id="@+id/fh_get_verify_txt"
                    android:layout_width="90.0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/fh_register_get_verify"
                    android:textColor="@color/fh_ff8748"
                    android:layout_margin="2dp"
                    android:background="@drawable/fh_item_selector"
                    android:textSize="14.0sp"
                    android:width="90.0dp" />

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/fh_get_verify_txt"
                    android:background="@color/fh_gray_df" />

                <ImageView
                    android:id="@+id/fh_verify_edt_clear_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7.0dp"
                    android:layout_toLeftOf="@id/fh_get_verify_txt"
                    android:src="@drawable/fh_edt_clear"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/fh_register_verify_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/fh_verify_edt_clear_img"
                    android:background="@null"
                    android:hint="@string/fh_reset_paypwd_verify_hint"
                    android:inputType="phone"
                    android:padding="10.0dp"
                    android:singleLine="true"
                    android:textColor="@color/fh_gray_33"
                    android:textColorHint="@color/fh_gray_99"
                    android:textCursorDrawable="@null"
                    android:textSize="16.0sp" >
                </EditText>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fh_reset_paypwd_promt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fh_ret_paypwd_edt_layout" >

            <TextView
                android:id="@+id/fh_set_paypwd_pwd_promt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.0dp"
                android:layout_marginRight="23.0dp"
                android:layout_marginTop="25.0dp"
                android:text="@string/fh_checkphone_tip1"
                android:textColor="@color/fh_gray_33"
                android:textSize="15.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fh_reset_paypwd_promt_layout"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="30.0dp"
            android:paddingBottom="20.0dp" >

            <Button
                android:id="@+id/fh_reset_btn"
                android:layout_width="match_parent"
                android:layout_height="45.0dp"
                android:background="@drawable/fh_login_btn_selector"
                android:text="@string/fh_reset_paypwd_next_str"
                android:textColor="@color/fh_white"
                android:textSize="19.0sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>