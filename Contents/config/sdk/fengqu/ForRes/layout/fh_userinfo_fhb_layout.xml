<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_view"
    android:layout_width="fill_parent"
    android:layout_height="416dp"
    android:background="@color/fh_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/fh_white"
        android:paddingLeft="10.0dp"
        android:paddingRight="10.0dp" >

        <ImageButton
            android:id="@+id/fh_top_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/fh_back_bg" />

        <TextView
            android:id="@+id/buy_history_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="购买记录"
            android:textColor="@color/fh_top_more_color"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/fh_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的飞火币"
            android:textColor="@color/fh_gray_33"
            android:textSize="@dimen/fh_top_content_size" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fh_gray_df" />

    <RelativeLayout style="@style/fh_userinfo_center_item_style" >

        <TextView
            android:id="@+id/fh_money_num_text"
            style="@style/fh_userinfo_center_title_style"
            android:text="飞火币：500" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fh_gray_df" />

    <TextView
        android:id="@+id/fh_money_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fh_margin_left"
        android:layout_marginRight="19.0dp"
        android:layout_marginTop="10.0dp"
        android:text="@string/fh_my_fhmoney_desc"
        android:textColor="@color/fh_a1a1a1"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/buy_fhmoney_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.0dp"
        android:layout_marginTop="50.0dp"
        android:text="用飞火币购买游戏道具可以打折哦！"
        android:textColor="@color/fh_gray_99"
        android:textSize="12.0sp" />

    <Button
        android:id="@+id/fh_buy_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fh_botton_button_height"
        android:layout_marginLeft="@dimen/fh_margin_left"
        android:layout_marginRight="@dimen/fh_margin_right"
        android:layout_marginTop="10.0dp"
        android:background="@drawable/fh_login_btn_selector"
        android:text="@string/fh_buy_fhmoney_str"
        android:textColor="@color/fh_white"
        android:textSize="@dimen/fh_botton_button_textsize" />

</LinearLayout>