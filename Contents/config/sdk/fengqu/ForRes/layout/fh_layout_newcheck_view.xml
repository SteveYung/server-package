<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fh_f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fh_top_height_size"
        android:background="@color/fh_white" >

        <ImageView
            android:id="@+id/fh_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@color/fh_white"
            android:src="@drawable/fh_back_bg" />

        <TextView
            android:id="@+id/fh_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fh_newcheck_title"
            android:textColor="@color/fh_gray_33"
            android:textSize="@dimen/fh_top_content_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fh_eff0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:background="@color/fh_white"
        android:orientation="vertical"
        android:padding="14.0dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/fh_newcheck_checktext"
                android:textColor="@color/fh_gray_33"
                android:textSize="14.0sp" />

            <CheckBox
                android:id="@+id/mcheckbox"
                style="@style/fh_newPhoneCheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="19dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.0dp"
            android:text="@string/fh_newcheck_tip"
            android:textColor="@color/fh_gray_99"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fh_devices_layout"
        android:layout_width="match_parent"
        android:layout_height="300.0dp"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dp"
            android:layout_marginLeft="14.0dp"
            android:layout_marginTop="18.0dp"
            android:text="@string/fh_haslogin_devices"
            android:textColor="@color/fh_gray_66"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@+id/fh_devices_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <com.feihuo.gamesdk.api.view.FhSwipeListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="#dddbdb"
                android:dividerHeight="1dp"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50.0dp"
                android:indeterminateDrawable="@drawable/fh_progress_icon"
                android:indeterminateOnly="true" />

            <TextView
                android:id="@+id/text_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dp"
                android:text="加载中..."
                android:textColor="@color/fh_gray_99"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fail_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dp"
                android:src="@drawable/loading_fail" />

            <TextView
                android:id="@+id/loading_fail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dp"
                android:textColor="@color/fh_gray_99"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dp"
                android:text="@string/fh_devices_empty"
                android:textColor="@color/fh_gray_99"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>