<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fh_white" >

    <include
        android:id="@+id/bf_pay_top_layout"
        layout="@layout/fh_top_view" />

    <TextView
        android:id="@+id/bf_pay_line_layout"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/bf_pay_top_layout"
        android:background="@color/fh_space_line_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bf_pay_line_layout" >

        <LinearLayout
            android:id="@+id/fh_pay_center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/fh_f1f1f1" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/fh_pay_money_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="@string/fh_pay_money_str"
                    android:textColor="@color/fh_gray_33"
                    android:textSize="@dimen/fh_pay_content_size" />

                <TextView
                    android:id="@+id/fh_pay_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/fh_pay_yuan_point_text"
                    android:textColor="@color/fh_orange_ff6707"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fh_pay_yuan_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:text="元" />

                <Button
                    android:id="@+id/fh_pay_modify_money_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/fh_pay_modify_bg"
                    android:gravity="center"
                    android:text="@string/fh_pay_modify_money_str"
                    android:textColor="@color/fh_gray_33"
                    android:textSize="@dimen/fh_pay_content_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/fh_f1f1f1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:text="@string/fh_pay_type_str"
                    android:textColor="@color/fh_gray_99"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.feihuo.gamesdk.api.view.FHRadioGroup
                android:id="@+id/fh_pay_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="3" >

                

               
                <RadioButton
                    android:id="@+id/fh_pay_zfb_btn"
                    style="@style/fh_pay_radiobutton_p"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:drawableLeft="@drawable/fh_zfb_icon"
                    android:drawableRight="@drawable/fh_radiobutton_bg"
                    android:text="@string/fh_pay_zfb_pay_str" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@color/fh_dfdfdf" />

                <RadioButton
                    android:id="@+id/fh_pay_yl_btn"
                    style="@style/fh_pay_radiobutton_p"
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:drawableLeft="@drawable/fh_yl_icon"
                    android:drawableRight="@drawable/fh_radiobutton_bg"
                    android:text="@string/fh_pay_yl_pay_str" />
                
                 <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@color/fh_dfdfdf" />
                
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp" >

                    <RadioButton
                        android:id="@+id/fh_pay_fhb_btn"
                        style="@style/fh_pay_radiobutton_p"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/fh_radiobutton_bg" />

                    <ImageView
                        android:id="@+id/fh_fhb_icon_left_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/fh_fhb_icon" />

                    
                    <TextView
                        android:id="@+id/fh_fhb_name_title_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@+id/fh_fhb_icon_left_layout"
                        android:text="@string/fh_pay_fhb_pay_str"
                        android:textSize="16sp"/>
                    
                    <TextView
                        android:id="@+id/fh_fhb_balance_num_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fh_fhb_name_title_layout"
                        android:layout_alignLeft="@+id/fh_fhb_name_title_layout"
                        android:text="@string/fh_pay_balance_fhb_p_str"
                        android:textColor="@color/fh_gray_99"
                        android:visibility="gone"
                        android:textSize="12sp" />
                    
                    
                    <LinearLayout
                        android:id="@+id/fh_pay_fhb_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/fh_fhb_name_title_layout"
                        android:gravity="center_vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/fh_pay_fhb_num_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="12"
                            android:textColor="@color/fh_orange_ff6707"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fh_pay_money_fhb_unit_str"
                            android:textSize="14sp"  />

                        <TextView
                            android:id="@+id/fh_pay_fhb_dicount_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/fh_discount_bg"
			                android:gravity="center"
			                android:text="一二折"
			                android:textColor="@color/fh_white"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </LinearLayout>

                </RelativeLayout>
            </com.feihuo.gamesdk.api.view.FHRadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/fh_space_line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/fh_pay_zfb_layput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fh_pay_prompt_str"
                    android:textColor="@color/fh_gray_99"
                    android:textSize="@dimen/fh_pay_prompt_size" />
            </LinearLayout>

            <Button
                android:id="@+id/fh_pay_button"
                android:layout_width="fill_parent"
                android:layout_height="45.0dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fh_login_btn_selector"
                android:text="@string/fh_pay_ok_str"
                android:textColor="@color/fh_white"
                android:textSize="19.0sp" />

            <TextView
                android:id="@+id/fh_pay_xieyi_layput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/fh_pay_xieyi_str"
                android:textColor="@color/fh_ff8e46"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>