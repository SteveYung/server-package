<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fh_list_item_selector_bg"
    android:orientation="horizontal" >

    <LinearLayout
        style="@style/fh_history_item_title_p_style"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pay_history_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/fh_gray_66"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_history_time_min_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/fh_gray_66"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/fh_history_item_title_p_style"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/pay_history_game_imageview"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/fh_game_icon" />

        <TextView
            android:id="@+id/pay_history_gamename_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/fh_gray_99"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/fh_history_item_title_p_style"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" >

            <TextView
                android:id="@+id/pay_history_money_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fh_ff6707"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/fh_pay_money_unit_str"
                android:textColor="@color/fh_gray_99"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pay_history_paycode_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/fh_gray_99"
            android:textSize="12sp" />
    </LinearLayout>
    <!--
    <TextView
        android:id="@+id/pay_history_type_view"
        style="@style/fh_history_item_title_style"
        android:layout_weight="1" />
    -->

</LinearLayout>