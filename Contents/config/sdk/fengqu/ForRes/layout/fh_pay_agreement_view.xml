<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_set_pwd_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fh_white">

        <ImageView
            android:id="@+id/fh_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15.0dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/fh_close_btn_selector_bg" />

        <TextView
            android:id="@+id/fh_set_paypwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25.0dp"
            android:text="@string/fh_pay_xieyi_str"
            android:textColor="@color/fh_gray_33"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/fh_set_paypwd_promt"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fh_set_paypwd_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="25.0dp"
            android:background="@color/fh_gray_df"
            android:textSize="15.0sp" />

        <LinearLayout
            android:id="@+id/fh_set_paypwd_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fh_set_paypwd_promt"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/fh_agreement_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20.0dp"
                android:layout_marginTop="12.0dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>