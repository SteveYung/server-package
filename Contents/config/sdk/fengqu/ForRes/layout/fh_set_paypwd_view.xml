<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_set_pwd_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/fh_white"
        android:padding="10.0dp" >

        <ImageView
            android:id="@+id/fh_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fh_close_btn_selector_bg" />

        <TextView
            android:id="@+id/fh_set_paypwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dp"
            android:text="@string/fh_set_paypwd_title"
            android:textColor="@color/fh_gray_33"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/fh_set_paypwd_promt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fh_set_paypwd_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="25.0dp"
            android:text="@string/fh_set_paypwd_firstset_promt"
            android:textColor="@color/fh_gray_33"
            android:textSize="15.0sp" />

        <LinearLayout
            android:id="@+id/fh_set_paypwd_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fh_set_paypwd_promt"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="13.0dp"
            android:orientation="vertical" >

            <com.feihuo.gamesdk.api.gridpasswordview.GridPasswordView
                android:id="@+id/fh_set_paypwd_edt"
                android:layout_width="fill_parent"
                android:layout_height="45dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fh_set_paypwd_promt_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fh_set_paypwd_edt_layout"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="25.0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fh_set_paypwd_pwd_promt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/fh_set_paypwd_pwd_promt"
                android:textColor="@color/fh_gray_99"
                android:textSize="14.0sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/fh_set_paypwd_showpwd_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/fh_checkbox_bg"
                android:paddingLeft="5dp"
                android:text="@string/fh_reset_paypwd_showpwd_str"
                android:textColor="#237FB6"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fh_set_paypwd_forget_pwd_textview_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >
                <TextView
                    android:id="@+id/fh_set_paypwd_forget_pwd_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="@string/fh_set_paypwd_forget_pwd_str"
                    android:textColor="@color/fh_3388bb"
                    android:textSize="15.0sp"
                    android:visibility="visible" />
            </LinearLayout>
            
            
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fh_set_paypwd_promt_layout"
            android:layout_marginLeft="23.0dp"
            android:layout_marginRight="23.0dp"
            android:layout_marginTop="30.0dp"
            android:paddingBottom="20.0dp" >

            <Button
                android:id="@+id/fh_set_paypwd_btn"
                android:layout_width="match_parent"
                android:layout_height="45.0dp"
                android:background="@drawable/fh_login_btn_selector"
                android:text="@string/fh_set_paypwd_button"
                android:textColor="@color/fh_white"
                android:textSize="19.0sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>