<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/fh_top_height_size"
    android:background="@color/fh_white" >

    <ImageButton
        android:id="@+id/fh_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@color/fh_white"
        android:src="@drawable/fh_back_bg" />

    <TextView
        android:id="@+id/fh_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fh_pay_pormpt_str"
        android:textSize="@dimen/fh_top_content_size" 
        android:textColor="@color/fh_gray_33"/>

    <TextView
        android:id="@+id/fh_top_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/fh_top_padding_size"
        android:text="@string/fh_pay_history_str"
        android:textColor="@color/fh_top_more_color" />

</RelativeLayout>