<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_view"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@color/fh_white"
    android:paddingBottom="30.0dp" >

    <RelativeLayout
        android:id="@+id/top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/fh_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="15.0dp"
            android:src="@drawable/fh_back_img" />

        <TextView
            android:id="@+id/fh_buy_fhmoney_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fh_buy_fhmoney_str"
            android:textColor="@color/fh_gray_33"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title_layout"
        android:visibility="gone" >

        <TextView
            android:id="@+id/fh_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="15.0dp"
            android:text="数量："
            android:textColor="@color/fh_gray_33"
            android:textSize="15.0sp" />

        <GridView
            android:id="@+id/fh_num_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fh_num_text"
            android:layout_marginLeft="15.0dp"
            android:layout_marginRight="33.0dp"
            android:layout_toRightOf="@id/fh_num_text"
            android:horizontalSpacing="10.33dp"
            android:numColumns="3"
            android:verticalSpacing="10.0dp" >
        </GridView>

        <TextView
            android:id="@+id/buy_fhmoney_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fh_num_gridview"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="15.0dp"
            android:text="需花费：0元"
            android:textColor="@color/fh_gray_33"
            android:textSize="15.0sp" />

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fh_botton_button_height"
            android:layout_below="@id/buy_fhmoney_pay_text"
            android:layout_marginLeft="@dimen/fh_margin_left"
            android:layout_marginRight="@dimen/fh_margin_right"
            android:layout_marginTop="20dp"
            android:background="@drawable/fh_login_btn_selector"
            android:text="@string/fh_goto_pay"
            android:textColor="@color/fh_white"
            android:textSize="@dimen/fh_botton_button_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateDrawable="@drawable/fh_progress_icon"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/text_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="加载中..."
            android:textColor="@color/fh_gray_99"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loading_fail" />

        <TextView
            android:id="@+id/loading_fail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp"
            android:textColor="@color/fh_gray_99"
            android:textSize="12.0sp" />
    </LinearLayout>

</RelativeLayout>