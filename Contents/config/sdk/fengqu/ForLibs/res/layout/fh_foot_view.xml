<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fh_footview_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fh_footview_bg"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/fh_footview_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/fh_foot_up_icon" />

    <ProgressBar
        android:id="@+id/fh_footview_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/fh_foot_progress_icon"
        android:indeterminateOnly="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fh_footview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/fh_footview_progress"
        android:text="@string/fh_loading"
        android:visibility="gone" />

</RelativeLayout>