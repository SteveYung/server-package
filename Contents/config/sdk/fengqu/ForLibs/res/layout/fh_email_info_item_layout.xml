<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_email_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fh_list_item_selector_bg"
    android:descendantFocusability="blocksDescendants"
    android:padding="18dp" >

    <RelativeLayout
        android:id="@+id/fh_email_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/fh_email_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/fh_email_down_icon"
            android:singleLine="true"
            android:textColor="@color/fh_gray_33"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fh_email_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/fh_email_down_bg" />
    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/fh_email_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/fh_email_name_layout" >

        <TextView
	        android:id="@+id/fh_email_content"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_toLeftOf="@+id/fh_email_down_icon_test"
	        android:textColor="@color/fh_gray_99"
	        android:textSize="12sp" />

        <ImageView
            android:id="@+id/fh_email_down_icon_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:background="@drawable/fh_email_down_bg" />
    </RelativeLayout>
    

</RelativeLayout>