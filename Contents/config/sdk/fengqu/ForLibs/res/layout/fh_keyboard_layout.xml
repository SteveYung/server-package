<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E1E3"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="9dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/fh_keybord_btn_1"
                    style="@style/fh_keybord_item_btn"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/fh_keybord_btn_2"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/fh_keybord_btn_3"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/fh_keybord_btn_4"
                    style="@style/fh_keybord_item_btn"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/fh_keybord_btn_5"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/fh_keybord_btn_6"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="6" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/fh_keybord_btn_delete"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/fh_keybord_delete_btn_bg"
            android:src="@drawable/fh_keybord_delete_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/fh_keybord_btn_7"
                    style="@style/fh_keybord_item_btn"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/fh_keybord_btn_8"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/fh_keybord_btn_9"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1" >

                <Button
                    style="@style/fh_keybord_item_btn"
                    android:layout_weight="1"
                   	android:background="@drawable/fh_keybord_button_disclick" />

                <Button
                    android:id="@+id/fh_keybord_btn_0"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/fh_keybord_btn_hiddle"
                    style="@style/fh_keybord_item_btn"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/fh_keybord_hiddle_bg" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/fh_keybord_btn_ok"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/fh_keybord_ok_bg"
            android:textSize="20sp"
            android:textColor="@color/fh_white"
            android:text="@string/fh_ok" />
    </LinearLayout>

</LinearLayout>