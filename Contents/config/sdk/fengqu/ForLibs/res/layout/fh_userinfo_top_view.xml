<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/fh_white" >

    <ImageButton
        android:id="@+id/fh_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/fh_back_bg" />

    <TextView
        android:id="@+id/fh_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fh_pay_pormpt_str"
        android:textColor="@color/fh_gray_33"
        android:textSize="@dimen/fh_top_content_size" />

</RelativeLayout>

