<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/fh_white" >

    <TextView
        android:id="@+id/fh_dialog_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/fh_pay_failed_title_str"
        android:textColor="@color/fh_gray_33"
        android:textSize="@dimen/fh_dialog_title_size" />

    <TextView
        android:id="@+id/fh_dialog_content_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fh_dialog_textView"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/fh_pay_failed_content_str"
        android:textColor="@color/fh_gray_33"
        android:textSize="@dimen/fh_dialog_title_size" />

    <ImageView
        android:id="@+id/fh_dialog_sapce_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fh_dialog_content_textView"
        android:layout_marginTop="51dp"
        android:background="#EFEFEF" />

    <LinearLayout
        android:id="@+id/button_layput"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/fh_dialog_sapce_line"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/fh_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/fh_pay_failed_button_str"
            android:background="@drawable/fh_item_selector"
            android:textColor="@color/fh_userinfo_color"
            android:textSize="@dimen/fh_top_content_size" />

    </LinearLayout>

</RelativeLayout>