<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="34.0dp"
    android:background="@drawable/fh_list_item_selector_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/pay_history_time_view"
        android:layout_width="0dp"
        android:layout_height="34.0dp"
        android:layout_gravity="center"
        android:gravity="center"
     
        android:layout_weight="3"
        
        android:textColor="@color/fh_gray_66"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pay_history_num_view"
        android:layout_width="0dp"
        android:layout_height="34.0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
          
         
        android:textColor="@color/fh_gray_66"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pay_history_money_view"
        android:layout_width="0dp"
        android:layout_height="34.0dp"
         android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
        android:textColor="@color/fh_gray_66"
        android:textSize="14sp" />

</LinearLayout>