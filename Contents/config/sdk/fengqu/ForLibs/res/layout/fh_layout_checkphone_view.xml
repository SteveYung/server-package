<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fh_white"
    android:padding="10.0dp" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp" >

        <TextView
            android:id="@+id/fh_checkphone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fh_checkphone_style"
            android:textColor="@color/fh_gray_33"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fh_checkphone_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:layout_marginLeft="23.0dp"
        android:layout_marginRight="23.0dp"
        android:layout_marginTop="20.0dp"
        android:gravity="left"
        android:text="@string/fh_checkphone_tip"
        android:textColor="@color/fh_black"
        android:textSize="14.0sp" />

    <RelativeLayout
        android:id="@+id/check_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_below="@id/fh_checkphone_tip"
        android:layout_marginLeft="23.0dp"
        android:layout_marginRight="23.0dp"
        android:layout_marginTop="12.0dp"
        android:background="@drawable/fh_edit_bg" >

        <TextView
            android:id="@+id/fh_get_verify_txt"
            android:layout_width="90.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="1px"
            android:background="@drawable/fh_item_selector"
            android:gravity="center"
            android:text="@string/fh_register_get_verify"
            android:textColor="@color/fh_orange"
            android:textSize="14.0sp"
            android:width="90.0dp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/fh_get_verify_txt"
            android:background="@color/fh_gray_df" />

        <ImageView
            android:id="@+id/fh_verify_edt_clear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7.0dp"
            android:layout_toLeftOf="@id/fh_get_verify_txt"
            android:src="@drawable/fh_edt_clear"
            android:visibility="gone" />

        <EditText
            android:id="@+id/fh_checkverify_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fh_verify_edt_clear_img"
            android:background="@null"
            android:hint="@string/fh_checkphone_verify"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:padding="10.0dp"
            android:singleLine="true"
            android:textColor="@color/fh_gray_33"
            android:textColorHint="@color/fh_gray_99"
            android:textCursorDrawable="@null"
            android:textSize="16.0sp" >
        </EditText>
    </RelativeLayout>

    <TextView
        android:id="@+id/fh_checkphone_tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_layout"
        android:layout_marginLeft="23.0dp"
        android:layout_marginRight="23.0dp"
        android:layout_marginTop="12.0dp"
        android:gravity="left"
        android:text="@string/fh_checkphone_tip1"
        android:textColor="@color/fh_gray_99"
        android:textSize="13.0sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fh_checkphone_tip1"
        android:layout_marginTop="27.0dp"
        android:paddingBottom="23.0dp"
        android:paddingLeft="23.0dp"
        android:paddingRight="23.0dp" >

        <Button
            android:id="@+id/fh_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:background="@drawable/fh_login_btn_selector"
            android:text="@string/fh_submit"
            android:textColor="@color/fh_white"
            android:textSize="19.0sp" />
    </RelativeLayout>

</RelativeLayout>