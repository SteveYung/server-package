<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="only_close"
        cocosdk:title_text="@string/cc_regist_user" />
    <View 
        android:id="@+id/height_90"
        android:layout_height="@dimen/cc_height_90"
        android:layout_width="match_parent"
        />
    
    <EditText style="@style/EditTextPhone" 
        android:id="@+id/et_un" 
        android:maxLength="20"
        android:layout_below="@+id/height_90"
        android:hint="@string/cc_regist_user_1"
        android:inputType="text" />
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"
        android:layout_above="@+id/et_un"
        android:layout_alignLeft="@+id/et_un" />
    
    <EditText style="@style/EditTextPhone" 
        android:id="@+id/ed_pwd" 
        android:layout_marginTop="@dimen/cc_margin_30" 
        android:layout_below="@+id/et_un"
        android:maxLength="15" 
        android:hint="@string/cc_regist_user_2"
        android:inputType="text" />
    
    <RelativeLayout 
        android:id="@+id/checkbox_container"
        android:layout_height="@dimen/cc_height_70"
        android:layout_width="match_parent"
        android:layout_below="@+id/ed_pwd"
        >
        <CheckBox
            android:id="@+id/cb_show_pwd"
            style="@style/CheckBox"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_show_pwd"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_show_pwd"
            style="@style/CheckBoxText"
            android:layout_marginRight="@dimen/cc_margin_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/cc_regist_user_3" />
        
    </RelativeLayout>
    
    
    
    
    <Button style="@style/OneLineButton"
        android:id="@+id/bt_regist"
        android:text="@string/cc_regist_user_4"
        android:layout_below="@+id/checkbox_container" />
    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"
        android:layout_above="@+id/bt_regist"
        android:layout_centerHorizontal="true" />
    
    
    <RelativeLayout 
        android:id="@+id/checkbox_container_2"
        android:layout_height="@dimen/cc_height_70"
        android:layout_width="match_parent"
        android:layout_below="@+id/bt_regist"
        >
         <CheckBox style="@style/CheckBox"
        android:id="@+id/cb_eula"
        android:layout_marginLeft="@dimen/cc_margin_50"
        android:layout_centerVertical="true"
        android:checked="true" />
    <TextView
        android:id="@+id/tv_eula"
        style="@style/CheckBoxText"
        android:layout_toRightOf="@+id/cb_eula"
        android:layout_centerVertical="true"
        android:text="@string/cc_regist_user_5" />
    <Button style="@style/TextLinkSmall"
        android:id="@+id/bt_eula"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_eula"
        android:text="@string/cc_regist_user_6" />
    </RelativeLayout>
    
   
    
    <RelativeLayout 
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cc_height_78"
        android:layout_alignParentBottom="true" >
        <TextView 
            android:id="@+id/tv_login"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        style="@style/TextLinkBig"
	        android:layout_centerInParent="true"
	        android:background="@drawable/cc_menu_button"
	        android:text="@string/cc_regist_user_7" />
    </RelativeLayout>
    <View 
        android:layout_height="@dimen/cc_height_2"
        android:layout_width="match_parent"
        android:background="@drawable/cc_line"
        android:layout_above="@+id/bottom_container"
        />
</RelativeLayout>
