    <ImageButton
        android:id="@+id/btn_back"
        android:contentDescription="@string/cc_app_name"
        android:layout_width="@dimen/cc_height_88"
        android:layout_height="@dimen/cc_height_88"
        android:scaleType="centerInside"
        android:padding="@dimen/cc_margin_24"
        android:background="#00000000"
        android:src="@drawable/cc_btn_back" />


    <ImageView
        android:id="@+id/iv_log"
        android:contentDescription="@string/cc_app_name"
        android:layout_width="@dimen/cc_height_48"
        android:layout_height="@dimen/cc_height_48"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_title"
        android:layout_marginRight="@dimen/cc_margin_18" />

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:maxLines="1"
        android:textSize="@dimen/cc_font_size_40"
        android:textStyle="bold"
		android:textColor="@color/text_blue" />

    <ImageButton
        android:id="@+id/btn_close"
        android:contentDescription="@string/cc_app_name"        
        android:layout_width="@dimen/cc_height_88"
        android:layout_height="@dimen/cc_height_88"
        android:scaleType="centerInside"
        android:padding="@dimen/cc_margin_24"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:src="@drawable/cc_btn_close" />
    
