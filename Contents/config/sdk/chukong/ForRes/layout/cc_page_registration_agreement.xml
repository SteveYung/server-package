<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="both"
        cocosdk:title_text="@string/cc_eula" />
    <ScrollView 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/cc_height_90"
        style="@style/content_margin"
        android:layout_marginBottom="@dimen/cc_margin_50"
        >
        <TextView 
            android:id="@+id/license"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/text_black"
            android:textSize="@dimen/cc_font_size_24"
            />
        
    </ScrollView>
</RelativeLayout>
