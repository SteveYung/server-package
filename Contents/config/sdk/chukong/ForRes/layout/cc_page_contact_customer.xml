<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="both"
        cocosdk:title_text="@string/cc_contact_title" />
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/cc_font_size_34"
            android:textColor="@color/text_black"
            android:layout_gravity="center_horizontal"
            android:text="@string/cc_contact_text1"
            />
        <LinearLayout 
             android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/cc_margin_36"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
             android:textSize="@dimen/cc_font_size_34"
            android:textColor="@color/text_black"
            android:text="@string/cc_contact_text2"
            />
             <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/cc_font_size_34"
            android:textColor="@color/text_blue"
            android:text="@string/cc_email"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
