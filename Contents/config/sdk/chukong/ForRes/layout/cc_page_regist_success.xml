<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="none"
        cocosdk:title_text="@string/cc_regist_sucess"
        cocosdk:title_logo="success" />
    
    <TextView style="@style/LabelBig"
        android:id="@+id/t1"
        android:layout_marginTop="@dimen/cc_height_120"
        android:text="@string/cc_regist_sucess_1" />

    <TextView
        android:id="@+id/tv_un"
        style="@style/LabelBig"
        android:layout_alignBaseline="@+id/t1"
        android:layout_alignBottom="@+id/t1"
        android:layout_margin="0dp"
        android:layout_toRightOf="@+id/t1" />
    
    <TextView style="@style/LabelBig"
        android:id="@+id/t2"
        android:layout_below="@id/t1"
        android:layout_marginTop="@dimen/cc_margin_30"
        android:text="@string/cc_regist_sucess_2" />
    
    <TextView
        android:id="@+id/tv_pwd_init"
        style="@style/LabelBig"
        android:layout_alignBaseline="@+id/t2"
        android:layout_alignBottom="@+id/t2"
        android:layout_margin="0dp"
        android:layout_toRightOf="@+id/t2" />
    
    <TextView style="@style/Label"
        android:id="@+id/t3"
        android:layout_below="@id/t2"
        android:layout_marginTop="@dimen/cc_margin_30"
        android:layout_marginBottom="@dimen/cc_margin_10"
        android:text="@string/cc_regist_sucess_3" />
    
    <EditText
        android:id="@+id/et_pwd"
        style="@style/EditTextPhone"
        android:layout_below="@id/t3"
        android:hint="@string/cc_regist_sucess_4"
        android:inputType="text"
        android:maxLength="15" />
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"
        android:layout_above="@+id/et_pwd"
        android:layout_alignLeft="@+id/et_pwd" /> 
        
    <RelativeLayout 
        android:id="@+id/checkbox_container"
        android:layout_height="@dimen/cc_height_66"
        android:layout_width="match_parent"
        android:layout_below="@+id/et_pwd"
        >
        <CheckBox
        android:id="@+id/cb_show_pwd"
        style="@style/CheckBox"
        android:layout_toLeftOf="@+id/tv_show_pwd"
        android:layout_centerVertical="true"
        android:checked="true" />
    <TextView
        android:id="@+id/tv_show_pwd"
        style="@style/CheckBoxText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/cc_margin_50"
        android:layout_centerVertical="true"
        android:text="@string/cc_regist_sucess_6" />
        
    </RelativeLayout>
    <Button style="@style/OneLineButton"
        android:id="@+id/bt_enter_game"
        android:text="@string/cc_regist_sucess_5"
        android:layout_below="@+id/checkbox_container"/>
    
    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
