<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_text="@string/cc_pay_select_deno"
        cocosdk:title_type="both" 
        cocosdk:title_logo="none"/>
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"/>
    
    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"/>
    

    <Button
        android:id="@+id/cc_pay_deno_0"
        style="@style/PayDenoBtn"
        android:layout_below="@+id/pay_deno_sms_text"
        android:layout_marginLeft="@dimen/cc_pay_margin_50"
        android:layout_marginTop="@dimen/cc_pay_margin_20"
        android:background="@drawable/cc_pay_select_deno_focuse"
        android:textColor="#FFFFFF"/>
    
    <Button
        android:id="@+id/cc_pay_deno_1"
        style="@style/PayDenoBtn"
        android:layout_alignBaseline="@+id/cc_pay_deno_0"
        android:layout_alignBottom="@+id/cc_pay_deno_0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/cc_pay_margin_50"/>
    
    <Button
        android:id="@+id/cc_pay_deno_2"
        style="@style/PayDenoBtn"
        android:layout_marginLeft="@dimen/cc_pay_margin_50"
        android:layout_below="@+id/cc_pay_deno_0"
        android:layout_marginTop="@dimen/cc_pay_margin_30"/>
    
    <Button
        android:id="@+id/cc_pay_deno_3"
        style="@style/PayDenoBtn"
        android:layout_alignBaseline="@+id/cc_pay_deno_2"
        android:layout_alignBottom="@+id/cc_pay_deno_2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/cc_pay_margin_50"/>
    
    <TextView
        android:id="@+id/pay_deno_sms_text"
        style="@style/PayDenoText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:text="@string/cc_pay_card_deno_sms" 
        android:visibility="invisible"/>
    
    <TextView
        android:id="@+id/pay_money"
        style="@style/PayDenoText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/cc_pay_margin_32"
        android:layout_marginLeft="@dimen/cc_pay_margin_50"
        android:layout_marginRight="@dimen/cc_pay_margin_50"
        android:layout_alignParentBottom="true"
        android:text="@string/cc_pay_card_deno_text" />
    
    <TextView
        android:id="@+id/pay_card_error"
        style="@style/PayDenoText"
        android:layout_centerInParent="true"
        android:text="@string/cc_pay_card_error"
        android:visibility="invisible"/>

</RelativeLayout>

