<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_text="@string/cc_select_payment_title"
        cocosdk:title_type="both" 
        cocosdk:title_logo="none"/>
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"/>
    
    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"/>

    <com.coco.sdk.pay.ui.widget.CCTypeButton
        android:id="@+id/cc_pay_select_0"
        style="@style/SelectButton6"
        android:layout_alignTop="@+id/cc_pay_select_1"
        android:layout_toLeftOf="@+id/cc_pay_select_1"
        android:layout_marginRight="@dimen/cc_pay_margin_50"/>
    
    <com.coco.sdk.pay.ui.widget.CCTypeButton
        android:id="@+id/cc_pay_select_1"
        android:layout_below="@+id/title"
        style="@style/SelectButton6"	
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/cc_pay_margin_50"/>
    
    <com.coco.sdk.pay.ui.widget.CCTypeButton
        android:id="@+id/cc_pay_select_2"
        style="@style/SelectButton6"
        android:layout_alignTop="@+id/cc_pay_select_1"
        android:layout_toRightOf="@+id/cc_pay_select_1"
        android:layout_marginLeft="@dimen/cc_pay_margin_50"/>
    
    <com.coco.sdk.pay.ui.widget.CCTypeButton
        android:id="@+id/cc_pay_select_3"
        style="@style/SelectButton6"
        android:layout_alignTop="@+id/cc_pay_select_4"
        android:layout_toLeftOf="@+id/cc_pay_select_4"
        android:layout_marginRight="@dimen/cc_pay_margin_50"/>
   
    <com.coco.sdk.pay.ui.widget.CCTypeButton
        android:id="@+id/cc_pay_select_4"
        style="@style/SelectButton6"
        android:layout_below="@+id/cc_pay_select_1"	
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/cc_pay_margin_50"/>


</RelativeLayout>
