<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="both"
        cocosdk:title_text="@string/cc_verify_phone" />
    
    <TextView style="@style/Label"
        android:id="@+id/t1"
        android:layout_marginTop="@dimen/cc_height_120"
        android:layout_marginBottom="@dimen/cc_margin_30"
        android:text="@string/cc_verify_phone_1" />

    <EditText style="@style/EditTextPhone"
        android:id="@+id/et_captcha"
        android:layout_below="@id/t1"
        android:hint="@string/cc_verify_phone_2"
        android:maxLength="6" />
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"
        android:layout_above="@+id/et_captcha"
        android:layout_alignLeft="@+id/et_captcha" />

    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
	<RelativeLayout 
	    android:id="@+id/height_174"
	    android:layout_height="@dimen/cc_height_174"
	    android:layout_width="match_parent"
        android:layout_below="@+id/et_captcha"
	    >
    <TextView style="@style/TextLinkBig"
        android:id="@+id/tv_resend_captcha"
        android:layout_centerInParent="true"
        android:text="@string/cc_verify_phone_7"
        android:visibility="invisible" />
    
    <LinearLayout
        android:id="@+id/ll_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/t2"
            style="@style/Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/cc_verify_phone_3" />

        <TextView
            android:id="@+id/tv_countdown"
            style="@style/Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/cc_verify_phone_4"
            android:textColor="@color/text_blue" />

        <TextView
            android:id="@+id/t3"
            style="@style/Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/cc_verify_phone_5" />
    </LinearLayout>
	</RelativeLayout>
    
    <Button style="@style/OneLineButton"
        android:id="@+id/bt_regist"
        android:text="@string/cc_verify_phone_6"
        android:layout_below="@+id/height_174" />

</RelativeLayout>
