<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="only_close"
        cocosdk:title_text="@string/cc_set_new_password" />
    
    <TextView style="@style/TextPrompt"
        android:id="@+id/tv_warning"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/cc_margin_24"
        android:layout_marginBottom="@dimen/cc_margin_24"
        android:text="@string/cc_set_new_password_1" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_warning" >
        
	    <TextView style="@style/LabelBig"
	        android:id="@+id/t1"
	        android:text="@string/cc_set_new_password_2"
	        android:layout_marginBottom="@dimen/cc_margin_24" />

	    <TextView
	        android:id="@+id/tv_un"
	        style="@style/LabelBig"
	        android:layout_alignBaseline="@+id/t1"
	        android:layout_alignBottom="@+id/t1"
	        android:layout_margin="0dp"
	        android:layout_toRightOf="@+id/t1" />
	    
	    <EditText
	        android:id="@+id/et_pwd"
	        style="@style/EditTextPhone"
	        android:layout_below="@id/t1"
	        android:hint="@string/cc_set_new_password_3"
	        android:inputType="text"
	        android:maxLength="15" />
	    
	    <TextView
	        android:id="@+id/errorinfo_text"
	        style="@style/ErrorInfo"
	        android:layout_above="@+id/et_pwd"
	        android:layout_alignLeft="@+id/et_pwd" />
	    
	    <RelativeLayout 
	        android:layout_height="@dimen/cc_height_70"
	        android:layout_width="match_parent"
	        android:layout_below="@+id/et_pwd"
	        >
	        <CheckBox
		        android:id="@+id/cb_show_pwd"
		        style="@style/CheckBox"
		        android:layout_toLeftOf="@+id/tv_show_pwd"
		        android:layout_centerVertical="true"
		        android:checked="true" />
		    <TextView
		        android:id="@+id/tv_show_pwd"
		        style="@style/CheckBoxText"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="@dimen/cc_margin_50"
		        android:text="@string/cc_set_new_password_4" />
	        
	    </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_pwd"
        style="@style/OneLineButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/cc_height_70"
        android:text="@string/cc_set_new_password_5" />
    
    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
