<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_text="@string/cc_input_num_pwd"
        cocosdk:title_logo="none"/>
    <TextView
        android:id="@+id/cc_pay_card_text"
        style="@style/PayText"
        android:layout_marginTop="@dimen/cc_pay_margin_30"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="@string/cc_pay_card_text"/>


    <TextView
        android:id="@+id/errorinfo_page"
        style="@style/ErrorInfo" />

    <LinearLayout
        android:id="@+id/cc_pay_num_layout"
        android:layout_below="@id/cc_pay_card_text"
        android:layout_marginTop="@dimen/cc_pay_margin_30"
        style="@style/PayInputLayout" >

        <TextView
            android:id="@+id/cc_input_text_num"
            style="@style/PayInputText"
            android:text="@string/cc_pay_num" />

        <EditText
            android:id="@+id/cc_input_edit_num"
            style="@style/PayInputEdit"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cc_pay_pwd_layout"
        android:layout_below="@+id/cc_pay_num_layout"
        android:layout_marginTop="@dimen/cc_pay_margin_30"
        style="@style/PayInputLayout" >

        <TextView
            android:id="@+id/cc_input_text_pwd"
            style="@style/PayInputText"
            android:text="@string/cc_pay_pwd" />

        <EditText
            android:id="@+id/cc_input_edit_pwd"
            style="@style/PayInputEdit"/>
    </LinearLayout>

    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"
       	android:layout_alignParentBottom="true"
       	android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/cc_card_submit"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cc_pay_pwd_layout"
        android:layout_marginTop="@dimen/cc_pay_margin_30"
        android:text="@string/cc_card_submit"
        style="@style/SubmitButton"/>



</RelativeLayout>