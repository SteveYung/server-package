<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_logo="none"
        cocosdk:title_text="@string/cc_pay_select_game_card"
        cocosdk:title_type="both" />

    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo" />

    <TextView
        android:id="@+id/errorinfo_page"
        style="@style/ErrorInfo" />

    <TextView
        android:id="@+id/pay_money"
        style="@style/PayText"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/cc_pay_margin_30"
        android:text="@string/cc_pay_money" />

    <ScrollView
        android:id="@+id/cc_pay_card_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_money" 
        android:overScrollMode="never"
        android:scrollbarSize="@dimen/cc_pay_margin_5"
        android:scrollbarThumbVertical="@drawable/cc_pay_scrollbar_track"
        android:layout_marginTop="@dimen/cc_pay_margin_30">
		
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/cc_game_card_0"
                android:layout_marginLeft="@dimen/cc_pay_margin_50"
                style="@style/PayGameCardBtn"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/cc_game_card_1"
                style="@style/PayGameCardBtn"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cc_pay_margin_50"/>
            <Button
                android:id="@+id/cc_game_card_2"
                android:layout_marginLeft="@dimen/cc_pay_margin_50"
                android:layout_below="@+id/cc_game_card_0"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                style="@style/PayGameCardBtn"/>

            <Button
                android:id="@+id/cc_game_card_3"
                style="@style/PayGameCardBtn"
                android:layout_below="@+id/cc_game_card_1"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cc_pay_margin_50"/>
            <Button
                android:id="@+id/cc_game_card_4"
                android:layout_marginLeft="@dimen/cc_pay_margin_50"
                android:layout_below="@+id/cc_game_card_2"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                style="@style/PayGameCardBtn"/>

            <Button
                android:id="@+id/cc_game_card_5"
                style="@style/PayGameCardBtn"
                android:layout_below="@+id/cc_game_card_3"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cc_pay_margin_50"/>
            <Button
                android:id="@+id/cc_game_card_6"
                android:layout_marginLeft="@dimen/cc_pay_margin_50"
                android:layout_below="@+id/cc_game_card_4"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                style="@style/PayGameCardBtn"/>

            <Button
                android:id="@+id/cc_game_card_7"
                style="@style/PayGameCardBtn"
                android:layout_below="@+id/cc_game_card_5"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cc_pay_margin_50"/>
            <Button
                android:id="@+id/cc_game_card_8"
                android:layout_marginLeft="@dimen/cc_pay_margin_50"
                style="@style/PayGameCardBtn"
                android:layout_below="@+id/cc_game_card_6"
                android:layout_marginTop="@dimen/cc_pay_margin_30"/>

            <Button
                android:id="@+id/cc_game_card_9"
                style="@style/PayGameCardBtn"
                android:layout_below="@+id/cc_game_card_7"
                android:layout_marginTop="@dimen/cc_pay_margin_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cc_pay_margin_50"/>
            <Button
                android:id="@+id/cc_game_card_10"
                android:layout_marginLeft="@dimen/cc_pay_margin_50"
                style="@style/PayGameCardBtn"
                android:layout_below="@+id/cc_game_card_8"
                android:layout_marginTop="@dimen/cc_pay_margin_30"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>