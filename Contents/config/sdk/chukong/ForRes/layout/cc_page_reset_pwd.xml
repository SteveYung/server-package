<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="both"
        cocosdk:title_text="@string/cc_reset_pwd" />

    
    <TextView style="@style/Label"
        android:id="@+id/t1"
        android:layout_marginTop="@dimen/cc_height_120"
        android:layout_marginBottom="@dimen/cc_margin_30"
        android:text="@string/cc_reset_pwd_1" />

    <EditText style="@style/EditTextPhone"
        android:id="@+id/et_phone"
        android:layout_below="@id/t1"
        android:hint="@string/cc_reset_pwd_2" />
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"
        android:layout_above="@+id/et_phone"
        android:layout_alignLeft="@+id/et_phone" />

    <Button style="@style/OneLineButton"
        android:id="@+id/bt_get_captcha"
        android:text="@string/cc_regist_coco_3"
        android:layout_below="@id/et_phone"
        android:layout_marginTop="@dimen/cc_margin_30" />
    
    <TextView style="@style/Label"
        android:id="@+id/t2"
        android:text="@string/cc_reset_pwd_3"
        android:layout_below="@id/bt_get_captcha"
        android:layout_marginTop="@dimen/cc_height_120" />

    <TextView style="@style/TextLinkBig"
        android:id="@+id/tv_click_here"
        android:layout_alignBaseline="@id/t2"
        android:layout_alignBottom="@id/t2"
        android:layout_toRightOf="@id/t2"
        android:text="@string/cc_reset_pwd_4" />
    
    <TextView style="@style/LabelReset"
        android:id="@+id/t3"
        android:layout_alignBaseline="@id/tv_click_here"
        android:layout_alignBottom="@id/tv_click_here"
        android:layout_toRightOf="@id/tv_click_here"
        android:text="@string/cc_reset_pwd_5" />
   

    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
