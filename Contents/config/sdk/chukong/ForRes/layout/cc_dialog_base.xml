<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <RelativeLayout
        android:layout_width="@dimen/cc_window_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        <LinearLayout
            style="@style/content_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cc_page"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fowget_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cc_menu_button"
                android:paddingBottom="@dimen/cc_margin_36"
                android:paddingTop="@dimen/cc_margin_36"
                android:text="@string/cc_menu_1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/cc_font_size_34"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/cc_height_2"
                android:background="@drawable/cc_line_menu" />

            <Button
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/cc_menu_button"
                android:paddingBottom="@dimen/cc_margin_36"
                android:paddingTop="@dimen/cc_margin_36"
                android:text="@string/cc_menu_2"
                android:textColor="@color/text_black"
                android:textSize="@dimen/cc_font_size_34"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>