<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cc_pay_margin_180">

	<ImageView
	    android:id="@+id/cc_pay_select_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
		android:layout_above="@+id/cc_pay_select_text"/>

	<TextView
	    android:id="@+id/cc_pay_select_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/cc_pay_margin_20"
	    android:layout_centerHorizontal="true"
	    android:maxLines="1"
	    android:textColor="#313131"
	    android:textSize="@dimen/cc_font_size_30" />
</RelativeLayout>