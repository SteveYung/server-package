<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/cc_menu_button"
    >
    <TextView 
        android:id="@+id/tv_username"
        android:layout_marginLeft="@dimen/cc_margin_24"
   		android:layout_height="@dimen/cc_height_88"
        android:textColor="@color/text_black"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/cc_font_size_30"
        />
	<View 
	    android:id="@+id/v_user_delete"
	    android:layout_height="@dimen/cc_height_70"
	    android:layout_width="@dimen/cc_height_70"
	    android:background="@drawable/cc_user_delete"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    />
</RelativeLayout>
