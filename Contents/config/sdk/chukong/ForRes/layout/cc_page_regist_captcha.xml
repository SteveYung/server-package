<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cocosdk="http://schemas.android.com/apk/res-auto"
    style="@style/CCPageTheme" >

    <com.coco.sdk.ui.widget.CCPageTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cocosdk:title_type="both"
        cocosdk:title_text="@string/cc_regist_coco" />

    
    <TextView style="@style/Label"
        android:id="@+id/t1"
        android:layout_marginTop="@dimen/cc_height_120"
        android:layout_marginBottom="@dimen/cc_margin_30"
        android:text="@string/cc_regist_coco_1" />

    <EditText style="@style/EditTextPhone"
        android:id="@+id/et_phone"
        android:layout_below="@id/t1"
        android:hint="@string/cc_regist_coco_2" />
    
    <TextView
        android:id="@+id/errorinfo_text"
        style="@style/ErrorInfo"
        android:layout_above="@+id/et_phone"
        android:layout_alignLeft="@+id/et_phone" />

    <Button style="@style/OneLineButton"
        android:id="@+id/bt_get_captcha"
        android:text="@string/cc_regist_coco_3"
        android:layout_below="@id/et_phone"
        android:layout_marginTop="@dimen/cc_margin_30" />
    
    <RelativeLayout 
        android:layout_below="@+id/bt_get_captcha"
        android:layout_height="@dimen/cc_height_90"
        android:layout_width="match_parent"
        >
        
        
    <CheckBox style="@style/CheckBox"
        android:id="@+id/cb_accept_eula"
        android:layout_marginLeft="@dimen/cc_margin_50"
        android:layout_centerVertical="true"
        android:checked="true" />
    
    <TextView
        android:id="@+id/tv_accept_eula"
        style="@style/CheckBoxText"
        android:layout_toRightOf="@+id/cb_accept_eula"
        android:layout_centerVertical="true"
        android:text="@string/cc_regist_coco_4" />
    
    <Button style="@style/TextLinkSmall"
        android:id="@+id/bt_eula"
        android:layout_toRightOf="@+id/tv_accept_eula"
        android:layout_centerVertical="true"
        android:text="@string/cc_regist_coco_5" />
        
    </RelativeLayout>
    
    
    
    <TextView style="@style/Label"
        android:id="@+id/t2"
        android:text="@string/cc_regist_coco_6"
        android:layout_below="@+id/bt_get_captcha"
        android:layout_marginTop="@dimen/cc_height_120" />

    <TextView style="@style/TextLinkBig"
        android:id="@+id/tv_regist_account"
        android:layout_alignBaseline="@id/t2"
        android:layout_alignBottom="@id/t2"
        android:layout_toRightOf="@id/t2"
        android:text="@string/cc_regist_coco_7" />

    <TextView style="@style/ErrorInfo"
        android:id="@+id/errorinfo_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
