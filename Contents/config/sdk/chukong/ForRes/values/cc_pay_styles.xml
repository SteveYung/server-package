<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="SelectButton6">
        <item name="android:layout_width">@dimen/cc_pay_width_150</item>
        <item name="android:layout_height">@dimen/cc_pay_height_180</item>
        <item name="android:textColor">#cc0000</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/cc_pay_select</item>
    </style>
    
    <style name="SelectButton4">
        <item name="android:layout_width">@dimen/cc_pay_width_250</item>
        <item name="android:layout_height">@dimen/cc_pay_height_180</item>
        <item name="android:textColor">#cc0000</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/cc_pay_select</item>
    </style>
    
    <style name="PayButton">
        <item name="android:layout_marginLeft">@dimen/cc_pay_margin_50</item>
        <item name="android:layout_marginRight">@dimen/cc_pay_margin_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cc_pay_height_128</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_40</item>
        <item name="android:textColor">#FFFFFF</item>        
        <item name="android:background">@drawable/cc_pay_button</item>        
    </style>
    
    <style name="SubmitButton">
        <item name="android:layout_marginLeft">@dimen/cc_pay_margin_50</item>
        <item name="android:layout_marginRight">@dimen/cc_pay_margin_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cc_pay_height_128</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_40</item>
        <item name="android:textColor">#FFFFFF</item>        
        <item name="android:background">@drawable/cc_pay_button</item>        
    </style>
    
    
    <style name="PayButtonOther">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cc_pay_height_100</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_30</item>
        <item name="android:textColor">#0D6DDC</item>        
        <item name="android:background">@drawable/cc_pay_other_btn</item>
    </style>
    
    <style name="PayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_30</item>
        <item name="android:textColor">#EB6100</item>        
    </style>
    
    <style name="PayTypeIcon">
        <item name="android:layout_width">@dimen/cc_pay_width_250</item>
        <item name="android:layout_height">wrap_content</item>        
    </style>
    
    <style name="PayInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cc_pay_height_80</item>   
        <item name="android:layout_marginLeft">@dimen/cc_pay_margin_55</item>
        <item name="android:layout_marginRight">@dimen/cc_pay_margin_55</item>   
        <item name="android:orientation">horizontal</item> 
        <item name="android:background">@drawable/cc_pay_input</item> 
    </style>
    
    <style name="PayInputText">
        <item name="android:layout_width">@dimen/cc_pay_width_150</item>
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#313131</item>   
        <item name="android:paddingLeft">@dimen/cc_pay_margin_20</item> 
        <item name="android:textSize">@dimen/cc_pay_font_size_32</item> 
        <item name="android:paddingRight">@dimen/cc_pay_margin_10</item> 
    </style>
    
    <style name="PayInputEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#313131</item>   
        <item name="android:textSize">@dimen/cc_pay_font_size_32</item>        
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:ems">10</item>
    </style>
    
    <style name="PayGameCardBtn">
        <item name="android:layout_width">@dimen/cc_pay_width_250</item>
        <item name="android:layout_height">@dimen/cc_pay_height_90</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_24</item>
        <item name="android:textColor">@drawable/cc_pay_button_text_selector</item>        
        <item name="android:background">@drawable/cc_pay_select_game_card_button</item> 
        <item name="android:layout_marginLeft">@dimen/cc_pay_margin_50</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="PayDenoBtn">
        <item name="android:layout_width">@dimen/cc_pay_width_250</item>
        <item name="android:layout_height">@dimen/cc_pay_height_130</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_32</item>
        <item name="android:textColor">@drawable/cc_pay_button_text_selector</item>        
        <item name="android:background">@drawable/cc_pay_select_game_card_button</item> 
        <item name="android:visibility">invisible</item>
    </style>
    
    <style name="PayDenoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_30</item>
        <item name="android:textColor">#EB6100</item>        
    </style>
    
    <style name="PayfailImage">
        <item name="android:layout_width">@dimen/cc_pay_width_130</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/cc_pay_margin_60</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_24</item>
        <item name="android:src">@drawable/cc_pay_fail_img</item>        
    </style>
    
     <style name="PayfailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/cc_pay_margin_80</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_40</item>
        <item name="android:text">@string/cc_pay_payfail</item>        
        <item name="android:textColor">#eb6100</item>        
        <item name="android:textStyle">bold</item>        
    </style>
    
     <style name="Payfailbtn" parent="@style/PayButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/cc_pay_margin_22</item>
        <item name="android:layout_marginTop">@dimen/cc_pay_margin_5</item>
        <item name="android:text">@string/cc_pay_close</item>        
    </style>
    
     <style name="Payfailsupportnum_tv" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/cc_pay_margin_30</item>
        <item name="android:textSize">@dimen/cc_pay_font_size_32</item>
        <item name="android:textColor">#626262</item>        
        <item name="android:layout_centerHorizontal">true</item>        
    </style>
</resources>
