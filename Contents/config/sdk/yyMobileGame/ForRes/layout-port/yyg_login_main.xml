<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f9ff"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="12dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yyg_main_login_logo" />


                <!-- 本地已经存在帐号 -->

                <LinearLayout
                    android:id="@+id/account_select_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        layout="@layout/yyg_login_user_editor" />
                       
                                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/account_login_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/yyg_yy_login_btn_normal"
                            android:gravity="center"
                            android:text="登录"
                            android:layout_weight="4"
                            android:textColor="@color/yyg_clr_white"
                            android:textSize="16sp" >
                        </Button>

                        <Button
                            android:id="@+id/account_wh_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/yyg_wh_login_btn_normal"
                            android:gravity="center"
                            android:text="使用微会帐号登录"
                            android:layout_weight="3"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/yyg_clr_white"
                            android:textSize="16sp" >
                        </Button>
                    </LinearLayout>
                </LinearLayout>
                
                 <TextView 
                    android:id="@+id/quick_start_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#626262"
                    android:text="一键游戏>>"
                    android:paddingLeft="6dp"
                    android:paddingRight="14dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="14sp"
                    android:background="@drawable/yyg_onekey_login_bg"
                    android:layout_gravity="right"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>