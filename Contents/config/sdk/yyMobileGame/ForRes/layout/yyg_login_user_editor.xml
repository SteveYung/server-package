<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="注册账号"
            android:textColor="#626262" />

        <EditText
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/register_text"
            android:background="@drawable/yyg_edittext_bg"
            android:gravity="center_vertical"
            android:hint="账号"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_user_name"
            android:layout_alignRight="@id/tv_user_name"
            android:layout_alignTop="@id/tv_user_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/yyg_dropdown_selector" />

        <TextView
            android:id="@+id/fogertpassword_text"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_user_name"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="忘记密码"
            android:textColor="#626262" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/tv_user_name"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/fogertpassword_text"
            android:background="@drawable/yyg_edittext_bg"
            android:hint="密码"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>