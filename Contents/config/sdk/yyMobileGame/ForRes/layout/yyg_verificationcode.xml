<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/yyg_clr_bg"
    android:gravity="center_horizontal"
    android:minWidth="260dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical"
        android:paddingLeft="16dip"
        android:text="请输入验证码"
        android:textColor="@color/yyg_clr_black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/yyg_clr_lightblue" >
    </LinearLayout>
    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dip"
            android:text="验证码："
            android:textColor="@color/yyg_clr_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/verification_code"
            android:layout_width="100dip"
            android:layout_height="32dip"
            android:background="@drawable/yyg_roundrect_gray"
            android:gravity="center"
            android:inputType="text"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:singleLine="true"
            android:textColor="@color/yyg_clr_black"
            android:textSize="14sp" />
    </LinearLayout>    -->

    <EditText
        android:id="@+id/verification_code"
        android:layout_width="160dip"
        android:layout_height="32dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/yyg_roundrect_gray"
        android:gravity="center"
        android:hint="请输入验证码"
        android:inputType="text"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:singleLine="true"
        android:textColor="@color/yyg_clr_black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:gravity="center"
        android:minHeight="48dip"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <ProgressBar
            android:id="@+id/load_progresbar"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/yyg_load_progress_drawable" />

        <ImageView
            android:id="@+id/verify_img"
            android:layout_width="96dip"
            android:layout_height="32dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/get_new_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="4dip"
            android:text="看不清，换一张"
            android:textColor="@color/yyg_clr_black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/error_info"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:clickable="true"
        android:padding="4dip"
        android:text="错误信息"
        android:textColor="@color/yyg_clr_red"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="12dip"
        android:background="@color/yyg_clr_lightgray2" >
    </LinearLayout>

    <!-- 确定、取消 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="0.5"
            android:background="@drawable/yyg_graybtn_selector"
            android:text="取消"
            android:textColor="@color/yyg_clr_black" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/yyg_clr_lightgray2" >
        </LinearLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="0.5"
            android:background="@drawable/yyg_graybtn_selector"
            android:text="确定"
            android:textColor="@color/yyg_clr_black" />
    </LinearLayout>

</LinearLayout>