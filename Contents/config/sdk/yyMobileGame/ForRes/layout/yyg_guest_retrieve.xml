<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/yyg_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dip" >

            <LinearLayout
                android:id="@+id/retrieve_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.yy.gamesdk.view.EditTextDel
                    android:id="@+id/guest_id"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:background="@drawable/yyg_edit_top"
                    android:hint="请输入游客ID"
                    android:inputType="text|textEmailAddress"
                    android:paddingLeft="4dip"
                    android:textSize="21sp" />

                <com.yy.gamesdk.view.EditTextDel
                    android:id="@+id/retrieve_code"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:background="@drawable/yyg_edit_bottom"
                    android:hint="请输入恢复码"
                    android:inputType="text|textEmailAddress"
                    android:paddingLeft="4dip"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/error_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:minLines="1"
                    android:text=""
                    android:textColor="@color/yyg_clr_red"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/commit_btn"
                    style="@style/yyg_btn"
                    android:layout_marginTop="4dip"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:text="@string/yyg_ok"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip"
                    android:text="请在首次使用临时帐号登录游戏的设备相册中找到相应的图片并填写"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/result_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip"
                    android:text="成功找回"
                    android:textColor="@color/yyg_clr_lightblue"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/login_btn"
                    style="@style/yyg_btn"
                    android:layout_width="match_parent"
                    android:layout_height="48dip"
                    android:layout_marginTop="24dip"
                    android:text="@string/yyg_login"
                    android:textSize="21sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>