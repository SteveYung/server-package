<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/paycenter_little_gray" >

    <TextView
        android:id="@+id/tv_login_welcome"
        style="@style/paycenter_text_11_white"
        android:layout_width="fill_parent"
        android:layout_height="22dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/pay_top_remind"
        android:gravity="center"
        android:text="@string/str_paycenter_login_welcome"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/la_login_divider_welcome"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tv_login_welcome"
        android:background="@color/paycenter_black"
        android:orientation="vertical" >
    </LinearLayout>

    <include
        android:id="@+id/la_usercenter_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paycenter_layout_common_title" />

    <LinearLayout
        android:id="@+id/la_login_divider_title"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/la_usercenter_title"
        android:background="@color/paycenter_black"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/la_login_divider_title"
        android:background="@color/paycenter_little_gray" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@color/paycenter_little_gray"
            android:orientation="vertical"
            android:paddingBottom="30dip" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/pay_usercenter_main_body_dividing_line_deep" >
            </View>

            <LinearLayout
                android:id="@+id/la_login_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/paycenter_text_style_3"
                    android:layout_width="84dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="@string/str_paycenter_login_name"
                    android:visibility="visible" />

                <com.mumayi.paymentcenter.ui.usercenter.view.EditTextWithDel
                    android:id="@+id/et_login_user_name"
                    style="@style/tip_gray_16"
                    android:layout_width="0dip"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="木蚂蚁账号"
                    android:imeOptions="actionNext"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="#606062"
                    android:textColorHint="#bbc0c6" />

                <ImageView
                    android:id="@+id/iv_login_user_show_popwindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dip"
                    android:src="@drawable/pay_down_arrow_normal" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@drawable/pay_diving_light_line" >
            </View>

            <LinearLayout
                android:id="@+id/la_login_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="0dip"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/paycenter_text_style_3"
                    android:layout_width="84dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="@string/str_paycenter_login_pass"
                    android:visibility="visible" />

                <com.mumayi.paymentcenter.ui.usercenter.view.EditTextWithDel
                    android:id="@+id/et_login_password"
                    style="@style/tip_gray_16"
                    android:layout_width="0dip"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM-_.@"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="#606062"
                    android:textColorHint="#bbc0c6" />

                <ImageView
                    android:id="@+id/iv_login_display_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dip"
                    android:paddingRight="5dip"
                    android:src="@drawable/pay_undisplay_password"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/pay_usercenter_main_body_dividing_line_deep" >
            </View>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_find_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="24dip"
                    android:background="@drawable/pay_usercenter_icon_problem" />

                <TextView
                    android:id="@+id/tv_login_find_password1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_login_find_password"
                    style="@style/tip20_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dip"
                    android:text="@string/str_paycenter_login_findpass" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="22dip"
                android:layout_marginTop="24dip" >

                <Button
                    android:id="@+id/btn_login_login"
                    style="@style/tip_white"
                    android:layout_width="fill_parent"
                    android:layout_height="44dip"
                    android:background="@drawable/pay_btn_paycenter_login_style"
                    android:text="@string/str_paycenter_login_login" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_divider_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_divider_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dip"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_marginLeft="22dip"
                    android:layout_weight="1"
                    android:background="@drawable/pay_diving_light_line" />

                <TextView
                    style="@style/tip18_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:text="或" />

                <View
                    android:layout_width="0px"
                    android:layout_height="1dip"
                    android:layout_marginRight="22dip"
                    android:layout_weight="1"
                    android:background="@drawable/pay_diving_light_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_regist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="22dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_login_regist"
                    style="@style/tip_gray"
                    android:layout_width="fill_parent"
                    android:layout_height="44dip"
                    android:background="@drawable/button_selector_gray"
                    android:gravity="center"
                    android:text="@string/str_paycenter_login_regist_my"
                    android:textColor="#bbc0c6"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/la_login_divider_virtual"
                    android:layout_width="2dip"
                    android:layout_height="52dip"
                    android:background="@drawable/pay_dividing_virtual"
                    android:orientation="vertical"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_login_autoregist"
                    style="@style/tip_gray"
                    android:layout_width="fill_parent"
                    android:layout_height="44dip"
                    android:layout_marginTop="14dip"
                    android:background="@drawable/button_selector_gray"
                    android:gravity="center"
                    android:text="@string/str_paycenter_login_autoregist"
                    android:textColor="#bbc0c6"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <WebView
        android:id="@+id/wv_findpass"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <TextView
        style="@style/paycenter_text_12_light_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="@string/str_paycenter_email"
        android:visibility="gone" />

    <include
        android:layout_alignParentBottom="true"
        layout="@layout/paycenter_activity_foot"
        android:visibility="visible" />

</RelativeLayout>