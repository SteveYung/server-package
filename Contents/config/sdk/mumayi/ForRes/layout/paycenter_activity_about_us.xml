<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/paycenter_white" >

    <include
        android:id="@+id/la_usercenter_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paycenter_layout_common_title" />

    <RelativeLayout
        android:id="@+id/rl_user_center"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_below="@id/la_usercenter_title"
        android:background="@drawable/pay_usercenter_background_about_us" >

        <ImageView
            android:id="@+id/iv_user_center_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pay_usercenter_icon_user_center_logo" />

        <TextView
            android:id="@+id/tv_user_center_mmy_game"
            style="@style/user_center_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_center_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-55dip"
            android:text="木蚂蚁游戏" />

        <TextView
            android:id="@+id/tv_user_center_mmy_version"
            style="@style/user_center_about_us_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_center_mmy_game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dip"
            android:text="SDK版本3.0" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_user_center"
        android:layout_marginTop="18dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdgeLength="25dip"
        android:listSelector="@color/paycenter_white" >
    </ListView>

    <TextView
        android:id="@+id/tv_user_center_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdgeLength="25dip"
        android:listSelector="@color/paycenter_white"
        android:text="@string/paycenter_foot_game_center"
        android:textColor="@color/paycenter_dark_gray_text"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_user_center"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_user_center_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:orientation="horizontal"
                android:paddingLeft="50dip" >

                <TextView
                    android:id="@+id/tv_user_center_mmy_official"
                    style="@style/user_center_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="官方网站：" />

                <TextView
                    android:id="@+id/tv_user_center_mmy_official_net"
                    style="@style/user_center_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="www.mumayi.com" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_center_2"
                style="@style/user_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_center_1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_user_center_mmy_charge"
                    style="@style/user_center_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网站充值：" />

                <TextView
                    android:id="@+id/tv_user_center_mmy_charge_net"
                    style="@style/user_center_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="pay.mumayi.com" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_center_3"
                style="@style/user_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_center_2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_user_center_mmy_union"
                    style="@style/user_center_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联运合作：" />

                <TextView
                    android:id="@+id/tv_user_center_mmy_union_net"
                    style="@style/user_center_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="dev.mumayi.com" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_center_4"
                style="@style/user_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_center_3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_user_center_mmy_forun"
                    style="@style/user_center_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏论坛：" />

                <TextView
                    android:id="@+id/tv_user_center_mmy_forun_net"
                    style="@style/user_center_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="bbs.mumayi.com" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_center_5"
                style="@style/user_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_center_4"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_user_center_mmy_qq"
                    style="@style/user_center_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商务 Q Q：" />

                <TextView
                    android:id="@+id/tv_user_center_mmy_qq_net"
                    style="@style/user_center_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="123456789" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_center_6"
                style="@style/user_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_center_5"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_user_center_mmy_mail"
                    style="@style/user_center_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈邮箱：" />

                <TextView
                    android:id="@+id/tv_user_center_mmy_mail_net"
                    style="@style/user_center_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="email"
                    android:text="cz@mumayi.com" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>