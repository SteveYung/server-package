<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_q_tip"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="22dip"
        android:background="@drawable/pay_icon_background_offical_green"
        android:gravity="center"
        android:text="Q1"
        android:textColor="@color/paycenter_white"
        android:textSize="14sp" />

    <com.mumayi.paymentcenter.ui.usercenter.view.MyTextView
        android:id="@+id/tv_q_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@id/tv_q_tip"
        android:text="如何充值蚂蚁币?"
        android:textColor="#606062"
        android:background="@null"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_q_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_q_title"
        android:layout_below="@id/tv_q_title"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="6dip"
        android:text="您好,如果需要充值蚂蚁币,请在PC端登录pay.mumayi.com进行充值。"
        android:textColor="#949da9"
        android:background="@null"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dfe2e7"
        android:layout_below="@id/tv_q_msg" />

</RelativeLayout>