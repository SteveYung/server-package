<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_linearlayout_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pay_usercenter_tab_dividing_line"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginRight="1dip"
        android:layout_weight="1"
        android:background="@drawable/tab_bg_" >

        <RadioButton
            android:id="@+id/main_footbar_news"
            style="@style/headerbar"
            android:layout_height="4dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dip"
            android:background="@drawable/tab_bg"
            android:clickable="false" >
        </RadioButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/paycenter_header_week" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="1dip"
        android:layout_weight="1"
        android:background="@drawable/tab_bg_" >

        <RadioButton
            android:id="@+id/main_footbar_question"
            style="@style/headerbar"
            android:layout_height="4dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dip"
            android:background="@drawable/tab_bg"
            android:clickable="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/paycenter_header_week" />
    </RelativeLayout>

</LinearLayout>