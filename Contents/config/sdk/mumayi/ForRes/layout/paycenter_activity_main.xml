<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/la_usercenter_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paycenter_layout_common_title" />

    <include layout="@layout/paycenter_main_header" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/pay_usercenter_solid_line_deep" />

    <com.mumayi.paymentcenter.ui.usercenter.view.ScrollLayout
        android:id="@+id/main_scrolllayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <include layout="@layout/paycenter_charge_record_week" />

        <include layout="@layout/paycenter_charge_record_month" />
    </com.mumayi.paymentcenter.ui.usercenter.view.ScrollLayout>

</LinearLayout>