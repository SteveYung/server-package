<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_group"
    style="@style/paycenter_top_tab_style"
    android:layout_width="fill_parent"
    android:layout_height="42dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_centerVertical="true"
        android:background="#3a3a3a"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dip"
                android:src="@drawable/pay_icon_feedback" />

            <TextView
                android:id="@+id/tv_dial_service"
                style="@style/paycenter_text_18_big_black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:text="问题反馈"
                android:textColor="#bbc0c6"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dip"
                android:src="@drawable/pay_icon_mail" />

            <TextView
                android:id="@+id/tv_send_mail"
                style="@style/paycenter_text_18_big_black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:text="联系邮箱"
                android:textColor="#bbc0c6"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="30dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/paycenter_big_black" />

</RelativeLayout>