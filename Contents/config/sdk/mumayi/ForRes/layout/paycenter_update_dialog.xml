<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_round_corner"
    android:paddingBottom="15dip" >

    <ImageView
        android:layout_width="4dip"
        android:layout_height="22dip"
        android:layout_marginTop="18dip"
        android:src="@drawable/icon_short_line_header" />

    <TextView
        android:id="@+id/tv_paycenter_update_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="18dip"
        android:text="@string/paycenter_faqs_dial_service"
        android:textColor="#bbc0c6"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:layout_below="@id/tv_paycenter_update_dialog_title"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="12dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_paycenter_update_dialog_remond"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="tip"
            android:maxLines="4"
            android:textColor="#606062"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/la_update_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/paycenter_down_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:textSize="16sp"
                android:text="@string/paycenter_down_tip"
                android:visibility="gone"/>

            <com.mumayi.paymentcenter.ui.usercenter.view.ProgressBarWithText
                android:id="@+id/pb_update_download"
                style="@style/progressbar"
                android:layout_width="match_parent"
                android:layout_height="12dip"
                android:layout_marginBottom="12dip"
                android:layout_marginTop="12dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_container"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dip"
        android:layout_marginRight="48dip"
        android:layout_marginTop="10dip" >

        <Button
            android:id="@+id/btn_update_cancel"
            style="@style/paycenter_text_style_4"
            android:layout_width="0dip"
            android:layout_height="42dip"
            android:layout_marginRight="18dip"
            android:layout_weight="1"
            android:background="@drawable/btn_binphone_cancel"
            android:text="@string/Cancel"
            android:textColor="#949da9"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_update_submit"
            style="@style/paycenter_text_style_4"
            android:layout_width="0dip"
            android:layout_height="42dip"
            android:layout_marginLeft="18dip"
            android:layout_weight="1"
            android:background="@drawable/pay_btn_paycenter_login_style"
            android:gravity="center"
            android:text="@string/str_paycenter_center_modifyinfo"
            android:textColor="@color/paycenter_white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>