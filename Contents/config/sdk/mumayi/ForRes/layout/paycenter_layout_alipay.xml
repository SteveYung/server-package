<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/paycenter_little_gray"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_alipay_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dip"
        android:src="@drawable/pay_type_alipay" />

    <TextView
        android:id="@+id/tv_alipay_confirm"
        style="@style/paycenter_text_14_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/pay_confirm_alipay" />

    <TextView
        android:id="@+id/tv_company_email"
        style="@style/paycenter_text_14_dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:text="@string/str_paycenter_email" />

    <Button
        android:id="@+id/btn_goto_pay_alipay"
        style="@style/paycenter_text_14_realwhite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_company_email"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/pay_alix_style"
        android:text="@string/pay_goto_alipay" />

</RelativeLayout>