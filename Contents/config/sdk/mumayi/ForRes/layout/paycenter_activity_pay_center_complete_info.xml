<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/paycenter_white" >

    <RelativeLayout
        android:id="@+id/ra_completeinfo_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/pay_secend_back" >

        <Button
            android:id="@+id/btn_completeinfo_exit"
            android:layout_width="45dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dip"
            android:background="@drawable/pay_btn_paycenter_exit_style" />

        <TextView
            android:id="@+id/tv_completeinfo_login"
            style="@style/paycenter_text_16_white_shadow_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_paycenter_complete_info" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ra_completeinfo_title" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:background="@drawable/pay_content_background"
            android:orientation="vertical"
            android:paddingBottom="50dip" >

            <LinearLayout
                android:id="@+id/la_completeinfo_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/paycenter_text_style_3"
                    android:layout_width="85dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="@string/str_paycenter_login_name" />

                <EditText
                    android:id="@+id/et_completeinfo_user_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/pay_input_pay_style"
                    android:hint="@string/str_paycenter_complete_upate_onetime"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/paycenter_skin_black_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_completeinfo_oldpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/paycenter_text_style_3"
                    android:layout_width="85dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="@string/str_paycenter_complete_oldpass" />

                <EditText
                    android:id="@+id/et_completeinfo_old_password"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/pay_input_pay_style"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/paycenter_skin_black_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_completeinfo_newpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/paycenter_text_style_3"
                    android:layout_width="85dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="@string/str_paycenter_complete_newpass" />

                <EditText
                    android:id="@+id/et_completeinfo_new_password"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/pay_input_pay_style"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/paycenter_skin_black_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_completeinfo_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/paycenter_text_style_3"
                    android:layout_width="85dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="@string/str_paycenter_complete_phone" />

                <EditText
                    android:id="@+id/et_completeinfo_phone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/pay_input_pay_style"
                    android:digits="1234567890"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:textColor="@color/paycenter_skin_black_2" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_completeinfo_submit"
                style="@style/paycenter_text_style_4"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/pay_btn_paycenter_save_style"
                android:text="@string/str_paycenter_complete_save"
                android:textColor="@color/paycenter_skin_black_2" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>