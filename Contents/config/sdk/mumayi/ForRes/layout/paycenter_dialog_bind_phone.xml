<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/la_bindphone"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_corner"
    android:paddingBottom="14dip" >

    <ImageView
        android:layout_width="4dip"
        android:layout_height="22dip"
        android:layout_marginTop="17dip"
        android:src="@drawable/icon_short_line_header" />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="18dip"
        android:text="@string/paycenter_bind_phone_dialog_title"
        android:textColor="#bbc0c6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_title"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="10dip"
        android:text="@string/paycenter_bind_phone_dialog_tip"
        android:textColor="#606062"
        android:textSize="16sp" />

    <com.mumayi.paymentcenter.ui.usercenter.view.EditTextWithDel
        android:id="@+id/et_bind_phone_phonenum"
        style="@style/tip_gray"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_below="@id/tv_dialog_msg"
        android:layout_marginTop="10dip"
        android:background="@drawable/edit_bg"
        android:gravity="center"
        android:hint="@string/str_paycenter_user_bindphone_tip"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="phone"
        android:textColor="@color/paycenter_skin_black_2"
        android:textColorHint="@color/paycenter_light_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_bind_phone_phonenum"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="10dip" >

        <Button
            android:id="@+id/btn_phone_ok"
            style="@style/paycenter_text_style_4"
            android:layout_width="112dip"
            android:layout_height="38dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/pay_btn_paycenter_login_style"
            android:text="@string/paycenter_bind_phone_dialog_ok"
            android:textColor="@color/paycenter_white" />

        <Button
            android:id="@+id/btn_phone_cancel"
            style="@style/paycenter_text_style_4"
            android:layout_width="112dip"
            android:layout_height="38dip"
            android:background="@drawable/btn_binphone_cancel"
            android:text="@string/paycenter_bind_phone_dialog_cancel"
            android:textColor="#949da9" />
    </RelativeLayout>

</RelativeLayout>