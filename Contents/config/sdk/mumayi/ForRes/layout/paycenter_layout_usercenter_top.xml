<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_group"
    style="@style/paycenter_top_tab_style"
    android:layout_width="fill_parent"
    android:layout_height="42dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:layout_centerVertical="true"
        android:background="@color/paycenter_little_gray_white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/rb_1"
            style="@style/paycenter_text_18_big_black"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/paycenter_little_gray_white"
            android:gravity="center"
            android:text="@string/str_paycenter_center_account_setting" />

        <TextView
            android:id="@+id/rb_2"
            style="@style/paycenter_text_18_big_black"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/paycenter_little_gray_white"
            android:gravity="center"
            android:text="@string/str_paycenter_center_good_game" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="42dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pay_title_dividing_line" />

</RelativeLayout>