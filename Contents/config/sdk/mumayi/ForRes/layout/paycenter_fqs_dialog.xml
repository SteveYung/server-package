<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_corner"
    android:paddingBottom="26dip" >

    <ImageView
        android:layout_width="4dip"
        android:layout_height="22dip"
        android:layout_marginTop="18dip"
        android:src="@drawable/icon_short_line_header" />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="18dip"
        android:text="@string/paycenter_faqs_dial_service"
        android:textColor="#bbc0c6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:layout_marginTop="12dip"
        android:gravity="center"
        android:text="@string/paycenter_faqs_tip"
        android:textColor="#606062"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="26dip" >

        <Button
            android:id="@+id/btn_fqs_cancel"
            style="@style/paycenter_text_style_4"
            android:layout_width="0dip"
            android:layout_height="42dip"
            android:layout_marginRight="11dip"
            android:layout_weight="1"
            android:background="@drawable/btn_binphone_cancel"
            android:text="@string/paycenter_faqs_cancel"
            android:textColor="#949da9" />

        <Button
            android:id="@+id/btn_fqs_ok"
            style="@style/paycenter_text_style_4"
            android:layout_width="0dip"
            android:layout_height="42dip"
            android:layout_marginLeft="11dip"
            android:layout_weight="1"
            android:background="@drawable/pay_btn_paycenter_login_style"
            android:text="@string/paycenter_faqs_ok"
            android:textColor="@color/paycenter_white" />
    </LinearLayout>

</RelativeLayout>