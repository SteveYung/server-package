<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mini_menu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    
     >

    <ImageView
        android:id="@+id/mini_muen_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:src="@drawable/pay_mini_browser_open_muen_sign" />

    <LinearLayout
        android:id="@+id/mini_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="3dip" >

        <ImageView
            android:id="@+id/mini_muen_backward"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/batch_bottom_left_style"
            android:src="@drawable/pay_mini_browser_disabled_left" />

        <ImageView
            android:id="@+id/mini_muen_forward"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/batch_bottom_mid_style"
            android:src="@drawable/pay_mini_browser_disabled_right" />

        <ImageView
            android:id="@+id/mini_muen_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/batch_bottom_mid_style"
            android:src="@drawable/pay_mini_browser_refresh"
            android:text="刷新" />

        <ImageView
            android:id="@+id/mini_muen_close"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/batch_bottom_right_style"
            android:src="@drawable/pay_mini_browser_close_muen_sign" />
    </LinearLayout>

</RelativeLayout>