<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background"
		
	>
		<clip android:drawable="@drawable/pay_mini_browser_progressbar_bg">
			<shape>

				<corners android:radius="0dip" />
				
			</shape>
			</clip>
	</item>

	

	



	<item android:id="@android:id/secondaryProgress">

		<clip android:drawable="@drawable/pay_mini_browser_progressbar_bg">

			

		</clip>

	</item>



	<item android:id="@android:id/progress">

		<clip>

			<shape>

				<corners android:radius="0dip" />

				<!-- 进度条从上到下的颜色渐变 -->
				<gradient android:startColor="#ffc1ef61"

					android:centerColor="#ffc1ef61" android:centerY="0.75"

					android:endColor="#ffc1ef61" android:angle="270" />
			</shape>

		</clip>

	</item>


</layer-list> 