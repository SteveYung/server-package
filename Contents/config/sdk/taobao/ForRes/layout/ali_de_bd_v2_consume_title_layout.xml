<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ali_de_bd_v2_consume_dialog_title_rly"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/ali_de_bd_v2_consume_dialog_title_bg"
        >
        <TextView 
            android:id="@+id/ali_de_bd_v2_consume_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:textColor="@color/ali_de_bd_color_v2_consume_text"
            android:singleLine="true"
            />
        
        <ImageButton
            android:id="@+id/ali_de_bd_v2_consume_dialog_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ali_de_bd_dialog_close_btn_selector"
            />
    </RelativeLayout>