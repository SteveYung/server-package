<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/ali_de_bd_v3_activity_consume_top_view_bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/ali_de_bd_string_v3_consume_price_title" 
            android:textColor="@color/ali_de_bd_color_v3_consume_text"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            >

            <TextView
                android:id="@+id/ali_de_bd_v3_id_consume_info_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/ali_de_bd_string_v3_consume_price_title"
                android:textSize="36sp"
                android:textColor="@color/ali_de_bd_color_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ali_de_bd_string_v3_consume_price_unit"
                android:textSize="18sp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:textColor="@color/ali_de_bd_color_v3_consume_text"/>
        </LinearLayout>
    </LinearLayout>

    <Button 
        android:id="@+id/ali_de_bd_v3_consume_info_close_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ali_de_bd_v3_activity_consume_top_view_close_btn"
        />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ali_de_bd_v3_consume_info_close_btn"
        android:layout_marginTop="28dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/ali_de_bd_string_v3_consume_deposite_title" 
            android:textColor="@color/ali_de_bd_color_v3_consume_text"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/ali_de_bd_v3_id_consume_info_deposite_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="7dp"
            android:text="@string/ali_de_bd_string_v3_consume_price_unit" 
            android:textColor="@color/ali_de_bd_color_v3_consume_text"
            android:textSize="15sp"/>
    </LinearLayout>
    
</RelativeLayout>