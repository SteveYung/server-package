<?xml version="1.0" encoding="UTF-8"?>
<com.taobao.de.aligame.views.BaodianResizeScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ali_de_bd_charge_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollY="0px"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <include
                android:id="@+id/id_ali_de_bd_charge_user_info_field" 
                layout="@layout/ali_de_bd_activity_charge_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <include
                android:id="@+id/id_ali_de_bd_charge_fp_field"
                layout="@layout/ali_de_bd_activity_charge_price_info" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ali_de_bd_dimen_charge_margin"
                android:layout_marginRight="@dimen/ali_de_bd_dimen_charge_margin"
                android:layout_marginTop="@dimen/ali_de_bd_dimen_charge_margin"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_ali_de_bd_charge_alter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ali_de_bd_dimen_charge_margin"
                android:layout_marginRight="@dimen/ali_de_bd_dimen_charge_margin"
                android:gravity="left"
                android:textSize="14sp"
                android:textColor="@color/ali_de_bd_color_red"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/id_ali_de_bd_charge_pay_btn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="9dp"
                android:text="@string/ali_de_bd_string_charge_pay"
                android:textColor="@color/ali_de_bd_color_white"
                android:shadowDy="1"
                android:shadowColor="@color/ali_de_bd_color_black"
                android:background="#015ba7"
                />
        </LinearLayout>
    </LinearLayout>

</com.taobao.de.aligame.views.BaodianResizeScrollView>