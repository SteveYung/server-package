<?xml version="1.0" encoding="UTF-8"?>
<com.taobao.de.aligame.views.BaodianPriceInfoFieldView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ali_de_bd_string_charge_price_block_tag"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/ali_de_bd_color_black"
        />

    <com.taobao.de.aligame.views.BaodianFacepriceGridView
        android:id="@+id/ali_de_bd_gridview_charge_price_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:listSelector="@color/ali_de_bd_color_transparent"
        android:numColumns="3"
        android:scrollbars="none"
        />

    <LinearLayout
        android:id="@+id/ali_de_bd_gridview_charge_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ali_de_bd_dimen_charge_price_heigth"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ali_de_bd_gridview_charge_input_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="@dimen/ali_de_bd_dimen_common_margin"
            android:inputType="number"
            android:digits="0123456789"
            android:background="@drawable/ali_de_bd_charge_fp_input_normal"
            android:hint="@string/ali_de_bd_string_charge_input_hint"
            android:textSize="14sp"
            android:maxLength="8"
            android:imeOptions="actionDone"
            android:textColorHint="@color/ali_de_bd_color_charge_fp_input_hint"
            />

        <TextView
            android:id="@+id/ali_de_bd_gridview_charge_input_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:text="@string/ali_de_bd_string_charge_input_warning"
            android:textColor="@color/ali_de_bd_color_charge_fp_input_hint"/>
    </LinearLayout>

    <TextView 
        android:id="@+id/ali_de_bd_gridview_charge_submit_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ali_de_bd_string_charge_submit_alter"
        android:textColor="@color/ali_de_bd_color_charge_price"
        android:singleLine="true"
        android:visibility="gone"
        />
    
    <TextView
        android:id="@+id/ali_de_bd_gridview_charge_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:textColor="@color/ali_de_bd_color_black"
        android:textSize="15sp"
        />
</com.taobao.de.aligame.views.BaodianPriceInfoFieldView>