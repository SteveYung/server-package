<?xml version="1.0" encoding="UTF-8"?>
<com.taobao.de.aligame.views.BaodianSlideOverlapBtn xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ali_de_bd_v3_consume_extra_pay_method_bg"
    >

    <LinearLayout
        android:id="@+id/test_slide_btn_overlap_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/test_slide_btn_overlap_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textColor="@color/ali_de_bd_color_v3_consume_pay_btn_text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ali_de_bd_v3_activity_consume_left_arrow"
            />

        <TextView
            android:id="@+id/test_slide_btn_overlap_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/ali_de_bd_string_v3_consume_extra_paymethod_btn_text"
            android:textColor="@color/ali_de_bd_color_white"
            android:textSize="18sp"
            android:background="@drawable/ali_de_bd_v3_consume_extra_pay_method_rb_bg"
            />
    </LinearLayout>

    <RelativeLayout 
        android:id="@+id/test_slide_btn_front_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
	        android:id="@+id/test_slide_btn_front"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textColor="@color/ali_de_bd_color_v3_consume_pay_btn_text"
	        android:textSize="18sp" 
	        android:drawableRight="@drawable/ali_de_bd_v3_activity_consume_right_arrow"
	        android:background="#ffe4e4e4"
	        />
    </RelativeLayout>
    

</com.taobao.de.aligame.views.BaodianSlideOverlapBtn>