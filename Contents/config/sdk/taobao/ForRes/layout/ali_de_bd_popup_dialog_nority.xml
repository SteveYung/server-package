<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/ali_de_bd_color_white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_ali_de_bd_popup_notify_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            style="@style/ali_de_bd_style_consume_dialog_notify_text"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            />

        <Button
            android:id="@+id/id_ali_de_bd_popup_notify_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#015ba7"
            android:shadowColor="@color/ali_de_bd_color_black"
            android:shadowDy="1"
            android:text="@string/ali_de_bd_string_ok"
            android:textColor="@color/ali_de_bd_color_white"
            />
    </LinearLayout>

</RelativeLayout>