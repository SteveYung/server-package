<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:scrollbars="none"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/ali_de_bd_v3_id_activity_consume_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/ali_de_bd_v3_activity_consume_top_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ali_de_bd_v3_id_activity_consume_top_view"
            android:layout_marginTop="-10dp"
            android:background="@drawable/ali_de_bd_v3_consume_below_half_bg"
            android:orientation="vertical" >

            <com.taobao.de.aligame.views.BaodianPayBtnContainer
                android:id="@+id/ali_de_bd_id_consume_paybtn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >
            </com.taobao.de.aligame.views.BaodianPayBtnContainer>

            <include
                android:id="@+id/ali_de_bd_id_consume_credit_protocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                layout="@layout/ali_de_bd_v3_consume_checkbox_protocal_veiw" />

            <View 
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ali_de_bd_v3_consume_sepetator_line"
                />
            
            <include
                android:id="@+id/ali_de_bd_id_consume_extra_pay_method_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                layout="@layout/ali_de_bd_slide_btn_view" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>