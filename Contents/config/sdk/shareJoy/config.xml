<?xml version="1.0" encoding="utf-8"?>
<config>
	<paramLs>
		<param name = "ShareJoyMerchantId" required = "1" desc = "sharejoy" showName = "Merchant_Id" bWriteIntoManifest = "0" bUserOffer = "1"/>
		<param name = "ShareJoyAppId" required = "1" desc = "sharejoy" showName = "App_Id" bWriteIntoManifest = "0" bUserOffer = "1" />
        <param name = "ShareJoyServerId" required = "1" desc = "sharejoy" showName = "Server_Id" bWriteIntoManifest = "0" bUserOffer = "1" />
        <param name = "ShareJoyAppKey" required = "1" desc = "sharejoy" showName = "App_Key" bWriteIntoManifest = "0" bUserOffer = "1" />
         <param name = "ShareJoySecretKey" required = "1" desc = "sharejoy" showName = "Secret_Key" bWriteIntoManifest = "0" bUserOffer = "1" bWriteIntoClient = "0"/>
        <param name = "callback" required = "1" desc = "sharejoy" showName = "支付通知地址" bWriteIntoManifest = "0" bUserOffer = "1" bWriteIntoClient = "0"/>
	</paramLs>
	
	<operateLs>
