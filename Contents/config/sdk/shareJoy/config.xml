	</operateLs>
	<version code = "1001" showVersion = "2.0.1_2.2.4" >
        <![CDATA[
        1.支持登出(logout)</br>
		2.不支持客户端配置回调地址</br>
    ]]>
    </version>
	<pluginLs>
		<plugin name = "UserShareJoy" typePlugin = "0" desc = "sharejoy"/>
		<plugin name = "IAPOnlineShareJoy" typePlugin = "2" desc = "sharejoy"/>
	</pluginLs>
</config>