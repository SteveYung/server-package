<?xml version="1.0" encoding="utf-8"?>
<manifestConfig xmlns:android="http://schemas.android.com/apk/res/android">

    <permissionCfg>
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="com.android.vending.BILLING" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    </permissionCfg>

    <applicationCfg keyword="com.efunfun.LoginActivity">

        <!-- sdk begin -->
         <!-- 版本更新 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunAdAndVersionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector" >
        </activity>

        <!-- 绑定 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunBindActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector" >
        </activity>

        <!-- 登陆 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunLoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask"
            android:theme="@style/LightThemeSelector" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunAccountLoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask"
            android:theme="@style/LightThemeSelector" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunRegActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunRegistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunForgetActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector" >
            <intent-filter>
                <action android:name="android.intent.action.CALL" />
            </intent-filter>
        </activity>
        <!-- 賬號找回，試玩賬號找回 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunFindBackAccountActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector" />
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunGoogleLoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" />

        <!-- 客服 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunCsCenterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunOnlineCSActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunCsCaseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- 储值 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunPayIndexActivty"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunWebPayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:theme="@style/LightThemeSelector"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.efunfunpay.efunfunpaysdk.EfunfunGooglePayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask"
            android:theme="@style/LightThemeSelector" />

        <!-- 分享 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunFacebookShareActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/LightThemeSelector" />
        <!-- 客服 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunCsPhoneActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Dialog" />
        <!-- 切換伺服器 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunChangeServiceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask"
            android:theme="@style/LightThemeSelector" />
        <!-- 隱私條例 -->
        <activity
            android:name="com.efunfun.efunfunplatformbasesdk.ui.EfunfunPrivatcyPageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity" />

        <receiver
            android:name="com.appsflyer.MultipleInstallBroadcastReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.google.ads.conversiontracking.InstallReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.efunfun.direction"
            android:value="p" />
        <!-- sdk end -->
</applicationCfg>

</manifestConfig>