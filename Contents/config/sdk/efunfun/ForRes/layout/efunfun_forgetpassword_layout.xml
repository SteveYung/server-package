<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/efunfun_login_bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <include layout="@layout/efunfun_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView 
        android:id="@+id/eff_forget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/eff_title_bg"
        android:text="@string/eff_forget_findback"
        />
    <LinearLayout 
        android:id="@+id/eff_forget_mailinput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/eff_input_bg"
        >
	    <EditText 
	        android:id="@+id/eff_forget_findback_mail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/eff_input_bg"
	        android:hint="@string/eff_forget_email"
	        android:imeOptions="actionGo|flagNoExtractUi"
	        android:singleLine="true"
	        />
    </LinearLayout>
    <Button 
        android:id="@+id/eff_forgetpassword_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/efunfun_submit"
        android:text="@string/eff_reg_submit"
        android:textColor="#ffffff"
        />
</LinearLayout>