<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efunfun_bg_color" >

    <include
        android:id="@+id/eff_top"
        layout="@layout/efunfun_header_layout" />

    <RadioGroup
        android:id="@+id/eff_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_top"
        android:background="@drawable/eff_title_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/eff_phone_reg"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:paddingLeft="0dp"
            android:checked="true"
            android:gravity="center"
            android:text="@string/eff_reg_by_phone"
            android:textColor="@drawable/eff_reg_selector" />

        <View
            android:layout_width="1px"
            android:layout_height="40px"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/eff_email_reg"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:button="@null"
            android:gravity="center"
            android:text="@string/eff_reg_by_email"
            android:textColor="@drawable/eff_reg_selector" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_title"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            >

            <View
                android:id="@+id/eff_phone_reg_line"
                android:layout_centerInParent="true"
                android:layout_width="220px"
                android:layout_height="2px"
                android:background="#E20647" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <View
                android:id="@+id/eff_email_reg_line"
                android:layout_centerInParent="true"
                android:layout_width="220px"
                android:layout_height="2px"
                android:background="#E20647" 
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/eff_reg_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_title" />

</RelativeLayout>