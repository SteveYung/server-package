<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/eff_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efunfun_layout_bg_s"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/efunfun_title_layout" />

        <TextView
            android:id="@+id/eff_cs_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/eff_blue"
            android:text="@string/eff_cs_center_title"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/eff_cs_logo"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

        <RelativeLayout
            android:id="@+id/eff_cs_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/eff_cs_phone_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/eff_cs_phone_icon" />

            <TextView
                android:id="@+id/eff_cs_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/eff_cs_phone_image"
                android:gravity="center_vertical"
                android:text="@string/eff_cs_phone_text" />

            <TextView
                android:id="@+id/eff_cs_phone_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/eff_privacy_text_color" />

            <ImageView
                android:id="@+id/eff_cs_phone_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/eff_cs_sign_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eff_cs_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/eff_cs_online_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/eff_cs_online_icon" />

            <TextView
                android:id="@+id/eff_cs_online_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/eff_cs_online_image"
                android:gravity="center_vertical"
                android:text="@string/eff_cs_online_text" />

            <TextView
                android:id="@+id/eff_cs_online_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/eff_privacy_text_color" />

            <ImageView
                android:id="@+id/eff_cs_online_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/eff_cs_sign_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eff_cs_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/eff_cs_case_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/eff_cs_case_icon" />

            <TextView
                android:id="@+id/eff_cs_case_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/eff_cs_case_image"
                android:gravity="center_vertical"
                android:text="@string/eff_cs_case_text" />

            <TextView
                android:id="@+id/eff_cs_case_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/eff_privacy_text_color" />

            <ImageView
                android:id="@+id/eff_cs_case_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/eff_cs_sign_right" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>