<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efunfun_login_bg_color"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/efunfun_header_layout" />

    <TextView
        android:id="@+id/efunfun_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eff_title_bg"
        android:gravity="center"
        android:text="@string/efunfun_login_title"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/efunfun_login_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/efunfun_login_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/efunfun_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/efunfun_login_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/efunfun_account"
                android:textColor="@android:color/black" />

            <AutoCompleteTextView
                android:id="@+id/efunfun_login_auto_complete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/efunfun_account_hint"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/efunfun_login_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/efunfun_down_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/efunfun_login_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/efunfun_input_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/efunfun_login_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/efunfun_password"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/efunfun_login_input_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/efunfun_password_hint"
                android:imeOptions="actionGo|flagNoExtractUi"
                android:password="true"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/efunfun_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/efunfun_login_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/efunfun_submit"
                android:text="@string/efunfun_login"
                android:textColor="@color/eff_white" />

            <Button
                android:id="@+id/efunfun_login_guest_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/eff_blue"
                android:text="@string/efunfun_guest_login"
                android:textColor="@color/eff_white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/efunfun_login_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/efunfun_login_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableLeft="@drawable/efunfun_registration_bg"
                android:text="@string/efunfun_regist"
                android:textColor="@color/eff_gray" />

            <Button
                android:id="@+id/efunfun_login_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableLeft="@drawable/efunfun_forget_password_bg"
                android:text="@string/efunfun_forget_password"
                android:textColor="@color/eff_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/efunfun_login_quick_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/efunfun_quick_login"
            android:textColor="#707070" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="#8a8a8a" />

        <LinearLayout
            android:id="@+id/efunfun_login_party_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- <ImageButton -->
            <!-- android:id="@+id/efunfun_login_fb_button" -->
            <!-- android:layout_width="220px" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:background="@drawable/efunfun_fb_bg" /> -->

            <ImageButton
                android:id="@+id/efunfun_login_google_button"
                android:layout_width="220px"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>