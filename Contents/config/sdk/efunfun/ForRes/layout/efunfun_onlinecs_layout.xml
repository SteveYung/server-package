<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efunfun_bg_color" >

    <RelativeLayout
        android:id="@+id/eff_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efunfun_layout_bg_s" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/efunfun_title_layout" />

        <TextView
            android:id="@+id/eff_cs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/eff_online_cs"
            android:textColor="@color/eff_blue"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/eff_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eff_cs_text"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eff_question_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/eff_question_title" />

            <EditText
                android:id="@+id/eff_question_input_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/eff_cs_input_bg"
                android:hint="@string/eff_cs_online_title_hint"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eff_question_tyte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eff_question_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eff_question_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/eff_question_type" />

            <Spinner
                android:id="@+id/eff_question_type_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/eff_question_type_bg"
                android:prompt="@string/eff_question_type_prompt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eff_question_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eff_question_tyte"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eff_question_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/eff_question_msg" />

            <EditText
                android:id="@+id/eff_question_input_msg"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_marginLeft="10dp"
                android:background="@drawable/eff_cs_input_bg"
                android:gravity="top"
                android:hint="@string/eff_cs_online_msg_hint"
                android:inputType="textMultiLine"
                android:minLines="10" />
        </LinearLayout>

        <TextView
            android:id="@+id/eff_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eff_question_msg"
            android:background="@drawable/eff_cs_input_blue_bg"
            android:gravity="center"
            android:text="@string/eff_question_submit"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>