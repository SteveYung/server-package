<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/eff_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efunfun_layout_bg_s" >

        <ImageView
            android:id="@+id/eff_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/eff_logo" />

        <RelativeLayout
            android:id="@+id/eff_guest_login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/efunfun_login_submit"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/eff_guest_login_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/efunfun_guest_login"
                    android:textColor="@color/eff_guest_login_text_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eff_fb_login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/efunfun_login_submit"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/eff_fb_login_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/efunfun_facebook_login"
                    android:textColor="@color/eff_fb_login_text_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/eff_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/eff_fb_login_layout"
            android:background="@drawable/eff_or_img" />

        <Button
            android:id="@+id/eff_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/efunfun_login_submit_blue"
            android:padding="0dp"
            android:text="@string/efunfun_account_login"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eff_privacy_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eff_account_login"
            android:layout_below="@+id/eff_account_login"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/efunfun_privacy_page"
            android:textColor="@color/eff_privacy_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>