<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/eff_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/eff_title_bg" />

    <Button
        android:id="@+id/eff_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/efunfun_return_bg"
        android:text="@string/efunfun_back"
        android:textColor="@color/eff_privacy_text_color"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/eff_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/eff_logo_small" />

</RelativeLayout>