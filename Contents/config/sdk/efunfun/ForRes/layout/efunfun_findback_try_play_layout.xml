<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/eff_tv_declare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/eff_find_back_declare"
        android:textColor="@color/eff_findback" />

    <RelativeLayout
        android:id="@+id/eff_ly_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/efunfun_login_submit"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eff_username_img" />

            <EditText
                android:id="@+id/eff_et_uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="@string/eff_find_back_input_uid" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eff_ly_recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/efunfun_login_submit"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eff_recovery_img" />

            <EditText
                android:id="@+id/eff_et_recovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="@string/eff_find_back_input_recovery" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eff_ly_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/efunfun_login_submit"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eff_email_img" />

            <EditText
                android:id="@+id/eff_et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="@string/eff_find_back_input_account"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/eff_ly_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/efunfun_login_submit"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eff_password_img" />

            <EditText
                android:id="@+id/eff_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="@string/eff_find_back_input_pass"
                android:inputType="textPassword" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eff_ly_surepass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/efunfun_login_submit"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/eff_password_img" />

            <EditText
                android:id="@+id/eff_et_surepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="@string/eff_find_back_input_pass_agame"
                android:inputType="textPassword" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/eff_bt_commit_try_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/efunfun_login_submit_blue"
        android:padding="0dp"
        android:text="@string/efunfun_retry"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>