<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/eff_cs_question_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/eff_cs_replay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#68aac8" >

           <EditText
                android:id="@+id/eff_cs_replay_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/eff_cs_replay_button"
                android:background="@drawable/eff_cs_input_bg"
                android:hint="@string/eff_cs_reply_hint"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textColor="#002222" >
            </EditText>

            <TextView
                android:id="@+id/eff_cs_replay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/eff_cs_input_blue_bg"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/eff_cs_reply_button"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/eff_grade_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/eff_grade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/eff_cs_case_grade" />

            <RatingBar
                android:id="@+id/eff_grade"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="5" />
        </LinearLayout>

        <TextView
            android:id="@+id/eff_cs_case_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eff_cs_case_prompt"
            android:layout_marginTop="5dp"
            android:textColor="#E30043" />

        <TextView
            android:id="@+id/eff_cs_grade_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/eff_cs_reply_submit_selector"
            android:gravity="center"
            android:text="@string/eff_cs_grade_button"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>