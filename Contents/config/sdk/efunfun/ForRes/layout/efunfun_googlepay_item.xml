<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eff_google_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eff_google_play_item_blue"
    android:orientation="vertical" 
    android:gravity="center"
     >
     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3"
	    android:orientation="horizontal" 
	    android:gravity="center"
	    >

        <TextView
            android:id="@+id/eff_google_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="money"
            android:textColor="#FFFFFF" />

         <TextView
             android:id="@+id/eff_google_item_equal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="equal"
             android:textColor="#FFFFFF" />

           <TextView
               android:id="@+id/eff_google_item_coin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="left|center_vertical"
               android:text="coin"
               android:textColor="#FFFFFF" />

           </LinearLayout>

           <LinearLayout
               android:id="@+id/eff_google_item_coin_desc_linearlayout"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2"
               android:gravity="center|top"
               android:orientation="horizontal" 
               android:visibility="gone"
               >
           <TextView
               android:id="@+id/eff_google_item_coin_desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="desc"
               android:textColor="#FFFFFF" />

            </LinearLayout>
</LinearLayout>