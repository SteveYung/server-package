<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/eff_reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_title"
        android:background="@drawable/eff_input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/eff_reg_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/eff_reg_name" />

        <EditText
            android:id="@+id/eff_reg_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eff_reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_reg_name"
        android:background="@drawable/eff_input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/eff_reg_pw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/eff_reg_password" />

        <EditText
            android:id="@+id/eff_reg_input_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:inputType="textWebPassword"
            android:hint="@string/eff_reg_input_password" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eff_reg_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_reg_password"
        android:background="@drawable/eff_input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/eff_reg_conpw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/eff_reg_confirm_password" />

        <EditText
            android:id="@+id/eff_reg_input_conpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:inputType="textWebPassword"
            android:hint="@string/eff_reg_input_confirm_password" />
    </LinearLayout>

    <TextView
        android:id="@+id/eff_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eff_reg_confirm_password"
        android:background="@drawable/eff_submit_selector"
        android:gravity="center"
        android:text="@string/eff_reg_submit"
        android:textColor="@android:color/white" />

</RelativeLayout>