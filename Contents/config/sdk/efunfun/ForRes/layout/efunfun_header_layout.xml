<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/efunfun_login_header_root"
    android:background="@drawable/efunfun_head_top_bg"
    >

    <Button
        android:id="@+id/efunfun_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/efunfun_return_bg"
        android:text="@string/efunfun_back"
        android:textColor="@android:color/white" />
    
     <ImageView
        android:id="@+id/efunfun_header_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/eff_logo"/>

</RelativeLayout>
