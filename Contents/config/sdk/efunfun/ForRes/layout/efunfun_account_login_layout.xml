<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/eff_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efunfun_layout_bg_s" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/efunfun_title_layout" />

        <TextView
            android:id="@+id/eff_account_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/efunfun_login_title"
            android:textColor="@color/eff_blue"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/eff_login_username_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/efunfun_login_submit"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eff_username_img" />

<!--                 <EditText -->
                <AutoCompleteTextView
                    android:imeOptions="actionNext"
                    android:id="@+id/eff_login_username_input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true" 
                    android:background="@android:color/transparent"
                    android:hint="@string/efunfun_account_hint" />
                
             <ImageButton
                android:id="@+id/efunfun_login_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:src="@drawable/efunfun_down_bg" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eff_login_password_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/efunfun_login_submit"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/eff_password_img" />

                <EditText
                    android:id="@+id/eff_login_password_input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/efunfun_password_hint"
                    android:inputType="textPassword" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/eff_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/efunfun_login_submit_blue"
            android:padding="0dp"
            android:text="@string/efunfun_login"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eff_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eff_login_button"
            android:layout_below="@+id/eff_login_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/efunfun_forget_password"
            android:textColor="@color/eff_privacy_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/eff_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/eff_login_button"
            android:layout_below="@+id/eff_login_button"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:text="@string/efunfun_regist"
            android:textColor="@color/eff_guest_login_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>