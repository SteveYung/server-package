<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/eff_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efunfun_layout_bg_s"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/efunfun_title_layout" />
        
        <TextView
            android:id="@+id/eff_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/eff_pay_text"
            android:textColor="@color/eff_blue"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/eff_googlepay_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/eff_google_role_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/efunfun_role_name_pay"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/eff_google_server_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/efunfun_current_server_pay"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/eff_google_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/efunfun_pay_coin_type"
                android:textColor="@color/eff_google_play_item_blue"
                android:textSize="22sp" />

            <RelativeLayout
                android:id="@+id/eff_googlepay_list_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp" >

                <GridView
                    android:id="@+id/eff_googlepay_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="3dp" >
                </GridView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>