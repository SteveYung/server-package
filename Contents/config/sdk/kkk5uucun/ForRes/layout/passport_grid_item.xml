<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/pass_icon_container"
        android:layout_width="@dimen/passport_large_icon_width"
        android:layout_height="@dimen/passport_large_icon_width"
        android:background="@drawable/sdk_btn_user_selector" 
        android:clickable="true">

        <ImageView
            android:id="@id/passport_usericon"
            android:layout_width="@dimen/passport_icon_width"
            android:layout_height="@dimen/passport_icon_height"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_small"
            android:contentDescription="@string/content_description"
            android:scaleType="center" />
    </RelativeLayout>

    <TextView
        android:id="@id/passport_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/content_entry_small_size" />

</LinearLayout>