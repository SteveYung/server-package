<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" 
    android:overScrollMode="never"
    android:background="@color/white">

   	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_set_item_bg"
            android:padding="@dimen/margin_vertical" >

            <ImageView
                    android:id="@id/sdk_detail_icon"
                    android:layout_width="@dimen/passport_icon_width"
                    android:layout_height="@dimen/passport_icon_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/user_default_icon"
                    android:contentDescription="@string/content_description" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/user_info_title"
                    android:text="@string/sdk_user_icon"
                    android:textSize="18sp" />

        </RelativeLayout>

        <include layout="@layout/sdk_user_set_layout" />
    </LinearLayout>

</ScrollView>