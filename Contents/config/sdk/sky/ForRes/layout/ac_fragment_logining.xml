<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content" >

    
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dialog_height"
            android:layout_centerInParent="true"
            android:background="@color/dialog_background" >

            <ProgressBar
                android:id="@+id/waiting"
                android:layout_width="40dp"
                android:layout_height="40dp" 
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/waiting"
                android:background="@drawable/ac_title_button_bg"
                android:contentDescription="@string/image_default_desc"
                android:paddingLeft="10dp"
                android:src="@anim/ac_spinner"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_icon" >

                <TextView
                    android:id="@+id/text_account"
                    style="@style/text_white_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_offset"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/text_content"
                    style="@style/text_white_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_account"
                    android:layout_marginLeft="@dimen/left_offset"
                    android:text="@string/dialog_content_login"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_line"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dialog_line_offset"
                android:layout_toRightOf="@id/layout_content"
                android:background="@color/dialog_linecolor" />

            <TextView
                android:id="@+id/text_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/left_offset"
                android:layout_toRightOf="@id/text_line"
                android:text="@string/dialog_change_account"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </RelativeLayout>

</RelativeLayout>