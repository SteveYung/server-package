<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_background"
        android:paddingBottom="@dimen/bottom_offset" >

        <include
            android:id="@+id/title"
            layout="@layout/ac_title" />

        <TextView
            android:id="@+id/password_tips"
            style="@style/text_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginTop="@dimen/content_top"
            android:gravity="center"
            android:text="@string/password_tips" />

        <EditText
            android:id="@+id/edit_password"
            style="@style/edit_text_input"
            android:layout_below="@id/password_tips"
            android:layout_marginTop="@dimen/input_text_margin_top"
            android:hint="@string/password_hint_1"
            android:inputType="textPassword"
            android:maxLength="12" />

        <RelativeLayout
            android:id="@+id/layout_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:visibility="visible" >

            <TextView
                android:id="@+id/text_password"
                style="@style/text_error_reason_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:visibility="gone"
                android:text="@string/error_reason" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_password_check"
            style="@style/edit_text_input"
            android:layout_below="@id/layout_password"
            android:layout_marginTop="@dimen/content_top"
            android:hint="@string/password_hint_2"
            android:inputType="textPassword"
            android:maxLength="12" />

        <RelativeLayout
            android:id="@+id/layout_password_check"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password_check"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:visibility="visible" >

            <TextView
                android:id="@+id/text_password_check"
                style="@style/text_error_reason_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:visibility="gone"
                android:text="@string/error_reason" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_password_type"
            style="@style/text_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_password_check"
            android:layout_marginLeft="@dimen/content_left"
            android:paddingLeft="4dp"
            android:layout_marginTop="@dimen/input_text_margin_top"
            android:gravity="center"
            android:text="@string/password_type" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_password_type"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:layout_marginTop="@dimen/content_top"
            android:visibility="visible" >

            <TextView
                android:id="@+id/text_next"
                style="@style/text_white_style"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ac_button_height"
                android:layout_marginLeft="2dp"
                android:background="@drawable/ac_button_bg_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingTop="@dimen/top_padding"
                android:singleLine="true"
                android:text="@string/next" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>