<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_background"
        android:paddingBottom="@dimen/bottom_offset" >

        <include
            android:id="@+id/title"
            layout="@layout/ac_title" />

        <TextView
            android:id="@+id/input_tips"
            style="@style/text_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginTop="@dimen/content_top"
            android:gravity="center"
            android:text="@string/phonenumber_tips" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/edit_text_input"
            android:layout_below="@id/input_tips"
            android:layout_marginTop="@dimen/input_text_margin_top"
            android:hint="@string/phonenumber_hint"
            android:inputType="number"
            android:maxLength="11" />

        <RelativeLayout
            android:id="@+id/phone_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_phone"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_phone_reason"
                style="@style/text_error_reason_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:text="@string/error_reason"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_next"
            style="@style/text_white_style"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ac_button_height"
            android:layout_below="@id/phone_reason"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:layout_marginTop="@dimen/input_text_margin_top"
            android:background="@drawable/ac_button_bg_selector"
            android:gravity="center"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingTop="@dimen/top_padding"
            android:singleLine="true"
            android:text="@string/check_account" />

        <LinearLayout
            android:id="@+id/layout_bottom_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_next"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginTop="@dimen/content_top"
            android:visibility="gone" >

            <TextView
                style="@style/text_black_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nobind_tips_1" />

            <TextView
                android:id="@+id/other_type"
                style="@style/text_blue_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nobind_tips_2" />

            <TextView
                style="@style/text_black_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nobind_tips_3" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>