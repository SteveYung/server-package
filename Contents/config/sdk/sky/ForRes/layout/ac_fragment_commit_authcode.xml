<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_background"
        android:paddingBottom="@dimen/bottom_offset" >

        <include
            android:id="@+id/title"
            layout="@layout/ac_title" />

        <TextView
            android:id="@+id/phone_tips"
            style="@style/text_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginTop="@dimen/content_top"
            android:gravity="center"
            android:text="@string/phonenumber_send" />

        <RelativeLayout
            android:id="@+id/layout_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@id/phone_tips"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ac_text_green_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_phone_number"
                style="@style/text_big_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_auth_code"
            style="@style/auth_code_input"
            android:layout_width="@dimen/authcode_text_width"
            android:layout_height="@dimen/authcode_height"
            android:layout_below="@id/layout_phone_number"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/input_text_margin_left"
            android:layout_marginRight="@dimen/content_right"
            android:layout_marginTop="@dimen/content_top"
            android:background="@drawable/ac_input_bg_selector"
            android:hint="@string/input_auth_code_hint"
            android:inputType="number"
            android:maxLength="6"
            android:padding="10dp" />

        <RelativeLayout
            android:id="@+id/layout_time_tips"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/authcode_height"
            android:layout_alignTop="@id/edit_auth_code"
            android:layout_marginRight="@dimen/content_right"
            android:layout_toRightOf="@id/edit_auth_code" >

            <TextView
                android:id="@+id/text_reget_auth_code"
                style="@style/time_tips_style"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/input_text_height"
                android:layout_centerInParent="true"
                android:enabled="true"
                android:text="@string/register_bind_left_time" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_auth_code"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_error_reason"
                style="@style/text_error_reason_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:visibility="gone"
                android:text="@string/error_reason" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_next"
            style="@style/text_white_style"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ac_button_height"
            android:layout_below="@id/phone_reason"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:layout_marginTop="@dimen/content_top"
            android:background="@drawable/ac_button_bg_selector"
            android:gravity="center"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingTop="@dimen/top_padding"
            android:singleLine="true"
            android:text="@string/next" />
    </RelativeLayout>

</ScrollView>