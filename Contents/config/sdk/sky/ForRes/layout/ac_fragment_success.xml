<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/dialog_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_height"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/ac_title_button_bg"
                android:contentDescription="@string/image_default_desc"
                android:paddingLeft="10dp"
                android:src="@drawable/ac_success"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_content"
                style="@style/text_white_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/left_offset"
                android:layout_toRightOf="@id/image_icon"
                android:text="@string/login_title"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>