<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_background"
        android:paddingBottom="@dimen/bottom_offset" >

        <include
            android:id="@+id/title"
            layout="@layout/ac_title" />

        <EditText
            android:id="@+id/edit_account"
            style="@style/edit_text_input"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/content_top"
            android:hint="@string/account_hint"
            android:inputType="text"
            android:maxLength="12" />

        <RelativeLayout
            android:id="@+id/account_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_account"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_account_reason"
                style="@style/text_error_reason_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:text="@string/error_reason" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_password"
            style="@style/edit_text_input"
            android:layout_below="@id/account_reason"
            android:layout_marginTop="@dimen/content_top"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:maxLength="12" />

        <RelativeLayout
            android:id="@+id/password_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_password"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginRight="@dimen/content_right"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_password_reason"
                style="@style/text_error_reason_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:text="@string/error_reason" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_reason"
            android:layout_marginLeft="@dimen/content_input_leftright"
            android:layout_marginRight="@dimen/content_input_leftright"
            android:layout_marginTop="@dimen/content_top"
            android:visibility="visible" >

            <TextView
                android:id="@+id/txt_left_button"
                style="@style/text_white_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ac_button_height"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/ac_button_gray_bg_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingTop="@dimen/top_padding"
                android:singleLine="true"
                android:text="@string/quick_register" />

            <TextView
                android:id="@+id/txt_right_button"
                style="@style/text_white_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ac_button_height"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:background="@drawable/ac_button_bg_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingTop="@dimen/top_padding"
                android:singleLine="true"
                android:text="@string/login_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_find_password"
            style="@style/text_blue_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons"
            android:layout_marginLeft="@dimen/content_left"
            android:layout_marginTop="@dimen/content_top"
            android:gravity="center"
            android:text="@string/find_password" />
    </RelativeLayout>

</ScrollView>