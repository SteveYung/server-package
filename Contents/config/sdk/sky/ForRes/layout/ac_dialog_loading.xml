<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/window_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:paddingLeft="@dimen/dialog_leftright_padding"
    android:paddingRight="@dimen/dialog_leftright_padding" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_height"
        android:layout_centerInParent="true"
        android:background="@color/dialog_background" >

        <ProgressBar
            android:id="@+id/waiting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/waiting"
            android:background="@drawable/ac_title_button_bg"
            android:contentDescription="@string/image_default_desc"
            android:paddingLeft="10dp"
            android:src="@anim/ac_spinner"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_content"
            style="@style/dialog_text_white_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_offset"
            android:layout_toRightOf="@id/image_icon"
            android:maxLines="2"
            android:text="@string/login_title"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>