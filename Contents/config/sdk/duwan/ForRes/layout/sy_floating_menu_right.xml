
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
         

           <RelativeLayout
               android:id="@+id/sy_title_layer"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               >

                <LinearLayout
                    android:id="@+id/sy_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="40dp"
                   android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/sy_back1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/float_btn_back_img" />

                </LinearLayout>
               
              <RelativeLayout
                    android:id="@+id/check_accounts"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignRight="@+id/sy_back"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/check_accounts1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                       android:layout_gravity="center_horizontal"
                        android:src="@drawable/account_img2" />

                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/check_gifts"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignRight="@+id/sy_back"
                    android:layout_marginRight="49dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/check_gifts1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                       android:layout_gravity="center_horizontal"
                        android:src="@drawable/gifts_img" />
                </RelativeLayout>
              <RelativeLayout
                    android:id="@+id/check_games"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignRight="@+id/sy_back"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="67dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/check_games1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                       android:layout_gravity="center_horizontal"
                        android:src="@drawable/gamecenter_img" />
                </RelativeLayout>
             <RelativeLayout
                    android:id="@+id/check_news"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignRight="@+id/sy_back"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="82dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/check_news1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                       android:layout_gravity="center_horizontal"
                        android:src="@drawable/news_img2" />
                </RelativeLayout>

           </RelativeLayout>



</RelativeLayout>