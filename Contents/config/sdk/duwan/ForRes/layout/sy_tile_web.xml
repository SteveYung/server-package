
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sy_corners_background"
    android:orientation="vertical" >

        <RelativeLayout
             android:id="@+id/sy_title_layer"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:background="@drawable/sy_rect_title" >

              <TextView
                    android:id="@+id/sy_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="账户"
                    android:textSize="22sp" 
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:ellipsize="end"/>


             <ImageView
                 android:id="@+id/sy_back"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="11dp"
                 android:onClick="OnClickBackBtn"
                 android:src="@drawable/back_img"
                 android:visibility="gone" />

             <ImageView
                 android:id="@+id/sy_title_close"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="11dp"
                 android:onClick="OnClickClose"
                 android:src="@drawable/close_img" />

         </RelativeLayout>     

         <WebView
             android:id="@+id/webView1"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/sy_title_layer" />

</RelativeLayout>