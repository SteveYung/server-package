<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sdk_page_width"
    android:layout_height="@dimen/sdk_page_height"
    android:background="@drawable/m4399_rec_page_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_title_height"
        layout="@layout/m4399_rec_sec_confirm_title" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_title_height"
        layout="@layout/m4399_rec_sec_mvcenter_money_area" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_separator_height"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"
        layout="@layout/m4399_rec_sec_mvcenter_separator" />
    
    <include
		style="@style/SelectArea"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"
        layout="@layout/m4399_rec_sec_rmd_gridview" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"
        android:layout_marginBottom="@dimen/single_btn_marginBottom"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sdk_sum_btns_eara_height"
            layout="@layout/m4399_rec_sec_single_btn_area" />

    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_foot_height"
        layout="@layout/m4399_rec_sec_mvcenter_foot" />

</LinearLayout>