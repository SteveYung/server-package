<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/sdk_title_height"
    android:background="@color/sdk_color_white"
    android:paddingLeft="@dimen/sdk_paddingLeft"
    android:paddingRight="@dimen/sdk_paddingRight"
    android:paddingBottom="4dp"
    android:gravity="bottom" >

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sum"
        android:textColor="@color/sdk_color_yellow"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:textSize="16sp"
        android:textColor="#999999"
        android:text="@string/unit" />
    
    <cn.m4399.recharge.widgets.CircleTextView
        android:id="@+id/subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="#999999"
        android:visibility="visible"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/good_subject" />

    <TextView
        android:id="@+id/game_info"
		style="@style/GameInfoTextStyle"
		android:layout_marginBottom="2dp"
        android:text="@string/game_info" />

</LinearLayout>