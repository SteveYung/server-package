<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/sdk_page_width"
    android:layout_height="@dimen/sdk_page_height"
    android:background="@drawable/m4399_rec_page_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk_title_height"
        layout="@layout/m4399_rec_sec_main_page_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal|bottom" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pay_result_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/m4399_rec_pay_failed" />

            <TextView
                android:id="@+id/pay_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/pay_failed_tips"
                android:textColor="#333333"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/warm_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft" 
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="#999999"
        android:text="@string/result_on_process" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:gravity="center_horizontal|top"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"  >

        <TextView
            android:id="@+id/pay_eorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/pay_eorder_land"
            android:textColor="#999999"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"
        android:layout_marginBottom="@dimen/single_btn_marginBottom"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sdk_sum_btns_eara_height"
            layout="@layout/m4399_rec_sec_single_btn_area" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk_foot_height"
        android:background="@drawable/m4399_rec_mvcenter_foot_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/sdk_paddingLeft"
        android:paddingRight="@dimen/sdk_paddingRight"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hotline_prefix"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sdk_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/sdk_telphone"
            android:textColor="#32beff" />

        <TextView
            android:id="@+id/sdk_help_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:focusable="true"
            android:clickable="true"
            android:autoLink="web"
            android:text="@string/tip_link"
            android:textColor="#32beff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/m4399_rec_sdk_ftnn_logo"
            android:textColor="#999999" />
    </LinearLayout>

</LinearLayout>