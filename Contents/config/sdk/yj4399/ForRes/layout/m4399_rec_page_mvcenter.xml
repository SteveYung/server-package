<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/sdk_page_width"
    android:layout_height="@dimen/sdk_page_height"
    android:background="@drawable/m4399_rec_page_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_title_height"
        layout="@layout/m4399_rec_sec_main_page_title" />

    <include
        android:id="@+id/money_area"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_title_height"
        layout="@layout/m4399_rec_sec_mvcenter_money_area" />

    <include
        android:id="@+id/line_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"
        layout="@layout/m4399_rec_sec_mvcenter_separator" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_marginLeft="@dimen/sdk_paddingLeft"
        android:layout_marginRight="@dimen/sdk_paddingLeft"
        android:layout_marginTop="@dimen/sdk_paddingTop"
        android:layout_marginBottom="@dimen/sdk_paddingTop"
        android:background="#ffffffff"
        layout="@layout/m4399_rec_sec_mvcenter_gridview" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_foot_height"
        layout="@layout/m4399_rec_sec_mvcenter_foot"
        android:paddingLeft="@dimen/sdk_paddingLeft"
        android:paddingRight="@dimen/sdk_paddingRight" />

</LinearLayout>