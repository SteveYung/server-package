<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/int_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk_title_height"
        android:paddingLeft="@dimen/sdk_paddingLeft"
        android:gravity="center_vertical"
        android:text="@string/title_liantong"
        android:textColor="@color/sdk_color_white"
        android:textSize="22sp" />

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk_separator_height"
        layout="@layout/m4399_rec_sec_dialog_separator" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >
            
    		<TextView
       	 		android:id="@+id/instruction"
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
       			android:gravity="left"
                android:paddingLeft="@dimen/sdk_paddingLeft"
        		android:paddingRight="@dimen/sdk_paddingRight"
       			android:textColor="@color/sdk_color_white"
       			android:textSize="14sp"
        		android:text="@string/ins_junka" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sdk_paddingLeft"
       	android:paddingRight="@dimen/sdk_paddingLeft"
	    android:paddingTop="6dp"
       	android:paddingBottom="6dp"
        android:gravity="center" >

        <Button
            android:id="@+id/ins_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sdk_sum_btns_eara_height"
            android:background="@color/sdk_color_white"
            android:textColor="@color/sdk_color_black"
            android:text="@string/close_dialog" />

    </LinearLayout>

</LinearLayout>