<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/sdk_color_white"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/card_provider"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="@dimen/sdk_gridview_item_height"
        android:orientation="horizontal"
        android:background="@drawable/m4399_rec_sms_btn"
        android:gravity="center"
        android:layout_marginRight="@dimen/sdk_gridview_hspacing" 
        android:layout_marginTop="@dimen/sdk_gridview_vspacing"
        android:layout_marginBottom="@dimen/sdk_gridview_vspacing"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/sdk_gridview_hspacing"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="@string/dianxinka" />

        <ImageView
            android:id="@+id/card_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/m4399_spinner_drop_down" />
    </LinearLayout>

    <GridView
        android:id="@+id/czk_gridview"
        style="@style/ChongzhikaGridview"
        android:layout_marginTop="@dimen/sdk_gridview_vspacing"
        android:layout_marginBottom="@dimen/sdk_gridview_vspacing" >
    </GridView>

</LinearLayout>