<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ist_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk_title_height"
        android:paddingLeft="@dimen/sdk_paddingLeft"
        android:gravity="center_vertical"
        android:text="@string/ist_title"
        android:textColor="@color/sdk_color_white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sdk_color_grey"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
   			android:paddingTop="@dimen/install_dialog_paddingTop"
            android:gravity="center_vertical">
            
    		<TextView
       	 		android:id="@+id/ist_hint_text"
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:paddingLeft="@dimen/sdk_paddingLeft"
        		android:paddingRight="@dimen/sdk_paddingRight"
       			android:textColor="@color/sdk_color_white"
       			android:textSize="15sp"
        		android:text="@string/ist_message" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sdk_paddingLeft"
       	android:paddingRight="@dimen/sdk_paddingRight"
	    android:paddingTop="6dp"
       	android:paddingBottom="6dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ist_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/sdk_sum_btns_eara_height"
            android:layout_weight="1"
			android:layout_marginLeft="2dp"
	    	android:layout_marginRight="2dp"
	    	android:background="@drawable/m4399_rec_left_btn_bg"
	    	android:textColor="#333333"
            android:text="@string/str_sdk_cancel" />

        <Button
            android:id="@+id/ist_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/sdk_sum_btns_eara_height"
            android:layout_weight="1"
			android:layout_marginLeft="2dp"
	    	android:layout_marginRight="2dp"
	    	android:background="@drawable/m4399_rec_right_btn_bg"
	    	android:textColor="#ffffff"
            android:text="@string/ok" />

    </LinearLayout>

</LinearLayout>