<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sdk_color_white"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.0"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sum_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sdk_color_grey"
            android:textSize="20sp"
            android:text="@string/sum_paid" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/sdk_color_yellow"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/sdk_color_grey"
            android:text="@string/unit" />

    </LinearLayout>

    <TextView
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sdk_paddingTop"
        android:gravity="center_horizontal"
        android:textColor="@color/sdk_color_grey"
        android:textSize="20sp" 
        android:text="@string/good_subject" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.0"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:layout_marginTop="22dp" >

        <TextView
            android:id="@+id/game_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_info"
            android:textColor="@color/sdk_color_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/balance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youbi_balance"
            android:textColor="@color/sdk_color_grey"
            android:textSize="15sp"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>