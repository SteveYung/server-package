            android:theme="@style/MVTheme" />
        <activity
            android:name="cn.m4399.recharge.activities.PayFixedSumActivity"
            android:theme="@style/MVTheme" />
        <activity
            android:name="cn.m4399.recharge.activities.PayUnfixedSumActivity"
            android:theme="@style/MVTheme" />
        <activity
            android:name="cn.m4399.recharge.activities.MultiCardActivity"
            android:theme="@style/MVTheme" />
