<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bsgamesdk_transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <include layout="@layout/bsgamesdk_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bsgamesdk_transparent"
        android:gravity="center"
        android:measureWithLargestChild="true"
        android:orientation="vertical" >

        <include
            android:id="@+id/bsgamesdk_loginLayout"
            layout="@layout/bsgamesdk_login"
            android:visibility="gone" />

        <include
            android:id="@+id/bsgamesdk_registerLayout"
            layout="@layout/bsgamesdk_register"
            android:visibility="gone" />
        
        <include
            android:id="@+id/bsgamesdk_activateLayout"
            layout="@layout/bsgamesdk_activate"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>