<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bsgamesdk_loginTitlebar"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/bsgamesdk_transparent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <ImageButton
        android:id="@+id/bsgamesdk_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/bsgamesdk_icon_back"
        android:contentDescription="@string/bsgamesdk_logo"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/bsgamesdk_title_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/bsgamesdk_icon_close"
        android:contentDescription="@string/bsgamesdk_logo"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="bottom" >

        <ImageView
            android:id="@+id/bsgamesdk_title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bsgamesdk_logo" />

        <TextView
            android:id="@+id/bsgamesdk_title_content"
            style="@style/bsgamesdk_text_title" />
    </LinearLayout>

</RelativeLayout>