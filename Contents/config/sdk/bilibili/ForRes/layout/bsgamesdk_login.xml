<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bsgamesdk.android.widget.APScrollView
        android:id="@+id/bsgamesdk_login_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/bsgamesdk_id_loginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp" >

            <RelativeLayout
                android:id="@+id/bsgamesdk_id_usernameLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp" >

                <EditText
                    android:id="@+id/bsgamesdk_edit_username_login"
                    style="@style/Bili.EditText.Normal"
                    android:completionHint="@string/bsgamesdk_username"
                    android:hint="@string/bsgamesdk_username_login_hit"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:paddingRight="30dp" >
                </EditText>

                <ImageView
                    android:id="@+id/icon_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/bsgamesdk_icon_user" />

                <ImageButton
                    android:id="@+id/bsgamesdk_login_usernameDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:contentDescription="@string/bsgamesdk_delbtn"
                    android:src="@drawable/bsgamesdk_pic_del"
                    android:visibility="gone" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/icon_user"
                    android:background="#FFCFCFCF" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsgamesdk_id_passwordLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp" >

                <EditText
                    android:id="@+id/bsgamesdk_edit_password_login"
                    style="@style/Bili.EditText.Normal"
                    android:hint="@string/bsgamesdk_password_login_hit"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingRight="70dp" />

                <ImageView
                    android:id="@+id/icon_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/bsgamesdk_icon_password" />

                <com.bsgamesdk.android.widget.SwitchButton
                    android:id="@+id/bsgamesdk_switchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/icon_password"
                    android:background="#FFCFCFCF" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/bsgamesdk_checkBoxRemeberPassword"
                style="@style/Bili.MyCheckBox"
                android:layout_marginBottom="10dp"
                android:checked="true"
                android:text="@string/bsgamesdk_rememberpwd"
                android:textColor="@color/bsgamesdk_text_color"
                android:textSize="@dimen/bsgamesdk_text_size" />

            <LinearLayout
                android:id="@+id/bsgamesdk_id_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/bsgamesdk_buttonReg"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bsgamesdk_btn_reg"
                        android:text="@string/bsgamesdk_register_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/bsgamesdk_buttonLogin"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bsgamesdk_btn_login"
                        android:text="@string/bsgamesdk_login_title" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.bsgamesdk.android.widget.APScrollView>

</LinearLayout>