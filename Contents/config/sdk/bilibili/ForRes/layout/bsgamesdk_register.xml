<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bsgamesdk.android.widget.APScrollView
        android:id="@+id/bsgamesdk_register_ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/bsgamesdk_id_regInputLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp" >

            <RelativeLayout
                android:id="@+id/bsgamesdk_register_usernameLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp" >

                <EditText
                    android:id="@+id/bsgamesdk_edit_username_reg"
                    style="@style/Bili.EditText.Normal"
                    android:completionHint="@string/bsgamesdk_username"
                    android:hint="@string/bsgamesdk_username_hit"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:paddingRight="30dp" >
                </EditText>

                <ImageView
                    android:id="@+id/icon_register_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/bsgamesdk_icon_user" />

                <ImageButton
                    android:id="@+id/bsgamesdk_register_usernameDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:contentDescription="@string/bsgamesdk_delbtn"
                    android:src="@drawable/bsgamesdk_pic_del"
                    android:visibility="gone" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/icon_register_user"
                    android:background="#FFCFCFCF" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsgamesdk_id_emailLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp" >

                <AutoCompleteTextView
                    android:id="@+id/bsgamesdk_edit_email"
                    style="@style/Bili.EditText.Normal"
                    android:layout_width="fill_parent"
                    android:hint="@string/bsgamesdk_email_hit"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:paddingRight="30dp" />

                <ImageView
                    android:id="@+id/icon_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/bsgamesdk_icon_email" />

                <ImageButton
                    android:id="@+id/bsgamesdk_register_emailDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:contentDescription="@string/bsgamesdk_delbtn"
                    android:src="@drawable/bsgamesdk_pic_del"
                    android:visibility="gone" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/icon_email"
                    android:background="#FFCFCFCF" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsgamesdk_register_passwordLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp" >

                <EditText
                    android:id="@+id/bsgamesdk_edit_password_reg"
                    style="@style/Bili.EditText.Normal"
                    android:hint="@string/bsgamesdk_password_hit"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingRight="70dp" />

                <ImageView
                    android:id="@+id/icon_register_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/bsgamesdk_icon_password" />

                <com.bsgamesdk.android.widget.SwitchButton
                    android:id="@+id/bsgamesdk_register_switchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/icon_register_password"
                    android:background="#FFCFCFCF" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bsgamesdk_id_buttonLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:paddingRight="5dp" >

                <CheckBox
                    android:id="@+id/bsgamesdk_id_checkboxAgree"
                    style="@style/Bili.MyCheckBox"
                    android:checked="true"
                    android:text="@string/bsgamesdk_agree"
                    android:textColor="@color/bsgamesdk_text_color"
                    android:textSize="@dimen/bsgamesdk_text_size" />

                <Button
                    android:id="@+id/bsgamesdk_id_buttonAgreement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:text="@string/bsgamesdk_service"
                    android:textColor="@color/bsgamesdk_service_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingRight="5dp" >

                <Button
                    android:id="@+id/bsgamesdk_Submit_reg"
                    style="@style/bsgamesdk_btn"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:text="@string/bsgamesdk_submit" />
            </LinearLayout>
        </LinearLayout>
    </com.bsgamesdk.android.widget.APScrollView>

</LinearLayout>