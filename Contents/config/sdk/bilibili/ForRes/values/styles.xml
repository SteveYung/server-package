<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bsgamesdk_loading" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/bsgamesdk_loading</item>
    </style>

    <style name="bsgamesdk_dialog_login" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bsgamesdk_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bsgamesdk_dialog_payment" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bsgamesdk_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Bili.EditText.Normal" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/bsgamesdk_text_size</item>
        <item name="android:background">@drawable/bsgamesdk_input</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:ems">8</item>
        <item name="android:textColor">@color/bsgamesdk_text_color</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Bili.MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:button">@drawable/bsgamesdk_check_box</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="Bili.animStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/bsgamesdk_animate_progress</item>
    </style>

    <style name="Bili.no_ovelay" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="bsgamesdk_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="bsgamesdk_fill.wrap_land" parent="@style/bsgamesdk_fill">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/bsgamesdk_main_bg</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="bsgamesdk_linear">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bsgamesdk_toast">
        <item name="android:background">@drawable/bsgamesdk_pic_tipsbg_thin</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bsgamesdk_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bsgamesdk_btn_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bsgamesdk_text_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bsgamesdk_text_title_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bsgamesdk_iconwarn">
        <item name="android:background">@drawable/bsgamesdk_pic_warn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/bsgamesdk_warnpic</item>
    </style>

    <style name="bsgamesdk_text.middle" parent="@style/bsgamesdk_text">
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="bsgamesdk_edit" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/bsgamesdk_text_size</item>
        <item name="android:textColor">@color/bsgamesdk_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">100</item>
    </style>

    <style name="bsgamesdk_icondel">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/bsgamesdk_pic_del</item>
        <item name="android:contentDescription">@string/bsgamesdk_delbtn</item>
    </style>

    <style name="bsgamesdk_switchbtn">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="bsgamesdk_inputbg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bsgamesdk_drawable_inputbg</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="bsgamesdk_btn">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bsgamesdk_drawable_embtn</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bsgamesdk_customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/corners_shape_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bsgamesdk_AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textSize">@dimen/bsgamesdk_text_size</item>
        <item name="android:background">@drawable/bsgamesdk_input</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/bsgamesdk_text_color</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="bsgamesdk_Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="alipay_AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/alipay_popup_bg</item>
    </style>

</resources>