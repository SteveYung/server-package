<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:id = "@+id/umipay_main_content_rl"
                android:layout_width = "@dimen/umipay_main_diglog_width"
                android:layout_height = "280dp"
                android:background = "@drawable/umipay_background_stroke" >

	<ViewFlipper
			android:id = "@+id/umipay_main_content_viewflipper"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_centerHorizontal = "true"
			android:layout_centerVertical = "true" >

		<include
				android:id = "@+id/umipay_login_layout"
				layout = "@layout/umipay_login_layout" />

		<include
				android:id = "@+id/umipay_register_layout"
				layout = "@layout/umipay_register_layout" />

		<include
				android:id = "@+id/umipay_login_light_layout"
				layout = "@layout/umipay_login_light_layout" />

		<include
				android:id = "@+id/umipay_regist_light_layout"
				layout = "@layout/umipay_regist_get_registrable_account_layout" />
	</ViewFlipper >

</RelativeLayout >