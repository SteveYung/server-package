<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/top_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/top" />

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_img"
        android:padding="8dip" >

        <RelativeLayout
            android:id="@+id/tz_login_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingTop="10dip" 
                android:background="@drawable/tz_login_input_boder">

                <ImageView
                    android:id="@+id/tz_login_edit_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_0012_id" />

                <EditText
                    android:id="@+id/tz_login_edit_textView_name_edit"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_des"
                    android:layout_toRightOf="@id/tz_login_edit_des"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="3-15(字母、数字)"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip"
                    android:maxLength="15" >
                </EditText>
                  <ImageView 
                    android:id="@+id/downld_img"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_down_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                
            </RelativeLayout>
          

            <TextView
                android:id="@+id/tz_login_edit_line"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_below="@id/tz_login_edit_relativeLayout1"
                android:background="#CCCCCC" />

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tz_login_edit_line"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tz_login_input_boder"
                android:paddingTop="10dp"
                android:paddingLeft="20dp" >

                <ImageView
                    android:id="@+id/tz_login_edit_textView_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_0007_password"/>

                <EditText
                    android:id="@+id/tz_login_edit_textView_pass_edit_login"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@id/tz_login_edit_textView_pass"
                    android:layout_toRightOf="@id/tz_login_edit_textView_pass"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="6-20(字母、数字)"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip"
                    android:maxLength="20" >
                </EditText>
                <Button
                    android:id="@+id/tz_login_re_password_foot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:paddingBottom="10dip"
                	android:paddingTop="10dip"
            		android:text="忘记密码"
            		android:textSize="12dip"
            		android:textColor="#75baf0" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_below="@id/tz_login_edit_relativeLayout2"
                android:background="#CCCCCC" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tz_login_checkbox_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tz_login_edit"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <CheckBox
                android:id="@+id/tz_login_edit_checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:button="@drawable/tz_activity_login_checkbox_styel"
                android:text=" 记住密码"
                android:textColor="#666666"
                android:textSize="16dip" />

            <CheckBox
                android:id="@+id/tz_login_edit_checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tz_login_edit_checkBox1"
                android:layout_alignBottom="@id/tz_login_edit_checkBox1"
                android:layout_alignParentRight="true"
                android:button="@drawable/tz_activity_login_checkbox_styel"
                android:text=" 自动登录"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_checkbox_relativeLayout"
            android:layout_marginTop="10dp" >

		<!--#009CFF  -->
                <Button
                    android:id="@+id/tz_login_login_login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="登录游戏"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip" 
                    />

                <Button
                    android:id="@+id/tz_login_regist_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#009CFF"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="注 \t册"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip"
                    android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tz_login_edit_relativeLayout"
        android:layout_marginTop="10dip"
        android:background="#ebf6f6"
        android:padding="15dip" >

        <Button
            android:id="@+id/tz_login_shiwang_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:padding="5dip"
            android:text="游戏试玩"
            android:textColor="#75baf0"
            android:textSize="15dip" />
		<TextView 
		    android:id="@+id/tz_version"
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
		    android:text="v1.0.0.0"/>
        <Button
            android:id="@+id/tz_login_regist_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang_dan"
            android:padding="5dip"
            android:text="快速注册"
            android:textColor="#75baf0"
            android:textSize="15dip" />
    </RelativeLayout>

</RelativeLayout>