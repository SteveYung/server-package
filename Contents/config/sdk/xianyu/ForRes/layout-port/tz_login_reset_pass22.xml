<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <!-- 重置密码 -->

    <RelativeLayout
        android:id="@+id/tz_login_title_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/tz_login_title_image_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tz_activity_goback_styel" />
        
		<TextView
	        android:id="@+id/tz_login_goback_title"
	        android:text="返回"
	        android:textColor="#999999"
	     	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tz_login_title_image_goback"
	        android:layout_marginTop="1dip"
	        android:textSize="15dip" />
        <TextView
            android:id="@+id/tz_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="#666666"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/tz_login_title_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_activity_login_styel"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:padding="10dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="您的账号：Xyii008" />

        <RelativeLayout
            android:id="@+id/tz_login_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/textView1"
            android:background="@drawable/tz_login_input_boder"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip" >

                <EditText
                    android:id="@+id/tz_login_edit_textView_email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="请输入绑定的邮箱"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
            </RelativeLayout>

   
        </RelativeLayout>  

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_edit"
            android:layout_marginTop="10dip" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/tz_login_login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="获取验证码"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip" />

                <Button
                    android:id="@+id/tz_login_regist_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#009CFF"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="注 \t册"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tz_login_edit_relativeLayout"
        android:paddingBottom="40dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">
        <RelativeLayout
            android:id="@+id/tz_login_edit_relativeLayout111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tz_login_input_boder"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="10dip" >

            <EditText
                android:id="@+id/tz_login_edit_textView_vcode_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="请输入验证码"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#D0CCC7"
                android:textCursorDrawable="@null"
                android:textSize="16dip" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_below="@id/tz_login_edit_relativeLayout111" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/tz_login_login_button2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="下一步"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>