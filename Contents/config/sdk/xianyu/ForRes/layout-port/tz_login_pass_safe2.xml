<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
	<ImageView
        android:id="@+id/top_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/top" />
    <!-- 账户安全 -->

    <RelativeLayout
        android:id="@+id/tz_login_title_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_img"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tz_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="绑定邮箱可以方便找回帐号，更加安全！"
            android:textColor="#000000"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/tz_login_title_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_activity_login_styel" 
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dip"
            android:paddingTop="20dip"
            android:text="完善您的账户信息"
            android:textColor="#666666"
            android:textSize="18dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="20dip"
            android:text="为了保证您的账户安全，请验证当前账户的密码"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/tz_login_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:orientation="vertical"
            android:paddingTop="20dip" >

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tz_login_input_boder"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip" >


                <EditText
                    android:id="@+id/tz_login_edit_textView_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:inputType="textPersonName"
                    android:hint="请输入要绑定的邮箱"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_below="@id/tz_login_edit_relativeLayout1"
                android:background="#CCCCCC" />
			<RelativeLayout
			    android:id="@+id/tz_login_edit_relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tz_login_edit_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip">
                <GridLayout 
				    android:id="@+id/tz_login_edit_grid"
                    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:orientation="horizontal"
                	android:rowCount="1"
                	android:columnCount="10">
	            <RelativeLayout
	                android:id="@+id/tz_login_edit_kuang"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/tz_login_input_boder"
	                android:layout_columnSpan="6"
	                android:layout_gravity="fill"
	                android:paddingBottom="10dip"
	                android:paddingLeft="10dp"
	                android:paddingRight="20dip"
	                android:paddingTop="10dip" >
	
	                <EditText
	                    android:id="@+id/tz_login_edit_textView_pass_edit"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="#00000000"
	                    android:enabled="true"
	                    android:hint="填写验证码"
	                    android:textColor="#F42F3E"
	                    android:textColorHint="#D0CCC7"
	                    android:textCursorDrawable="@null"
	                    android:textSize="16dip" >
	                </EditText>
	            </RelativeLayout>
	            
	            <Button
                    android:id="@+id/tz_login_yanzhengma_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuanquanbiankuangblue"
                    android:layout_marginLeft="10dip"
                    android:layout_columnSpan="4"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="获取验证码"
                    android:textColor="#FFFFFF"
                    android:textSize="15dip" />
	            </GridLayout>
			</RelativeLayout>
            <TextView
                android:id="@+id/tz_login_edit_line2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_below="@id/tz_login_edit_relativeLayout2"
                android:background="#CCCCCC" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_edit" >

            <TextView
                android:id="@+id/extView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extView2"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/tz_login_regist_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="立即绑定邮箱"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip" />

                <Button
                    android:id="@+id/tz_login_regist_button2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="解除绑定"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:textSize="20dip" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
	<RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tz_login_edit_relativeLayout"
        android:layout_marginTop="10dip"
        android:background="#ebf6f6"
        android:padding="10dip" >

        <Button
            android:id="@+id/tz_login_title_image_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="5dip"
            android:text="以后再说>>"
            android:textColor="#75baf0"
            android:textSize="15dip" />
    </RelativeLayout>
</RelativeLayout>