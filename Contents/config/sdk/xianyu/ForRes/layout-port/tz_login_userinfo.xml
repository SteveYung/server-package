<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="#FFFFFF"
     >

    <!-- 完善帐号信息 -->

   <RelativeLayout
    android:id="@+id/tz_login_title_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  	android:layout_marginTop="10dip"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/tz_login_title_image_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tz_activity_goback_styel" 
   
        />
	<TextView
        android:id="@+id/tz_login_goback_title"
        android:text="返回"
        android:textColor="#999999"
     	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tz_login_title_image_goback"
        android:layout_marginTop="1dip"
        android:textSize="15dip" />
    <TextView
        android:id="@+id/tz_login_title"
        android:text="完善信息"
     	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textColor="#666666"
        android:textSize="18dip" />

    <ImageView
        android:id="@+id/tz_login_title_image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/tz_activity_login_styel"
        android:visibility="gone" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:paddingTop="30dip"
        android:paddingBottom="50dip">

          <TextView
           	android:id="@+id/textView3"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
		   	android:gravity="center"
           	android:layout_centerHorizontal="true"
           	android:text="绑定手机或邮箱，可快速找回账号，更安全"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="20dip" 
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <Button
                android:id="@+id/tz_login_login_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="立即绑定"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

            <Button
                android:id="@+id/tz_login_regist_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tz_login_login_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dip"
                android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="以后再说"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />
        </RelativeLayout>

        

    </RelativeLayout>

</RelativeLayout>