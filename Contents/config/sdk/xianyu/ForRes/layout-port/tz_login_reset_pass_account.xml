<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <!-- 完善帐号信息 -->

    <RelativeLayout
        android:id="@+id/tz_login_title_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF" >
        <ImageView
            android:id="@+id/tz_login_title_image_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tz_activity_goback_styel" />
		<TextView
	        android:id="@+id/tz_login_goback_title"
	        android:text="返回"
	        android:textColor="#999999"
	     	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tz_login_title_image_goback"
	        android:layout_marginTop="1dip"
	        android:textSize="15dip" />
        <TextView
            android:id="@+id/tz_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="找回帐号/密码"
            android:textColor="#666666"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/tz_login_title_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_activity_login_styel"
            android:visibility="gone" />
    </RelativeLayout>

   <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:padding="10dip" >
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:paddingBottom="40dip" >

            <Button
                android:id="@+id/tz_login_login_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="找回帐号"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/extView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/tz_login_login_button"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/tz_login_regist_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extView2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="找回密码"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>