<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:background="#FFFFFF"
    >

    <!-- 账户安全 -->

    <RelativeLayout
        android:id="@+id/tz_login_title_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/tz_login_title_image_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/tz_activity_goback_styel" />

        <TextView
            android:id="@+id/tz_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="账户安全-绑定邮箱"
            android:textColor="#666666"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/tz_login_title_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_activity_login_styel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dip"
            android:paddingTop="20dip"
            android:text="完善您的账户信息"
            android:textColor="#666666"
            android:visibility="gone"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="20dip"
            android:visibility="invisible"
            android:text="为了保证您的账户安全，请验证当前账户的密码" />

        <RelativeLayout
            android:id="@+id/tz_login_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:background="@drawable/tz_login_input_boder"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:visibility="gone"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tz_login_edit_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名:\t\t"
                    android:textColor="#666666"
                    android:textSize="16dip" />

                <EditText
                    android:id="@+id/tz_login_edit_textView_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_des"
                    android:layout_toRightOf="@id/tz_login_edit_des"
                    android:background="#00000000"
                    android:hint="3-15(字母、数字、中文)"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/tz_login_edit_relativeLayout1"
                android:background="#CCCCCC" />

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tz_login_edit_line"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dip"
                android:paddingLeft="20dp"
                android:paddingRight="20dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tz_login_edit_textView_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密   码:\t\t"
                    android:textColor="#666666"
                    android:textSize="16dip" 
                    android:visibility="gone"
                    
                    />

                <EditText
                    android:id="@+id/tz_login_edit_textView_pass_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_textView_pass"
                    android:layout_toRightOf="@id/tz_login_edit_textView_pass"
                    android:background="#00000000"
                    android:hint="输入手机地址"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/tz_login_edit_relativeLayout2"
                android:background="#CCCCCC" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_edit" >

           

            <TextView
                android:id="@+id/extView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/tz_login_regist_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extView2"
                android:layout_centerHorizontal="true"
                android:background="#009CFF"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="下一步"
                android:textColor="#FFFFFF"
                android:textSize="20dip" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>