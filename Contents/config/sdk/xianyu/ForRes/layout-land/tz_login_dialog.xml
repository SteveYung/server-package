<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang_d"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tz_login_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="温馨提醒"
            android:textColor="#000000"
            android:textSize="16dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tz_login_dialog_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="该帐号并未绑定任何邮箱"
            android:textColor="#000000" />
    </RelativeLayout>

   <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dip"
        android:padding="5dp" >
        
          <Button
            android:id="@+id/tz_login_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
         	android:paddingTop="3dip"
         	android:paddingRight="15dip"
         	android:paddingBottom="3dip"
         	android:visibility="gone"
            android:text="修改设置"
            android:textColor="#009CFF"
            android:textSize="16dip" 
            />
        <Button
            android:id="@+id/tz_login_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
            android:paddingBottom="5dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingTop="5dip"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="16dip" />

      
    </RelativeLayout>

</LinearLayout>