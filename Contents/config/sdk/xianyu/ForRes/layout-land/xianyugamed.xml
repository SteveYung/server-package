<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
 	android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="1" >
		
        

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/xianyugamezhifupingtai"
            android:textSize="22sp" />

        
        <!-- 动态数据订单管理 -->
        <Button
            android:id="@+id/xianyugame_order_management"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/yuanquanhuise"
            android:text="@string/dingdanguanli"
            android:textSize="15dip"
            android:visibility="invisible" />

        

        <!-- 支付平台返回键 -->
        <ImageView
            android:id="@+id/xianyugame_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#dedede"
        />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dedede"
        android:layout_weight="8.62" 
        android:orientation="vertical"
        >
        <LinearLayout      
            android:layout_weight="1"   
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dingdanxinxi"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_weight="4"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yuanquanbiankuanghuisebeijing"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <!--动态数据订单号  -->
                <TextView
                    android:id="@+id/xianyugame_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/dingdanhao" />
                
            </RelativeLayout>
            <View
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#dedede"
		        />
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                
                <!--动态数据支付账号  -->
                <TextView
                    android:id="@+id/xianyugame_defray_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="34242424" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/zhifuzhanghao" />
            </RelativeLayout>
               	<View
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#dedede"
		        />
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                
                
                <!--动态数据购买物品 -->
                <TextView
                    android:id="@+id/xianyugame_purchase_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="34242424" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/goumaiwupin" />
            </RelativeLayout>
                <View
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#dedede"
		        />
            
            <RelativeLayout 
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                
                <!--动态数据支付总额  -->
                <TextView
                    android:id="@+id/xianyugame_defray_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#c40000"
                    android:text="34242424" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    
                    android:text="@string/zhifuzonge" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"   
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhifufangshi"
                android:textStyle="bold"
                />
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/rl_root_layout" 
            android:layout_weight="2"  
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanquanbiankuanghuisebeijing"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp">
            
            <RelativeLayout
                android:id="@+id/rl_xianyugame_alipay_layout"
                android:layout_width="112dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="2dp" 
                android:tag="alipay">

                <!-- 选定支付宝支付 -->

                <RelativeLayout
                    android:id="@+id/rl_xianyugame_alipay_border"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:background="@drawable/yuanquanbiankuang" >

                    <ImageView
                        android:id="@+id/iv_xianyugame_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/alipay" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_alipay_gou"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zhifuxuanzhonggougou" 
                    android:visibility="gone"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_xianyugame_weinxin_layout"
                android:layout_width="112dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rl_xianyugame_alipay_layout"
                android:padding="2dp" 
                android:tag="weinxin"
                android:visibility="gone">

                <!-- 选定微信支付 -->

                <RelativeLayout
                    android:id="@+id/iv_xianyugame_weinxin_border"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:background="@drawable/yuanquanbiankuang" >

                    <ImageView
                        android:id="@+id/iv_xianyugame_weinxin"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/wxzfs" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_xianyugame_weinxin_gou"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zhifuxuanzhonggougou" 
                    android:visibility="gone"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_xianyugame_tenpay_layout"
                android:layout_width="112dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rl_xianyugame_weinxin_layout"
                android:padding="2dp" 
                android:tag="tenpay"
                android:visibility="gone">

                <!-- 财付通支付 -->

                <RelativeLayout
                    android:id="@+id/iv_xianyugame_tenpay_border"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:background="@drawable/yuanquanbiankuang" >

                    <ImageView
                        android:id="@+id/iv_xianyugame_tenpay"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/tenpay_buy" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_xianyugame_tenpay_gou"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zhifuxuanzhonggougou" 
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_xianyugame_yinlian_layout"
                android:layout_width="112dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rl_xianyugame_tenpay_layout"
                android:padding="2dp" 
                android:tag="yinlian">

                <!-- 银联支付 -->

                <RelativeLayout
                    android:id="@+id/iv_xianyugame_yinlian_border"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:background="@drawable/yuanquanbiankuang" >

                    <ImageView
                        android:id="@+id/iv_xianyugame_yinlian"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/yinlian" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_xianyugame_yinlian_gou"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/zhifuxuanzhonggougou" 
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
        
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#dedede"
        android:gravity="center_vertical" >

        <!-- 确定支付 -->
        <Button 
            android:id="@+id/xianyugame_determinin_payment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
            android:text="@string/querenzhifu"
            android:textColor="#ffffff"
            android:background="@drawable/yuanquanbiankuangblue"
            />
    </LinearLayout>


</LinearLayout>
