<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/tz_login_title_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/tz_login_title_image_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tz_activity_goback_styel" />
		<TextView
	        android:id="@+id/tz_login_goback_title"
	        android:text="返回"
	        android:textColor="#999999"
	     	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/tz_login_title_image_goback"
	        android:layout_marginTop="1dip"
	        android:textSize="15dip" />
        <TextView
            android:id="@+id/tz_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="#666666"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/tz_login_title_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_activity_login_styel" 
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:padding="20dip" >

        <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tz_login_input_boder"
                android:paddingBottom="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip"
                >

                <TextView
                    android:id="@+id/tz_login_edit_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原密码:\t"
                    android:textColor="#CCCCCC"
                    android:textSize="16dip" />
                
                
                <EditText
                    android:id="@+id/tz_login_edit_textView_oldpass_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_des"
                    android:layout_toRightOf="@id/tz_login_edit_des"
                    android:layout_marginLeft="15dip"
                    android:background="#00000000"
                    android:hint="6-20(字母、数字)"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
        </RelativeLayout>
            
        
        
        <RelativeLayout
            android:id="@+id/tz_login_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_edit_relativeLayout1"
            android:layout_marginTop="10dip"
            android:background="@drawable/tz_login_input_boder"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tz_login_edit_line"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dip"
                android:paddingLeft="20dp"
                android:paddingRight="20dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tz_login_edit_textView_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密   码:\t\t"
                    android:textColor="#cccccc"
                    android:textSize="16dip" />

                <EditText
                    android:id="@+id/tz_login_edit_textView_pass_edit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_textView_pass"
                    android:layout_toRightOf="@id/tz_login_edit_textView_pass"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="6-20(字母、数字)"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/tz_login_edit_relativeLayout2"
                android:background="#CCCCCC" />

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tz_login_edit_line2"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dip"
                android:paddingLeft="20dp"
                android:paddingRight="20dip"
                android:paddingTop="10dip"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tz_login_edit_textView_pass2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重复密码:"
                    android:textColor="#cccccc"
                    android:textSize="16dip" />

                <EditText
                    android:id="@+id/tz_login_edit_textView_pass_edit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_textView_pass2"
                    android:layout_toRightOf="@id/tz_login_edit_textView_pass2"
                    android:layout_marginLeft="4dip"
                    android:background="#00000000"
                    android:hint="6-20(字母、数字)"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip" >
                </EditText>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tz_login_checkbox_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tz_login_edit"
            android:paddingTop="10dip"
            android:visibility="invisible" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:button="@drawable/tz_activity_login_checkbox_styel"
                android:text="记住密码"
                android:textColor="#666666"
                android:textSize="16dip" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_alignParentRight="true"
                android:button="@drawable/tz_activity_login_checkbox_styel"
                android:text="自动登录"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_checkbox_relativeLayout" 
            android:layout_alignParentBottom="true"
            >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/tz_login_login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="确认修改"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip" 
                    
                    />

                <Button
                    android:id="@+id/tz_login_regist_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#009CFF"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="注 \t册"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip"
                    android:visibility="gone"/>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dip"
        android:visibility="gone"
         >

        <TextView
            android:id="@+id/tz_login_re_password_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="忘记帐号和密码?"
            android:textColor="#666666"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/tz_login_regist_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:text="注册会员"
            android:textColor="#666666"
            android:textSize="18dip" />
    </RelativeLayout>

</RelativeLayout>