<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#FFFFFF"
 >

  <RelativeLayout
    android:id="@+id/tz_login_title_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/tz_login_title"
          android:text="注册账号"
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:paddingTop="10dip"
        android:paddingBottom="20dip"
        android:textColor="#666666"
        android:textSize="18dip" />

    <ImageView
        android:id="@+id/tz_login_title_image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/tz_activity_login_styel"
        android:visibility="gone" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/tz_login_edit_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tz_login_title_relativeLayout"
        android:padding="5dip" >

        <RelativeLayout
            android:id="@+id/tz_login_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tz_login_input_boder"
                android:paddingBottom="15dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="15dip" >

                <ImageView
                    android:id="@+id/tz_login_edit_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_0012_id" />

                <EditText
                    android:id="@+id/tz_login_edit_textView_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_des"
                    android:layout_toRightOf="@id/tz_login_edit_des"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="3-15(字母、数字)"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip"
                    android:maxLength="15" >
                </EditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_below="@id/tz_login_edit_relativeLayout1"
                android:background="#CCCCCC" />

            <RelativeLayout
                android:id="@+id/tz_login_edit_relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tz_login_input_boder"
                android:layout_below="@id/tz_login_edit_line"
                android:layout_marginTop="10dip"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dip"
                android:paddingLeft="20dp"
                android:paddingRight="20dip"
                android:paddingTop="15dip" >

                <ImageView
                    android:id="@+id/tz_login_edit_textView_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_0007_password" />

                <EditText
                    android:id="@+id/tz_login_edit_textView_pass_edit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tz_login_edit_textView_pass"
                    android:layout_toRightOf="@id/tz_login_edit_textView_pass"
                    android:layout_marginLeft="10dip"
                    android:background="#00000000"
                    android:hint="6-20(字母、数字)"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#D0CCC7"
                    android:textCursorDrawable="@null"
                    android:textSize="16dip"
                    android:maxLength="20" >
                </EditText>
            </RelativeLayout>

            <TextView
                android:id="@+id/tz_login_edit_line2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_below="@id/tz_login_edit_relativeLayout2"
                android:background="#CCCCCC" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tz_login_checkbox_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tz_login_edit"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:visibility="gone"
             >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:button="@drawable/tz_activity_login_checkbox_styel"
                android:text="记住密码"
                android:textColor="#666666"
                android:textSize="16dip"
                
                 />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/checkBox1"
                android:layout_alignBottom="@+id/checkBox1"
                android:layout_alignParentRight="true"
                android:button="@drawable/tz_activity_login_checkbox_styel"
                android:text="自动登录"
                android:textColor="#666666" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tz_login_checkbox_relativeLayout"
            android:layout_marginTop="20dip" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/tz_login_login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="提交注册"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip" />

                <Button
                    android:id="@+id/tz_login_regist_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#009CFF"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="注 \t册"
                    android:textColor="#FFFFFF"
                    android:textSize="20dip"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ebf6f6"
        android:padding="10dip" >

        <TextView
            android:id="@+id/tz_login_re_password_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="忘记帐号和密码?"
            android:textColor="#666666"
            android:textSize="18dip" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tz_login_regist_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:text="注册会员"
            android:textColor="#666666"
            android:textSize="18dip"
            android:visibility="gone" />
        <Button
            android:id="@+id/tz_login_title_image_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="以后再说>>"
            android:textColor="#75baf0"
            android:textSize="15dip" />
    </RelativeLayout>

</RelativeLayout>