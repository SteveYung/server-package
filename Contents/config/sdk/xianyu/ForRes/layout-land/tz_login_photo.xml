<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang_d"
    >
	<RelativeLayout
	    android:id="@+id/tz_login_title_relativeLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dip"
	    android:background="#FFFFFF" >
	
	    <TextView
	        android:id="@+id/tz_login_title"
	        android:text="保存帐号"
	 		android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_centerHorizontal="true"
	        android:layout_centerInParent="true"
	        android:textColor="#666666"
	        android:textSize="18dip" />
	

	
	</RelativeLayout>
	<TextView
            android:id="@+id/photo_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_below="@id/tz_login_title_relativeLayout"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="保存到相册可以快速找回试玩账号和密码"
            android:textSize="18dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingBottom="30dip">

        <RelativeLayout
            android:id="@+id/photo_save_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#f3f2ea"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            >

            <TextView
                android:id="@+id/photo_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textColor="#90000000" />

            <TextView
                android:id="@+id/photo_userpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photo_username"
                android:layout_marginTop="5dp"
                android:text="密码："
                android:textColor="#90000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/below_dibu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_save_lay"
            android:layout_marginTop="20dip"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/photo_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tz_activity_hero_details_skill_lv_item_kuang"
                android:paddingBottom="8dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:paddingTop="8dp"
                android:text="保存到相册"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>