<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边缘线的宽度和颜色 -->
    <stroke android:width="1px" 
        android:color="#e8e8e8" />
    <!-- 中间的背景色 -->
    <solid android:color="#ff5400"/>
    <!-- 设置四个角的角度 -->
