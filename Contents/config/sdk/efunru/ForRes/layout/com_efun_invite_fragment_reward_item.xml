<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/com_efun_invite_fragment_reward_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/com_efun_invite_activity_main_fragment_reward_background_normal"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/com_efun_invite_fragment_reward_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:scaleType="fitCenter"
                android:src="@drawable/com_efun_invite_activity_main_fragment_reward_gift_normal" />

            <ImageView
                android:id="@+id/com_efun_invite_fragment_reward_item_fbimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <com.efun.invite.vk.widget.view.ButtonView
                    android:id="@+id/com_efun_invite_fragment_reward_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.efun.invite.vk.widget.view.leaderboard.SendGiftButtonView
                android:id="@+id/com_efun_invite_fragment_reward_item_claim"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>