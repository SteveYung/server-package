<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip" >

    <LinearLayout
        android:id="@+id/view_invite_fragment_sendinvite_select_all_text_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@+id/view_invite_fragment_sendinvite_select_all_btn_container"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/view_invite_fragment_sendinvite_select_all_text"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_invite_fragment_sendinvite_select_all_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/view_invite_fragment_sendinvite_send_btn"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:id="@+id/view_invite_fragment_sendinvite_select_all_btn"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:src="@drawable/com_efun_invite_activity_main_fragment_invite_sendinvite_selectall_false" />
    </LinearLayout>

    <com.efun.invite.vk.widget.view.ButtonView
        android:id="@+id/view_invite_fragment_sendinvite_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:orientation="vertical" >
    </com.efun.invite.vk.widget.view.ButtonView>

</RelativeLayout>