<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/iv_friendfragment_tagview_image"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dip" />

        <LinearLayout
            android:id="@+id/ll_friendfragment_tagview_container1"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_friendfragment_tagview_image"
            android:layout_margin="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_friendfragment_tagview_fbname"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_friendfragment_tagview_rolename"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friendfragment_tagview_container2"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ll_friendfragment_tagview_container1"
            android:layout_margin="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_friendfragment_tagview_rolelevel"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_friendfragment_tagview_roleserver"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_friendfragment_tagview_giftbtn"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dip" />
    </RelativeLayout>

</LinearLayout>