<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/cb_item"
        android:layout_width="@dimen/epd_size_60"
        android:layout_height="@dimen/epd_size_60"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/epd_size_16"
        android:layout_marginRight="@dimen/epd_size_20"
        android:background="@drawable/epd_checkbox_selector"
        android:button="@null"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/reply_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/epd_cs_normal_question"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/epd_cs_normal_question"
                android:textColor="@color/epd_description_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/epd_size_1"
            android:background="@color/epd_grey" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/epd_cs_normal_question_des"
            android:textColor="@color/epd_grey_title" />
    </LinearLayout>

</LinearLayout>