<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262A33"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:background="@drawable/com_efun_invite_activity_main_title_background" >

        <TextView
            android:id="@+id/com_efun_invite_activity_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/com_efun_invite_activity_main_title_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:src="@drawable/com_efun_invite_activity_main_title_close_selecter" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="93"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:background="@drawable/com_efun_invite_activity_main_head_container_background"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:layout_weight="6"
                android:background="@drawable/com_efun_invite_activity_main_head_icon_background" >

                <ImageView
                    android:id="@+id/com_efun_invite_activity_main_head_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dip" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/com_efun_invite_activity_head_btn_compliment"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/com_efun_invite_activity_main_head_btn_background_selecter"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:duplicateParentState="true"
                            android:src="@drawable/com_efun_invite_activity_main_head_compliment_selecter" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/com_efun_invite_head_comment"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_efun_invite_activity_head_btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginBottom="2dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="2dip"
                    android:layout_weight="1"
                    android:background="@drawable/com_efun_invite_activity_main_head_btn_background_selecter"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/com_efun_invite_activity_main_head_share" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/com_efun_invite_activity_btn_share"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com_efun_invite_activity_head_btn_zan"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/com_efun_invite_activity_main_head_btn_background_selecter"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/com_efun_invite_activity_main_head_invited" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/com_efun_invite_activity_head_btn_invited_countText"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_weight="3"
            android:background="@drawable/com_efun_invite_activity_main_head_container_background"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:layout_weight="10" >

                <com.efun.invite.vk.widget.view.ButtonView
                    android:id="@+id/com_efun_invite_activity_main_taglist_invite"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1" />

                <com.efun.invite.vk.widget.view.ButtonView
                    android:id="@+id/com_efun_invite_activity_main_taglist_leaderboard"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1" />

                <com.efun.invite.vk.widget.view.ButtonView
                    android:id="@+id/com_efun_invite_activity_main_taglist_reward"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1" />

                <com.efun.invite.vk.widget.view.ButtonView
                    android:id="@+id/com_efun_invite_activity_main_taglist_info"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:layout_weight="83"
                android:background="@drawable/com_efun_invite_activity_main_fragment_listview_background" >

                <FrameLayout
                    android:id="@+id/com_efun_invite_activity_main_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <include layout="@layout/layout_data_loading" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>