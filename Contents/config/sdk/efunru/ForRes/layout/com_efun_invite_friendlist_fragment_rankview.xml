<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/com_efun_invite_friendlist_fragment_rankview_background_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >
 
        <ImageView
            android:id="@+id/com_efun_invite_friendlist_fragment_rankview_background"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/com_efun_invite_friendlist_fragment_rankview_ranknumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_gravity="top|right"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/com_efun_invite_friendlist_fragment_rankview_highlight_pic"/>
    </LinearLayout>

</FrameLayout>