<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/com_efun_invite_fragment_reward_hasinvite_container"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.efun.invite.vk.widget.view.reward.RewardItemView
                    android:id="@+id/com_efun_invite_fragment_reward_hasinvite1_reward_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <com.efun.invite.vk.widget.view.reward.RewardItemView
                    android:id="@+id/com_efun_invite_fragment_reward_hasinvite2_reward_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <com.efun.invite.vk.widget.view.reward.RewardItemView
                    android:id="@+id/com_efun_invite_fragment_reward_hasinvite3_reward_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1" >

                <ListView
                    android:id="@+id/com_efun_invite_fragment_reward_gift_reward_viewlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/layout_data_loading" />
    </RelativeLayout>

</LinearLayout>