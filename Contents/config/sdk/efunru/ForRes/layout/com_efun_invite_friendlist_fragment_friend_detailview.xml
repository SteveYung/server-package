<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.efun.invite.vk.widget.view.leaderboard.RankView
        android:id="@+id/com_efun_invite_friendlist_fragment_rankview"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:layout_weight="1" >

        <com.efun.invite.vk.widget.view.leaderboard.RankView
            android:id="@+id/RankView01"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1" >
        </com.efun.invite.vk.widget.view.leaderboard.RankView>

        <com.efun.invite.vk.widget.view.leaderboard.RankView
            android:id="@+id/RankView02"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1" >
        </com.efun.invite.vk.widget.view.leaderboard.RankView>

        <com.efun.invite.vk.widget.view.leaderboard.RankView
            android:id="@+id/RankView03"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1" >
        </com.efun.invite.vk.widget.view.leaderboard.RankView>

    </com.efun.invite.vk.widget.view.leaderboard.RankView>

    <ImageView
        android:id="@+id/com_efun_invite_friendlist_fragment_friendpic"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    
    <com.efun.invite.vk.widget.view.ButtonView 
        android:id="@+id/com_efun_invite_friendlist_fragment_serverid"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:layout_weight="1" />

    <com.efun.invite.vk.widget.view.ButtonView 
        android:id="@+id/com_efun_invite_friendlist_fragment_level"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:layout_weight="1" 
        android:visibility="gone"/>
    
    <com.efun.invite.vk.widget.view.ButtonView 
        android:id="@+id/com_efun_invite_friendlist_fragment_power"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:layout_weight="1" />
    
    <com.efun.invite.vk.widget.view.leaderboard.SendGiftButtonView
        android:id="@+id/com_efun_invite_friendlist_fragment_sendgift"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="5dip"
        android:layout_weight="1.5" />
</LinearLayout>