<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:background="@drawable/float_menu_backage"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dip" >

        <Button
            android:id="@+id/btn_close"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:background="@drawable/float_btn_exit"
            android:paddingRight="50dip"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn_about"
            android:layout_width="75dip"
            android:layout_height="35dip"
            android:background="@drawable/float_btn_about" 
            android:layout_marginBottom="10dp"/>
        

        <Button
            android:id="@+id/btn_more_game"
            android:layout_width="75dip"
            android:layout_height="35dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/float_btn_more" 
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="75dip"
            android:layout_height="35dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/float_btn_quit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="55dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:layout_marginTop="5dip"
            android:background="@drawable/float_btn_ok"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>