<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:gravity="center"
     >
<LinearLayout 
    android:id="@+id/kkk_parent"
    android:layout_width="310dip"
    android:layout_height="280dip"
    android:layout_gravity="center"
    android:background="@drawable/kkk_bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginTop="20dip"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/kkk_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:background="@null" >

            <TextView
                android:id="@+id/kkk_connection_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/kkk_connection_remark"
                android:textColor="@color/kkk_white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/kkk_connection_ll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/kkk_connection_back"
                android:layout_below="@id/kkk_connection_remark"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="30dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_01"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_02"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_03"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_04"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_05"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_06"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kkk_connection_tv_07"
                    android:textColor="@color/kkk_white"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/kkk_connection_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/kkk_btn_back" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>