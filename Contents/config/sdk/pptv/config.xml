<?xml version="1.0" encoding="utf-8"?>
<config>
	<paramLs>
		<param name = "pptvGid" required = "1" desc = "pptv" showName = "gid" bWriteIntoManifest = "0" bUserOffer = "1"/>
        <param name = "pptvIsUseUMeng" required = "0" desc = "pptv" showName = "是否使用友盟统计" bWriteIntoManifest = "0" bUserOffer = "1" >
            <option value = "true"/>
            <option value = "false"/>
        </param>
        <param name = "pptvDevMode" required = "0" desc = "pptv" showName = "是否为测试模式" bWriteIntoManifest = "0" bUserOffer = "1" >
            <option value = "true"/>
            <option value = "false"/>
        </param>
        <param name = "pptvCid" required = "1" desc = "pptv" showName = "渠道id" bWriteIntoManifest = "0" bUserOffer = "1"  />
		<param name = "pptvAppKey" required = "1" desc = "pptv" showName = "appkey" bWriteIntoManifest = "0" bUserOffer = "1" bWriteIntoClient="0" />
        <param name = "UMENG_CHANNEL" required = "1" desc = "pptv" showName = "友盟channel" bWriteIntoManifest = "1" bUserOffer = "1" />
        <param name = "UMENG_APPKEY" required = "1" desc = "pptv" showName = "友盟appkey" bWriteIntoManifest = "1" bUserOffer = "1" />
		<param name = "callback" required = "1" desc = "pptv" showName = "支付通知地址" bWriteIntoManifest = "0" bUserOffer = "1" bWriteIntoClient = "0"/>
	</paramLs>
	
	<operateLs>
		<operate step = "1" name = "modifyManifest" from = "ForManifest.xml" to = "AndroidManifest.xml" desc = "pptv"/>
		<operate step = "2" name = "copy" from = "ForLibs" to = "lib" desc = "pptv"/>
		<operate step = "3" name = "copy" from = "ForRes" to = "res" desc = "pptv"/>
        <operate step = "4" name = "mergeR" desc = "合并R文件，此步骤需在res目录合并完后才执行" />
	</operateLs>
	
	<pluginLs>
		<plugin name = "UserPPTV" typePlugin = "0" desc = "pptv"/>
		<plugin name = "IAPOnlinePPTV" typePlugin = "2" desc = "pptv"/>
	</pluginLs>
</config>