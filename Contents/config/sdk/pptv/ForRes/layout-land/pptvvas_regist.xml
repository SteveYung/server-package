<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_land_background"
	        >
	        <LinearLayout 
	            android:layout_width="fill_parent"
	        	android:layout_height="40dip"
	        	android:layout_marginTop="10dip"
	        	android:orientation="horizontal"
	            >
	            <Button 
		            android:id="@+id/pptvvas_back_nexttime_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pptvvas_regist_backbtn"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="25dip"
		            android:layout_gravity="center_vertical"
		            />
	            <TextView 
	                android:text="@string/pptvvas_regist_title"
	                style="@style/pptvvas_title_land_text"
	                android:layout_marginLeft="10dip"
	                />
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                android:src="@drawable/pptvvas_toppptvlog"
	                android:visibility="gone"
	                />
	        </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/pptvvas_up_view_group"
		        android:layout_height="@dimen/pptvvas_heightb_land"
		        android:layout_width="@dimen/pptvvas_widthb_land"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dip" >
		    <TextView
		        android:id="@+id/pptvvas_view_bind_tip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="0dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:textColor="#ff656565">
		        </TextView>
		        <EditText
		            android:id="@+id/pptvvas_username"
		            style="@style/pptvvas_filledittext"
		            android:layout_marginRight="20dip"
		            android:layout_marginLeft="20dip"
		            android:hint="@string/pptvvas_regist_sdk2_username_hint"
		            android:inputType="textPersonName"
		            android:layout_marginTop="5dip"
		            >
		        </EditText>
		        <EditText
		            android:id="@+id/pptvvas_password"
		            style="@style/pptvvas_filledittext"
		            android:layout_marginRight="20dip"
		            android:layout_marginLeft="20dip"
		            android:hint="@string/pptvvas_regist_sdk2_password_hint"
		            android:inputType="textPassword" 
		            android:layout_marginTop="10dip"
		            >
		        </EditText>
		        <Button
		            android:id="@+id/pptvvas_confirm_btn"
		            style="@style/pptvvas_fillbutton"
		            android:text="@string/pptvvas_port_regis_tab_info"
		            android:layout_marginTop="15dip"/>
		    </LinearLayout>
    	</LinearLayout>
	</RelativeLayout>
</LinearLayout>