<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
	    >
	    <RelativeLayout 
		    android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:layout_centerInParent="true"
		    >
	    <LinearLayout 
		    android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
		    android:orientation="horizontal"
		    android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_loginbackground_land"
		    >
		    <LinearLayout
		        android:id="@+id/top_tab"
		        android:layout_height="245dip"
		        android:layout_width="109dip"
		        android:orientation="vertical"
		        android:layout_marginTop="11dip"
		        android:layout_marginLeft="13dip"
		        >
<!-- 		        android:layout_width="fill_parent"
		        android:layout_height="44dip"
		        android:baselineAligned="false"
		        android:orientation="horizontal"  -->
		
		        <!-- 欢迎   -->
		        <RelativeLayout
		            android:id="@+id/pptvvas_wecLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:tag="10" >
		
		            <TextView
		                android:id="@+id/pptvvas_enter_Tv"
		                android:text="@string/pptvvas_enter_welcome"
		                android:layout_gravity="center_vertical"
		                style="@style/pptvvas_enter_pagetext"
		                android:layout_above="@+id/pptvvas_pageChoiceImg"
		                android:visibility="gone"/>
		            <ImageView 
		                android:id="@+id/pptvvas_pageChoiceImg"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/pptvvas_welcome_land_focus"
		                android:layout_alignParentBottom="true"
		                />
		        </RelativeLayout>
		        <!-- 设置    -->
		        <RelativeLayout
		            android:id="@+id/pptvvas_setLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:tag="11" >
		
		            <TextView
		                android:id="@+id/pptvvas_enter_Tv"
		                android:text="@string/pptvvas_enter_set"
		                android:layout_gravity="center_vertical"
		                style="@style/pptvvas_enter_pagetext" 
		                android:layout_above="@+id/pptvvas_pageChoiceImg"
		                android:visibility="gone"
		                />
		            <ImageView 
		                android:id="@+id/pptvvas_pageChoiceImg"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/pptvvas_account_land_unfocus"
		                android:layout_alignParentBottom="true"
		                />
		            <ImageView 
		                android:id="@+id/pptvvas_isgst"
		                android:layout_width="15dip"
		                android:layout_height="15dip"
		                android:background="@drawable/pptvvas_gstatt"
		                android:layout_marginTop="10dip"
		                android:visibility="gone"
		                android:layout_toRightOf="@+id/pptvvas_enter_Tv"
		                android:layout_marginLeft="5dip"
		                />
		        </RelativeLayout>
		        <!-- 礼包   -->
		        <RelativeLayout
		            android:id="@+id/pptvvas_giftLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:tag="12">
		
		            <TextView
		                android:id="@+id/pptvvas_enter_Tv"
		                android:text="@string/pptvvas_enter_gift"
		                android:layout_gravity="center_vertical"
		                style="@style/pptvvas_enter_pagetext"
		                android:layout_above="@+id/pptvvas_pageChoiceImg"
		                android:visibility="gone"/>
		            <ImageView 
		                android:id="@+id/pptvvas_pageChoiceImg"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/pptvvas_gift_land_unfocus"
		                android:layout_alignParentBottom="true"
		                />
		        </RelativeLayout>
		    </LinearLayout>
		    <LinearLayout
		            android:id="@+id/pptvvas_Container"
		            android:layout_height="245dip"
			        android:layout_width="353dip"
			        android:layout_marginTop="11dip"
			        android:orientation="vertical"
			        android:layout_marginLeft="1px"
		            />
    </LinearLayout>
    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/pptvvas_enter_hotline"
	    android:textSize="15sp"
	    android:textStyle="bold"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="10dip"
	    android:layout_marginLeft="130dip"
	    android:textColor="@color/pptvvas_true_gray"
	    />
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>