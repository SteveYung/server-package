<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pptvvas_background"
    >
    <!-- 注册时绑定手机 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"
        android:textColor="@color/pptvvas_sdk3_gray"
        android:text="@string/pptvvas_viewpager_bindphone"
        />
    <LinearLayout
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal" 
	     android:layout_marginTop="5dip"
	     >
	     <RelativeLayout 
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         >
	         <EditText
	          	 android:id="@+id/pptvvas_phoneEdt"
	             android:hint="@string/pptvvas_viewpager_bindphone_phonenum"
	             android:inputType="textPersonName" 
	             android:layout_centerVertical="true"
	             style="@style/pptvvas_filledittext"
	             android:layout_height="wrap_content"
	             android:drawableLeft="@drawable/pptvvas_user_icon"
	          />
	         <Button
	          	 android:id="@+id/pptvvas_getcodeBtn"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_alignParentRight="true"
	             android:layout_marginRight="22dip"
	             android:background="@drawable/pptvvas_phonecode_btn" 
	             android:layout_centerVertical="true"
	          />
	         <LinearLayout 
				android:id="@+id/pptvvas_codenumlay"
				style="@style/pptvvas_warp"
				android:orientation="horizontal"
				android:layout_marginRight="60dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				></LinearLayout>
	     </RelativeLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="10dip"
	        >
		     <RelativeLayout 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            >
		            <EditText
		                android:id="@+id/pptvvas_codeEdt"
		                style="@style/pptvvas_filledittext"
		                android:hint="@string/pptvvas_bindphone_identificationcode_hint"
		                android:layout_toLeftOf="@+id/pptvvas_regist_button"
		                android:layout_height="wrap_content"
		                android:drawableLeft="@drawable/pptvvas_message_icon"
		                >
		            </EditText>
		            
		        </RelativeLayout>
    </LinearLayout>
    <TextView 
	    android:id="@+id/pptvvas_errorTipTv"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:gravity="center_vertical"
	    android:layout_gravity="center_vertical"
	    android:textColor="@color/pptvvas_red"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="20dip"
	    android:drawableLeft="@drawable/pptvvas_error"
	    android:visibility="gone"
	    />
    <RelativeLayout
	    style="@style/pptvvas_width_fill"
		android:layout_marginTop="10dip"
		android:layout_gravity="center_horizontal"
	    >
	    <Button 
	        android:id="@+id/pptvvas_nextTimeBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:background="@drawable/pptvvas_nexttime_btn"
	        />
	    <Button 
	        android:id="@+id/pptvvas_finishBindBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:background="@drawable/pptvvas_bindfinish_btn"
	        />
	</RelativeLayout>
	<RelativeLayout 
        style="@style/pptvvas_fill"
		android:layout_marginTop="3dip"
        >
        <TextView 
            android:layout_height="wrap_content"
	    	android:layout_width="fill_parent"
            android:text="@string/pptvvas_viewpager_bindphone_bindtip"
            android:padding="2dip"
            android:textColor="@color/pptvvas_sdk3_red"
            android:textSize="13sp"
            />
    </RelativeLayout>
</LinearLayout>