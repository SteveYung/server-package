<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_land_background"
	        >
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="44dip"
		        android:layout_marginTop="10dip"
		        android:orientation="horizontal"
		        >
	        </LinearLayout>
	        <LinearLayout
		        android:layout_height="@dimen/pptvvas_heightb_land"
		        android:layout_width="@dimen/pptvvas_widthb_land"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dip"  >
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="20dip"
		            android:layout_marginRight="20dip"
		            android:layout_marginTop="40dip"
		            android:gravity="center"
		            android:orientation="horizontal" >
		
		            <ImageView
		                android:layout_width="46dp"
		                android:layout_height="46dp"
		                android:src="@drawable/pptvvas_alipay_fail_icon" />
		
		            <TextView
		                android:id="@+id/pptvvas_alipay_error"
		                android:layout_width="170dp"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/pptvvas_alipay_fail_tip"
		                android:textColor="#000000"
		                android:textSize="18sp" />
		        </LinearLayout>
		        <Button
	                android:id="@+id/pptvvas_alipay_again_btn"
	                style="@style/pptvvas_fillbutton"
	                android:text="@string/pptvvas_pay_btn"
	                android:layout_marginTop="20dip"
	                >
	            </Button>
		    </LinearLayout>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
