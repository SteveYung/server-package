<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
<!--     android:background="@drawable/pptvvas_gift_list_shape" -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
	    <LinearLayout 
	        android:layout_width="40dip"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        >
	        <ImageView 
	            android:id="@+id/pptvvas_giftPic"
	            android:layout_height="36dip"
	            android:layout_width="36dip"
	            android:layout_marginTop="10dip"
	            android:layout_gravity="right"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:layout_marginRight="10dip"
	        android:layout_marginLeft="5dip"
	        >
		    <TextView 
		        android:id="@+id/pptvvas_title"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginTop="5dip"
		        android:textColor="@color/pptvvas_sdk3_gray"
		        android:textSize="15sp"
		        />
		    <RelativeLayout 
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        >
			    <LinearLayout 
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:orientation="vertical"
			        >
				    <TextView 
				        android:id="@+id/pptvvas_surplus"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"
				        android:gravity="center_horizontal"
				        android:layout_marginTop="5dip"
				        android:singleLine="true"
				        android:textSize="13sp"
				        android:textColor="@color/pptvvas_sdk2_darkgray"
				        />
			    </LinearLayout>
			    <Button 
		             android:id="@+id/pptvvas_getBtn"
		             android:layout_height="wrap_content"
		             android:layout_width="wrap_content"
		             android:background="@drawable/pptvvas_getgift_btn"
			         android:layout_alignParentRight="true"
		             />
			    <TextView 
			         android:id="@+id/pptvvas_gotTv"
		             android:layout_height="35dip"
		             android:layout_width="wrap_content"
		             android:text="@string/pptvvas_gift_get_got"
			         android:layout_alignParentRight="true"
			         android:layout_marginRight="8dip"
			         android:gravity="center"
			         android:textSize="16sp"
			         android:textColor="@color/pptvvas_sdk3_lightblue"
			        />
		    </RelativeLayout>
		    <TextView 
		        android:id="@+id/pptvvas_info"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:layout_marginTop="5dip"
		        android:textColor="@color/pptvvas_sdk2_darkgray"
		        android:textSize="12sp"
		        />
		    <TextView 
                android:id="@+id/pptvvas_servicename"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right|bottom"
                android:textColor="@color/pptvvas_sdk3_orange"
                android:textSize="12sp"
                android:layout_marginBottom="5dip"
                />
	    </LinearLayout>
    </LinearLayout>

</LinearLayout>