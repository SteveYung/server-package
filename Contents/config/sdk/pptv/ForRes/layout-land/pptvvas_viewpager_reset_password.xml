<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pptvvas_background">
    <!-- 重置密码 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@color/pptvvas_sdk3_gray"
        android:text="@string/pptvvas_viewpager_reset_password"
        />
    <LinearLayout
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:orientation="vertical" 
	     android:layout_marginTop="10dip"
	     >
         <EditText
          	 android:id="@+id/pptvvas_passwordEdt"
             android:hint="@string/pptvvas_viewpager_putin_password"
             android:inputType="textPersonName" 
             android:layout_centerVertical="true"
             style="@style/pptvvas_filledittext"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/pptvvas_password_icon"
          />
	     <EditText
             android:id="@+id/pptvvas_passwordagainEdt"
             style="@style/pptvvas_filledittext"
             android:hint="@string/pptvvas_viewpager_putin_password_again"
             android:inputType="textPassword" 
             android:layout_toLeftOf="@+id/pptvvas_regist_button"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dip"
             android:drawableLeft="@drawable/pptvvas_password_icon"
             >
         </EditText>
    </LinearLayout>
    <RelativeLayout
	    style="@style/pptvvas_width_fill"
		android:layout_marginTop="10dip"
		android:layout_gravity="center_horizontal"
	    >
	    <Button 
	        android:id="@+id/pptvvas_backToPhoneBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:background="@drawable/pptvvas_backup_btn"
	        />
	    <Button 
	        android:id="@+id/pptvvas_finishResetBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:background="@drawable/pptvvas_reset_btn"
	        />
	</RelativeLayout>

</LinearLayout>