<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
<!--     android:background="#00000000" -->
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
	    <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="horizontal"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_loginbackground_land"
	        >
<!-- 	        android:layout_marginRight="15dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginTop="20dip"
	        android:layout_marginBottom="20dip" -->
	        <LinearLayout 
	            android:layout_height="245dip"
		        android:layout_width="109dip"
		        android:orientation="vertical"
		        android:layout_marginTop="11dip"
		        android:layout_marginLeft="13dip"
	            >
	            <TextView 
	                android:id="@+id/loginTv"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:background="@drawable/pptvvas_login_focus_land"
	                />
	            <TextView 
	                android:id="@+id/registTv"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:background="@drawable/pptvvas_regist_unfocus_land"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/viewlay"
		        android:layout_height="245dip"
		        android:layout_width="355dip"
		        android:layout_marginTop="11dip"
		        android:orientation="vertical"
		        >
	            <!-- <view
	                class="com.pptv.vassdk.ui.widget.MyViewPager" 
	                android:id="@+id/loginVp"
	                android:layout_height="match_parent"
		        	android:layout_width="match_parent"
	                />
	            <view
	                class="com.pptv.vassdk.ui.widget.MyViewPager" 
	                android:id="@+id/registVp"
	                android:layout_height="match_parent"
		        	android:layout_width="match_parent"
		        	android:visibility="gone"
	                /> -->
	            <com.pptv.vassdk.ui.widget.MyViewPager
	                android:id="@+id/loginVp"
	                android:layout_height="match_parent"
		        	android:layout_width="match_parent"
	                />
	            <com.pptv.vassdk.ui.widget.MyViewPager
	                android:id="@+id/registVp"
	                android:layout_height="match_parent"
		        	android:layout_width="match_parent"
		        	android:visibility="gone"
	                />
            </LinearLayout>
	    </LinearLayout>
    </RelativeLayout>
</LinearLayout>