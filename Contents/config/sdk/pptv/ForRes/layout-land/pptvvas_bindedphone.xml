<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_land_background"
	        >
		    <LinearLayout 
	            android:layout_width="fill_parent"
		        android:layout_height="40dip"
		        android:layout_marginTop="10dip"
		        android:orientation="horizontal"
	            >
		        <Button 
		            android:id="@+id/pptvvas_back_button"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pptvvas_regist_backbtn"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="25dip"
		            android:layout_gravity="center_vertical"
		            />
	            <TextView 
	                android:text="@string/pptvvas_enter_set_bindphone"
	                style="@style/pptvvas_title_land_text"
	                android:layout_marginLeft="10dip"
	                />
	        </LinearLayout>
		    <LinearLayout
		        android:layout_height="@dimen/pptvvas_heightb_land"
		        android:layout_width="@dimen/pptvvas_widthb_land"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dip">
		        <ScrollView 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            >
		            <LinearLayout 
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:orientation="vertical"
		                >
		                <TextView 
		                    android:layout_height="wrap_content"
		                    android:layout_width="fill_parent"
		                    android:text="@string/pptvvas_bindedphone_info_land"
		                    android:textColor="@color/pptvvas_sdk2_gray"
		                    android:layout_marginTop="10dip"
		                    android:layout_marginLeft="20dip"
		                    android:layout_marginRight="20dip"
		                    android:textSize="20sp"
		                    />
		                <TextView 
		                    android:id="@+id/pptvvas_bindedPhoneTv"
		                    android:layout_height="wrap_content"
		                    android:layout_width="fill_parent"
		                    android:textColor="@color/pptvvas_sdk2_darkgray"
		                    android:layout_marginTop="5dip"
		                    android:layout_marginLeft="20dip"
		                    android:layout_marginRight="20dip"
		                    android:textSize="25sp"
		                    android:gravity="center"
		                    />
		                <RelativeLayout 
					         android:layout_width="fill_parent"
					         android:layout_height="wrap_content"
					         android:layout_marginTop="5dip"
					         >
					         <EditText
					          	 android:id="@+id/pptvvas_idfcodeEdt"
					             android:hint="@string/pptvvas_bindphone_identificationcode_hint"
					             android:inputType="textPersonName" 
					             android:layout_centerVertical="true"
					             style="@style/pptvvas_filledittext"
					             android:layout_height="wrap_content"
					             android:drawableLeft="@drawable/pptvvas_phone_icon"
					          />
					         <Button
					          	 android:id="@+id/pptvvas_getidfcodebtn"
					             android:layout_width="wrap_content"
					             android:layout_height="wrap_content"
					             android:layout_alignParentRight="true"
					             android:layout_marginRight="22dip"
					             android:background="@drawable/pptvvas_phonecode_btn" 
					             android:layout_centerVertical="true"
					          />
					         <LinearLayout 
					             android:id="@+id/pptvvas_codenumlay"
					             style="@style/pptvvas_warp"
					             android:orientation="horizontal"
					             android:layout_marginRight="60dip"
					             android:layout_alignParentRight="true"
					             android:layout_centerVertical="true"
					             ></LinearLayout>
					     </RelativeLayout>
		                <Button 
		                    android:id="@+id/pptvvas_bindNewPhoneBtn"
		                    style="@style/pptvvas_fillbutton"
		                    android:text="@string/pptvvas_bindedphone_change_phonebtn"
		                    android:layout_marginTop="10dip"
		                    />
		            </LinearLayout>
		        </ScrollView>
		    </LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>