<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_land_background"
	        >
		    <LinearLayout 
	            android:layout_width="fill_parent"
		        android:layout_height="40dip"
		        android:layout_marginTop="10dip"
		        android:orientation="horizontal"
	            >
		        <Button 
		            android:id="@+id/pptvvas_back_button"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pptvvas_regist_backbtn"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="25dip"
		            android:layout_gravity="center_vertical"
		            />
	            <TextView 
	                android:text="@string/pptvvas_enter_set_changepassword"
	                style="@style/pptvvas_title_land_text"
	                android:layout_marginLeft="10dip"
	                />
		        </LinearLayout>
		    <!-- 内容 -->
		    <LinearLayout
		        android:layout_height="@dimen/pptvvas_heightb_land"
		        android:layout_width="@dimen/pptvvas_widthb_land"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dip">
		        <EditText
		            android:id="@+id/pptvvas_password"
		            style="@style/pptvvas_filledittext"
		            android:inputType="textPassword"
		            android:hint="@string/pptvvas_cpassword_hint" 
		            android:nextFocusDown="@+id/pptvvas_new_password"
		            android:layout_marginTop="10dip"/>
		<!--             android:focusable="true"
		            android:focusableInTouchMode="true" -->
		        <EditText
		            android:id="@+id/pptvvas_new_password"
		            style="@style/pptvvas_filledittext"
		            android:hint="@string/pptvvas_new_password_hint"
		            android:inputType="textPassword"
		            android:layout_marginTop="10dip"/>
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dip"
		            android:orientation="horizontal" 
		            >
		            <EditText
		                android:id="@+id/pptvvas_input_auth_code"
		                android:layout_width="120dip"
		                android:layout_height="35dip"
		                android:layout_marginRight="10dip"
		                android:inputType="textPersonName"
		                android:maxLength="30"
		                android:paddingLeft="6dip"
		                android:paddingRight="6dip"
		                android:background="@drawable/pptvvas_input_box"
		                android:hint="@string/pptvvas_id_code_hint"
		                android:textSize="18sp" 
		                android:layout_marginLeft="20dip">
		             </EditText>
		            
		            <ImageView 
		                android:id="@+id/pptvvas_auth_code_img"
		                android:layout_width="110dip"
		                android:layout_height="fill_parent"
		                android:layout_marginRight="5dip"
		                android:src="@color/pptvvas_orange"
		                android:layout_gravity="center_vertical"
		                android:paddingLeft="6dip"
		                android:paddingRight="6dip">
		            </ImageView>
		            
		            <TextView 
		                android:id="@+id/pptvvas_auth_change"
		                android:linksClickable="true"
		                android:layout_width="wrap_content"
		                android:layout_height="35dip"
		                android:layout_marginRight="20dip"
		                android:hint="@string/pptvvas_click_to_change"
		                android:maxLength="30"
		                android:gravity="center_vertical"
		                android:clickable="true"
		                android:paddingLeft="6dip"
		                android:paddingRight="6dip"
		                android:textSize="18sp">
		             </TextView>
		        </LinearLayout>
			    <Button
			        android:id="@+id/pptvvas_confirm_button"
			        android:text="@string/pptvvas_ok"
			        android:layout_alignParentLeft="true"
			        style="@style/pptvvas_fillbutton"
			        android:layout_marginTop="10dip"
			        />
		    </LinearLayout>
    	</LinearLayout>
	</RelativeLayout>
</LinearLayout>