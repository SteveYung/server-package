<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pptvvas_background">
    <!-- 登陆 -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:layout_marginTop="10dip"
	    android:background="#00000000">
	    <!-- 用户名区域 -->
	    <LinearLayout
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:orientation="horizontal" 
		     android:layout_marginTop="10dip"
		     >
		     <RelativeLayout 
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         >
		         <EditText
		          	 android:id="@+id/pptvvas_usernameEdt"
		             android:hint="@string/pptvvas_username_hint"
		             android:inputType="textPersonName" 
		             android:layout_centerVertical="true"
		             style="@style/pptvvas_filledittext"
		             android:layout_height="wrap_content"
		             android:drawableLeft="@drawable/pptvvas_user_icon"
		          />
		         <Button
		          	 android:id="@+id/pptvvas_btn_usrname_select"
		             android:layout_width="35dip"
		             android:layout_height="35dip"
		             android:layout_alignParentRight="true"
		             android:layout_marginRight="22dip"
		             android:background="@drawable/pptvvas_button_spinner_selector"  
		             android:layout_centerVertical="true"
		             android:visibility="gone"
		          />
		     </RelativeLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginTop="10dip"
		        >
			     <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            >
			            <EditText
			                android:id="@+id/pptvvas_passwordEdt"
			                style="@style/pptvvas_filledittext"
			                android:hint="@string/pptvvas_password_hint"
			                android:inputType="textPassword" 
			                android:layout_toLeftOf="@+id/pptvvas_regist_button"
			                android:layout_height="wrap_content"
			                android:drawableLeft="@drawable/pptvvas_password_icon"
			                >
			            </EditText>
			            
			        </RelativeLayout>
	    </LinearLayout>
		<TextView 
		    android:id="@+id/pptvvas_errorTipTv"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:gravity="center_vertical"
		    android:layout_gravity="center_vertical"
		    android:textColor="@color/pptvvas_red"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="20dip"
		    android:drawableLeft="@drawable/pptvvas_error"
		    android:visibility="gone"
		    />
		<RelativeLayout
		    style="@style/pptvvas_width_fill"
			android:layout_marginTop="10dip"
			android:layout_gravity="center_horizontal"
		    >
		    <Button 
		        android:id="@+id/pptvvas_fastgameBtn"
		        android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:layout_alignParentLeft="true"
		    	android:background="@drawable/pptvvas_fastgame_btn"
		    	android:visibility="gone"
		        />
		    <Button 
		        android:id="@+id/pptvvas_loginBtn"
		        android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:layout_centerInParent="true"
		    	android:background="@drawable/pptvvas_login_btn"
		        />
<!-- 		    	android:layout_alignParentRight="true" -->
		</RelativeLayout>
	</LinearLayout>
	<TextView 
	    android:id="@+id/pptvvas_forgetPasswordTv"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:textColor="@color/pptvvas_red"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="25dip"
	    android:layout_marginBottom="20dip"
	    android:background="@drawable/pptvvas_forgetpassword_btn"
	    />
</RelativeLayout>