<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- <com.pptv.vassdk.ui.widget.CoverFlow
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:id="@+id/pptvvas_welcomeGallery"
         android:layout_marginTop="10dip"
         android:layout_marginLeft="20dip"
         android:layout_marginRight="20dip"
         android:layout_above="@+id/pptvvas_dotsLayout"
         android:soundEffectsEnabled="false"
         /> -->
    <RelativeLayout 
        android:layout_width="fill_parent"
		android:layout_height="156dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="1dip"
        >
        <Button
            android:id="@+id/pptvvas_slider_leftBtn" 
            style="@style/pptvvas_warp"
            android:background="@drawable/pptvvas_slider_left_btn"
            />
        <android.support.v4.view.ViewPager
		android:id="@+id/pptvvas_sliderVp"
		android:layout_width="fill_parent"
		android:layout_height="156dip"
		android:layout_toLeftOf="@+id/pptvvas_slider_rightBtn"
		android:layout_toRightOf="@+id/pptvvas_slider_leftBtn"
		/>
        <Button
            android:id="@+id/pptvvas_slider_rightBtn" 
            style="@style/pptvvas_warp"
            android:background="@drawable/pptvvas_slider_right_btn"
            android:layout_alignParentRight="true"
            />
        <ProgressBar
	        android:id="@+id/pptvvas_pbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/pptvvas_dotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="15dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="143dip"
        android:layout_centerHorizontal="true"
        ></LinearLayout>
    <TextView 
        android:id="@+id/pptvvas_usermsgTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:textColor="@color/pptvvas_sdk3_lightblue"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_above="@+id/pptvvas_btnlay"
        />
    <RelativeLayout 
        android:id="@+id/pptvvas_btnlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <Button 
			android:id="@+id/pptvvas_enterGameBtn"
	        style="@style/pptvvas_warp"
			android:background="@drawable/pptvvas_enter_game_land_btn"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="5dip"
			/>
        <Button 
			android:id="@+id/pptvvas_gstBtn"
	        style="@style/pptvvas_warp"
			android:background="@drawable/pptvvas_savestate_land_btn"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="5dip"
			android:layout_toRightOf="@+id/pptvvas_enterGameBtn"
			android:layout_marginLeft="15dip"
			/>
    </RelativeLayout>
</RelativeLayout>