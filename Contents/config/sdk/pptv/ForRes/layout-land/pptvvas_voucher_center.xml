<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_land_background"
	        >
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="44dip"
		        android:layout_marginTop="10dip"
		        android:orientation="horizontal"
		        >
		        <Button 
		            android:id="@+id/pptvvas_voucher_back_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pptvvas_regist_backbtn"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="25dip"
		            android:layout_gravity="center_vertical"
		            />
	        	<TextView 
	                android:id="@+id/pptvvas_voucher_centerTv"
	                android:text="@string/pptvvas_voucher_center"
	                style="@style/pptvvas_title_land_text"
	                android:layout_marginLeft="10dip"
	                />
	        </LinearLayout>
		    <LinearLayout
		        android:layout_height="@dimen/pptvvas_heightb_land"
		        android:layout_width="@dimen/pptvvas_widthb_land"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dip" 
		        >
		        <ListView 
				    android:id="@+id/pptvvas_voucher_centerLv"
				    android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:cacheColorHint="@android:color/transparent"
		            android:divider="@color/pptvvas_sdk3_lightgray"
		            android:dividerHeight="1dip"
		            android:fadingEdge="none"
		            android:listSelector="#00000000"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginBottom="10dip"
		            android:scrollbarStyle="outsideOverlay"
		            android:fastScrollEnabled="true"
				    ></ListView>
<!-- 		            android:scrollbars="none"  -->
		  	</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>