<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pptvvas_background">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pptvvas_viewpager_find_password"
        android:textColor="@color/pptvvas_sdk3_gray"
        android:layout_marginTop="10dip"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_marginLeft="20dip"
	    android:layout_marginRight="20dip"
	    android:layout_marginTop="1dip"
        >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pptvvas_viewpager_bindphone_nobind_sorry"
	        android:textColor="@color/pptvvas_sdk2_darkgray"
	        android:textSize="20sp"
	        android:gravity="bottom"
	        android:drawableLeft="@drawable/pptvvas_warn"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/pptvvas_viewpager_bindphone_nobind_message"
	        android:textColor="@color/pptvvas_sdk2_darkgray"
	        android:textSize="20sp"
	        android:layout_marginTop="5dip"
	        android:lineSpacingExtra="3dip"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginLeft="30dip"
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pptvvas_viewpager_bindphone_nobind_custmer"
		        android:textColor="@color/pptvvas_sdk2_darkgray"
		        android:textSize="14sp"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pptvvas_viewpager_bindphone_nobind_phone"
		        android:textSize="14sp"
		        android:autoLink="email|phone|web"
		        android:textColor="@color/pptvvas_sdk2_blue"
		        />
	    </LinearLayout>
        <Button 
            android:id="@+id/pptvvas_backPageBtn"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/pptvvas_backlogin_btn"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="5dip"
            />
    </LinearLayout>

</LinearLayout>
