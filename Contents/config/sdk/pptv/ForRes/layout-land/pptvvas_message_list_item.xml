<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <LinearLayout 
        style="@style/pptvvas_wfill"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
        <ImageView
            android:id="@+id/pptvvas_msg_dot_img" 
            style="@style/pptvvas_warp"
            android:background="@drawable/pptvvas_record_dot"
            android:layout_gravity="center_vertical"
            />
        <ImageView 
            android:id="@+id/pptvvas_msg_img"
            android:layout_width="30dip"
    		android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dip"
            />
        <TextView 
            android:id="@+id/pptvvas_msg_tv" 
            style="@style/pptvvas_wfill"
            android:textColor="@color/pptvvas_sdk3_gray"
            android:layout_marginLeft="7dip"
            android:textSize="14sp"
            />
    </LinearLayout>
	<LinearLayout 
        style="@style/pptvvas_wfill"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/pptvvas_msg_time_tv" 
            style="@style/pptvvas_wfill"
            android:gravity="right"
            android:textColor="@color/pptvvas_sdk3_lightgray"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>