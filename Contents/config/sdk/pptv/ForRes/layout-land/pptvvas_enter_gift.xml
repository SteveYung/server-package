<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <TextView 
        android:id="@+id/pptvvas_isgst"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/pptvvas_gift_gst"
        android:visibility="gone"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"
        android:textColor="@color/pptvvas_sdk2_gray"
        />
    <ImageView 
        android:id="@+id/pptvvas_nogiftImg"
        style="@style/pptvvas_warp"
        android:background="@drawable/pptvvas_no_gift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        />
    <com.pptv.vassdk.ui.widget.MyPullListView 
        android:id="@+id/pptvvas_giftlist"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:divider="@color/pptvvas_sdk3_lightgray"
        android:dividerHeight="2px"
        android:cacheColorHint="#00000000"
        android:scrollbarStyle="outsideInset"
        ></com.pptv.vassdk.ui.widget.MyPullListView>
