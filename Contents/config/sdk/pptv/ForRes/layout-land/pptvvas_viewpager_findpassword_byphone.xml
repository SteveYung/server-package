<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pptvvas_background">
    <!-- 使用绑定手机找回密码 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pptvvas_viewpager_find_password"
        android:layout_marginTop="10dip"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@color/pptvvas_sdk3_gray"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        >
        <RelativeLayout 
            style="@style/pptvvas_width_fill"
            >
            <TextView 
                android:id="@+id/pptvvas_bindTv"
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="@string/pptvvas_viewpager_find_password_usebindphone"
	        	android:textSize="14sp"
        		android:textColor="@color/pptvvas_sdk3_gray"
        		android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/pptvvas_bindphoneTv"
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textSize="14sp"
        		android:textColor="@color/pptvvas_sdk2_red"
        		android:layout_toRightOf="@+id/pptvvas_bindTv"
        		android:layout_centerVertical="true"
                />
            <Button 
                android:id="@+id/pptvvas_codeBtn"
	        	android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:background="@drawable/pptvvas_phonecode_btn"
	    		android:layout_alignParentRight="true"
                />
            <LinearLayout 
				android:id="@+id/pptvvas_codenumlay"
				style="@style/pptvvas_warp"
				android:orientation="horizontal"
				android:layout_marginRight="40dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				></LinearLayout>
        </RelativeLayout>
        <EditText
            android:id="@+id/pptvvas_phonecodeEdt"
            style="@style/pptvvas_filledittext"
            android:hint="@string/pptvvas_viewpager_putin_phone_code"
            android:inputType="textPassword" 
            android:layout_toLeftOf="@+id/pptvvas_regist_button"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pptvvas_message_icon"
            android:layout_marginTop="10dip"
            >
        </EditText>
    </LinearLayout>
    <RelativeLayout
	    style="@style/pptvvas_width_fill"
		android:layout_marginTop="10dip"
		android:layout_gravity="center_horizontal"
	    >
	    <Button 
	        android:id="@+id/pptvvas_backBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:background="@drawable/pptvvas_backlogin_btn"
	        />
	    <Button 
	        android:id="@+id/pptvvas_nextToResetBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:background="@drawable/pptvvas_next_btn"
	        />
	</RelativeLayout>

</LinearLayout>