<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pptvvas_background">
    <!-- 用户名区域 -->
    <LinearLayout
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:orientation="vertical" 
	     android:layout_marginTop="10dip"
	     >
         <EditText
          	 android:id="@+id/pptvvas_usernameEdt"
             android:hint="@string/pptvvas_username_hint_reg"
             android:inputType="textPersonName" 
             android:layout_centerVertical="true"
             style="@style/pptvvas_filledittext"
             android:layout_height="wrap_content"
             android:drawableLeft="@drawable/pptvvas_user_icon"
          />
         <EditText
             android:id="@+id/pptvvas_passwordEdt"
             style="@style/pptvvas_filledittext"
             android:hint="@string/pptvvas_password_hint"
             android:inputType="textPassword" 
             android:layout_toLeftOf="@+id/pptvvas_regist_button"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dip"
             android:drawableLeft="@drawable/pptvvas_password_icon"
             >
         </EditText>
    </LinearLayout>
    <TextView 
	    android:id="@+id/pptvvas_errorTipTv"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:gravity="center_vertical"
	    android:layout_gravity="center_vertical"
	    android:textColor="@color/pptvvas_red"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="20dip"
	    android:drawableLeft="@drawable/pptvvas_error"
	    android:visibility="gone"
	    />
    <RelativeLayout
		    style="@style/pptvvas_width_fill"
			android:layout_marginTop="10dip"
			android:layout_gravity="center_horizontal"
		    >
		    <Button 
		        android:id="@+id/pptvvas_registBtn"
		        android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:background="@drawable/pptvvas_regist_btn_land"
		    	android:layout_alignParentRight="true"
		        />
		    <Button 
		        android:id="@+id/pptvvas_fastgameBtn"
		        android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:layout_alignParentLeft="true"
		    	android:background="@drawable/pptvvas_fastgame_btn"
		        />
	</RelativeLayout>
	<!-- <LinearLayout 
	    style="@style/pptvvas_width_fill"
		android:orientation="horizontal"
		android:layout_marginTop="10dip"
	    >
	    <Button 
	        android:id="@+id/pptvvas_registBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:background="@drawable/pptvvas_regist_btn_land"
	    	android:layout_gravity="center_horizontal"
	    	android:gravity="center_horizontal"
	        />
	</LinearLayout> -->
	<RelativeLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
	    >
	    <LinearLayout 
	        android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="horizontal"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginBottom="30dip"
	        >
	        <Button 
	            android:id="@+id/pptvvas_bindhookBtn"
	            android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:background="@drawable/pptvvas_hooked"
	            />
			<TextView 
			    android:id="@+id/pptvvas_bindphoneTv"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:text="@string/pptvvas_viewpager_bindphone_check"
			    android:textColor="@color/pptvvas_sdk3_blue"
			    android:layout_marginLeft="5dip"
			    />
	    </LinearLayout>
	</RelativeLayout>
</LinearLayout>