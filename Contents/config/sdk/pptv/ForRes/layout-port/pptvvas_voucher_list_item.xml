<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <RelativeLayout 
        style="@style/pptvvas_wfill"
        >
        <LinearLayout 
            style="@style/pptvvas_warp"
            android:orientation="vertical"
            >
            <LinearLayout 
	            style="@style/pptvvas_warp"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:text="@string/pptvvas_voucher_order_num"
	                />
	            <TextView 
	                android:id="@+id/pptvvvas_ordernum_tv"
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:layout_marginLeft="5dip"
	                />
	        </LinearLayout>
            <LinearLayout 
	            style="@style/pptvvas_warp"
	            android:orientation="horizontal"
	            android:layout_marginTop="5dip"
	            >
	            <TextView 
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:text="@string/pptvvas_voucher_credit_amount"
	                />
	            <TextView 
	                android:id="@+id/pptvvvas_credit_amount_tv"
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:layout_marginLeft="5dip"
	                />
	            <TextView 
	                android:id="@+id/pptvvvas_payed_tv"
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:layout_marginLeft="10dip"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            style="@style/pptvvas_warp"
	            android:orientation="horizontal"
	            android:layout_marginTop="5dip"
	            >
	            <TextView 
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:text="@string/pptvvas_voucher_payment"
	                />
	            <TextView 
	                android:id="@+id/pptvvvas_payment_tv"
	                style="@style/pptvvas_warp"
	                android:textColor="@color/pptvvas_sdk3_gray"
	                android:layout_marginLeft="5dip"
	                />
	        </LinearLayout>
        </LinearLayout>
        <Button 
            android:id="@+id/pptvvas_voucher_del_btn"
            style="@style/pptvvas_warp"
            android:layout_alignParentRight="true"
            android:background="@drawable/pptvvas_voucher_del_btn"
            android:visibility="invisible"
            />
    </RelativeLayout>
	<LinearLayout 
        style="@style/pptvvas_wfill"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/pptvvas_voucher_time_tv" 
            style="@style/pptvvas_wfill"
            android:gravity="right"
            android:textColor="@color/pptvvas_sdk3_lightgray"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>