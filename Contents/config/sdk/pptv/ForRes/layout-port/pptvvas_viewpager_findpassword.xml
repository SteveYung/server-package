<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pptvvas_background">
    <!-- 找回密码 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pptvvas_viewpager_find_password"
        android:layout_marginTop="25dip"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@color/pptvvas_sdk3_gray"
        />
    <EditText
        android:id="@+id/pptvvas_usernameEdt"
        android:hint="@string/pptvvas_viewpager_putin_account"
        android:inputType="textPersonName" 
        android:layout_centerVertical="true"
        style="@style/pptvvas_filledittext"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:drawableLeft="@drawable/pptvvas_user_icon"
       />
    <RelativeLayout
	    style="@style/pptvvas_width_fill"
		android:layout_marginTop="50dip"
		android:layout_gravity="center_horizontal"
	    >
	    <Button 
	        android:id="@+id/pptvvas_backToLoginBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:background="@drawable/pptvvas_backlogin_btn"
	        />
	    <Button 
	        android:id="@+id/pptvvas_nextBtn"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:background="@drawable/pptvvas_next_btn"
	        />
	</RelativeLayout>

</LinearLayout>