<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <RelativeLayout
        android:id="@+id/pptvvas_up_view_group"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
<!--         style="@style/pptvvas_enter_container" -->
        <TextView 
            android:id="@+id/pptvvas_isgst"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/pptvvas_gift_gst"
            android:visibility="gone"
            android:layout_marginTop="10dip"
            android:textColor="@color/pptvvas_sdk2_gray"
            android:layout_centerHorizontal="true"
            />
        <ImageView 
            android:id="@+id/pptvvas_nogiftImg"
            style="@style/pptvvas_warp"
            android:background="@drawable/pptvvas_no_gift"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            />
        <com.pptv.vassdk.ui.widget.MyPullListView 
            android:id="@+id/pptvvas_giftlist"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:divider="@color/pptvvas_sdk3_lightgray"
            android:dividerHeight="2px"
            android:cacheColorHint="#00000000"
            android:scrollbarStyle="outsideInset"
            ></com.pptv.vassdk.ui.widget.MyPullListView>
        <!-- <ListView 
            android:id="@+id/pptvvas_giftlist"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:divider="#ffffff"
            android:dividerHeight="5dip"
            android:cacheColorHint="#00000000"
            android:scrollbarStyle="outsideInset"
            ></ListView> -->
    </RelativeLayout>
</LinearLayout>