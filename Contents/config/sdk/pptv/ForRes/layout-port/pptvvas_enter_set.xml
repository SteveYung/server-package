<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/pptvvas_user_head"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:id="@+id/pptvvas_userAccountTv"
            android:layout_marginLeft="10dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/pptvvas_sdk3_gray"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="5dip"
	        >
	        <LinearLayout 
	            android:id="@+id/pptvvas_changePasswordBtn"
	            style="@style/pptvvas_setitem_port"
	        	android:clickable="true"
	            >
	            <ImageView 
	                style="@style/pptvvas_warp"
	                android:background="@drawable/pptvvas_change_password"
	                android:layout_marginTop="2dip"
	                />
	            <LinearLayout 
	                style="@style/pptvvas_warp"
	                android:orientation="vertical"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                >
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="17sp"
	                    android:text="@string/pptvvas_enter_set_changepassword"
	                    android:textColor="@color/pptvvas_sdk3_gray"
	                    />
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="12sp"
	                    android:text="@string/pptvvas_enter_set_changepassword_login"
	                    android:textColor="@color/pptvvas_sdk2_gray"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/pptvvas_bindPhoneBtn"
	            style="@style/pptvvas_setitem_port"
	        	android:clickable="true"
	            >
	            <ImageView 
	                style="@style/pptvvas_warp"
	                android:background="@drawable/pptvvas_bindphone"
	                android:layout_marginTop="2dip"
	                />
	            <LinearLayout 
	                style="@style/pptvvas_warp"
	                android:orientation="vertical"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                >
	                <TextView 
	                    android:id="@+id/bind_updateTv"
	                    style="@style/pptvvas_warp"
	                    android:textSize="17sp"
	                    android:text="@string/pptvvas_enter_set_bindphone"
	                    android:textColor="@color/pptvvas_sdk3_gray"
	                    />
	                <TextView 
	                    android:id="@+id/bind_update_smallTv"
	                    style="@style/pptvvas_warp"
	                    android:textSize="12sp"
	                    android:text="@string/pptvvas_enter_set_bindphone_change"
	                    android:textColor="@color/pptvvas_sdk2_gray"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/pptvvas_numBoxBtn"
	            style="@style/pptvvas_setitem_port"
	        	android:clickable="true"
	            >
	            <ImageView 
	                style="@style/pptvvas_warp"
	                android:background="@drawable/pptvvas_mygift"
	                android:layout_marginTop="2dip"
	                />
	            <LinearLayout 
	                style="@style/pptvvas_warp"
	                android:orientation="vertical"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                >
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="17sp"
	                    android:text="@string/pptvvas_enter_gift_mine"
	                    android:textColor="@color/pptvvas_sdk3_gray"
	                    />
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="12sp"
	                    android:text="@string/pptvvas_enter_gift_view"
	                    android:textColor="@color/pptvvas_sdk2_gray"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/pptvvas_voucherBtn"
	            style="@style/pptvvas_setitem_port"
	        	android:clickable="true"
	            >
	            <ImageView 
	                style="@style/pptvvas_warp"
	                android:background="@drawable/pptvvas_pay_record"
	                android:layout_marginTop="2dip"
	                />
	            <LinearLayout 
	                style="@style/pptvvas_warp"
	                android:orientation="vertical"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                >
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="17sp"
	                    android:text="@string/pptvvas_enter_set_voucher"
	                    android:textColor="@color/pptvvas_sdk3_gray"
	                    />
	                <TextView 
	                    android:id="@+id/pptvvas_recentpayTv"
	                    style="@style/pptvvas_warp"
	                    android:textSize="12sp"
	                    android:textColor="@color/pptvvas_sdk2_gray"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/pptvvas_changeAccountBtn"
	            style="@style/pptvvas_setitem_port"
	        	android:clickable="true"
	            >
	            <ImageView 
	                style="@style/pptvvas_warp"
	                android:background="@drawable/pptvvas_set_account"
	                android:layout_marginTop="2dip"
	                />
	            <LinearLayout 
	                style="@style/pptvvas_warp"
	                android:orientation="vertical"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                >
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="17sp"
	                    android:text="@string/pptvvas_enter_set_changeaccount"
	                    android:textColor="@color/pptvvas_sdk3_gray"
	                    />
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="12sp"
	                    android:text="@string/pptvvas_enter_set_changeaccount_click"
	                    android:textColor="@color/pptvvas_sdk2_gray"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/pptvvas_messageBtn"
	            style="@style/pptvvas_setitem_port"
	        	android:clickable="true"
	            >
	            <RelativeLayout 
	                android:layout_width="50dip"
	                android:layout_height="50dip"
	                >
	                <ImageView 
		                style="@style/pptvvas_warp"
		                android:background="@drawable/pptvvas_message"
		                android:layout_marginTop="2dip"
		                />
	                <RelativeLayout 
	                    style="@style/pptvvas_warp"
	                    android:layout_alignParentRight="true"
	                    >
	                    <TextView 
	                        android:id="@+id/pptvvas_msgnumTv"
	                        android:layout_width="13dip"
	                		android:layout_height="13dip"
	                        android:gravity="center"
	                        android:background="@drawable/pptvvas_message_dot"
	                        android:textColor="@android:color/white"
	                        android:textSize="9sp"
	                        android:singleLine="true"
	                        />
	                </RelativeLayout>
	            </RelativeLayout>
	            
	            <LinearLayout 
	                style="@style/pptvvas_warp"
	                android:orientation="vertical"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="5dip"
	                >
	                <TextView 
	                    style="@style/pptvvas_warp"
	                    android:textSize="17sp"
	                    android:text="@string/pptvvas_enter_set_message_center"
	                    android:textColor="@color/pptvvas_sdk3_gray"
	                    />
	                <TextView 
	                    android:id="@+id/pptvvas_msg_unreadTv"
	                    style="@style/pptvvas_warp"
	                    android:textSize="12sp"
	                    android:singleLine="true"
	                    android:textColor="@color/pptvvas_sdk2_gray"
	                    />
	            </LinearLayout>
	        </LinearLayout>
	        <!-- <Button 
	            android:id="@+id/pptvvas_BindPhoneBtn"
	            style="@style/pptvvas_setbutton"
	            android:text="@string/pptvvas_enter_set_bindphone"
	            /> -->
	        <!-- <Button 
	            android:id="@+id/pptvvas_NumBoxBtn"
	            style="@style/pptvvas_setbutton"
	            android:text="@string/pptvvas_enter_set_numbox"
	            android:layout_marginTop="10dip"
	            /> -->
	        <!-- <Button 
	            android:id="@+id/pptvvas_ChangePasswordBtn"
	            style="@style/pptvvas_setbutton"
	            android:text="@string/pptvvas_enter_set_changepassword"
	            android:layout_marginTop="10dip"
	            /> -->
	        <!-- <Button 
	            android:id="@+id/pptvvas_ChangeAccountBtn"
	            style="@style/pptvvas_setbutton"
	            android:text="@string/pptvvas_enter_set_changeaccount"
	            android:layout_marginTop="10dip"
	            /> -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>