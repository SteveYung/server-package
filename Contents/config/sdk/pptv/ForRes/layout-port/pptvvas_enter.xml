<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
	<LinearLayout 
	    android:layout_width="@dimen/pptvvas_width"
	    android:layout_height="@dimen/pptvvas_height"
	    android:orientation="vertical"
	    android:layout_centerInParent="true"
        android:background="#00000000"
	    >
<!--         android:layout_marginRight="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip" -->
    <LinearLayout
        android:id="@+id/pptvvas_top_tab"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <!-- 欢迎   -->
        <RelativeLayout
            android:id="@+id/pptvvas_wecLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:tag="10" >

            <TextView
                android:id="@+id/pptvvas_enter_Tv"
                android:text="@string/pptvvas_enter_welcome"
                android:layout_gravity="center_vertical"
                style="@style/pptvvas_enter_pagetext"
                android:layout_above="@+id/pptvvas_pageChoiceImg"
                android:visibility="gone"/>
            <ImageView 
                android:id="@+id/pptvvas_pageChoiceImg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pptvvas_welcome_focus"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <!-- 设置    -->
        <RelativeLayout
            android:id="@+id/pptvvas_setLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:tag="11" >

            <TextView
                android:id="@+id/pptvvas_enter_Tv"
                android:text="@string/pptvvas_enter_set"
                android:layout_gravity="center_vertical"
                style="@style/pptvvas_enter_pagetext" 
                android:layout_above="@+id/pptvvas_pageChoiceImg"
                android:visibility="gone"/>
            <ImageView 
                android:id="@+id/pptvvas_pageChoiceImg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pptvvas_account_unfocus"
                android:layout_alignParentBottom="true"
                />
            <ImageView 
                android:id="@+id/pptvvas_isgst"
                android:layout_width="13dip"
                android:layout_height="13dip"
                android:background="@drawable/pptvvas_gstatt"
                android:layout_marginTop="10dip"
                android:visibility="gone"
                android:layout_toRightOf="@+id/pptvvas_enter_Tv"
                />
        </RelativeLayout>
        <!-- 礼包   -->
        <RelativeLayout
            android:id="@+id/pptvvas_giftLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:tag="12">

            <TextView
                android:id="@+id/pptvvas_enter_Tv"
                android:text="@string/pptvvas_enter_gift"
                android:layout_gravity="center_vertical"
                style="@style/pptvvas_enter_pagetext"
                android:layout_above="@+id/pptvvas_pageChoiceImg"
                android:visibility="gone"/>
            <ImageView 
                android:id="@+id/pptvvas_pageChoiceImg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pptvvas_gift_unfocus"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/pptvvas_Container"
            android:layout_below="@+id/pptvvas_top_tab"
            style="@style/pptvvas_enter_container"
            />
    <include layout="@layout/pptvvas_buttom"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>