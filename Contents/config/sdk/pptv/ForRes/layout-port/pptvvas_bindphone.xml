<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height"
	        android:layout_width="@dimen/pptvvas_width"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:layout_marginTop="15dip"
        	android:layout_marginBottom="15dip"
	        >
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="44dip"
		        android:background="@drawable/pptvvas_top_bar"
		        >
		        <Button 
		            android:id="@+id/pptvvas_back_button"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pptvvas_regist_backbtn"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="15dip"
		            />
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:layout_centerInParent="true"
		            android:orientation="horizontal"
		            >
		            <TextView 
		                android:text="@string/pptvvas_enter_set_bindphone"
		                style="@style/pptvvas_title_text"
		                />
		        </LinearLayout>
		    </RelativeLayout>
		    <LinearLayout
		        style="@style/pptvvas_enter_container"
		        android:orientation="vertical" >
		        <ScrollView 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            >
		            <LinearLayout 
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                android:orientation="vertical"
		                >
		                <TextView 
		                    android:layout_height="wrap_content"
		                    android:layout_width="fill_parent"
		                    android:text="@string/pptvvas_bindphone_prompt"
		                    android:textColor="@color/pptvvas_sdk2_gray"
		                    android:layout_marginTop="5dip"
		                    android:layout_marginLeft="20dip"
		                    android:layout_marginRight="20dip"
		                    />
				        <EditText
				            android:id="@+id/pptvvas_phonenumber"
				            style="@style/pptvvas_filledittext"
				            android:hint="@string/pptvvas_bindphone_phonenumber_hint" 
				            android:layout_marginTop="5dip"/>
				        <EditText
				            android:id="@+id/pptvvas_userpassword"
				            style="@style/pptvvas_filledittext"
				            android:hint="@string/pptvvas_bindphone_userpassword_hint" 
				            android:layout_marginTop="5dip"
				            android:inputType="textPassword" />
				        <RelativeLayout 
					         android:layout_width="fill_parent"
					         android:layout_height="wrap_content"
					         android:layout_marginTop="5dip"
					         >
					         <EditText
					          	 android:id="@+id/pptvvas_idfcode"
					             android:hint="@string/pptvvas_bindphone_identificationcode_hint"
					             android:inputType="textPersonName" 
					             android:layout_centerVertical="true"
					             style="@style/pptvvas_filledittext"
					             android:layout_height="wrap_content"
					             android:drawableLeft="@drawable/pptvvas_phone_icon"
					          />
					         <Button
					          	 android:id="@+id/pptvvas_getidfcode"
					             android:layout_width="wrap_content"
					             android:layout_height="wrap_content"
					             android:layout_alignParentRight="true"
					             android:layout_marginRight="22dip"
					             android:background="@drawable/pptvvas_phonecode_btn" 
					             android:layout_centerVertical="true"
					          />
					         <LinearLayout 
					             android:id="@+id/pptvvas_codenumlay"
					             style="@style/pptvvas_warp"
					             android:orientation="horizontal"
					             android:layout_marginRight="60dip"
					             android:layout_alignParentRight="true"
					             android:layout_centerVertical="true"
					             ></LinearLayout>
					     </RelativeLayout>
				        <Button 
				            android:id="@+id/pptvvas_bindphonebtn"
				            style="@style/pptvvas_fillbutton"
				            android:text="@string/pptvvas_bindphone_confirmbtn"
				            android:layout_marginTop="5dip"
				            />
		            </LinearLayout>
		        </ScrollView>
		    </LinearLayout>
		    <include layout="@layout/pptvvas_buttom"/>
    	</LinearLayout>
	</RelativeLayout>
</LinearLayout>