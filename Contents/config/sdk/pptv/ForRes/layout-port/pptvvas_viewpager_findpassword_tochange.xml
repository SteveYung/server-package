<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pptvvas_background">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/pptvvas_user_head"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:id="@+id/pptvvas_userAccountTv"
            android:layout_marginLeft="10dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/pptvvas_sdk3_gray"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            />
    </LinearLayout>
	<Button 
	    android:id="@+id/pptvvas_findByEmail"
        android:layout_height="80dip"
        android:layout_width="fill_parent"
        android:textColor="@color/pptvvas_white"
        android:text="@string/pptvvas_viewpager_bindphone_binded_email"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="25dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/pptvvas_findps_email_btn"
	    />
	<Button 
	    android:id="@+id/pptvvas_findByMobile"
        android:layout_height="80dip"
        android:layout_width="fill_parent"
        android:textColor="@color/pptvvas_white"
        android:text="@string/pptvvas_viewpager_bindphone_binded_mobile"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/pptvvas_findps_mobile_btn"
	    />
</LinearLayout>
