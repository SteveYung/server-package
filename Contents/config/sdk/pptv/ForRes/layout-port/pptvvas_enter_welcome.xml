<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<!--     android:background="@android:color/white" -->
    <RelativeLayout 
        android:id="@+id/pptvvas_vplay"
        style="@style/pptvvas_wfill"
        >
        <Button
            android:id="@+id/pptvvas_slider_leftBtn" 
            style="@style/pptvvas_warp"
            android:background="@drawable/pptvvas_slider_left_btn"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            />
        <android.support.v4.view.ViewPager
			android:id="@+id/pptvvas_sliderVp"
			android:layout_width="fill_parent"
			android:layout_height="156dip"
			android:layout_toLeftOf="@+id/pptvvas_slider_rightBtn"
			android:layout_toRightOf="@+id/pptvvas_slider_leftBtn"
			/>
        <Button
            android:id="@+id/pptvvas_slider_rightBtn" 
            style="@style/pptvvas_warp"
            android:background="@drawable/pptvvas_slider_right_btn"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
        <ProgressBar
	        android:id="@+id/pptvvas_pbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_centerInParent="true"
	        />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/pptvvas_dotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="15dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="143dip"
        android:layout_centerHorizontal="true"
        ></LinearLayout>
    <TextView 
        android:id="@+id/pptvvas_usermsgTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:textColor="@color/pptvvas_sdk3_lightblue"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/pptvvas_vplay"
        android:layout_marginTop="25dip"
        />
    <Button 
		android:id="@+id/pptvvas_enterGameBtn"
        style="@style/pptvvas_warp"
		android:background="@drawable/pptvvas_enter_game_btn"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/pptvvas_usermsgTv"
		android:layout_marginTop="10dip" 
		/>
    <Button 
		android:id="@+id/pptvvas_gstBtn"
        style="@style/pptvvas_warp"
		android:background="@drawable/pptvvas_savestate_btn"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/pptvvas_enterGameBtn"
		android:layout_marginTop="10dip" 
		/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/pptvvas_enter_hotline"
	    android:textSize="15sp"
	    android:textStyle="bold"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="20dip"
	    android:layout_centerHorizontal="true"
	    android:textColor="@color/pptvvas_true_gray"
	    />
</RelativeLayout>