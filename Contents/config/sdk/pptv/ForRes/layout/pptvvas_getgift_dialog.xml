<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
	    android:id="@+id/get_gift_lay"
	    >
	    <LinearLayout 
	        style="@style/pptvvas_warp"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_gift_show_background"
	        >
	        <TextView 
	            style="@style/pptvvas_warp"
	            android:text="@string/pptvvas_gift_saved"
	            android:textColor="@color/pptvvas_sdk3_gray"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="15dip"
	            android:singleLine="true"
	            android:textSize="13dip"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:background="@color/pptvvas_sdk3_lightgray"
	            android:layout_marginTop="10dip"
	            />
	        <TextView 
	            android:id="@+id/pptvvas_giftcodeTv"
	            style="@style/pptvvas_warp"
	            android:text="@string/pptvvas_gift_saved"
	            android:textColor="@color/pptvvas_sdk3_orange"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="10dip"
	            android:singleLine="true"
	            android:textSize="13dip"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:background="@color/pptvvas_sdk3_lightgray"
	            android:layout_marginTop="10dip"
	            />
	        <Button 
	            android:id="@+id/pptvvas_copyBtn"
	            android:layout_width="120dip"
	            android:layout_height="35dip"
	            android:background="@drawable/pptvvas_copy_btn"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="5dip"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="55dip"
	            android:text="@string/pptvvas_gift_usage"
	            android:textColor="@color/pptvvas_sdk3_gray"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="12dip"
	            android:textSize="12dip"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            />
	    </LinearLayout>

	</RelativeLayout>
</LinearLayout>