        <operate step = "3" name = "copy" from = "ForLibs" to = "lib" desc = "wdj"/>
		<operate step = "4" name = "copy" from = "ForRes" to = "res" desc = "wdj"/>
		<operate step = "5" name = "script" desc = "更改豌豆荚的manifest"/>
		<operate step = "6" name = "mergeR" desc = "合并R文件，此步骤需在res目录合并完后才执行" />
	</operateLs>
	
	<pluginLs>
		<plugin name = "UserWdj" typePlugin = "0" desc = "豌豆荚用户插件"/>
		<plugin name = "IAPOnlineWdj" typePlugin = "2" desc = "豌豆荚支付插件"/>
	</pluginLs>
