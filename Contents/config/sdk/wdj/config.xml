<config>
	<paramLs>
		<param name = "WDJAppKeyID" required = "1" desc = "应用id" showName = "AppKeyID" bWriteIntoManifest = "0" bUserOffer = "1"/>
		<param name = "WDJAppSecret" required = "1" desc = "应用密钥" showName = "AppSecret" bWriteIntoManifest = "0" bUserOffer = "1"/>
		<param name = "WDJAppName" required = "1" desc = "应用名称" showName = "AppName" bWriteIntoManifest = "0" bUserOffer = "1" />
		<param name="Orientation" required="1" showName="Orientation" desc="SDK的横竖屏类型" bWriteIntoManifest="0" bUserOffer="1" bWriteIntoClient="1">
