<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7" >

        <ImageView
            android:layout_width="@dimen/movga_logo_width"
            android:layout_height="@dimen/movga_logo_height"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginBottom="@dimen/movga_layout_value_12"
            android:layout_marginLeft="@dimen/movga_layout_value_16"
            android:layout_marginTop="@dimen/movga_layout_value_12"
            android:src="@drawable/movga_logo_normal" />

        <TextView
            android:id="@+id/movga_share_sharebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/movga_layout_value_12"
            android:text="Share"
            android:textColor="#000000"
            android:textSize="@dimen/movga_text_size_normal" />
    </FrameLayout>

    <EditText
        android:id="@+id/movga_share_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="top"
        android:padding="3dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/movga_share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/movga_share_image_size"
            android:maxWidth="@dimen/movga_share_image_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:id="@+id/movga_share_appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/movga_text_size_snormal" />

            <TextView
                android:id="@+id/movga_share_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/movga_layout_value_12"
                android:layout_marginTop="@dimen/movga_layout_value_8"
                android:layout_weight="1"
                android:textSize="@dimen/movga_text_size_small" />

            <TextView
                android:id="@+id/movga_share_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/movga_text_size_snormal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>