<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movga_stage_background"
    android:minWidth="@dimen/movga_dialog_min_width"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7" >

        <ImageView
            android:layout_width="@dimen/movga_logo_width"
            android:layout_height="@dimen/movga_logo_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/movga_layout_value_12"
            android:layout_marginLeft="@dimen/movga_layout_value_16"
            android:layout_marginTop="@dimen/movga_layout_value_12"
            android:src="@drawable/movga_logo_normal" />

        <ImageView
            android:id="@+id/login_two_stage_return_btn"
            android:layout_width="@dimen/movga_layout_value_24"
            android:layout_height="@dimen/movga_layout_value_24"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="@dimen/movga_layout_value_12"
            android:layout_marginRight="@dimen/movga_layout_value_16"
            android:layout_marginTop="@dimen/movga_layout_value_12"
            android:src="@drawable/movga_return_btn" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="@dimen/movga_layout_value_16" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false" >

            <EditText
                android:id="@+id/login_two_username_edittext"
                style="@style/movga_common_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/movga_username_hint"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword"
                android:tag="username" />

            <ImageView
                android:id="@+id/login_two_username_clear"
                android:layout_width="@dimen/movga_alert_size"
                android:layout_height="@dimen/movga_alert_size"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/movga_layout_value_8"
                android:src="@drawable/movga_clear"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/login_two_username_alert"
                android:layout_width="@dimen/movga_alert_size"
                android:layout_height="@dimen/movga_alert_size"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/movga_layout_value_8"
                android:src="@drawable/movga_alert"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/movga_layout_value_16" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/movga_layout_value_16" >

            <TextView
                android:id="@+id/login_two_to_bindemail_btn"
                style="@style/movga_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/movga_bind_email_text" >
            </TextView>

            <TextView
                android:id="@+id/login_two_to_register_btn"
                style="@style/movga_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/movga_forget_password_text" >
            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/movga_layout_value_16"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/login_two_login_btn"
                style="@style/movga_common_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/movga_login_text" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/movga_layout_top_16_0" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/movga_layout_value_16"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/movga_two_number_login"
                style="@style/movga_login_login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/movga_movgalogin_text" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/login_tplogin_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:id="@+id/login_tplogin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="@dimen/movga_layout_value_12"
        android:orientation="horizontal"
        android:padding="@dimen/movga_layout_value_16" >
    </LinearLayout>

</LinearLayout>