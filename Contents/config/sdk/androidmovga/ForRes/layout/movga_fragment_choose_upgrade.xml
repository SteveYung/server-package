<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movga_stage_background"
    android:minWidth="@dimen/movga_dialog_min_width"
    android:orientation="vertical"
    tools:context=".OriginalLoginActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7" >

        <ImageView
            android:layout_width="@dimen/movga_logo_width"
            android:layout_height="@dimen/movga_logo_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/movga_layout_value_12"
            android:layout_marginLeft="@dimen/movga_layout_value_16"
            android:layout_marginTop="@dimen/movga_layout_value_12"
            android:src="@drawable/movga_logo_normal" />

        <ImageView
            android:id="@+id/choose_upgrade_stage_close_btn"
            android:layout_width="@dimen/movga_layout_value_24"
            android:layout_height="@dimen/movga_layout_value_24"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="@dimen/movga_layout_value_12"
            android:layout_marginRight="@dimen/movga_layout_value_16"
            android:layout_marginTop="@dimen/movga_layout_value_12"
            android:src="@drawable/movga_close_btn" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/movga_layout_value_16" >

        <ImageView
            android:id="@+id/login_tplogin_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/movga_choose_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:paddingLeft="@dimen/movga_layout_value_4"
            android:paddingRight="@dimen/movga_layout_value_4"
            android:text="@string/movga_bund_official_account"
            android:textColor="#909090"
            android:textSize="@dimen/movga_text_size_large" />
    </FrameLayout>
    <TextView 
        android:id="@+id/movga_choose_upgrade_text"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/movga_layout_value_20"
        android:layout_height="wrap_content"
        android:text="@string/movga_choose_upgrade_text"
        android:textSize="@dimen/movga_text_size_snormal"/>

    <LinearLayout
        android:id="@+id/login_tplogin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/movga_layout_value_16"
        android:paddingRight="@dimen/movga_layout_value_16" >

        <ImageView
            android:id="@+id/movga_bind_facebook"
            style="@style/movga_facebook_style"
            android:layout_width="@dimen/movga_layout_value_220"
            android:layout_height="@dimen/movga_layout_value_40"
            android:layout_marginBottom="@dimen/movga_layout_value_16" >
        </ImageView>

        <ImageView
            android:id="@+id/movga_bind_vk"
            style="@style/movga_vk_style"
            android:layout_width="@dimen/movga_layout_value_220"
            android:layout_height="@dimen/movga_layout_value_40"
            android:layout_marginBottom="@dimen/movga_layout_value_16" >
        </ImageView>

        <ImageView
            android:id="@+id/movga_bind_googlegame"
            style="@style/movga_googlegame_style"
            android:layout_width="@dimen/movga_layout_value_220"
            android:layout_height="@dimen/movga_layout_value_40"
            android:layout_marginBottom="@dimen/movga_layout_value_16" >
        </ImageView>

        <ImageView
            android:id="@+id/movga_bind_googleplus"
            style="@style/movga_googleplus_style"
            android:layout_width="@dimen/movga_layout_value_220"
            android:layout_height="@dimen/movga_layout_value_40"
            android:layout_marginBottom="@dimen/movga_layout_value_16" >
        </ImageView>

        <ImageView
            android:id="@+id/movga_bind_movga"
            style="@style/movga_movga_style"
            android:layout_width="@dimen/movga_layout_value_220"
            android:layout_height="@dimen/movga_layout_value_40"
            android:layout_marginBottom="@dimen/movga_layout_value_16" >
        </ImageView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/movga_layout_value_16"
        android:background="#EEEEEE" />

</LinearLayout>