<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="movga_transparent_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.PopupWindow</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="movga_fullscreen_transparent_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.PopupWindow</item>
    </style>

    <style name="DialogActivity" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="movga_common_edittext">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/movga_text_size_snormal</item>
        <item name="android:background">@drawable/movga_common_edittext</item>
        <item name="android:drawablePadding">@dimen/movga_layout_value_8</item>
    </style>

    <style name="movga_link_button">
        <item name="android:textColor">#2E7FDB</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/movga_text_size_snormal</item>
    </style>

    <style name="movga_common_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/movga_btn</item>
        <item name="android:paddingBottom">@dimen/movga_layout_value_8</item>
        <item name="android:paddingLeft">@dimen/movga_layout_value_16</item>
        <item name="android:paddingRight">@dimen/movga_layout_value_16</item>
        <item name="android:paddingTop">@dimen/movga_layout_value_8</item>
        <item name="android:textSize">@dimen/movga_text_size_normal</item>
    </style>
    <style name="movga_fast_login_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/movga_fast_login_btn</item>
        <item name="android:paddingBottom">@dimen/movga_layout_value_8</item>
        <item name="android:paddingLeft">@dimen/movga_layout_value_16</item>
        <item name="android:paddingRight">@dimen/movga_layout_value_16</item>
        <item name="android:paddingTop">@dimen/movga_layout_value_8</item>
        <item name="android:textSize">@dimen/movga_text_size_normal</item>
    </style>
    <style name="movga_login_login_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/movga_login_btn</item>
        <item name="android:paddingBottom">@dimen/movga_layout_value_8</item>
        <item name="android:paddingLeft">@dimen/movga_layout_value_16</item>
        <item name="android:paddingRight">@dimen/movga_layout_value_16</item>
        <item name="android:paddingTop">@dimen/movga_layout_value_8</item>
        <item name="android:textSize">@dimen/movga_text_size_normal</item>
    </style>
    <style name="movga_facebook_style">
        <item name="android:background">@drawable/movga_facebook_style</item>
    </style>
    <style name="movga_vk_style">
        <item name="android:background">@drawable/movga_vk_style</item>
    </style>
    <style name="movga_googlegame_style">
        <item name="android:background">@drawable/movga_googlegame_style</item>
    </style>
    <style name="movga_googleplus_style">
        <item name="android:background">@drawable/movga_googleplus_style</item>
    </style>
    <style name="movga_movga_style">
        <item name="android:background">@drawable/movga_movga_style</item>
    </style>

    <drawable name="white">#ffffff</drawable>

</resources>