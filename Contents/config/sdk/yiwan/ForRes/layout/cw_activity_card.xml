<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cw_background"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        layout="@layout/cw_title_bar" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="35dip"
        android:text="@string/cw_select_money"
        android:textColor="@color/cw_tip_color"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_card_10_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:checked="true"
            android:text="@string/cw_10_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_card_30_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_30_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_card_50_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_50_yuan" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cw_pay_card_second_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_card_100_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:text="@string/cw_100_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_card_300_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_300_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_card_500_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_500_yuan" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cw_pay_card_third_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/cw_pay_card_1000_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:text="@string/cw_1000_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_card_1500_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_1500_yuan"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/cw_pay_card_2000_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_2000_yuan"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cw_pay_card_rate_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="25dip"
        android:textColor="@color/cw_tip_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cw_pay_serial_tip" />

        <EditText
            android:id="@+id/cw_pay_card_serial_et"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/cw_input_et"
            android:hint="@string/cw_input_card_no"
            android:inputType="number"
            android:maxLength="30"
            android:textColor="@color/cw_black"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cw_pwd_tip" />

        <EditText
            android:id="@+id/cw_pay_card_pwd_et"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/cw_input_et"
            android:hint="@string/cw_input_pwd"
            android:inputType="number"
            android:maxLength="30"
            android:paddingLeft="5dip"
            android:textColor="@color/cw_black"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cw_pay_card_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="20dip"
        android:text="@string/cw_pay_intro"
        android:textColor="@color/cw_blue_nor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center" >

        <Button
            android:id="@+id/cw_pay_card_go_pay_btn"
            style="@style/cw_button_blod_white_text"
            android:layout_width="140dip"
            android:layout_height="40dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/cw_red_btn"
            android:shadowColor="#ff891f02"
            android:shadowDy="1"
            android:text="@string/cw_pay"
            android:textColor="@color/cw_white" />
    </LinearLayout>

</LinearLayout>