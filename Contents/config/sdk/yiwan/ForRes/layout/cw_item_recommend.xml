<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cw_item_rcd_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/cw_item_rcd_avatar_iv"
        android:layout_width="56dip"
        android:layout_height="56dip"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8dip"
        android:contentDescription="@string/cw_about_detail"
        android:src="@drawable/cw_default_app" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="70dip"
        android:layout_toRightOf="@id/cw_item_rcd_avatar_iv"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cw_item_rcd_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/cw_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cw_item_rcd_version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:singleLine="true"
                android:textColor="@color/cw_tip_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/cw_item_rcd_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/cw_tip_color" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cw_item_rcd_down_iv"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/cw_about_detail"
        android:src="@drawable/cw_down_btn" />

</RelativeLayout>