<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cw_background"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        layout="@layout/cw_title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cw_margin_top"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/cw_pwd_tip" />

        <EditText
            android:id="@+id/cw_change_pwd_old_et"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:background="@drawable/cw_input_et"
            android:hint="@string/cw_old_pwd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="6dip"
            android:singleLine="true"
            android:textColor="@color/cw_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cw_margin_between"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/cw_pwd_tip" />

        <EditText
            android:id="@+id/cw_change_pwd_new_et"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:background="@drawable/cw_input_et"
            android:hint="@string/cw_new_pwd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="6dip"
            android:singleLine="true"
            android:textColor="@color/cw_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cw_margin_between"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/cw_repwd_tip" />

        <EditText
            android:id="@+id/cw_change_pwd_renew_et"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:background="@drawable/cw_input_et"
            android:hint="@string/cw_repeat_pwd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="6dip"
            android:singleLine="true"
            android:textColor="@color/cw_black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>