<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cw_background"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        layout="@layout/cw_title_bar" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="35dip"
        android:text="@string/cw_select_money"
        android:textColor="@color/cw_tip_color"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_net_5_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:checked="true"
            android:text="@string/cw_5_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_10_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_10_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_20_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_20_yuan" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_net_30_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:text="@string/cw_30_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_50_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_50_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_100_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_100_yuan" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_net_200_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:text="@string/cw_200_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_300_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_300_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_500_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_500_yuan" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_net_1000_rb"
            style="@style/cw_radio"
            android:layout_alignParentLeft="true"
            android:text="@string/cw_1000_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_1500_rb"
            style="@style/cw_radio"
            android:layout_centerInParent="true"
            android:text="@string/cw_1500_yuan" />

        <RadioButton
            android:id="@+id/cw_pay_net_2000_rb"
            style="@style/cw_radio"
            android:layout_alignParentRight="true"
            android:text="@string/cw_2000_yuan" />
    </RelativeLayout>

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/cw_pay_net_custom_et"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/cw_input_et"
        android:drawableRight="@drawable/cw_yuan"
        android:hint="@string/cw_hint_amount"
        android:inputType="number"
        android:maxLength="5"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:textColor="@color/cw_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/cw_pay_net_rate_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="15dip"
        android:textColor="@color/cw_tip_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center" >

        <Button
            android:id="@+id/cw_pay_net_go_pay_btn"
            style="@style/cw_button_blod_white_text"
            android:layout_width="140dip"
            android:layout_height="40dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/cw_red_btn"
            android:shadowColor="#ff891f02"
            android:shadowDy="1"
            android:text="@string/cw_pay"
            android:textColor="@color/cw_white" />
    </LinearLayout>

</LinearLayout>