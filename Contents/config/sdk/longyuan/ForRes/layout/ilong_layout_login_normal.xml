<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:background="@drawable/logo" />

            <TextView
                style="@style/ilong_dialog_logo_layout_text"
                android:text="龙渊通行证" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/new_login_blue_textcolor" />

        <LinearLayout
            android:layout_width="320dip"
            android:layout_height="wrap_content"
            android:background="@drawable/ilong_login_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ilong_radius_white_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >

                    <ImageView
                        android:id="@+id/name_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ilong_icon_phone" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/name_icon"
                        android:background="#bdbdbd" />

                    <EditText
                        android:id="@+id/ilong_username_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="1px"
                        android:layout_toRightOf="@id/name_icon"
                        android:background="@null"
                        android:hint="用户名/手机号"
                        android:maxLength="20"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/new_login_blue_textcolor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >

                    <ImageView
                        android:id="@+id/p_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/login_p_lock" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/p_icon"
                        android:background="#bdbdbd" />

                    <EditText
                        android:id="@+id/ilong_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="1px"
                        android:layout_toRightOf="@id/p_icon"
                        android:background="@null"
                        android:hint="输入密码"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <Button
                    android:id="@+id/ilong_go_into_game_btn"
                    style="@style/ilong_btn_go_into"
                    android:layout_width="match_parent"
                    android:text="登 录" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="忘记密码?"
                    android:textColor="@color/new_login_blue_textcolor" />

                <TextView
                    android:id="@+id/fast_reg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="快速注册>"
                    android:textColor="@color/new_login_blue_textcolor" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>